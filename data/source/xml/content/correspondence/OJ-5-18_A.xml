   <dc:title>Handwritten postcard from Schenker to Jonas, dated October 31, 1918</dc:title>
<dc:type>ZZZZZ</dc:type>
<dcterms:created>QQQQQ</dcterms:created>
   <dcterms:dateSubmitted>2006-03-24</dcterms:dateSubmitted>
   <dc:description>Lesson time set. </dc:description>
   <dc:subject>lesson; time</dc:subject>
   <!-- Add the EATS key attribute value to indicate the sender of the letter -->
   <marcrel:correspondent key="EATS_nNNNNNN">Heinrich Schenker</marcrel:correspondent>
   <!-- Add the key attribute to indicate the recipient of the letter -->
   <marcrel:recipient key="EATS_nNNNNNN">Oswald Jonas</marcrel:recipient>
  </sdo:itemDesc>


  <tei:div type="transcription">

   <tei:opener>
    <tei:milestone unit="folio" n="recto"/>

    <tei:supplied reason="format">all in a decorative rule-frame</tei:supplied>

    <tei:address>
     <tei:addrLine>
      <tei:supplied reason="clarity">Absender: </tei:supplied>
      <tei:hi rend="lateinschr">Dr H Schenker</tei:hi>
     </tei:addrLine>
     <tei:addrLine>
      <tei:hi rend="lateinschr">III, Reisnerstr. 38</tei:hi>
     </tei:addrLine>
    </tei:address>

    <tei:address>
     <tei:addrLine><tei:supplied reason="clarity">An: </tei:supplied>H <tei:hi rend="lateinschr"
       >Oswald Jonas</tei:hi></tei:addrLine>
     <tei:addrLine>III, </tei:addrLine>
     <tei:addrLine>Untere Weißgärberstr. <tei:hi rend="underline">37</tei:hi></tei:addrLine>
    </tei:address>

    <tei:fw type="postmark">
     <tei:note type="editorial">no postmark, stamp crossed through</tei:note>
    </tei:fw>

    <tei:milestone unit="folio" n="verso"/>

    <tei:salute>Geehrter Herr <tei:hi rend="lateinschr">Jonas</tei:hi>! </tei:salute>
   </tei:opener>

   <tei:p>Ich<tei:note xml:id="r0001-fn1" type="editorial" place="foot"> Writing of this postcard is
     recorded in Schenker's diary at OJ 2/12, p. 2009: "An Jonas (K.): bestimme Donnerstag ½5-
      ½6<tei:hi rend="supralinear">h</tei:hi>." ("To Jonas (postcard): I settle on Thursday
     4:30-5:30.").<!-- XR --> </tei:note> bitte Sie zunächst für <tei:hi rend="underline">Donnerstag</tei:hi>,
    den 7. XI, um ½ 5 - ½ 6.</tei:p>

   <tei:closer>
    <tei:salute rend="indent-50">Ihr </tei:salute>
    <tei:signed rend="indent-60">
     <tei:hi rend="lateinschr">HSch</tei:hi>
    </tei:signed>
    <tei:date when="1918-10-31">31. X. 1918</tei:date>
   </tei:closer>

  </tei:div>


  <tei:div type="translation">

   <tei:opener>
    <tei:milestone unit="folio" n="recto"/>

    <tei:supplied reason="format">all in a decorative rule-frame</tei:supplied>

    <tei:address>
     <tei:addrLine><tei:supplied reason="clarity">From: </tei:supplied>Dr H. Schenker, </tei:addrLine>
     <tei:addrLine>
      <tei:hi rend="lateinschr"><tei:supplied reason="location">Vienna</tei:supplied> III,
       Reisnerstraße 38 </tei:hi>
     </tei:addrLine>
    </tei:address>

    <tei:address>
     <tei:addrLine><tei:supplied reason="clarity">To: </tei:supplied>Mr. Oswald Jonas, </tei:addrLine>
     <tei:addrLine><tei:supplied reason="location">Vienna</tei:supplied> III, </tei:addrLine>
     <tei:addrLine>Untere Weißgärberstraße 37</tei:addrLine>
    </tei:address>

    <tei:fw type="postmark">
     <tei:note type="editorial">no postmark, stamp crossed through</tei:note>
    </tei:fw>

    <tei:milestone unit="folio" n="verso"/>

    <tei:salute>Dear Mr. Jonas, </tei:salute>
   </tei:opener>


   <tei:p><tei:hi rend="bold">{<tei:hi rend="italic">verso</tei:hi>}</tei:hi> Dear Mr. Jonas,</tei:p>
   <tei:p>Please<tei:ptr target="#r0001-fn1" type="footnote"/> come first of all on <tei:hi
     rend="underline">Thursday</tei:hi> the 7th of November, 4:30-5:30.</tei:p>

   <tei:closer>
    <tei:salute rend="indent-50">Yours, </tei:salute>
    <tei:signed rend="indent-60">H. Schenker</tei:signed>
    <tei:date when="1918-10-31">October 31, 1918</tei:date>
   </tei:closer>


  </tei:div>
