 <sdo:record ID="r0001">

  <sdo:itemDesc>
   <!-- MT Tags: "Halm ~ HSchenker" -->
   <dc:title>Printed/typed bank authorization to Halm, dated December 28, 1918</dc:title>
   <dcterms:dateSubmitted>2006-06-09</dcterms:dateSubmitted>
   <dc:description>856 Marks transferred to Halm. </dc:description>
   <dc:subject>payment; bank; money; transfer; stipend; award</dc:subject>
   <!-- Add the EATS key attribute value to indicate the sender of the letter -->
   <marcrel:correspondent key="EATS_nNNNNNN">Bankverein</marcrel:correspondent>
   <marcrel:correspondent key="EATS_nNNNNNN">Heinrich Schenker</marcrel:correspondent>
   <!-- Add the key attribute to indicate the recipient of the letter -->
   <marcrel:recipient key="EATS_nNNNNNN">August Halm</marcrel:recipient>
  </sdo:itemDesc>

  <tei:transcription>

   <tei:note>Roman type = printed; Italic type = typed or handwritten</tei:note>

   <tei:opener>
    <tei:milestone unit="folio" n="recto"/>

    <tei:byline>Korrespondenz-Karte</tei:byline>

    <tei:fw type="envelope">

     <tei:address>
      <tei:addrLine>
       <tei:supplied reason="clarity">Absender:</tei:supplied> K. k. priv. Wiener
      Bank-Verein.</tei:addrLine>
     </tei:address>

     <tei:address>
      <tei:addrLine>
       <tei:supplied reason="clarity">An:</tei:supplied>
       <tei:hi rend="italic">Herrn August Halm, </tei:hi>
      </tei:addrLine>
      <tei:addrLine>in <tei:hi rend="italic">Esslingen </tei:hi>
      </tei:addrLine>
      <tei:addrLine>
       <tei:hi rend="italic">Panoramastr.11</tei:hi>
      </tei:addrLine>
     </tei:address>

     <tei:fw type="postmark"> || 1/1 <tei:supplied reason="illegible">WIEN</tei:supplied> 8 |
      28.XII.18-5 | * <tei:gap reason="illegible"/> * || </tei:fw>
     <tei:lb/>
     <tei:fw type="postmark"> || 1/1 <tei:supplied reason="illegible">WIEN</tei:supplied> 8 |
      28.XII.18-5 | * <tei:gap reason="illegible"/> * ||</tei:fw>

     <tei:milestone unit="folio" n="verso"/>

    </tei:fw>

    <tei:dateline rend="indent-50">Wien, <tei:hi>28. Dez.</tei:hi> 19<tei:hi rend="italic"
     >18</tei:hi></tei:dateline>
    <tei:address rend="indent-50">
     <tei:addrLine>I, Schottengasse 6</tei:addrLine>
    </tei:address>

   </tei:opener>


   <tei:p rend="first">Im<tei:note xml:id="r0001-fn01" type="editorial" place="foot">Receipt of this
     card and money is acknowledge to Schenker in OJ 11/35, 9d, January 12, 1919.</tei:note>
    Auftrage <tei:hi rend="italic"><tei:orgName>WBV</tei:orgName><!-- profile: org: Bankverein -->
     Dep Rennweg</tei:hi> und für Rechnung <tei:hi rend="italic">des Herrn Dr. Heinrich Schenker,
     hier</tei:hi> lassen wir Ihnen <tei:hi rend="italic">Mk. 856.-</tei:hi><tei:note
     xml:id="r0001-fn02" type="editorial" place="foot">Presumably the currency equivalent, after
     deductions, of 1,600 Kroner, the amount Schenker has transferred to Halm from the fund he
     administers: see DLA 69.930/4, December 9, 1918. </tei:note>
    <tei:hi rend="italic">durch das Postscheckamt, Berlin</tei:hi>
    <tei:gap reason="obscured" unit="chars" extent="2"/>gehen, deren Empfang Sie uns unter Nennung
    des Auftraggebers gefälligst bestätigen wollen.</tei:p>

   <tei:closer>
    <tei:salute rend="indent-60">Hochachtend</tei:salute>
    <tei:signed rend="indent-40">K. k. priv. Wiener Bank-Verein. </tei:signed>
    <tei:signed rend="indent-60">
     <tei:hi rend="italic">Karl</tei:hi>
     <tei:gap reason="illegible"/>
    </tei:signed>
   </tei:closer>

  </tei:transcription>

  <tei:translation>

   <tei:note>Roman type = printed; Italic type = typed or handwritten</tei:note>

   <tei:opener>
    <tei:milestone unit="folio" n="recto"/>

    <tei:byline>Correspondence Card</tei:byline>

    <tei:fw type="envelope">

     <tei:address>
      <tei:addrLine>
       <tei:supplied reason="clarity">From:</tei:supplied> Imp.-Royal priv. Vienna Bank
      Association</tei:addrLine>
     </tei:address>

     <tei:address>
      <tei:addrLine>
       <tei:supplied reason="clarity">To:</tei:supplied>
       <tei:hi rend="italic">Mr August Halm, </tei:hi>
      </tei:addrLine>
      <tei:addrLine>in <tei:hi rend="italic">Esslingen, </tei:hi>
      </tei:addrLine>
      <tei:addrLine>
       <tei:hi rend="italic">Panoramastraße11</tei:hi>
      </tei:addrLine>
     </tei:address>

     <tei:fw type="postmark"> || 1/1 <tei:supplied reason="illegible">VIENNA</tei:supplied> 8 |
      28.XII.18-5 | * <tei:gap reason="illegible"/> * ||</tei:fw>
     <tei:lb/>
     <tei:fw type="postmark"> || 1/1 <tei:supplied reason="illegible">VIENNA</tei:supplied> 8 |
      28.XII.18-5 | * <tei:gap reason="illegible"/> * ||</tei:fw>

     <tei:milestone unit="folio" n="verso"/>

    </tei:fw>

    <tei:dateline rend="indent-50">Vienna, <tei:hi>Dec. 28,</tei:hi> 19<tei:hi rend="italic"
     >18</tei:hi></tei:dateline>
    <tei:address rend="indent-50">
     <tei:addrLine>I, Schottengasse 6</tei:addrLine>
    </tei:address>

   </tei:opener>


   <tei:p>On<tei:ptr corresp="#r0001-fn01" type="footnote"/> order of <tei:hi rend="italic">the
      <tei:orgName>VBA</tei:orgName><!-- profile: org: Bankverein -->, Rennweg Department </tei:hi>
    and for billing to <tei:hi rend="italic">Dr. Heinrich Schenker</tei:hi>, we herewith <tei:hi
     rend="italic">transfer to you </tei:hi>
    <tei:hi rend="italic">856 Marks</tei:hi>,<tei:ptr corresp="#r0001-fn02" type="footnote"/>
    <tei:hi rend="italic">through the Postal Bank, Berlin</tei:hi> the receipt of which you are
    kindly requested to confirm. </tei:p>

   <tei:closer>
    <tei:salute rend="indent-60">Respectfully, </tei:salute>
    <tei:signed rend="indent-40">Imp.-Royal priv. Vienna Bank Association</tei:signed>
    <tei:signed rend="indent-60">
     <tei:hi rend="italic">Karl</tei:hi>
     <tei:gap reason="illegible"/>
    </tei:signed>
   </tei:closer>

  </tei:translation>
