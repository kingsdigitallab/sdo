  </sdo:itemDesc>

  <tei:div type="transcription">

   <tei:opener>
    <tei:milestone unit="folio" n="recto"/>

    <tei:supplied reason="format">all in decorative rule-frame</tei:supplied>

    <tei:address>
     <tei:addrLine><tei:supplied reason="clarity">Absender: </tei:supplied><tei:handShift
