   <dcterms:isPartOf>UE ~ HSchenker</dcterms:isPartOf>
   <dc:title>Typed postcard from Hertzka (UE) to Schenker, dated April 18, 1918</dc:title>
   <dc:type>Postcard</dc:type>
   <dcterms:created>QQQQQ</dcterms:created>
   <dcterms:dateSubmitted>2009-03-10</dcterms:dateSubmitted>
   <dc:description>Hertzka acknowledges return of Gazette de Lausanne article and concurs with
    Schenker's view on editing. </dc:description>
   <dc:subject>Gazette de Lausanne; editing</dc:subject>
   <!-- Add the EATS key attribute value to indicate the sender of the letter -->
