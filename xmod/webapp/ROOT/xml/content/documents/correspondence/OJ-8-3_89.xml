     <tei:address>
      <tei:addrLine>From: <tei:handShift new="#HS"/> Dr. H. Schenker, </tei:addrLine>
      <tei:addrLine> currently at: Seefeld </tei:addrLine>
      <tei:addrLine> in Tyrol </tei:addrLine>

     </tei:address>
     <tei:address>
      <tei:addrLine><tei:handShift new="#printed"/>To: <tei:handShift new="#HS"/>Prof. M.
       Violin,</tei:addrLine>
      <tei:addrLine> Vienna <tei:subst>
        <tei:del rend="overstrike">XIV</tei:del>
        <tei:add place="inline"><tei:handShift new="#unk"/>XIII/2</tei:add>
       </tei:subst>,</tei:addrLine>
      <tei:addrLine rend="indent-10"><tei:handShift new="#HS"/>Sechshauserstr. 126. </tei:addrLine>
     </tei:address>
     <tei:fw type="postmark">|| <tei:gap reason="illegible"/><tei:note type="editorial">illeg</tei:note> | <tei:gap reason="illegible"/><tei:note type="editorial">illeg</tei:note>
      | IN TIROL ||</tei:fw>
     <tei:milestone unit="folio" n="verso"/>
    </tei:fw>
    <tei:salute><tei:rs type="person" key="entity-000913">Floriz</tei:rs>,<tei:ptr corresp="#r0001-fn01" type="footnote"/>
    </tei:salute>
   </tei:opener>

   <tei:p><tei:rs type="person" key="entity-000922">Vrieslander</tei:rs> has just set off for home
    after a two-week stay.<tei:ptr corresp="#r0001-fn02" type="footnote"/> He has also taken my
     <tei:rs key="entity-001727" type="work">manuscript</tei:rs> with him for <tei:rs type="organization" key="entity-002405">Cotta</tei:rs>, and will take it to <tei:rs type="place" key="entity-002317">Stuttgart</tei:rs> himself. — </tei:p>

   <tei:p>We travel <tei:date when="1920-08-30">Monday 30th</tei:date> overnight, arriving <tei:rs type="place" key="entity-002484">Vienna</tei:rs>
    <tei:date when="1920-08-31">Tuesday</tei:date> morning, so that we can be lunching at <tei:rs type="place" key="entity-002816">Turezky</tei:rs>'s by midday.<tei:ptr corresp="#r0001-fn03" type="footnote"/>
    <tei:rs type="person" key="entity-000951">Weisse</tei:rs> cannot be there because of the loss of
    his <tei:persName>grandfather</tei:persName>, <tei:rs type="person" key="entity-000149">Dahms</tei:rs> because of price increases. </tei:p>

   <tei:closer>
    <tei:salute rend="indent-60">2 : 4 </tei:salute>
    <tei:signed rend="indent-70">Your <tei:rs type="person" key="entity-000632">H</tei:rs></tei:signed>
    <tei:lb/>
    <tei:dateline><tei:date when="1920-08-23">August 23, 1920</tei:date></tei:dateline>
   </tei:closer>

  </tei:div>

