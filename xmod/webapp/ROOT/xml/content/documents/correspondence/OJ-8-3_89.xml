      </tei:addrLine>
      <tei:addrLine>
       <tei:hi rend="lateinschr">i. Tirol</tei:hi>
      </tei:addrLine>

     </tei:address>
     <tei:address>
      <tei:addrLine><tei:handShift new="#printed"/>An: <tei:handShift new="#HS"/><tei:hi rend="lateinschr">H Prof. M. Violin</tei:hi></tei:addrLine>
      <tei:addrLine>
       <tei:hi rend="lateinschr">Wien</tei:hi>, <tei:subst>
