        <tei:lb/>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine>To <tei:handShift new="#d-A"/>Dr. Heinrich Schenker</tei:addrLine>
            <tei:addrLine><tei:handShift new="#printed"/>in <tei:handShift new="#d-A"/>Vienna
              III</tei:addrLine>
            <tei:addrLine>Reisnerstraße 38</tei:addrLine>
          </tei:address>
          <tei:lb/>
          <tei:fw type="postmark">|| VIENNA <tei:gap reason="illegible"/> | 15 | 21.2.08 | 11–12
            A.M. ||</tei:fw>
          <tei:lb/><tei:lb/>
        </tei:fw>
        <tei:milestone unit="folio" n="verso"/>
        <tei:salute><tei:handShift new="#d-A"/>Dear Dr. <tei:supplied reason="identity"><tei:rs
              type="person" key="entity-000632">Schenker</tei:rs></tei:supplied>,<tei:ptr
            corresp="#r0001-fn01" type="footnote"/></tei:salute>
      </tei:opener>

      <tei:p>Would you like to attend the dress rehearsal of <tei:title level="m"
          >Tiefland</tei:title> tomorrow – <tei:date when="1908-02-04">Saturday</tei:date>– at
        10.30? If yes, please pick me up in the morning at <tei:rs type="place" key="entity-004550"
          >Hotel Sacher</tei:rs> at 10.30.<tei:ptr corresp="#r0001-fn02" type="footnote"/></tei:p>

      <tei:closer>
        <tei:salute rend="indent-40">Cordial greetings in haste,</tei:salute>
        <tei:salute rend="indent-50">Your</tei:salute>
        <tei:signed rend="indent-60"><tei:rs key="entity-000150" type="person">E.
          d‘Albert</tei:rs></tei:signed><tei:lb/>
        <tei:dateline><tei:date when="1908-02-03">Friday</tei:date><tei:ptr corresp="#r0001-fn03"
            type="footnote"/></tei:dateline>
      </tei:closer>
    </tei:div>

