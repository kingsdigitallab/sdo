   <dc:title>Handwritten postcard from Jeanette to Wilhelm Schenker, dated September 22,
    1930</dc:title>

   <dcterms:created>1930-09-22T12:00:00Z</dcterms:created>
   <dcterms:dateSubmitted>2024-10-09</dcterms:dateSubmitted>
   <dc:description>Jeanette reports that Heinrich’s health has improved [following a bout of
    illness] and that he is resuming work.</dc:description>
   <dc:subject/>

   <marcrel:correspondent key="entity-000771">JSchenker</marcrel:correspondent>
   <marcrel:correspondent key="entity-000632">HSchenker</marcrel:correspondent>
   <marcrel:recipient key="entity-000775">Wilhelm Schenker</marcrel:recipient>

  </sdo:itemDesc>


  <tei:div type="transcription">

   <tei:opener>
    <tei:milestone unit="folio" n="recto"/><tei:lb/>
    <tei:fw type="header" rend="inline">
     <tei:handShift new="#pr"/><tei:hi rend="bold">Postkarte</tei:hi></tei:fw>
    <tei:lb/>
    <tei:fw type="envelope">
     <tei:address>
      <tei:addrLine><tei:handShift new="#pr"/>Absender: <tei:handShift new="#JS"/>Schenker, Wien
       III.</tei:addrLine>
      <tei:addrLine>Keilgasse 8/12</tei:addrLine>
     </tei:address>
     <tei:address>
      <tei:addrLine>Herrn D<tei:hi rend="supralinear">r</tei:hi> Wilhelm Schenker</tei:addrLine>
      <tei:addrLine>St. Bernhard b/ Horn</tei:addrLine>
      <tei:addrLine>N. Österr</tei:addrLine><tei:lb/>
     </tei:address>
     <tei:fw type="postmark">|| 3 WIEN 40 | 23.IX.30 10 |* 4b * ||</tei:fw>
     <tei:lb/><tei:lb/>
     <tei:milestone unit="folio" n="verso"/>
    </tei:fw>
    <tei:salute>Mein lieber <tei:rs type="person" key="entity-000775">Wilhelm</tei:rs>!<tei:note
      xml:id="r0001-fn01" type="editorial" place="foot">Writing of this postcard is not recorded in
      Schenker’s diary. </tei:note></tei:salute>
   </tei:opener>

   <tei:p>herzlichsten Dank für Deinen lieben Brief!<tei:note xml:id="r0001-fn02" type="editorial"
     place="foot">Schenker’s diary records the receipt of a letter from Wilhelm on September
     18.</tei:note> Unserem teueren <tei:rs type="person" key="entity-000632">Patienten</tei:rs>
    geht es, Gott sei Dank, <tei:hi rend="underline">schon viel</tei:hi> besser, er ist schon um die
    Mittagszeit 3 Stunden außer Bett u. nascht sogar schon wieder an der Arbeit. Hoffentlich geht es
    weiter so vorwärts u. aufwärts.</tei:p>

   <tei:closer>
    <tei:salute>Wir grüßen allseits recht herzlich!</tei:salute>
    <tei:salute rend="indent-60">In Liebe</tei:salute>
    <tei:signed rend="indent-40"><tei:rs type="person" key="entity-000632">Heinrich</tei:rs> u.
      <tei:rs type="person" key="entity-000771">Lie-Lie</tei:rs></tei:signed><tei:lb/>
    <tei:dateline><tei:date when="1930-09-22">22. IX. 30</tei:date></tei:dateline>
   </tei:closer>

  </tei:div>


  <tei:div type="translation">

   <tei:opener>
    <tei:milestone unit="folio" n="recto"/><tei:lb/>
    <tei:fw type="header" rend="inline">
     <tei:handShift new="#pr"/><tei:hi rend="bold">Postcard</tei:hi></tei:fw>
    <tei:lb/>
    <tei:fw type="envelope">
     <tei:address>
      <tei:addrLine><tei:handShift new="#pr"/>From: <tei:handShift new="#JS"/>Schenker, Vienna
       III</tei:addrLine>
      <tei:addrLine>Keilgasse 8/12</tei:addrLine>
     </tei:address>
     <tei:address>
      <tei:addrLine>Dr. Wilhelm Schenker</tei:addrLine>
      <tei:addrLine>St. Bernhard near Horn</tei:addrLine>
      <tei:addrLine>Lower Austria</tei:addrLine><tei:lb/>
     </tei:address>
     <tei:fw type="postmark">|| 3 VIENNA 40 | 23.IX.30 10 |* 4b * ||</tei:fw>
     <tei:lb/><tei:lb/>
     <tei:milestone unit="folio" n="verso"/>
    </tei:fw>
    <tei:salute>My dear <tei:rs type="person" key="entity-000775">Wilhelm</tei:rs>,<tei:ptr
      corresp="#r0001-fn01" type="footnote"/></tei:salute>
   </tei:opener>

   <tei:p>Most cordial thanks for your letter!<tei:ptr corresp="#r0001-fn02" type="footnote"/> Our
    precious <tei:rs type="person" key="entity-000632">patient</tei:rs> is, thank God, <tei:hi
     rend="underline">already much</tei:hi> better. Around midday, he has already been out of bed
    for three hours and is even noshing on work. Hopefully, it will continue that way, forward and
    upward.</tei:p>

   <tei:closer>
    <tei:salute>We greet you all very heartily!</tei:salute>
    <tei:salute rend="indent-60">With love,</tei:salute>
    <tei:signed rend="indent-40"><tei:rs type="person" key="entity-000632">Heinrich</tei:rs> and
      <tei:rs type="person" key="entity-000771">Lie-Lie</tei:rs></tei:signed><tei:lb/>
    <tei:dateline><tei:date when="1930-09-22">September 22, 1930</tei:date></tei:dateline>
   </tei:closer>

  </tei:div>

