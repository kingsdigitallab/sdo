     </tei:address>
     <tei:address>
      <tei:addrLine><tei:supplied>An:</tei:supplied> D<tei:hi rend="supralinear">r</tei:hi></tei:addrLine>
      <tei:addrLine>Heinrich Schnker</tei:addrLine>
