      <dc:title>Typewritten postcard from Alfred Kalmus (UE) to Schenker, dated December 10,
        1930</dc:title>
      <dcterms:created>1930-12-10T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2012-12-04</dcterms:dateSubmitted>
      <dc:description>UE has sent a complimentary copy of Der Tonwille to Hermann
        Rinn.</dc:description>
      <dc:subject>Freiexemplar; complimentary copy</dc:subject>

      
      
      
    <marcrel:correspondent key="entity-000420">Kalmus</marcrel:correspondent><marcrel:correspondent key="entity-002408">UE</marcrel:correspondent><marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient><marcrel:recipient key="entity-000771">JSchenker</marcrel:recipient></sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/>
        <tei:lb/>
        <tei:note type="editorial">printed in art deco typography, all a single
          rule-frame:</tei:note>
        <tei:lb/>
        <tei:fw type="header" rend="center"><tei:handShift new="#printed"/>Postkarte</tei:fw>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine>UNIVERSAL-EDITION A.-G.</tei:addrLine>
            <tei:addrLine>WIEN, I. KARLSPLATZ 6. (Musikvereinsgebäude)</tei:addrLine>
          </tei:address>
          <tei:address>
            <tei:addrLine><tei:supplied reason="clarity">An: </tei:supplied><tei:handShift new="#TPg"/>Herrn Professor Heinrich Schenker</tei:addrLine>
            <tei:addrLine rend="indent-10">Wien III</tei:addrLine>
            <tei:addrLine rend="indent-10">Keilgasse 8</tei:addrLine>
          </tei:address>
          <tei:lb/>
          <tei:fw type="postmark">|| 1 WIEN 1 | 2 <tei:gap reason="illegible"/> | 10 . XII 1930 | *
            4c * ||</tei:fw>
        </tei:fw>
        <tei:lb/><tei:lb/>
        <tei:milestone unit="folio" n="verso"/>
        <tei:dateline rend="indent-50"><tei:placeName>Wien</tei:placeName>, <tei:date when="1930-12-10">10. XII. 1930</tei:date>.</tei:dateline><tei:lb/>
        <tei:byline>G/</tei:byline><tei:lb/>
        <tei:address>
          <tei:addrLine rend="indent-10">Herrn Professor Heinrich Schenker</tei:addrLine>
          <tei:addrLine rend="indent-60">
            <tei:hi rend="underline">Wien III</tei:hi></tei:addrLine>
          <tei:addrLine rend="indent-60">Keilgasse 8</tei:addrLine>
        </tei:address>
        <tei:salute>Sehr geehrter Herr <tei:rs type="person" key="entity-000632">Professor</tei:rs>!<tei:note xml:id="r0001-fn01" type="editorial" place="foot">Receipt
            of this postcard is recorded in Schenker's diary at OJ 4/4, p. 3555, December 11, 1930:
            "Von der U.-E. (K.): haben D<tei:hi rend="supralinear">r</tei:hi> Rinn die
            Tonwille-Hefte 1‒10 als Freiexemplare geschickt." ("From UE (postcard): they have sent
            issues 1‒10 of Der Tonwille to Dr. Rinn as complimentary
          copies.").</tei:note></tei:salute>
      </tei:opener>

      <tei:p rend="first">Wir bestätigen den Empfang Ihres Schreibens v. <tei:date when="1930-12-08">8. ds.</tei:date><tei:note xml:id="r0001-fn02" type="editorial" place="foot">= WSLB
          424.</tei:note> und haben ein Freiexemplar der Hefte 1 ‒ 10 des "<tei:rs key="entity-001739" type="work"><tei:title>Tonwille</tei:title></tei:rs>" an Herrn Dr.
          <tei:rs key="entity-000717" type="person">Rinn</tei:rs> gesandt. </tei:p>


      <tei:closer>
        <tei:salute rend="indent-50">In vorzüglicher Hochachtung</tei:salute>
        <tei:signed rend="indent-60"><tei:handShift new="#stamp"/>„<tei:rs key="entity-002408" type="organization">Universal-Edition Actiongesellschaft</tei:rs>“</tei:signed>
        <tei:signed rend="indent-70"><tei:handShift new="#AK"/>D<tei:hi rend="supralinear">r</tei:hi>
          <tei:rs key="entity-000420" type="person">Kalmus</tei:rs></tei:signed>
      </tei:closer>

    </tei:div>


    <tei:div type="translation">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/>
        <tei:lb/>
        <tei:note type="editorial">printed in art deco typography, all a single
          rule-frame:</tei:note>
        <tei:lb/>
        <tei:fw type="header" rend="center"><tei:handShift new="#printed"/>Postcard</tei:fw>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine>UNIVERSAL EDITION &amp; CO.,</tei:addrLine>
            <tei:addrLine>VIENNA I, KARLSPLATZ 6 (Musikverein Building)</tei:addrLine>
          </tei:address>
          <tei:address>
            <tei:addrLine><tei:supplied reason="clarity">To: </tei:supplied><tei:handShift new="#TPg"/>Professor Heinrich Schenker,</tei:addrLine>
            <tei:addrLine rend="indent-10">Vienna III,</tei:addrLine>
            <tei:addrLine rend="indent-10">Keilgasse 8</tei:addrLine>
          </tei:address>
          <tei:lb/>
          <tei:fw type="postmark">|| 1 VIENNA 1 | 2 <tei:gap reason="illegible"/> | 10 . XII 1930 |
            * 4c * ||</tei:fw>
        </tei:fw>
        <tei:lb/><tei:lb/>
        <tei:milestone unit="folio" n="verso"/>
        <tei:dateline rend="indent-50"><tei:placeName>Vienna</tei:placeName>, <tei:date when="1930-12-10">December 10, 1930</tei:date></tei:dateline><tei:lb/>
        <tei:byline>G/</tei:byline><tei:lb/>
        <tei:address>
          <tei:addrLine rend="indent-10">Professor Heinrich Schenker,</tei:addrLine>
          <tei:addrLine rend="indent-60">
            <tei:hi rend="underline">Vienna III,</tei:hi></tei:addrLine>
          <tei:addrLine rend="indent-60">Keilgasse 8</tei:addrLine>
        </tei:address>
        <tei:salute>Dear <tei:rs type="person" key="entity-000632">Professor</tei:rs>,<tei:ptr corresp="#r0001-fn01" type="footnote"/></tei:salute>
      </tei:opener>

      <tei:p rend="first">We acknowledge receipt of your letter of the <tei:date when="1930-12-08">8th inst.</tei:date>,<tei:ptr corresp="#r0001-fn02" type="footnote"/> and have sent a
        complimentary copy of issues 1‒10 of <tei:rs key="entity-001739" type="work"><tei:title level="j">Der Tonwille</tei:title></tei:rs> to Dr. <tei:rs key="entity-000717" type="person">Rinn</tei:rs>.</tei:p>


      <tei:closer>
        <tei:salute rend="indent-50">With very kind regards,</tei:salute>
        <tei:signed rend="indent-60"><tei:handShift new="#stamp"/><tei:rs key="entity-002408" type="organization">Universal Edition &amp; Co.</tei:rs></tei:signed>
        <tei:signed rend="indent-70"><tei:handShift new="#AK"/>Dr. <tei:rs key="entity-000420" type="person">Kalmus</tei:rs></tei:signed>
      </tei:closer>

    </tei:div>
