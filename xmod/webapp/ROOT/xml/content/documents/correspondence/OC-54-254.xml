  <sdo:record ID="r0001">

    <sdo:itemDesc>
      <tei:rs role="correspondence" type="correspondence" key="entity-004414">DMV ~
        HSchenker</tei:rs>
      <tei:rs key="entity-004415" type="correspondence" role="correspondence">Demblin ~
        HSchenker</tei:rs>
      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002744">Letter</tei:rs>


      <dc:title>Typewritten letter from August Demblin (DMV) to Schenker, dated December 16,
        1930</dc:title>

      <dcterms:created>1930-12-16T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2023-10-23</dcterms:dateSubmitted>
      <dc:description>Drei Masken Verlag submit Röder's invoice for its work on the third
        Meisterwerk yearbook, amounting to 3,041.15 Marks.</dc:description>
      <dc:subject/>

      <marcrel:correspondent key="entity-002627">DMV</marcrel:correspondent>
      <marcrel:correspondent key="entity-004417">Demblin</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>
    </sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
        <tei:note type="editorial" place="inline">emblem: obelisk with “DMV” below plinth</tei:note><tei:lb/>
        <tei:address>
          <tei:addrLine><tei:handShift new="#printed"/>DREI MASKEN VERLAG AG.</tei:addrLine>
          <tei:addrLine>MÜNCHEN KAROLINENPLATZ 3</tei:addrLine>
          <tei:lb/>
        </tei:address>
        <tei:byline><tei:handShift new="#TPdmvN"/>N.</tei:byline>
        <tei:dateline rend="indent-60"><tei:handShift new="#TPdmvN"/>
          <tei:placeName>München</tei:placeName>, den <tei:date when="1930-12-16">16. Dezember
            1930</tei:date></tei:dateline><tei:lb/>
        <tei:address>
          <tei:addrLine rend="indent-20">Herrn Dr. Heinrich <tei:hi rend="sperr"
            >Schenker</tei:hi></tei:addrLine>
          <tei:addrLine rend="indent-40">
            <tei:hi rend="underline"><tei:hi rend="sperr">Wien</tei:hi> III / Keilgasse
            8</tei:hi></tei:addrLine>
        </tei:address>
        <tei:lb/>
        <tei:salute>Sehr geehrter Herr <tei:rs key="entity-000632" type="person"
            >Doktor</tei:rs>!<tei:note xml:id="r0001-fn01" type="editorial" place="foot"> Receipt of
            this letter and invoice are recorded in Schenker’s diary for December 17, 1930: “Vom
            Verlag (Br.): Abschrift der Rechnung: 3049 M., noch einige Mark mehr, als die früher
            gesandte Aufstellung – über den Vertrieb kein Wort!” (“From the publisher (letter): copy
            of the invoice: 3,049 Marks, still a few Marks more than the previously sent statement –
            not a word about sales!”).</tei:note>
        </tei:salute>
      </tei:opener>

      <tei:p rend="first">Wir erlauben uns, Ihnen umstehend die Abschrift der Rechnung <tei:rs
          type="organization" key="entity-005006">Röder</tei:rs>s über Ihr <tei:rs type="work"
          key="entity-001752">„<tei:title>Meisterwerk in der Musik</tei:title>, Band III“</tei:rs>
        zu übermitteln. </tei:p>

      <tei:closer>
        <tei:salute rend="indent-50">Mit vorzüglicher Hochachtung</tei:salute>
        <tei:signed rend="indent-55"><tei:handShift new="#stamp"/><tei:rs key="entity-002627"
            type="organization">Drei Masken Verlag A.-G.</tei:rs></tei:signed>
        <tei:signed rend="indent-55"><tei:handShift new="#AD"/><tei:rs key="entity-004417"
            type="person">Demblin</tei:rs></tei:signed><tei:lb/><tei:lb/>
        <tei:note type="editorial" place="inline">Röder’s invoice, typed on p. 2, is not reproduced
          here: total amount: 3,041.15 Marks<tei:note xml:id="r0001-fn02" type="editorial"
            place="foot">OC 54/255 is a scrap of paper on which Schenker has scribbled a sum:
            2.867.15 + 90 + 72 = 3.029.15 R<tei:supplied reason="abbreviation"
              >eichs</tei:supplied>M<tei:supplied>ark</tei:supplied>.</tei:note></tei:note>
      </tei:closer>

    </tei:div>



    <tei:div type="translation">

      <tei:opener>
        <tei:address>
          <tei:note type="editorial" place="inline">emblem: obelisk with “DMV” below
            plinth</tei:note>
          <tei:lb/>
          <tei:addrLine><tei:handShift new="#printed"/>DREI MASKEN VERLAG &amp; CO.</tei:addrLine>
          <tei:addrLine>MUNICH KAROLINENPLATZ 3</tei:addrLine>
          <tei:lb/>
        </tei:address>
        <tei:byline><tei:handShift new="#TPdmvN"/>N.</tei:byline>
        <tei:dateline rend="indent-60"><tei:handShift new="#TPdmvN"/>
          <tei:placeName>Munich</tei:placeName>, <tei:date when="1930-12-16">December 16,
            1930</tei:date></tei:dateline><tei:lb/>
        <tei:address>
          <tei:addrLine rend="indent-20">Dr. Heinrich <tei:hi rend="sperr"
            >Schenker</tei:hi></tei:addrLine>
          <tei:addrLine rend="indent-40">
            <tei:hi rend="underline"><tei:hi rend="sperr">Vienna</tei:hi> III / Keilgasse
            8</tei:hi></tei:addrLine>
        </tei:address>
        <tei:lb/>
        <tei:salute>Dear Dr. <tei:supplied reason="identity"><tei:rs key="entity-000632"
              type="person">Schenker</tei:rs></tei:supplied>,<tei:ptr corresp="#r0001-fn01"
            type="footnote"/></tei:salute>
      </tei:opener>

      <tei:p rend="first">We take the liberty of sending you overleaf a copy of <tei:rs
          type="organization" key="entity-005006">Röder</tei:rs>’s invoice for your <tei:rs
          type="work" key="entity-001752"><tei:title level="m">Masterwork in Music</tei:title>,
          volume III</tei:rs>.</tei:p>

      <tei:closer>
        <tei:salute rend="indent-50">Respectfully yours,</tei:salute>
        <tei:signed rend="indent-55"><tei:handShift new="#stamp"/><tei:rs key="entity-002627"
            type="organization">Drei Masken Verlag &amp; Co.</tei:rs></tei:signed>
        <tei:signed rend="indent-55"><tei:handShift new="#AD"/><tei:rs key="entity-004417"
            type="person">Demblin</tei:rs></tei:signed><tei:lb/><tei:lb/>
        <tei:note type="editorial" place="inline">Röder’s invoice, typed on p. 2, is not reproduced
          here: total amount: 3,041.15 Marks<tei:ptr corresp="#r0001-fn02" type="footnote"
          /></tei:note>
      </tei:closer>

    </tei:div>
