   <dc:title>Handwritten postcard from Schenker to Moriz Violin, dated November 5, 1909</dc:title>

   <dcterms:created>1909-11-05T12:00:00Z</dcterms:created>
   <dcterms:dateSubmitted>2018-05-23</dcterms:dateSubmitted>
   <dc:description>Schenker on the delusion of progress; epigonism versus
    progress-art.</dc:description>
   <dc:subject>Wahn; delusion; Fortschritt; progress; Esel; ass; Epigonentum; epigonism;
    Fortschrittskunst; progress-art; Kern; crux; Talent</dc:subject>



   <marcrel:correspondent key="entity-000632">HSchenker</marcrel:correspondent>
   <marcrel:recipient key="entity-000913">ViolinM</marcrel:recipient>
  </sdo:itemDesc>


  <tei:div type="transcription">

   <tei:opener>
    <tei:milestone unit="folio" n="recto"/><tei:lb/>
    <tei:note type="editorial" place="inline">All in a decorated rule-frame</tei:note><tei:lb/>
