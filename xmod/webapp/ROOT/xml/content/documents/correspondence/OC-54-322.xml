      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002744">Letter</tei:rs>

      <dc:title>Handwritten letter from Deutsch to Schenker, dated September 19, 1930</dc:title>

      <dcterms:created>1930-09-19T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2023-05-15</dcterms:dateSubmitted>
      <dc:description>Deutsch cannot see Schenker until Sunday, September 21, 1930.</dc:description>
      <dc:subject/>

      <marcrel:correspondent key="entity-000164">DeutschOE</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>
    </sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
        <tei:address>
          <tei:addrLine><tei:handShift new="#printed"/>PROF. OTTO ERICH DEUTSCH</tei:addrLine>
          <tei:addrLine rend="indent-80">WIEN II.</tei:addrLine>
          <tei:addrLine rend="indent-80">Böcklinstraße 26</tei:addrLine>
        </tei:address>
        <tei:dateline rend="indent-80"><tei:handShift new="#OED"/><tei:date when="1930-09-19">19.
            IX. 30</tei:date></tei:dateline>
        <tei:salute>Lieber verehrter Herr <tei:rs type="person" key="entity-000632"
            >Doktor</tei:rs>!<tei:note xml:id="r0001-fn01" type="editorial" place="foot">Receipt of
            this postcard is not recorded in Schenker’s diary, but the entry for September 21 does
            mention a meeting with Deutsch for an hour and a half, to go through the page-proofs of
            the <tei:rs type="work" key="entity-001752">third <tei:title level="j"
                >Meisterwerk</tei:title> yearbook</tei:rs>.</tei:note></tei:salute>
      </tei:opener>

      <tei:p rend="first">Ich freue mich, daß es Ihnen besser geht. Leider kann ich erst Sonntag
        vormittags bei Ihnen vorsprechen, gegen 11 Uhr, wenn Sie mir nicht absagen.<tei:note
          xml:id="r0001-fn02" type="editorial" place="foot">Schenker’s diary records the sending of
          a postcard to Deutsch on September 18, whose contents are not summarized, and another
          postcard (both not surviving) on September 19 “wegen einer Konferenz” (“concerning a
          meeting”).</tei:note></tei:p>

      <tei:closer>
        <tei:salute rend="indent-60">Ihr ganz ergebener</tei:salute>
        <tei:signed rend="indent-70"><tei:rs type="person" key="entity-000164">O E
          Deutsch</tei:rs></tei:signed>
      </tei:closer>

    </tei:div>


    <tei:div type="translation">

      <tei:opener>
        <tei:address>
          <tei:addrLine><tei:handShift new="#printed"/>PROF. OTTO ERICH DEUTSCH</tei:addrLine>
          <tei:addrLine rend="indent-80">Böcklinstraße 26</tei:addrLine>
          <tei:addrLine rend="indent-80">VIENNA II</tei:addrLine>

        </tei:address>
        <tei:dateline rend="indent-80"><tei:handShift new="#OED"/><tei:date when="1930-09-19"
            >September 19, 1930</tei:date></tei:dateline>
        <tei:salute>Dear revered Dr. <tei:supplied reason="identity"><tei:rs type="person"
              key="entity-000632">Schenker</tei:rs></tei:supplied>,<tei:ptr corresp="#r0001-fn01"
            type="footnote"/></tei:salute>
      </tei:opener>

      <tei:p rend="first">I am glad that you are feeling better. Unfortunately, I cannot come to
        speak with you until Sunday morning, towards 11 o’clock, unless you are unable to make
          it.<tei:ptr corresp="#r0001-fn02" type="footnote"/></tei:p>

      <tei:closer>
        <tei:salute rend="indent-60">Your wholly devoted</tei:salute>
        <tei:signed rend="indent-70"><tei:rs type="person" key="entity-000164">O. E.
            Deutsch</tei:rs></tei:signed>
      </tei:closer>
    </tei:div>

