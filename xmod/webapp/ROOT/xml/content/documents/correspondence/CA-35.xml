  <sdo:record ID="r0001">
    <sdo:itemDesc>
      <tei:rs role="correspondence" type="correspondence" key="entity-002724">Cotta ~
        HSchenker</tei:rs>
      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002745">Postcard</tei:rs>


      <dc:title>Handwritten postcard from Schenker to Cotta, dated August 23, 1906</dc:title>
      <dcterms:created>1906-08-23T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2017-06-27</dcterms:dateSubmitted>
      <dc:description>Schenker asks for mailings to be sent to his Vienna.</dc:description>
      <dc:subject>Sendungen; mailings</dc:subject>

      <marcrel:correspondent key="entity-000632">HSchenker</marcrel:correspondent>
      <marcrel:recipient key="entity-002405">Cotta</marcrel:recipient>
    </sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/>
        <tei:fw type="envelope">
          <tei:fw type="header" rend="center"><tei:handShift new="#printed"/><tei:hi rend="bold"
              >Korrespondenz-Karte</tei:hi></tei:fw><tei:lb/>
          <tei:address>
            <tei:addrLine>Absender: <tei:note type="editorial" place="inline">blank</tei:note>
            </tei:addrLine>
          </tei:address>
          <tei:address>
            <tei:addrLine>An: <tei:handShift new="#HS"/><tei:hi rend="lateinschr">J. G. Cotta'sche
                Buchhlg. Nachfolger</tei:hi></tei:addrLine>
            <tei:addrLine><tei:handShift new="#printed"/>in <tei:handShift new="#HS"/><tei:hi
                rend="lateinschr underline">Stuttgart</tei:hi>
            </tei:addrLine>
            <tei:addrLine><tei:hi rend="lateinschr">Deutschland</tei:hi></tei:addrLine>
            <tei:lb/>
          </tei:address>
          <tei:fw type="postmark">|| OETZ | <tei:unclear reason="reading">24</tei:unclear>.VIII.06 |
            b ||</tei:fw><tei:lb/><tei:lb/>
          <tei:milestone unit="folio" n="verso"/>
        </tei:fw>
        <tei:salute>Sehr geehrter <tei:rs key="entity-002405" type="organization"
            >Herr</tei:rs>!<tei:note xml:id="r0001-fn01" type="editorial" place="foot">Writing of
            this postcard is not recorded in Schenker's diary.</tei:note></tei:salute>
      </tei:opener>

      <tei:p>Ich bitte die für mich bestimmten Sendungen nunmehr an meine <tei:hi rend="lateinschr"
          >Wiener</tei:hi> Adresse: III., <tei:hi rend="lateinschr">Reisnerstr. 38</tei:hi>, richten
        zu wollen.<tei:note xml:id="r0001-fn02" type="editorial" place="foot">Schenker departed
          Ötz on August 24, arriving Vienna on August 26 or 27.</tei:note></tei:p>

      <tei:closer>
        <tei:salute rend="indent-40">Mit ausgez. Hochachtung</tei:salute>
        <tei:signed rend="indent-50">
          <tei:rs key="entity-000632" type="person"><tei:hi rend="lateinschr">H
            Schenker</tei:hi>.</tei:rs>
        </tei:signed>
        <tei:dateline><tei:rs type="place" key="entity-002384">Ötz</tei:rs>, <tei:date
            when="1906-08-23">23. August. 1906</tei:date></tei:dateline>
      </tei:closer>


    </tei:div>


    <tei:div type="translation">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/>
        <tei:fw type="envelope">
          <tei:fw type="header" rend="center"><tei:handShift new="#printed"/><tei:hi rend="bold"
              >Postcard</tei:hi></tei:fw><tei:lb/>
          <tei:address>
            <tei:addrLine>From: <tei:note type="editorial" place="inline">blank</tei:note>
            </tei:addrLine>
          </tei:address>
          <tei:address>
            <tei:addrLine>To: <tei:handShift new="#HS"/>Successors to Messrs J. G. Cotta's Book
              Dealership</tei:addrLine>
            <tei:addrLine><tei:handShift new="#printed"/>in <tei:handShift new="#HS"/><tei:hi
                rend="underline">Stuttgart</tei:hi>
            </tei:addrLine>
            <tei:addrLine>Germany</tei:addrLine>
            <tei:lb/>
          </tei:address>
          <tei:fw type="postmark">|| OETZ | <tei:unclear reason="original unclear"
            >24</tei:unclear>.VIII.06 | b ||</tei:fw><tei:lb/><tei:lb/>
          <tei:milestone unit="folio" n="verso"/>
        </tei:fw>
        <tei:salute>Dear <tei:rs key="entity-002405" type="organization">Sir</tei:rs>,<tei:ptr
            corresp="#r0001-fn01" type="footnote"/></tei:salute>
      </tei:opener>

      <tei:p>Please from now on direct all dispatches intended for me to my Vienna address: III,
        Reisnerstrasse 38.<tei:ptr corresp="#r0001-fn02" type="footnote"/></tei:p>

      <tei:closer>
        <tei:salute rend="indent-30">With kind regards,</tei:salute>
        <tei:signed rend="indent-40">
          <tei:rs key="entity-000632" type="person">Dr. Heinrich Schenker</tei:rs>
        </tei:signed>
        <tei:dateline><tei:rs type="place" key="entity-002384">Ötz</tei:rs>, <tei:date
            when="1906-08-23">August 23, 1906</tei:date></tei:dateline>
      </tei:closer>


    </tei:div>

