  <sdo:record ID="r0001">

    <sdo:itemDesc>

      <tei:rs type="correspondence" role="correspondence" key="entity-005439">Waldheim-Eberle ~
        HSchenker</tei:rs>
      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002744">Letter</tei:rs>

      <dc:title>Typewritten letter from Waldheim to Schenker, dated September 21, 1932</dc:title>
      <dcterms:created>1932-09-21T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2023-08-15</dcterms:dateSubmitted>

      <dc:description>As requested, Waldheim-Eberle has sent a duplicate final invoice to the David
        Mannes Music School in New York City.</dc:description>
      <dc:subject/>

      <marcrel:correspondent key="entity-002402">Waldheim-Eberle</marcrel:correspondent>
      <marcrel:correspondent key="entity-008402">Stefan Darnau</marcrel:correspondent>
      <marcrel:correspondent key="entity-008403">Karl Fleischmann</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>
    </sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
        <tei:address>
          <tei:addrLine><tei:handShift new="#printed"/>GROSSDRUCKEREI UND VERLAG</tei:addrLine>
          <tei:addrLine><tei:hi rend="bold">WALDHEIM-EBERLE A.G.</tei:hi></tei:addrLine>
          <tei:addrLine><tei:hi rend="bold">WIEN, VII., SEIDENGASSE 3–11</tei:hi></tei:addrLine>
        </tei:address>
        <tei:dateline rend="indent-40">
          <tei:handShift new="#TPwe"/><tei:placeName>Wien</tei:placeName>, <tei:date
            when="1932-09-21">21. September 1932</tei:date>.</tei:dateline><tei:lb/>
        <tei:byline><tei:handShift new="#printed"/>MUSIKALIENDRUCK</tei:byline>
        <tei:byline><tei:handShift new="#TPwe"/>M/G</tei:byline>
        <tei:address>
          <tei:addrLine rend="indent-30">Herrn Prof. Heinrich Schenker,</tei:addrLine>
          <tei:addrLine rend="indent-60"><tei:hi rend="underline">Wien.-</tei:hi><tei:note
              xml:id="r0001-fn01" type="editorial" place="foot"> Receipt of this letter is recorded
              in Schenker’s diary for September 22, 1932: “Von Waldheim (Br.): haben das Duplikat
              der Faktura nach New York geschickt.” (“From Waldheim (letter): they have sent the
              duplicate of the invoice to New York.”).</tei:note></tei:addrLine>
        </tei:address>
        <tei:lb/>
      </tei:opener>

      <tei:p rend="first">Im Sinne unserer heutigen telefonischen Besprechung<tei:note
          xml:id="r0001-fn02" type="editorial" place="foot">Schenker’s diary for September 21
          records: “Lie-Liechen telefoniert an Waldheim wegen der von Mannes gewünschten Faktura.”
          (“Lie-Liechen telephones Waldheim regarding the invoice requested by Mannes.”). — This
          follows on from the entry: “Von Weisse (Brief vom Schiff): Mannes wünschen eine Faktura,
          weil die Zollbehörde Schwierigkeiten mache.” (“From Weisse (letter from the ship): Mannes
          would like an invoice, as the customs authorities are making difficulties.”).</tei:note>
        haben wir ein Duplikat unserer Faktura vom <tei:date when="1932-07-25">25. Juli
          1932</tei:date> an <tei:rs type="organization" key="entity-002454">David Mannes, Music
          School</tei:rs>, 157 East 74th Street, <tei:rs type="place" key="entity-002873">New
          York</tei:rs>, US, gesandt. </tei:p>

      <tei:closer>
        <tei:salute rend="indent-60">hochachtungsvoll</tei:salute>
        <tei:signed rend="indent-50"><tei:handShift new="#stamp"/><tei:rs key="entity-002402"
            type="organization">Waldheim-Eberle A.G.</tei:rs></tei:signed>
        <tei:signed rend="indent-60"><tei:handShift new="#stamp"/>Musikabteilung</tei:signed>
        <tei:signed rend="indent-40"><tei:handShift new="#SD"/>Darnau <tei:handShift new="#KF"/>ppa.
          Fleischmann</tei:signed>
      </tei:closer>

    </tei:div>



    <tei:div type="translation">

      <tei:opener>
        <tei:address>
          <tei:addrLine><tei:handShift new="#printed"/>MAJOR PRINTING HOUSE AND
            PUBLISHER</tei:addrLine>
          <tei:addrLine><tei:hi rend="bold">WALDHEIM-EBERLE &amp; CO.</tei:hi></tei:addrLine>
          <tei:addrLine><tei:hi rend="bold">VIENNA VII, SEIDENGASSE 3–11</tei:hi></tei:addrLine>
        </tei:address>
        <tei:dateline rend="indent-40">
          <tei:handShift new="#TPwe"/><tei:placeName>Vienna</tei:placeName>, <tei:date
            when="1932-09-21">September 21, 1932</tei:date></tei:dateline><tei:lb/>
        <tei:byline><tei:handShift new="#printed"/>MUSIC PRINTING</tei:byline>
        <tei:byline><tei:handShift new="#TPwe"/>M/G</tei:byline>
        <tei:address>
          <tei:addrLine rend="indent-30">Prof. Heinrich Schenker</tei:addrLine>
          <tei:addrLine rend="indent-60"><tei:hi rend="underline">Vienna</tei:hi><tei:ptr
              corresp="#r0001-fn01" type="footnote"/></tei:addrLine>
        </tei:address>
        <tei:lb/>
      </tei:opener>

      <tei:p rend="first">As per our telephone conversation of today,<tei:ptr corresp="#r0001-fn02"
          type="footnote"/> we have sent a duplicate copy of our invoice on <tei:date
          when="1932-07-25">July 25, 1932</tei:date> to the <tei:rs type="organization"
          key="entity-002454">David Mannes Music School</tei:rs>, 157 East 74th Street, <tei:rs
          type="place" key="entity-002873">New York</tei:rs>, USA.</tei:p>

      <tei:closer>
        <tei:salute rend="indent-60">with kind regards,</tei:salute>
        <tei:signed rend="indent-50"><tei:handShift new="#stamp"/><tei:rs key="entity-002402"
            type="organization">Waldheim-Eberle &amp; Co.</tei:rs></tei:signed>
        <tei:signed rend="indent-60"><tei:handShift new="#stamp"/>Music Division</tei:signed>
        <tei:signed rend="indent-40"><tei:handShift new="#SD"/>Darnau <tei:handShift new="#KF"/>ppa.
          Fleischmann</tei:signed>
      </tei:closer>

    </tei:div>
