      <tei:opener>
        <tei:address>
          <tei:addrLine><tei:handShift new="#printed"/>Universal Edition &amp; Co.</tei:addrLine>
          <tei:addrLine>(Jos. Aibl Publisher &amp; Co.)</tei:addrLine>
          <tei:addrLine>Leipzig <tei:supplied reason="spacer">/</tei:supplied> Sternwartestrasse
            1520</tei:addrLine>
          <tei:addrLine><tei:del rend="overstrike">Vienna <tei:supplied reason="spacer"
                >/</tei:supplied> I, Wipplingerstrasse 32</tei:del></tei:addrLine>
          <tei:addrLine><tei:handShift new="#stamp"/>Vienna <tei:supplied reason="spacer"
              >/</tei:supplied> I, Reichstratstrasse 8</tei:addrLine>
          <tei:addrLine><tei:note type="editorial" place="inline"><tei:hi rend="italic"
                >etc.</tei:hi></tei:note></tei:addrLine>
        </tei:address>
        <tei:byline><tei:handShift new="#TPue"/>
          <tei:persName type="typist">R</tei:persName></tei:byline><tei:lb/>
        <tei:dateline rend="indent-70"><tei:handShift new="#printed"/>
          <tei:placeName>Vienna</tei:placeName>, <tei:handShift new="#TPue"/><tei:date
            when="1911-12-01">December 1, 1911</tei:date></tei:dateline><tei:lb/>
        <tei:address>
          <tei:addrLine rend="ident-20">Prof. <tei:persName>Heinrich <tei:hi rend="sperr"
                >Schenker</tei:hi></tei:persName>, Esq.</tei:addrLine>
          <tei:addrLine rend="indent-80">
            <tei:hi rend="underline sperr">Vienna</tei:hi></tei:addrLine>
        </tei:address>
        <tei:salute>Dear Dr. <tei:supplied reason="identity"><tei:rs key="entity-000632"
              type="person">Schenker</tei:rs></tei:supplied>,</tei:salute>
      </tei:opener>

      <tei:p rend="first">Many thanks for enclosing the letter from <tei:rs type="person"
          key="entity-000150">d'Albert</tei:rs>, which I return herewith.<tei:ptr
          corresp="#r0001-fn01" type="footnote"/> I am arranging at the same time to have the book
          <tei:rs type="person" key="entity-003312">Grove</tei:rs>, <tei:title level="m"
          >Beethoven</tei:title> returned to you<tei:ptr corresp="#r0001-fn02" type="footnote"/> and
        remain with sincere good wishes,</tei:p>


      <tei:closer>
        <tei:salute rend="indent-60">Kind regards,</tei:salute>
        <tei:salute rend="indent-70"><tei:supplied reason="clarity">Your</tei:supplied>
          devoted</tei:salute>
        <tei:signed rend="indent-80"><tei:handShift new="#EH"/><tei:rs key="entity-000356"
            type="person">Hertzka</tei:rs></tei:signed><tei:lb/><tei:lb/>
      </tei:closer>

      <tei:postscript>
        <tei:p><tei:hi rend="underline">P. S.</tei:hi> Might I make use of d'<tei:rs type="person"
            key="entity-000150">Albert</tei:rs>'s remark that he is enchanted by your edition of the
            <tei:rs type="work" key="entity-001730"><tei:title level="m">Chromatic
              Fantasy</tei:title></tei:rs> for purposes of my publicity?</tei:p>
      </tei:postscript>

    </tei:div>
