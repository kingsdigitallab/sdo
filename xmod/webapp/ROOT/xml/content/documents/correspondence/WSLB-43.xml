  <sdo:record ID="r0001">

    <sdo:itemDesc>
      <tei:rs role="correspondence" type="correspondence" key="entity-002700">Hertzka ~
        HSchenker</tei:rs>
      <tei:rs role="correspondence" type="correspondence" key="entity-002701">UE ~
        H+JSchenker</tei:rs>
      <tei:rs role="correspondence" type="correspondence" key="entity-002702">UE ~
        HSchenker</tei:rs>
      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002745">Postcard</tei:rs>



      <dc:title>Handwritten postcard from Schenker to Hertzka (UE), dated October 2, 1909</dc:title>

      <dcterms:created>1909-10-02T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2016-09-15</dcterms:dateSubmitted>
      <dc:description>Schenker asks for a copy of Beitrag zur Ornamentik to be sent to Fritz
        Wahle.</dc:description>
      <dc:subject>Exemplar; copy; Auflage; edition; schicken; to send</dc:subject>




      <marcrel:correspondent key="entity-000632">Heinrich Schenker</marcrel:correspondent>
      <marcrel:recipient key="entity-000356">Emil Hertzka</marcrel:recipient>
      <marcrel:recipient key="entity-002408">Universal Edition</marcrel:recipient>
    </sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/><tei:lb/>
        <tei:fw type="envelope">
          <tei:note type="editorial" place="inline">All in a decorative rule-frame</tei:note><tei:lb/>
          <tei:address>
            <tei:addrLine><tei:supplied reason="clarity">Absender:</tei:supplied>
              <tei:handShift new="#HS"/><tei:hi rend="lateinschr">H Schenker</tei:hi>
            </tei:addrLine>
            <tei:addrLine>
              <tei:hi rend="lateinschr">III., Reisnerstr. 38.</tei:hi>
            </tei:addrLine>
          </tei:address>
          <tei:address>
            <tei:addrLine><tei:supplied reason="clarity">An:</tei:supplied> H. <tei:hi
                rend="lateinschr">Direktor Emil Hertzka</tei:hi></tei:addrLine>
            <tei:addrLine><tei:hi rend="lateinschr">I. Wipplingerstr. 32</tei:hi>
            </tei:addrLine>
            <tei:addrLine>„<tei:hi rend="lateinschr">Universal-Edition</tei:hi>“</tei:addrLine>
          </tei:address><tei:lb/>
          <tei:fw type="postmark">|| <tei:gap reason="illegible" unit="chars" extent="8"/> |
              <tei:gap reason="illegible" unit="chars" extent="3"/> X.09 – 8 | * 38 * ||</tei:fw>
          <tei:lb/><tei:lb/>
          <tei:milestone unit="folio" n="verso"/>
        </tei:fw>
        <tei:salute><tei:handShift new="#HS"/>Sehr geehrter Herr <tei:rs key="entity-000356"
            type="person">Direktor</tei:rs>!<tei:note xml:id="r0001-fn01" type="editorial"
            place="foot">Writing of this postcard is not recorded in Schenker's
          diary.</tei:note></tei:salute>
      </tei:opener>

      <tei:p>Sie würde mich sehr verpflichten, wenn Sie ein<tei:del rend="overstrike">e</tei:del>
        Exemplar meiner „<tei:rs type="work" key="entity-001721"
          ><tei:title>Ornamentik</tei:title></tei:rs>“ II Aufl. an H. <tei:hi rend="lateinschr"
          >Prof. <tei:rs key="entity-000925" type="person">Fritz Wahle</tei:rs></tei:hi> (einem
        renommierten Violinlehrer, ehemaliges Mitglied des <tei:hi rend="lateinschr"
          >Winklerquartettes</tei:hi>), I. <tei:hi rend="lateinschr">Börsegasse</tei:hi>, 7 schicken
        ließen.</tei:p>

      <tei:closer>
        <tei:salute rend="indent-20">Mit bestem Dank u. Gruß</tei:salute>
        <tei:salute rend="indent-60">I<tei:supplied reason="omission">h</tei:supplied>r
          ergeb</tei:salute>
        <tei:signed rend="indent-60">
          <tei:hi rend="lateinschr"><tei:rs key="entity-000632" type="person">H
            Schenker</tei:rs></tei:hi>
        </tei:signed><tei:lb/><tei:lb/>
        <tei:date when="1909-10-02">2. 10. 09</tei:date><tei:lb/>
      </tei:closer>

      <tei:postscript>
        <tei:ab><tei:note type="editorial" place="inline">UE date-stamp:</tei:note>
          <tei:handShift new="#stamp"/>6081</tei:ab>
        <tei:ab><tei:note type="editorial" place="inline">written in left margin:</tei:note>
          <tei:handShift new="#unk"/>ges. <tei:date when="1909-10-06">6. X. 09</tei:date></tei:ab>
      </tei:postscript>


    </tei:div>


    <tei:div type="translation">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/><tei:lb/>
        <tei:fw type="envelope">
          <tei:note type="editorial" place="inline">All in a decorative rule-frame</tei:note><tei:lb/>
          <tei:address>
            <tei:addrLine><tei:supplied reason="clarity">From:</tei:supplied>
              <tei:handShift new="#HS"/>H. Schenker </tei:addrLine>
            <tei:addrLine><tei:supplied reason="location">Vienna</tei:supplied> III, Reisnerstraße
              38 </tei:addrLine>
          </tei:address>
          <tei:address>
            <tei:addrLine><tei:supplied reason="clarity">To:</tei:supplied> Director Emil
              Hertzka</tei:addrLine>
            <tei:addrLine><tei:supplied reason="location">Vienna</tei:supplied> I, Wipplingerstraße
              32 </tei:addrLine>
            <tei:addrLine>Universal Edition</tei:addrLine>
          </tei:address><tei:lb/>
          <tei:fw type="postmark">|| <tei:gap reason="illegible" unit="chars" extent="8"/> |
              <tei:gap reason="illegible" unit="chars" extent="3"/> X.09 – 8 | * 38 * ||</tei:fw>
          <tei:lb/><tei:lb/>
          <tei:milestone unit="folio" n="verso"/>
        </tei:fw>
        <tei:salute><tei:handShift new="#HS"/>Dear <tei:rs key="entity-000356" type="person"
            >Director</tei:rs>!<tei:ptr corresp="#r0001-fn01" type="footnote"/></tei:salute>
      </tei:opener>

      <tei:p>I would be greatly obliged if you would send a copy of the 2nd edition of my <tei:rs
          type="work" key="entity-001721"><tei:title level="m">Ornamentation</tei:title></tei:rs> to
        Professor <tei:rs key="entity-000925" type="person">Fritz Wahle</tei:rs> (a renowned violin
        teacher, former member of the Winkler Quartet), <tei:supplied reason="location"
          >Vienna</tei:supplied> I, Börsegasse, 7.</tei:p>

      <tei:closer>
        <tei:salute rend="indent-20">With many thanks and best wishes,</tei:salute>
        <tei:salute rend="indent-60">Your devoted</tei:salute>
        <tei:signed rend="indent-60">
          <tei:rs key="entity-000632" type="person">H. Schenker</tei:rs>
        </tei:signed><tei:lb/><tei:lb/>
        <tei:date when="1909-10-02">October 2, 1909</tei:date><tei:lb/>
      </tei:closer>

      <tei:postscript>
        <tei:ab><tei:note type="editorial" place="inline">UE date-stamp:</tei:note>
          <tei:handShift new="#stamp"/>6081</tei:ab>
        <tei:ab><tei:note type="editorial" place="inline">written in left margin:</tei:note>
          <tei:handShift new="#unk"/>sent <tei:date when="1909-10-06">6. X. 09</tei:date></tei:ab>
      </tei:postscript>


    </tei:div>
