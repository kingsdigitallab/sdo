      <dc:title>Handwritten postcard from Heinrich to Wilhelm Schenker, dated June 6,
        1927</dc:title>

      <dcterms:created>1927-06-06T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2024-07-09</dcterms:dateSubmitted>
      <dc:description>Heinrich makes a further suggestion about how he and Wilhelm will get together
        in the summer.</dc:description>
      <dc:subject/>
      
      <marcrel:correspondent key="entity-000632">HSchenker</marcrel:correspondent>
      <marcrel:recipient key="entity-000775">Wilhelm Schenker</marcrel:recipient>
      
    </sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/><tei:lb/>
        <tei:fw type="header" rend="inline">
          <tei:handShift new="#pr"/><tei:hi rend="bold">Postkarte</tei:hi></tei:fw>
        <tei:lb/>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine><tei:handShift new="#pr"/>Absender: <tei:handShift new="#HS"
