     <tei:addrLine>Prof. H. Schenker,</tei:addrLine>
     <tei:addrLine>
      <tei:hi rend="underline">Vienna</tei:hi>
     </tei:addrLine>
    </tei:address>
    <tei:salute>Dear<tei:rs type="person" key="entity-000632">Professor</tei:rs>, </tei:salute>
   </tei:opener>

   <tei:p rend="first">In<tei:ptr corresp="#r0001-fn01"/> receipt of your letter of the 14th
     inst,<tei:ptr corresp="#r0001-fn02"/> we take the liberty of informing you that Director
     <tei:rs type="person" key="entity-000356">Hertzka</tei:rs> is currently away, and is expected
    back in about eight to ten days. We will then come back to your letter immediately. Meanwhile,
    we remain </tei:p>

   <tei:closer rend="indent-50">
    <tei:salute>with kind regards, </tei:salute>
    <tei:signed><tei:rs type="organization" key="entity-002408">Universal Edition</tei:rs> &amp;
     Co.</tei:signed>
    <tei:signed>Roth</tei:signed>
   </tei:closer>

