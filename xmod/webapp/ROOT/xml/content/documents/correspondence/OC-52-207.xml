    <tei:address>
     <tei:addrLine>Wohlgeboren Herrn Prof. Dr. H. <tei:hi rend="sperr">Schenker</tei:hi></tei:addrLine>
     <tei:addrLine>
      <tei:hi rend="underline-sperr">Wien</tei:hi>
     </tei:addrLine>
