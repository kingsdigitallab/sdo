      <dc:title>Handwritten picture postcard from Moriz and Karl Violin to Schenker, undated,
        postmarked July 16, [1929]</dc:title>

      <dcterms:created>1929-07-16T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2013-07-23</dcterms:dateSubmitted>
      <dc:description>Violin and his son have taken a bus to Brocken in the Harz mountains, the
        highest point in northern Germany.</dc:description>
      <dc:subject/>

    <marcrel:correspondent key="entity-000909">ViolinF</marcrel:correspondent><marcrel:correspondent key="entity-000913">ViolinM</marcrel:correspondent><marcrel:correspondent key="entity-000914">ViolinV</marcrel:correspondent><marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient></sdo:itemDesc>

    <tei:div type="transcription">

      <tei:opener>
        <tei:milestone unit="folio" n="verso"/><tei:lb/>
        <tei:note type="editorial">Picture, captioned: <tei:rs key="entity-004838" type="place">BROCKEN</tei:rs>, 1142 m u. M. Teufelskanzel</tei:note>
        <tei:lb/><tei:lb/>
        <tei:milestone unit="folio" n="recto"/>
        <tei:fw type="header" rend="inline"><tei:note type="editorial" place="inline">printed:</tei:note>
          <tei:handShift new="#printed"/>Brocken-Postkarte</tei:fw>
