            <tei:addrLine>(Salzburg)</tei:addrLine>
          </tei:address>
          <tei:address>
            <tei:addrLine><tei:supplied reason="clarity">To:</tei:supplied> Dr. Oswald Jonas </tei:addrLine>
            <tei:addrLine>Vienna <tei:subst>
                <tei:del rend="overstrike">III</tei:del>
                <tei:add place="inline"><tei:handShift new="#unk"/>XIX</tei:add>
