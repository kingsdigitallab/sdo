      <tei:rs role="correspondence" type="correspondence" key="entity-002775">Cube ~ HSchenker</tei:rs>
      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002745">Postcard</tei:rs>

      <dc:title>Handwritten postcard from Schenker to Cube, dated September 6, 1928</dc:title>

      <dcterms:created>1928-09-06T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2006-07-18</dcterms:dateSubmitted>
      <dc:description>Freier Satz will be prepared for publication this year; gives news of former pupils and
        supporters.</dc:description>
      <dc:subject/>

      
      
    <marcrel:correspondent key="entity-000632">HSchenker</marcrel:correspondent><marcrel:recipient key="entity-000143">Cube</marcrel:recipient></sdo:itemDesc>

    <tei:div type="transcription">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/><tei:lb/>
        <tei:fw type="header" rend="inline"><tei:note type="editorial" place="inline">printed:</tei:note>
          <tei:handShift new="#printed"/>Postkarte</tei:fw>
        <tei:lb/><tei:note type="editorial" place="inline">panel stating the aims of the <tei:rs key="entity-002444" type="organization"><tei:hi rend="italic">Deutscher Sprachverein</tei:hi></tei:rs></tei:note>
