      <dc:title>Typewritten letter from Hertzka (UE) to Schenker, dated September 25,
        1909</dc:title>

      <dcterms:created>1909-09-25T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2016-09-15</dcterms:dateSubmitted>
      <dc:description>Hertzka asks for a visit from Schenker.</dc:description>
      <dc:subject>meeting</dc:subject>

      <marcrel:correspondent key="entity-002408">Universal Edition</marcrel:correspondent>
      <marcrel:correspondent key="entity-000356">Emil Hertzka</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>
    </sdo:itemDesc>

    <tei:div type="transcription">

      <tei:opener>
        <tei:address>
          <tei:addrLine><tei:handShift new="#printed"/>„Universal-Edition“ A.-G.</tei:addrLine>
          <tei:addrLine>(Jos. Aibl Verlag, G.m.b.H.)</tei:addrLine>
          <tei:addrLine>Leipzig <tei:supplied reason="spacer">/</tei:supplied> Sternwartestrasse
            1520.</tei:addrLine>
          <tei:addrLine>Wien <tei:supplied reason="spacer">/</tei:supplied> I., Wipplingerstrasse
            32.</tei:addrLine>
          <tei:addrLine><tei:note type="editorial" place="inline"><tei:hi rend="italic"
                >etc.</tei:hi></tei:note></tei:addrLine>
        </tei:address>
        <tei:dateline rend="indent-60">
          <tei:placeName>Wien</tei:placeName>, <tei:handShift new="#TPue"/><tei:date
            when="1909-09-25">25. September 09</tei:date></tei:dateline><tei:lb/>
        <tei:address>
          <tei:addrLine rend="ident-20">Wohlgeboren Herrn Professor <tei:persName>Heinrich
              Schenker</tei:persName></tei:addrLine>
          <tei:addrLine rend="indent-60">
            <tei:hi rend="underline sperr">Wien</tei:hi>.</tei:addrLine>
        </tei:address>
        <tei:salute>Sehr geehrter Herr <tei:rs key="entity-000632" type="person"
            >Professor</tei:rs>!<tei:note xml:id="r0001-fn01" type="editorial" place="foot">Receipt
            of this letter is not recorded in Schenker's diary.</tei:note></tei:salute>
      </tei:opener>

      <tei:p rend="first">Ich bin seit heute früh wieder zurück und werde mich sehr freuen, Sie
        anfangs der kommenden Woche bei mir zu sehen.<tei:note xml:id="r0001-fn02" type="editorial"
          place="foot">The day of writing is a Saturday, so Hertzka is referring to the week
          beginning Monday September 27.</tei:note></tei:p>

      <tei:p rend="first">Von 10 – 1/2 1 (event. auch früher) und 3–6 treffen Sie mich stets hier
        an.</tei:p>

      <tei:closer>
        <tei:salute rend="indent-40">Mit den besten Grüssen</tei:salute>
        <tei:salute rend="indent-50">Ihr ergebener</tei:salute>
        <tei:signed rend="indent-60"><tei:handShift new="#EH"/><tei:rs key="entity-000356"
            type="person">Emil Hertzka</tei:rs></tei:signed>
      </tei:closer>

    </tei:div>

    <tei:div type="translation">

      <tei:opener>
        <tei:address>
          <tei:addrLine><tei:handShift new="#printed"/>Universal Edition &amp; Co.</tei:addrLine>
          <tei:addrLine>(Jos. Aibl Publisher &amp; Co.)</tei:addrLine>
          <tei:addrLine>Leipzig <tei:supplied reason="spacer">/</tei:supplied> Sternwartestrasse
            1520</tei:addrLine>
          <tei:addrLine>Vienna <tei:supplied reason="spacer">/</tei:supplied> I, Wipplingerstrasse
            32</tei:addrLine>
          <tei:addrLine><tei:note type="editorial" place="inline"><tei:hi rend="italic"
                >etc.</tei:hi></tei:note></tei:addrLine>
        </tei:address>
        <tei:dateline rend="indent-60">
          <tei:placeName>Vienna</tei:placeName>, <tei:handShift new="#TPue"/><tei:date
            when="1909-09-25">September 25, 1909</tei:date></tei:dateline><tei:lb/>
        <tei:address>
          <tei:addrLine rend="ident-20">Professor <tei:persName>Heinrich Schenker</tei:persName>,
            Esq.</tei:addrLine>
          <tei:addrLine rend="indent-60">
            <tei:hi rend="underline sperr">Vienna</tei:hi>.</tei:addrLine>
        </tei:address>
        <tei:salute>Dear <tei:rs key="entity-000632" type="person">Professor</tei:rs>,<tei:ptr
            corresp="#r0001-fn01" type="footnote"/></tei:salute>
      </tei:opener>

      <tei:p rend="first">I got back this morning and shall be very happy to see you at my place at
        the beginning of the coming week.<tei:ptr corresp="#r0001-fn02" type="footnote"/></tei:p>

      <tei:p rend="first">You will always find me here from 10:00 to 12:30 (possibly even earlier)
        and 3:00–6:00.</tei:p>

      <tei:closer>
        <tei:salute rend="indent-40">With best greetings,</tei:salute>
        <tei:salute rend="indent-50">Your devoted</tei:salute>
        <tei:signed rend="indent-60"><tei:handShift new="#EH"/><tei:rs key="entity-000356"
            type="person">Emil Hertzka</tei:rs></tei:signed>
      </tei:closer>


    </tei:div>
