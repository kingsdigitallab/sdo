            <tei:addrLine>Wattmanngasse 5, <tei:supplied reason="clarity">Vienna</tei:supplied>
              XIII</tei:addrLine>
          </tei:address>
          <tei:address>
            <tei:addrLine><tei:supplied reason="clarity">to:</tei:supplied> Dr. Heinrich
              Schenker</tei:addrLine>
            <tei:addrLine rend="indent-35">Vienna III</tei:addrLine>
            <tei:addrLine rend="indent-35">Keilgasse 8</tei:addrLine>
          </tei:address>
          <tei:fw type="postmark">|| <tei:gap reason="illegible" extent="few characters"/> 88 |
