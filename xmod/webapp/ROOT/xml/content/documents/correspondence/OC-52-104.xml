      <dc:title>Typewritten letter from Hertzka (UE) to Schenker, dated October 23, 1912</dc:title>

      <dcterms:created>1912-10-23T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2023-03-11</dcterms:dateSubmitted>
      <dc:description>Hertzka will speak with Harpner next week.</dc:description>
      <dc:subject/>

      <marcrel:correspondent key="entity-002408">Universal Edition</marcrel:correspondent>
      <marcrel:correspondent key="entity-000356">Emil Hertzka</marcrel:correspondent>
