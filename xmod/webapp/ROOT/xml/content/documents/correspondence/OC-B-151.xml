  <sdo:record ID="r0001">

    <sdo:itemDesc>
      <tei:rs role="correspondence" type="correspondence" key="entity-005596">AltmannW ~
        HSchenker</tei:rs>
      <tei:rs role="correspondence" type="correspondence" key="entity-005534">Königliche Bibliothek
