      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002745">postcard</tei:rs>

      <dc:title>Handwritten postcard from Seligmann to Schenker, dated February 24, 1903</dc:title>

      <dcterms:created>1903-02-24T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2022-11-18</dcterms:dateSubmitted>
      <dc:description>Seligmann informs Schenker that the chamber music planned for the next day
        will be held at his own place.</dc:description>
      <dc:subject/>



      <marcrel:correspondent key="entity-000819">Adalbert Franz Seligmann</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">Heinrich Schenker</marcrel:recipient>
    </sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/>
        <tei:lb/>
        <tei:fw type="header" rend="center"><tei:handShift new="#printed"/><tei:hi rend="bold"
            >Correspondenz-Karte.</tei:hi></tei:fw>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine>An: <tei:handShift new="#AFS"/>Herrn D<tei:hi rend="supralinear"
                >r</tei:hi> Heinrich Schenker</tei:addrLine>
            <tei:addrLine rend="indent-30"><tei:handShift new="#printed"/>in <tei:handShift
                new="#AFS"/>III Reisnerstrasse 38.</tei:addrLine>
            <tei:addrLine rend="indent-60">Wien</tei:addrLine>
            <tei:lb/>
          </tei:address>
          <tei:fw type="postmark">|| 24. 2. 03 | 9|3 WIEN 28 | 1–2 N | a. ||</tei:fw>
          <tei:fw type="postmark">|| WIEN 3/3 | BESTELLT | 24. 2. 03 | 5–7 N
          ||</tei:fw><tei:lb/><tei:lb/>
        </tei:fw>
        <tei:milestone unit="folio" n="verso"/><tei:lb/>
        <tei:dateline rend="indent-80"><tei:handShift new="#AFS"/><tei:date when="1903-02-24"
              ><tei:hi rend="underline">Dienstag</tei:hi></tei:date></tei:dateline>
      </tei:opener>

      <tei:p>Die vierstimmige Schnellpolka<tei:note xml:id="r0001-fn01" type="editorial"
          place="foot">The allusion is to an evening of chamber music playing.</tei:note> findet
        also <tei:date when="1903-02-25">morgen</tei:date> bei <tei:hi rend="underline">mir</tei:hi>
        statt, nicht bei Fr. E.</tei:p>

      <tei:closer>
        <tei:salute rend="indent-50">Herzl.</tei:salute>
        <tei:signed rend="indent-70"><tei:rs type="person" key="entity-000819">Seligmann</tei:rs>
        </tei:signed>
      </tei:closer>

    </tei:div>


    <tei:div type="translation">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/>
        <tei:lb/>
        <tei:fw type="header" rend="center"><tei:handShift new="#printed"/><tei:hi rend="bold"
            >Postcard</tei:hi></tei:fw>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine>To: <tei:handShift new="#AFS"/>Dr. Heinrich Schenker</tei:addrLine>
            <tei:addrLine rend="indent-30"><tei:handShift new="#printed"/>in <tei:handShift
                new="#AFS"/>Reisnerstrasse 38</tei:addrLine>
            <tei:addrLine rend="indent-60">Vienna III</tei:addrLine>
            <tei:lb/>
          </tei:address>
          <tei:fw type="postmark">|| 24. 2. 03 | 9|3 VIENNA 28 | 1–2 p.m. | a. ||</tei:fw>
          <tei:fw type="postmark">|| VIENNA 3/3 | DELIVERED | 24. 2. 03 | 5–7 p.m.
          ||</tei:fw><tei:lb/><tei:lb/>
        </tei:fw>
        <tei:milestone unit="folio" n="verso"/><tei:lb/>
        <tei:dateline rend="indent-80"><tei:handShift new="#AFS"/><tei:date when="1903-02-24"
              ><tei:hi rend="underline">Tuesday</tei:hi></tei:date></tei:dateline>
      </tei:opener>

      <tei:p>The four-voice Fast Polka<tei:ptr corresp="#r0001-fn01" type="footnote"/> will take
        place <tei:date when="1903-02-25">tomorrow</tei:date> at <tei:hi rend="underline"
          >my</tei:hi> place, not at Mrs. E.’s.</tei:p>

      <tei:closer>
        <tei:salute rend="indent-50">Cordially</tei:salute>
        <tei:signed rend="indent-70"><tei:rs type="person" key="entity-000819">Seligmann</tei:rs>
        </tei:signed>
      </tei:closer>

    </tei:div>
