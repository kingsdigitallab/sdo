      <dc:title>Handwritten picture postcard from Heinrich to Wilhelm Schenker, dated September 2,
        1929</dc:title>

      <dcterms:created>1929-09-02T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2024-10-07</dcterms:dateSubmitted>
      <dc:description>Heinrich announces their imminent arrival at his brother’s
        place.</dc:description>
      <dc:subject/>

      <marcrel:correspondent key="entity-000632">HSchenker</marcrel:correspondent>
      <marcrel:recipient key="entity-000775">Wilhelm Schenker</marcrel:recipient>

    </sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/><tei:lb/>
        <tei:fw type="envelope">
          <tei:fw type="header" rend="inline">
            <tei:handShift new="#pr"/><tei:hi rend="bold">Postkarte</tei:hi></tei:fw>
          <tei:lb/>
          <tei:note type="editorial" place="inline">small picture: lake with village and mountains,
            captioned: “Zell am See, Salzburg”</tei:note><tei:lb/>
          <tei:address>
            <tei:addrLine><tei:supplied>Absender:</tei:supplied>
              <tei:handShift new="#HS-pencil"/>Schenker</tei:addrLine>
            <tei:addrLine>Wien, III</tei:addrLine>
            <tei:addrLine>Keilgasse 8</tei:addrLine>
          </tei:address>
          <tei:address>
            <tei:addrLine><tei:supplied>An:</tei:supplied> H D<tei:hi rend="supralinear">r.</tei:hi>
              Wilhelm Schenker</tei:addrLine>
            <tei:addrLine>St. Bernhard b/Horn</tei:addrLine>
            <tei:addrLine><tei:hi rend="underline">(Nd: Öst.)</tei:hi></tei:addrLine>
          </tei:address>
          <tei:fw type="postmark">|| SALZ[BURG] | <tei:gap reason="illegible"/> | * 8a *
            ||</tei:fw><tei:lb/><tei:lb/>
        </tei:fw>
        <tei:milestone unit="folio" n="verso"/><tei:lb/>
        <tei:salute><tei:handShift new="#HS-pencil"/>Mein lieber <tei:rs type="person"
            key="entity-000775">Wilhelm</tei:rs>!<tei:note xml:id="r0001-fn01" type="editorial"
            place="foot">Schenker’s diary entry for September 1, 1929, records the writing of a
            picture postcard to Wilhelm.</tei:note></tei:salute>
      </tei:opener>

      <tei:p>Der Tag, die Stunde naht: erwarte uns Mittw. Vm. in <tei:hi rend="underline"
          >Horn</tei:hi>!</tei:p>

      <tei:closer>
        <tei:salute>Beste Grüße von mir u.</tei:salute>
        <tei:salute><tei:rs type="person" key="entity-000771">LieLiechen</tei:rs> Euch
          Beiden</tei:salute>
        <tei:signed rend="indent-60"><tei:rs type="person" key="entity-000632">H</tei:rs> u <tei:rs
            type="person" key="entity-000771">LL</tei:rs> Sch</tei:signed><tei:lb/>
        <tei:dateline><tei:date when="1929-09-02">2. 9. 29</tei:date></tei:dateline>
      </tei:closer>

    </tei:div>



    <tei:div type="translation">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/><tei:lb/>
        <tei:fw type="envelope">
          <tei:fw type="header" rend="inline">
            <tei:handShift new="#pr"/><tei:hi rend="bold">Postcard</tei:hi></tei:fw>
          <tei:lb/>
          <tei:note type="editorial" place="inline">small picture: lake with village and mountains,
            captioned: “Zell am See, Salzburg”</tei:note><tei:lb/>
          <tei:address>
            <tei:addrLine><tei:supplied>From:</tei:supplied>
              <tei:handShift new="#HS-pencil"/>Schenker</tei:addrLine>
            <tei:addrLine>Vienna III</tei:addrLine>
            <tei:addrLine>Keilgasse 8</tei:addrLine>
          </tei:address>
          <tei:address>
            <tei:addrLine><tei:supplied>To:</tei:supplied> Dr. Wilhelm Schenker</tei:addrLine>
            <tei:addrLine>St. Bernhard near Horn</tei:addrLine>
            <tei:addrLine><tei:hi rend="underline">(Lower Austria)</tei:hi></tei:addrLine>
          </tei:address>
          <tei:fw type="postmark">|| SALZ[BURG] | <tei:gap reason="illegible"/> | * 8a *
            ||</tei:fw><tei:lb/><tei:lb/>
        </tei:fw>
        <tei:milestone unit="folio" n="verso"/><tei:lb/>
        <tei:salute><tei:handShift new="#HS-pencil"/>My Dear <tei:rs type="person"
            key="entity-000775">Wilhelm</tei:rs>,<tei:ptr corresp="#r0001-fn01" type="footnote"
          /></tei:salute>
      </tei:opener>

      <tei:p>The day and the hour cometh: expect us Wednesday mid-morning in <tei:hi
          rend="underline">Horn</tei:hi>!</tei:p>

      <tei:closer>
        <tei:salute>Best greetings to you both</tei:salute>
        <tei:salute>from me and <tei:rs type="person" key="entity-000771"
          >LieLiechen</tei:rs></tei:salute>
        <tei:signed rend="indent-60"><tei:rs type="person" key="entity-000632">H</tei:rs> u <tei:rs
            type="person" key="entity-000771">LL</tei:rs> Schenker</tei:signed><tei:lb/>
        <tei:dateline><tei:date when="1929-09-02">September 2, 1929</tei:date></tei:dateline>
      </tei:closer>

