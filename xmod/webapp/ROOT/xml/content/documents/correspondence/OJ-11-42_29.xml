      <dc:title>Handwritten postcard from Harden to Schenker, dated April 18, 1897</dc:title>
      <dcterms:created>1897-04-18T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2014-12-12</dcterms:dateSubmitted>
      <dc:description>Harden asks whether Schenker's article on Brahms is still
        available.</dc:description>
      <dc:subject>Artikel; article</dc:subject>



      <marcrel:correspondent key="entity-000333">Maximilian Harden</marcrel:correspondent>
      <marcrel:correspondent key="entity-002566">Die Zukunft</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>
    </sdo:itemDesc>


    <tei:div type="transcription">
      <tei:opener>
        <tei:milestone unit="folio" n="recto"/><tei:lb/>
        <tei:fw type="header" rend="center"><tei:handShift new="#printed"/>Deutsche
          Reichspost</tei:fw>
        <tei:fw type="header" rend="center">Postkarte</tei:fw>
        <tei:lb/>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine>An: <tei:handShift new="#MH"/>Herrn Dr. H. Schenker</tei:addrLine>
            <tei:addrLine rend="indent-10"><tei:handShift new="#printed"/>in <tei:handShift
                new="#MH"/>Wien</tei:addrLine>
            <tei:addrLine rend="indent-10"><tei:handShift new="#printed"/>Wohnung <tei:handShift
                new="#MH"/>III Traungasse 1</tei:addrLine>
          </tei:address><tei:lb/>
          <tei:fw type="postmark">|| BERLIN W. | 18.4.97.4-5N. | 9 ||</tei:fw>
          <tei:fw type="postmark">|| WIEN 3/3 | 49 | BESTELLT | 20.4.97 | 8-10V. ||</tei:fw><tei:lb/><tei:lb/>
          <tei:milestone unit="folio" n="verso"/><tei:lb/>
        </tei:fw>
        <tei:address>
          <tei:addrLine><tei:handShift new="#printed"/>DIE ZUKUNFT.</tei:addrLine>
          <tei:addrLine>HERAUSGEBER: MAXIMILIAN HARDEN.</tei:addrLine>
          <tei:addrLine rend="indent-70">BERLIN W. 9, <tei:handShift new="#MH"/><tei:date
              when="1897-03-18">18/4 <tei:handShift new="#printed"/><tei:supplied reason="clarity"
                >18</tei:supplied>9<tei:handShift new="#MH"/>7</tei:date></tei:addrLine>
          <tei:addrLine rend="indent-70"><tei:handShift new="#printed"/>8 KÖNIGIN
            AUGUSTASTR.</tei:addrLine>
        </tei:address><tei:lb/>
        <tei:salute><tei:handShift new="#MH"/>Sehr geehrter <tei:rs key="entity-000632"
            type="person">Herr</tei:rs>,</tei:salute>
      </tei:opener>

      <tei:p>mein <tei:rs key="entity-000094" type="person">Brahms</tei:rs>-Mann ist plötzlich
        schwer erkrankt. Ist Ihr Artikel<tei:note xml:id="r0001-fn01" type="editorial" place="foot"
          >The article in question is <tei:bibl><tei:title level="a">Johannes Brahms,</tei:title>
            which appeared in <tei:title level="j">Die Zukunft</tei:title> 19 (May 8, 1897),
            261‒65</tei:bibl>, and is reprinted in <tei:bibl><tei:editor>Hellmut
              Federhofer</tei:editor>, <tei:title level="m">Heinrich Schenker als Essayist und
              Kritiker</tei:title> (Hildesheim: Georg Olms Verlag, 1990), pp. 230–36</tei:bibl>.
          This is the last article that Schenker wrote for Harden's journal. </tei:note> noch
        frei?</tei:p>

      <tei:closer>
        <tei:salute rend="indent-50">Mit schönem Gruß</tei:salute>
        <tei:salute rend="indent-80">Ihr</tei:salute>
        <tei:signed rend="indent-90"><tei:rs key="entity-000333" type="person">
          H</tei:rs></tei:signed>
      </tei:closer>

    </tei:div>


    <tei:div type="translation">
      <tei:opener>
        <tei:milestone unit="folio" n="recto"/><tei:lb/>
        <tei:fw type="header" rend="center"><tei:handShift new="#printed"/>German Imperial
          Post</tei:fw>
        <tei:fw type="header" rend="center">Postcard</tei:fw>
        <tei:lb/>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine>To: <tei:handShift new="#MH"/>Dr. H. Schenker</tei:addrLine>
            <tei:addrLine rend="indent-10"><tei:handShift new="#printed"/>in: <tei:handShift
                new="#MH"/>Vienna III</tei:addrLine>
            <tei:addrLine rend="indent-10"><tei:handShift new="#printed"/>Address: <tei:handShift
                new="#MH"/>Traungasse 1</tei:addrLine>
          </tei:address><tei:lb/>
          <tei:fw type="postmark">|| BERLIN W. | 18.4.97.4-5 P.M. | 9 ||</tei:fw>
          <tei:fw type="postmark">|| VIENNA 3/3 | 49 | DELIVERED | 20.4.97 | 8-10 A.M. ||</tei:fw><tei:lb/><tei:lb/>
          <tei:milestone unit="folio" n="verso"/><tei:lb/>
        </tei:fw>
        <tei:address>
          <tei:addrLine><tei:handShift new="#printed"/>DIE ZUKUNFT</tei:addrLine>
          <tei:addrLine>EDITOR: MAXIMILIAN HARDEN</tei:addrLine>
          <tei:addrLine rend="indent-70">BERLIN W. 9, <tei:handShift new="#MH"/><tei:date
              when="1897-03-18">April 18, <tei:handShift new="#printed"/><tei:supplied
                reason="clarity">18</tei:supplied>9<tei:handShift new="#MH"
            />7</tei:date></tei:addrLine>
          <tei:addrLine rend="indent-70"><tei:handShift new="#printed"/>8 KÖNIGIN
            AUGUSTASTRAßE</tei:addrLine>
        </tei:address><tei:lb/>
        <tei:salute><tei:handShift new="#MH"/>Dear <tei:rs key="entity-000632" type="person"
            >Sir</tei:rs>,</tei:salute>
      </tei:opener>

      <tei:p>My <tei:rs key="entity-000094" type="person">Brahms</tei:rs> man has suddenly become
        quite ill. Is your article<tei:ptr corresp="#r0001-fn01" type="footnote"/> still
        available?</tei:p>

      <tei:closer>
        <tei:salute rend="indent-50">With congenial greetings,</tei:salute>
        <tei:salute rend="indent-80">Yours,</tei:salute>
        <tei:signed rend="indent-90"><tei:rs key="entity-000333" type="person">
          H</tei:rs></tei:signed>
      </tei:closer>


    </tei:div>
