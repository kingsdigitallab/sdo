  <sdo:record ID="r0001">

    <sdo:itemDesc>
      <tei:rs role="correspondence" type="correspondence" key="entity-002728">Furtwängler ~
        HSchenker</tei:rs>
      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002744">Letter</tei:rs>

      <dc:title>Typewritten letter from Furtwängler to Schenker, dated June 25, 1934</dc:title>

      <dcterms:created>1934-06-25T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2015-01-27</dcterms:dateSubmitted>
      <dc:description>Furtwängler sends a letter of recommendation for Moriz
        Violin.</dc:description>
      <dc:subject>Zeilen; lines</dc:subject>

      <marcrel:correspondent key="entity-000268">Furtwängler</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>
    </sdo:itemDesc>


    <tei:div type="transcription">
      <tei:opener>
        <tei:address>
          <tei:addrLine rend="indent-50"><tei:handShift new="#printed"/>BERLIN W.35 <tei:handShift
              new="#TPwf"/><tei:date when="1934-06-25">25. Juni 1934</tei:date>.</tei:addrLine>
          <tei:addrLine rend="indent-60"><tei:handShift new="#printed"/>GRAF-SPEE-STR.
            9</tei:addrLine>
        </tei:address><tei:lb/>
        <tei:salute><tei:handShift new="#TPwf"/>Lieber, verehrter Herr <tei:rs type="person"
            key="entity-000632">Schenker</tei:rs>!<tei:note xml:id="r0001-fn01" type="editorial"
            place="foot">Receipt of this letter, and further action, are reported in Schenker's
            diary at OJ 4/7, p. 3921, June 30, 1934: "Von Furtwängler (Br.): der Empfehlungsbrief
            für Violin – An Violin (Br.): F.' Brief u. Empfehlungsbrief." ("From Furtwängler
            (letter): the letter of recommendation for Violin – To Violin (letter): Furtwängler's
            letter and letter of recommendation.").</tei:note></tei:salute>
      </tei:opener>

      <tei:p rend="first">Schönsten Dank für Ihre Zeilen,<tei:note xml:id="r0001-fn02"
          type="editorial" place="foot">This note is not known to survive. </tei:note> auf die ich
        noch näher zurückkomme, sobald meine Geschäfte hier abgewickelt sind und die Zeit es mir
        erlaubt, an meine Sommerreise und an mein Auto zu denken.</tei:p>

      <tei:p rend="first">Zunächst schicke ich Ihnen die <tei:rs key="entity-000913" type="person"
            ><tei:hi rend="sperr">Violin</tei:hi></tei:rs> betreffenden Zeilen.<tei:note
          xml:id="r0001-fn03" type="editorial" place="foot">See <tei:ref type="correspondence"
            cRef="OJ-70-17_2">OJ 70/17, [2]</tei:ref>, letter of recommendation for Moriz
          Violin.</tei:note></tei:p>

      <tei:closer>
        <tei:salute rend="indent-40">Mit allerschönsten Grüssen, auch an Ihre <tei:rs
            key="entity-000771" type="person"><tei:sic>Freu</tei:sic></tei:rs>,</tei:salute>
        <tei:salute rend="indent-60">immer Ihr</tei:salute>
        <tei:signed rend="indent-50"><tei:handShift new="#WF"/><tei:rs key="entity-000268"
            type="person">W. Furtwängler</tei:rs></tei:signed><tei:lb/><tei:lb/>
      </tei:closer>

      <tei:postscript>
        <tei:p><tei:handShift new="#TPwf"/><tei:hi rend="underline">1 Anl.</tei:hi></tei:p>
      </tei:postscript>
    </tei:div>


    <tei:div type="translation">
      <tei:opener>
        <tei:address>
          <tei:addrLine rend="indent-50"><tei:handShift new="#printed"/>BERLIN W.35 <tei:handShift
              new="#TPwf"/><tei:date when="1934-06-25">June 25, 1934</tei:date></tei:addrLine>
          <tei:addrLine rend="indent-60"><tei:handShift new="#printed"/>GRAF-SPEE-STRASSE
            9</tei:addrLine>
        </tei:address><tei:lb/>
        <tei:salute><tei:handShift new="#TPwf"/>Dear, revered Mr. <tei:rs type="person"
            key="entity-000632">Schenker</tei:rs>,<tei:ptr corresp="#r0001-fn01" type="footnote"
          /></tei:salute>
      </tei:opener>

      <tei:p rend="first">Warmest thanks for your note,<tei:ptr corresp="#r0001-fn02"
          type="footnote"/> to which I shall return in greater detail just as soon as my commitments
        here have wound up and I have time to think about my summer vacation and my car.</tei:p>

      <tei:p rend="first">For the time being, I am sending you the lines concerning <tei:rs
          key="entity-000913" type="person"><tei:hi rend="sperr">Violin</tei:hi></tei:rs>.<tei:ptr
          corresp="#r0001-fn03" type="footnote"/></tei:p>

      <tei:closer>
        <tei:salute rend="indent-40">With warmest greetings, and to your <tei:rs key="entity-000771"
            type="person">wife</tei:rs>,</tei:salute>
        <tei:salute rend="indent-60">Ever yours,</tei:salute>
        <tei:signed rend="indent-50"><tei:handShift new="#WF"/><tei:rs key="entity-000268"
            type="person">W. Furtwängler</tei:rs></tei:signed><tei:lb/><tei:lb/>
      </tei:closer>

      <tei:postscript>
        <tei:p><tei:handShift new="#TPwf"/><tei:hi rend="underline">1 Encl.</tei:hi></tei:p>
      </tei:postscript>
    </tei:div>

