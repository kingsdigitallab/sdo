  <sdo:itemDesc><tei:rs role="correspondence" type="correspondence" key="entity-002725">Dahms ~ HSchenker</tei:rs><tei:rs role="corr-item-type" type="corr-item-type" key="entity-002745">Postcard</tei:rs>

   
   <dc:title>Handwritten postcard from Dahms to Schenker, dated August 31, 1919</dc:title>
   
   <dcterms:created>1919-08-31T12:00:00Z</dcterms:created>
   <dcterms:dateSubmitted>2010-06-07</dcterms:dateSubmitted>
   <dc:description>Dahms reports on his journey home and sends thanks for an unforgettable
    experience. </dc:description>
   <dc:subject> </dc:subject>

   
   
  <marcrel:correspondent key="entity-000149">Dahms</marcrel:correspondent><marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient></sdo:itemDesc>


  <tei:div type="transcription">

