     <tei:address>
      <tei:addrLine><tei:supplied reason="clarity">An: </tei:supplied> Herrn Dr. Heinrich Schenker </tei:addrLine>
      <tei:addrLine>Schloss Tantalier b/ Radstadt </tei:addrLine>
      <tei:addrLine>i. Pongau (Salzburg) </tei:addrLine>
     </tei:address>
     <tei:fw type="postmark">|| Wasserburg | <tei:gap reason="illegible"/><tei:note type="editorial">illeg.</tei:note> | V. 11 12 ||</tei:fw>
