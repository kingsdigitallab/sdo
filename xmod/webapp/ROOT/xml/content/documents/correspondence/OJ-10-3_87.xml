      <dc:title>Handwrittenwritten picture postcard from Hanna and Otto Erich Deutsch to Schenker,
        dated June 10, 1928</dc:title>

      <dcterms:created>1928-06-10T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2023-02-24</dcterms:dateSubmitted>
      <dc:description>The Deutsches hope to see the Schenkers once before both couples go away for
        the summer, and they invite them for tea on Tuesday, June 12.</dc:description>
      <dc:subject/>

      <marcrel:correspondent key="entity-000163">DeutschH</marcrel:correspondent>
      <marcrel:correspondent key="entity-000164">DeutschOE</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>

    </sdo:itemDesc>

    <tei:div type="transcription">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/><tei:lb/>
        <tei:fw type="header" rend="inline"><tei:note type="editorial" place="inline"
            >printed:</tei:note>
          <tei:handShift new="#printed"/><tei:supplied reason="overstamped"><tei:hi rend="bold"
              >Postkarte</tei:hi></tei:supplied></tei:fw>
        <tei:lb/>
        <tei:note type="editorial" place="inline">picture: castle on hilltop, captioned:
          “Forchtenstein, Burgenland”</tei:note><tei:lb/>
        <tei:address>
          <tei:addrLine><tei:supplied>Absender:</tei:supplied>
            <tei:handShift new="#HD"/>Deutsch</tei:addrLine>
          <tei:addrLine>II. Böcklinstr. 26</tei:addrLine>
        </tei:address>
        <tei:add resp="Post_Office"><tei:handShift new="unkPO"/>128</tei:add><tei:lb/>
        <tei:add resp="Hanna_Deutsch"><tei:handShift new="#HD"/>Rohrpost!</tei:add>
        <tei:address>
          <tei:addrLine><tei:supplied reason="clarity">An:</tei:supplied> Herrn D<tei:hi
              rend="supralinear">r</tei:hi> H. Schenker</tei:addrLine>
          <tei:addrLine rend="indent-20">Keilgasse 8</tei:addrLine>
          <tei:addrLine rend="indent-40"><tei:hi rend="underline">Wien III.</tei:hi></tei:addrLine>

        </tei:address>
        <tei:lb/>
        <tei:milestone unit="folio" n="verso"/>
        <tei:dateline rend="indent-60"><tei:handShift new="#HD"/><tei:rs key="entity-002484"
            type="place">Wien</tei:rs>, <tei:date when="1928-06-10">10. VI.
          28</tei:date>.</tei:dateline>
        <tei:salute>Lieber Herr <tei:rs type="person" key="entity-000632"
            >Professor</tei:rs>!<tei:note xml:id="r0001-fn01" type="editorial" place="foot">Receipt
            of this postcard and reply are recorded in Schenker’s diary for June 11, 1928: “Von Frau
            Hanna Deutsch (expr. K.): Einladung für morgen zum Tee. – An sie (expr. K.): Absage
            wegen Abreise.” (“From Mrs. Hanna Deutsch (express postcard): invitation to tea
            tomorrow. – To her (express postcard): I decline, on account of our
            departure.”).</tei:note></tei:salute>
      </tei:opener>

      <tei:p rend="first">Wir werden uns sehr freuen<tei:supplied reason="punctuation"
          >,</tei:supplied> Sie noch vor Ihrer <tei:hi rend="underline">und</tei:hi> unserer Abreise
        zu sehen. Bitte kommen Sie doch <tei:date when="1928-06-12"><tei:hi rend="underline"
            >Dienstag</tei:hi></tei:date> Nachmittag um 5 oder ½6h zum Tee; da <tei:rs type="person"
          key="entity-000380">H. v. H.</tei:rs> verreist ist, sind Sie hoffentlich frei. </tei:p>

      <tei:closer>
        <tei:salute rend="indent-10">Mit vielen Grüssen für Sie </tei:salute>
        <tei:salute rend="indent-20">und Ihre liebe <tei:rs type="person" key="entity-000771">Frau
            Gemahlin</tei:rs></tei:salute>
        <tei:salute rend="indent-40">Ihre ergebene</tei:salute>
        <tei:signed rend="indent-50"><tei:rs type="person" key="entity-000163">Hanna
            Deutsch</tei:rs> und <tei:rs key="entity-000164" type="person">Otto
          Erich</tei:rs></tei:signed>
      </tei:closer>

    </tei:div>


    <tei:div type="translation">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/><tei:lb/>
        <tei:fw type="header" rend="inline"><tei:note type="editorial" place="inline"
            >printed:</tei:note>
          <tei:handShift new="#printed"/><tei:supplied reason="overstamped"><tei:hi rend="bold"
              >Postcard</tei:hi></tei:supplied></tei:fw>
        <tei:lb/>
        <tei:note type="editorial" place="inline">picture: castle on hilltop, captioned:
          “Forchtenstein, Burgenland”</tei:note><tei:lb/>
        <tei:address>
          <tei:addrLine><tei:supplied>From:</tei:supplied>
            <tei:handShift new="#HD"/>Deutsch</tei:addrLine>
          <tei:addrLine><tei:supplied reason="identity">Vienna</tei:supplied> II, Böcklinstrasse
            26</tei:addrLine>
        </tei:address>
        <tei:add resp="Post_Office"><tei:handShift new="unkPO"/>128</tei:add><tei:lb/>
        <tei:add resp="Hanna_Deutsch"><tei:handShift new="#HD"/>Penuematic Post!</tei:add>
        <tei:address>
          <tei:addrLine><tei:supplied reason="clarity">To:</tei:supplied> Dr. H.
            Schenker</tei:addrLine>
          <tei:addrLine rend="indent-20">Keilgasse 8</tei:addrLine>
          <tei:addrLine rend="indent-40"><tei:hi rend="underline">Vienna III</tei:hi></tei:addrLine>

        </tei:address>
        <tei:lb/>
        <tei:milestone unit="folio" n="verso"/>
        <tei:dateline rend="indent-60"><tei:handShift new="#HD"/><tei:rs key="entity-002484"
            type="place">Vienna</tei:rs>, <tei:date when="1928-06-10">June 10,
          1928</tei:date></tei:dateline>
        <tei:salute>Dear <tei:rs type="person" key="entity-000632">Professor</tei:rs>,<tei:ptr
            corresp="#r0001-fn01" type="footnote"/></tei:salute>
      </tei:opener>

      <tei:p rend="first">We would be very glad to see you before your <tei:hi rend="underline"
          >and</tei:hi> our departure. Please come for tea, then, on <tei:date when="1928-06-12"
            ><tei:hi rend="underline">Tuesday</tei:hi></tei:date> afternoon at 5 or 5:30. As <tei:rs
          type="person" key="entity-000380">Mr. van Hoboken</tei:rs> has gone away, we hope that you
        will be free.</tei:p>

      <tei:closer>
        <tei:salute rend="indent-10"> With many greetings for you </tei:salute>
        <tei:salute rend="indent-20">and your dear <tei:rs type="person" key="entity-000771"
            >wife</tei:rs>,</tei:salute>
        <tei:salute rend="indent-40">Your devoted</tei:salute>
        <tei:signed rend="indent-50"><tei:rs type="person" key="entity-000163">Hanna
            Deutsch</tei:rs> and <tei:rs key="entity-000164" type="person">Otto
          Erich</tei:rs></tei:signed>
      </tei:closer>

    </tei:div>

