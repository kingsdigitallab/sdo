        <tei:milestone unit="folio" n="recto"/>
        <tei:fw type="header" rend="center"><tei:handShift new="#printed"/>Postcard</tei:fw>
        <tei:fw type="header" rend="center">World postal union</tei:fw>
        <tei:fw type="header" rend="center">Carte postale</tei:fw>
