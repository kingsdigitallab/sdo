     <tei:address>
      <tei:addrLine>
       <tei:supplied reason="clarity">From: <tei:handShift new="#HS"/></tei:supplied>Schenker,</tei:addrLine>
      <tei:addrLine><tei:supplied reason="clarity">Vienna</tei:supplied> III, Keilgasse
       38</tei:addrLine>
     </tei:address>
     <tei:address>
      <tei:addrLine><tei:supplied reason="clarity">To: </tei:supplied> Dr. Oswald
       Jonas,</tei:addrLine>
      <tei:addrLine><tei:supplied reason="clarity">Vienna</tei:supplied> III, Untere
       Weißgärberstraße 37</tei:addrLine>
     </tei:address>
     <tei:fw type="postmark">|| 1/3 VIENNA 49 | 6. II<tei:gap reason="illegible"/> | * R *
      ||</tei:fw>
    </tei:fw>
    <tei:lb/>
    <tei:milestone unit="folio" n="verso"/>
    <tei:salute>Dear Dr. <tei:rs type="person" key="entity-000412">Jonas</tei:rs>,</tei:salute>
   </tei:opener>

   <tei:p>Many<tei:ptr corresp="#r0001-fn01" type="footnote"/> thanks for your cordial lines, and I
    request your presence on <tei:hi rend="underline">Wednesday the 8th</tei:hi> at 5:30 p.m. Unless
    you decline, I will expect you at that time; that is probably the simplest arrangement.</tei:p>

   <tei:closer>
    <tei:salute rend="indent-50">With best greetings,</tei:salute>
    <tei:salute rend="indent-60">Your</tei:salute>
    <tei:signed rend="indent-65">
     <tei:hi rend="lateinschr">H. Schenker</tei:hi>
    </tei:signed>
    <tei:date when="1928-02-05">February 5, 1928 </tei:date>
   </tei:closer>

