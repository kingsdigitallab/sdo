   <dc:title>Handwritten postcard from Schenker to Jonas, dated February 5, 1928</dc:title>

   <dcterms:created>1928-02-05T12:00:00Z</dcterms:created>
   <dcterms:dateSubmitted>2006-03-24</dcterms:dateSubmitted>
   <dc:description>Sets meeting for February 8.</dc:description>
   <dc:subject>meeting; date; time</dc:subject>

   
   
