      <dc:title>Handwritten picture postcard from Carl Bamberger to Schenker, dated September 12,
        1934</dc:title>

      <dcterms:created>1934-09-12T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2022-04-13</dcterms:dateSubmitted>
      <dc:description>Bamberger aks Schenker to listen to a recital on the radio and give his
        opinion, and inquires whether he may visit Schenker during the week.</dc:description>
      <dc:subject/>


      <marcrel:correspondent key="entity-000034">CBamberger</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>
    </sdo:itemDesc>

