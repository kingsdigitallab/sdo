    <sdo:record ID="r0001">

        <sdo:itemDesc>
            <tei:rs role="correspondence" type="correspondence" key="entity-008335">KalbeckM ~
                HSchenker</tei:rs>
            <tei:rs role="corr-item-type" type="corr-item-type" key="entity-003332">Calling
                card</tei:rs>
            <dc:title>Handwritten calling card from Kalbeck to Schenker, dated October 31,
                1898</dc:title>

            <dcterms:created>1898-10-31T12:00:00Z</dcterms:created>
            <dcterms:dateSubmitted>2022-07-06</dcterms:dateSubmitted>
            <dc:description>Kalbeck expresses delight at the present [of Schenker's Op.
                2].</dc:description>
            <dc:subject/>

            <marcrel:correspondent key="entity-000418">KalbeckM</marcrel:correspondent>
            <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>
        </sdo:itemDesc>


        <tei:div type="transcription">

            <tei:opener>
                <tei:address>
                    <tei:addrLine><tei:handShift new="#MK"/>Wien, Cottage XIX Karl Ludwigstrasse
                        76.</tei:addrLine>
                </tei:address>
                <tei:dateline><tei:date when="1898-10-31">3<tei:subst>
                            <tei:del rend="overwritten">0</tei:del>
                            <tei:add place="superimposed">1</tei:add>
                </tei:subst> Oktbr. 98</tei:date>.</tei:dateline><tei:lb/><tei:lb/>
            </tei:opener>

            <tei:p><tei:handShift new="#printed"/><tei:hi rend="bold">Max Kalbeck</tei:hi><tei:lb/>
                <tei:handShift new="#MK"/>dankt hocherfreut dem verehrten ‚Schenker‘<tei:note
                    xml:id="r0001-fn01" type="editorial" place="foot">“donor” is a play on
                    Schenker’s name, which means “donor,” “contributor,” “supporter,” and the
                    like.</tei:note> für die schöne Gabe<tei:note xml:id="r0001-fn02"
                    type="editorial" place="foot">Schenker’s <tei:rs type="work" key="entity-006723"
                            ><tei:title level="m">Fantasie</tei:title> for piano, Op. 2</tei:rs>,
                    which he sent Kalbeck on October 28 (<tei:ref type="correspondence"
                        cRef="OJ-5-19-7">OJ 5/19, 7</tei:ref>). The “authoritative hand” is no doubt a
                    reference to its advocate and dedicatee, <tei:rs type="person"
                        key="entity-000116">Ferruccio Busoni</tei:rs>.</tei:note> und hofft, daß sie
                ihm bald von berufenster Hand zu Gemüt geführt werden werden.</tei:p>
        </tei:div>

        <tei:div type="translation">

            <tei:opener>
                <tei:address>
                    <tei:addrLine><tei:handShift new="#MK"/>Vienna, Cottage 19, Karl Ludwigstrasse
                        76</tei:addrLine>
                </tei:address>
                <tei:dateline><tei:date when="1898-10-31">October 3<tei:subst>
                            <tei:del rend="overwritten">0</tei:del>
                            <tei:add place="superimposed">1</tei:add>
                </tei:subst>, 1898</tei:date></tei:dateline><tei:lb/><tei:lb/>
            </tei:opener>

            <tei:p><tei:handShift new="#printed"/><tei:hi rend="bold">Max Kalbeck</tei:hi><tei:lb/>
                <tei:handShift new="#MK"/>delightedly thanks the revered “donor”<tei:ptr
                    corresp="#r0001-fn01" type="footnote"/> for the lovely present,<tei:ptr
                    corresp="#r0001-fn02" type="footnote"/> and hopes that it will soon be brought
                for his delectation by the most authoritative hand.</tei:p>

        </tei:div>
