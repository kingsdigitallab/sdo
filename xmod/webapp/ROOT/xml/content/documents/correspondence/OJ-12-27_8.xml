  <sdo:record ID="r0001">
    <sdo:itemDesc>
      <tei:rs role="correspondence" type="correspondence" key="entity-002724">Cotta ~
        HSchenker</tei:rs>
      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002744">Letter</tei:rs>


      <dc:title>Stenographically handwritten letter from Cotta to Schenker, dated September 26,
        1908</dc:title>
      <dcterms:created>1908-09-26T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2017-09-19</dcterms:dateSubmitted>
      <dc:description>Cotta acknowledges receipt of the manuscript of Kontrapunkt.</dc:description>
      <dc:subject>Manuskript; manuscript; Brief; letter; Arbeit; work</dc:subject>

      <marcrel:correspondent key="entity-002405">Cotta</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>
    </sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
        <tei:address>
          <tei:addrLine><tei:handShift new="#printed"/><tei:hi rend="bold">J. G. COTTA’SCHE
              BUCHHANDLUNG NACHFOLGER</tei:hi></tei:addrLine>
          <tei:addrLine rend="indent-40"><tei:hi rend="bold">STUTTGART UND
            BERLIN</tei:hi></tei:addrLine>
        </tei:address>
        <tei:dateline rend="indent-50">STUTTGART, den <tei:handShift new="#JGCsten"/><tei:date
            when="1907-09-18">26. Septbr. <tei:handShift new="#printed"/>19<tei:handShift
              new="#printed"/>08</tei:date>.</tei:dateline><tei:lb/>
        <tei:address>
          <tei:addrLine rend="indent-20">Herrn <tei:hi rend="lateinschr">Dr. Heinrich
              Schenker</tei:hi></tei:addrLine>
          <tei:addrLine rend="indent-60"><tei:hi rend="underline lateinschr">Wien III.
            </tei:hi></tei:addrLine>
        </tei:address>
        <tei:salute>Sehr geehrter <tei:rs type="person" key="entity-000632">Herr</tei:rs>!<tei:note
            xml:id="r0001-fn01" type="editorial" place="foot">Receipt of this letter is not recorded
            in Schenker's diary. Cotta's carbon copy is CA 83, with "141" written in crayon in top
            margin.</tei:note></tei:salute>
      </tei:opener>

      <tei:p rend="first">Wir sind im Besitz Ihrer gef. Postkarte vom <tei:date when="1908-09-23"
          >23. ds.</tei:date><tei:note xml:id="r0001-fn02" type="editorial" place="foot">= <tei:ref
            type="correspondence" cRef="CA-82">CA 82</tei:ref>.</tei:note> und können Ihnen
        mitteilen, daß das mit derselben avisierte Manuskript<tei:note xml:id="r0001-fn03"
          type="editorial" place="foot">i.e. the manuscript of the bulk of <tei:rs type="work"
            key="entity-001726"><tei:title level="m">Kontrapunkt I</tei:title></tei:rs>, without
          Introduction.</tei:note> soeben bei uns eingetroffen ist. Wir erwarten nunmehr noch den
        angekündigten Brief mit dem Rest Ihrer Arbeit und werden Ihnen alsdann nähere Mitteilung
        zukommen lassen. </tei:p>


      <tei:closer>
        <tei:salute rend="indent-30">Mit vorzüglicher Hochachtung</tei:salute>
        <tei:signed rend="indent-40">ppa. <tei:handShift new="#stamp"/><tei:rs type="organization"
            key="entity-002405">J.G. Cotta’sche Buchhandlung Nachfolger</tei:rs></tei:signed>
        <tei:signed rend="indent-60"><tei:handShift new="#HK"/><tei:rs type="person"
            key="entity-006241">H Kurz</tei:rs></tei:signed><tei:lb/><tei:lb/>
      </tei:closer>

    </tei:div>



    <tei:div type="translation">

      <tei:opener>
        <tei:address>
          <tei:addrLine><tei:handShift new="#printed"/><tei:hi rend="bold">SUCCESSORS TO J. G.
              COTTA'S BOOK DEALERSHIP </tei:hi></tei:addrLine>
          <tei:addrLine rend="indent-40"><tei:hi rend="bold">STUTTGART AND
            BERLIN</tei:hi></tei:addrLine>
        </tei:address>
        <tei:dateline rend="indent-50">STUTTGART, <tei:handShift new="#JGCsten"/><tei:date
            when="1907-09-18">September 26, <tei:handShift new="#printed"/>19<tei:handShift
              new="#printed"/>08</tei:date>.</tei:dateline><tei:lb/>
        <tei:address>
          <tei:addrLine rend="indent-20">Dr. Heinrich Schenker</tei:addrLine>
          <tei:addrLine rend="indent-60"><tei:hi rend="underline">Vienna III
            </tei:hi></tei:addrLine>
        </tei:address>
        <tei:salute>Dear <tei:rs type="person" key="entity-000632">Sir</tei:rs>,<tei:ptr
            corresp="#r0001-fn01" type="footnote"/></tei:salute>
      </tei:opener>

      <tei:p rend="first">We are in receipt of your postcard of the <tei:date when="1908-09-23">23rd
          of the month</tei:date>,<tei:ptr corresp="#r0001-fn02" type="footnote"/> and can inform
        you that the manuscript,<tei:ptr corresp="#r0001-fn03" type="footnote"/> of the arrival of
        which your card notified us, has just reached us. We now still await the promised letter
        with the remainder of your work, and will let you have more detailed information when that
        arrives.</tei:p>


      <tei:closer>
        <tei:salute rend="indent-30">With kind regards,</tei:salute>
        <tei:signed rend="indent-40">pp. <tei:handShift new="#stamp"/><tei:rs type="organization"
            key="entity-002405">Successors to J. G. Cotta's Book Dealership</tei:rs></tei:signed>
        <tei:signed rend="indent-60"><tei:handShift new="#HK"/><tei:rs type="person"
            key="entity-006241">H. Kurz</tei:rs></tei:signed><tei:lb/><tei:lb/>
      </tei:closer>

    </tei:div>

  </sdo:record>
