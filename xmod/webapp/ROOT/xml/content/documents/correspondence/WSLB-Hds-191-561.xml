      <dc:title>Handwritten picture postcard from Schenker to Deutsch, postmarked February 6,
        1928</dc:title>

      <dcterms:created>1928-02-06T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2023-02-20</dcterms:dateSubmitted>
      <dc:description>Schenker congratulates Deutsch on his two most recent radio broadcasts, and on
        his impending appointment as editor of a monthly music journal.</dc:description>
      <dc:subject/>

      <marcrel:correspondent key="entity-000632">HSchenker</marcrel:correspondent>
      <marcrel:recipient key="entity-000164">DeutschOE</marcrel:recipient>

    </sdo:itemDesc>

