 <sdo:record ID="r0001">
  <sdo:itemDesc><tei:rs role="correspondence" type="correspondence" key="entity-002713">Jonas ~ H+JSchenker</tei:rs><tei:rs role="correspondence" type="correspondence" key="entity-002714">Jonas ~ HSchenker</tei:rs><tei:rs role="corr-item-type" type="corr-item-type" key="entity-002745">Postcard</tei:rs>
   
   
   <dc:title>Handwritten postcard from Schenker to Jonas, dated November 10, 1919</dc:title>
   
   <dcterms:created>1919-11-10T12:00:00Z</dcterms:created>
   <dcterms:dateSubmitted>2006-03-24</dcterms:dateSubmitted>
   <dc:description>No lesson because of holiday. </dc:description>
   <dc:subject>lesson; day; Feiertag; holiday</dc:subject>
   
   
  <marcrel:correspondent key="entity-000632">HSchenker</marcrel:correspondent><marcrel:correspondent key="entity-000771">JSchenker</marcrel:correspondent><marcrel:recipient key="entity-000412">Jonas</marcrel:recipient></sdo:itemDesc>


  <tei:div type="transcription">
   <tei:opener>
    <tei:milestone unit="folio" n="recto"/>
    <tei:fw type="envelope">
     <tei:address>
      <tei:addrLine>
       <tei:supplied reason="clarity">Absender: </tei:supplied>
       <tei:hi rend="lateinschr">D<tei:hi rend="supralinear">r</tei:hi> H Schenker</tei:hi>
      </tei:addrLine>
      <tei:addrLine>
       <tei:hi rend="lateinschr">III., Reisnerstr. 38</tei:hi>
      </tei:addrLine>
      <tei:note type="editorial">"45" written over sender address in unknown hand</tei:note>
     </tei:address>
     <tei:address>
      <tei:addrLine><tei:supplied reason="clarity">An: </tei:supplied> H <tei:hi rend="lateinschr">Oswald Jonas</tei:hi>
      </tei:addrLine>
      <tei:addrLine>III, Untere Weißgärberstr. 37</tei:addrLine>
     </tei:address>
     <tei:fw type="postmark">|| <tei:gap reason="illegible"/> | <tei:gap reason="illegible"/> |
       <tei:gap reason="illegible"/> ||</tei:fw>
    </tei:fw>
    <tei:lb/>
    <tei:milestone unit="folio" n="verso"/>
    <tei:salute>Lieber Herr <tei:rs type="person" key="entity-000412">
      Jonas
     </tei:rs>!</tei:salute>
   </tei:opener>

   <tei:p>Mittwoch<tei:note xml:id="r0001-fn01" type="editorial" place="foot">Writing of this
     postcard is not recorded in Schenker's diary (OJ 3/1, pp. 2173-2176). (November 10 was the day
     of Heinrich and Jeanette's marriage.) </tei:note> muß ich leider - mitmachen als
     Feiertag,<tei:note xml:id="r0001-fn02" type="editorial" place="foot">November 12 was the
     Proclamation of the Republic (on November 12, 1918, Emperor Karl I had relinquished all
     participation in government, and a democratic republic had been declared), hence a public
     holiday. </tei:note> obgleich sehr gegen Überzeugung. Ich erwarte Sie also <tei:hi rend="underline">nicht</tei:hi>.</tei:p>

   <tei:closer><tei:salute rend="indent-50">Besten Gruß</tei:salute><tei:salute rend="55">Ihr</tei:salute><tei:signed rend="indent-60">
     <tei:hi rend="lateinschr">HSch</tei:hi>
    </tei:signed>
    <tei:date when="1919-11-10">10. 11. 1919</tei:date>
   </tei:closer>
  </tei:div>


  <tei:div type="translation">
   <tei:opener>
    <tei:milestone unit="folio" n="recto"/>
    <tei:fw type="envelope">
     <tei:address>
      <tei:addrLine>
       <tei:supplied reason="clarity">From: </tei:supplied>Dr. H. Schenker,</tei:addrLine>
      <tei:addrLine>
       <tei:supplied reason="abbreviation">Vienna</tei:supplied> III., Reisnerstraße 38 </tei:addrLine>
      <tei:note type="editorial">"45" written over sender address in unknown hand</tei:note>
     </tei:address>
     <tei:address>
      <tei:addrLine><tei:supplied reason="clarity">To: </tei:supplied> Mr. Oswald Jonas, </tei:addrLine>
      <tei:addrLine><tei:supplied reason="abbreviation">Vienna</tei:supplied> III, Untere
       Weißgärberstraße 37</tei:addrLine>
     </tei:address>
     <tei:fw type="postmark">|| <tei:gap reason="illegible"/> | <tei:gap reason="illegible"/> |
       <tei:gap reason="illegible"/> ||</tei:fw>
    </tei:fw>
    <tei:lb/>
    <tei:milestone unit="folio" n="verso"/>
    <tei:salute>Dear Mr. <tei:rs type="person" key="entity-000412">Jonas</tei:rs>,</tei:salute>
   </tei:opener>

   <tei:p>Wednesday I<tei:ptr corresp="#r0001-fn01" type="footnote"/> must – unfortunately –
    participate in the holiday,<tei:ptr corresp="#r0001-fn02" type="footnote"/> although very much
    against my conviction. Therefore I will <tei:hi rend="underline">not</tei:hi> expect
    you.</tei:p>

   <tei:closer><tei:salute rend="indent-50">Warmest greetings,</tei:salute><tei:salute rend="55">Yours,</tei:salute><tei:signed rend="indent-60">H. Schenker</tei:signed>
    <tei:date when="1919-11-10">November 10, 1919</tei:date>
   </tei:closer>
  </tei:div>
 </sdo:record>
