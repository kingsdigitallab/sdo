            <tei:addrLine rend="indent-10">Hamburg</tei:addrLine>
            <tei:addrLine rend="indent-30">Haynstr. 13</tei:addrLine>
          </tei:address><tei:lb/>
          <tei:fw type="postmark">|| 3 WIEN 40 | 28.II.31 13 | <tei:gap reason="illegible"/>
