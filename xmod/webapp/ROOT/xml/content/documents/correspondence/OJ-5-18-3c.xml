  <sdo:record ID="r0001">

    <sdo:itemDesc>
      <tei:rs role="correspondence" type="correspondence" key="entity-002713">Jonas ~
        H+JSchenker</tei:rs>
      <tei:rs role="correspondence" type="correspondence" key="entity-002714">Jonas ~
        HSchenker</tei:rs>
      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002751">Picture
        postcard</tei:rs>


      <dc:title>Handwritten picture postcard from Schenker to Jonas, dated March 1, 1931</dc:title>

      <dcterms:created>1931-03-01T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2015-07-22</dcterms:dateSubmitted>
      <dc:description>Schenker acknowledges receipt [of essays].</dc:description>
      <dc:subject>Sendung; mailing</dc:subject>



      <marcrel:correspondent key="entity-000632">HSchenker</marcrel:correspondent>
      <marcrel:recipient key="entity-000412">Jonas</marcrel:recipient>
    </sdo:itemDesc>

    <tei:div type="transcription">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/>
        <tei:fw type="envelope">
          <tei:fw type="header" rend="center"><tei:handShift new="#printed"/><tei:hi rend="bold"
              >Postkarte</tei:hi></tei:fw><tei:lb/>
          <tei:note type="editorial">top left: picture captioned: "Pörtschach am
            Wörthersee-Kärnten"</tei:note><tei:lb/>
          <tei:address>
            <tei:addrLine>
              <tei:supplied reason="clarity">Absender: </tei:supplied><tei:handShift new="#HS"/>
              <tei:hi rend="lateinschr">Schenker</tei:hi>
            </tei:addrLine>
            <tei:addrLine>Wien, III</tei:addrLine>
            <tei:addrLine>Keilgasse 38</tei:addrLine>
          </tei:address>
          <tei:address>
            <tei:addrLine><tei:supplied reason="clarity">An: </tei:supplied> H <tei:hi
                rend="lateinschr">D<tei:hi rend="supralinear">r</tei:hi> Oswald Jonas</tei:hi>
            </tei:addrLine>
            <tei:addrLine><tei:hi rend="lateinschr">Berlin-Schöneberg</tei:hi></tei:addrLine>
            <tei:addrLine>Mühlenstr. 2</tei:addrLine>
          </tei:address><tei:lb/>
          <tei:fw type="postmark">|| 3 WIEN 40 | 2.III.31.1.10 | <tei:gap reason="illegible"/>
            ||</tei:fw>
        </tei:fw>
        <tei:lb/><tei:lb/>
        <tei:milestone unit="folio" n="verso"/>
        <tei:salute>Sehr geehrter Herr <tei:hi rend="lateinschr">D<tei:hi rend="supralinear"
              >r</tei:hi>
            <tei:rs type="person" key="entity-000412">Jonas</tei:rs></tei:hi>!<tei:note
            xml:id="r0001-fn01" type="editorial" place="foot">Writing of this postcard is not
            recorded in Schenker's diary.</tei:note></tei:salute>
      </tei:opener>

      <tei:p>Vorerst bestätige ich den Empfang Ihrer Sendung.<tei:note xml:id="r0001-fn02"
          type="editorial" place="foot">"a few essays," sent with <tei:ref type="correspondence"
            cRef="OJ-12-6_7">OJ 12/6, [7]</tei:ref>, February 25, 1931, where see in footnote 1
          Schenker's reaction to their receipt.</tei:note> Bei besserer Muße lese u. berichte
          ich.<tei:note xml:id="r0001-fn03" type="editorial" place="foot">Schenker had slept badly
          the previous night, and had called in a doctor (OJ 4/4, pp. 3587‒3588).</tei:note></tei:p>

      <tei:p rend="first">In Eile</tei:p>

      <tei:closer>
        <tei:salute rend="indent-20">Mit bestem Gruß (auch von meiner <tei:rs key="entity-000771"
            type="person">Frau</tei:rs>)</tei:salute>
        <tei:salute rend="indent-60">Ihr</tei:salute>
        <tei:signed rend="indent-70">
          <tei:rs key="entity-000632" type="person"><tei:hi rend="lateinschr">H
            Schenker</tei:hi></tei:rs>
        </tei:signed>
        <tei:dateline><tei:date when="1931-03-01">1. 3. 31</tei:date></tei:dateline>
      </tei:closer>

    </tei:div>


    <tei:div type="translation">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/>
        <tei:fw type="envelope">
          <tei:fw type="header" rend="center"><tei:handShift new="#printed"/><tei:hi rend="bold"
              >Postcard</tei:hi></tei:fw><tei:lb/>
          <tei:note type="editorial">top left: picture captioned: "Pörtschach on Lake Wörth,
            Carinthia"</tei:note><tei:lb/>
          <tei:address>
            <tei:addrLine>
              <tei:supplied reason="clarity">From: </tei:supplied><tei:handShift new="#HS"/>
              Schenker </tei:addrLine>
            <tei:addrLine>Vienna III</tei:addrLine>
            <tei:addrLine>Keilgasse 38</tei:addrLine>
          </tei:address>
          <tei:address>
            <tei:addrLine><tei:supplied reason="clarity">To: </tei:supplied> Dr. Oswald Jonas </tei:addrLine>
            <tei:addrLine>Berlin-Schöneberg</tei:addrLine>
            <tei:addrLine>Mühlenstraße 2</tei:addrLine>
          </tei:address><tei:lb/>
          <tei:fw type="postmark">|| 3 VIENNA 40 | 2.III.31.1.10 | <tei:gap reason="illegible"/>
            ||</tei:fw>
        </tei:fw>
        <tei:lb/><tei:lb/>
        <tei:milestone unit="folio" n="verso"/>
        <tei:salute>Dear Dr. <tei:rs type="person" key="entity-000412">Jonas</tei:rs>,<tei:ptr
            corresp="#r0001-fn01" type="footnote"/></tei:salute>
      </tei:opener>

      <tei:p>For now I confirm receipt of your mailing.<tei:ptr corresp="#r0001-fn02"
          type="footnote"/> When I have leisure, I will read and report back.<tei:ptr
          corresp="#r0001-fn03" type="footnote"/></tei:p>

      <tei:p rend="first">In haste</tei:p>

      <tei:closer>
        <tei:salute rend="indent-20">With best greeting (from my <tei:rs key="entity-000771"
            type="person">wife</tei:rs> as well</tei:salute>
        <tei:salute rend="indent-60">Your</tei:salute>
        <tei:signed rend="indent-70"><tei:rs key="entity-000632" type="person">H.
          Schenker</tei:rs></tei:signed>
        <tei:dateline><tei:date when="1931-03-01">March 1, 1931</tei:date></tei:dateline>
      </tei:closer>

    </tei:div>
