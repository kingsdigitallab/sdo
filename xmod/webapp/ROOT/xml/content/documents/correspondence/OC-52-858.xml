      <dc:title>Typed postcard from Alfred Kalmus (UE) to Schenker, dated December 31,
        1929</dc:title>

      <dcterms:created>1929-12-31T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2012-09-20</dcterms:dateSubmitted>
      <dc:description>Hertzka will respond after returning mid-January.</dc:description>
      <dc:subject>Rückkehr; return</dc:subject>

      
      
      
    <marcrel:correspondent key="entity-000420">Kalmus</marcrel:correspondent><marcrel:correspondent key="entity-002408">UE</marcrel:correspondent><marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient><marcrel:recipient key="entity-000771">JSchenker</marcrel:recipient></sdo:itemDesc>


    <tei:div type="transcription">
      <tei:opener>
        <tei:milestone unit="folio" n="recto"/>
        <tei:lb/>
        <tei:note type="editorial">printed in art deco typography, all in deckled frame:</tei:note>
        <tei:lb/>
        <tei:fw type="header" rend="center"><tei:handShift new="#printed"/>Postkarte</tei:fw>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine>UNIVERSAL-EDITION A.-G.</tei:addrLine>
            <tei:addrLine>WIEN, I. KARLSPLATZ 6. (Musikvereinsgebäude)</tei:addrLine>
          </tei:address>
          <tei:address>
            <tei:addrLine><tei:supplied reason="clarity">An: </tei:supplied><tei:handShift new="#TPg"/>Herrn Professor Heinrich Schenker</tei:addrLine>
            <tei:addrLine rend="indent-10"><tei:hi rend="sperr">Wien</tei:hi> III</tei:addrLine>
            <tei:addrLine rend="indent-10">Keilgasse 8</tei:addrLine>
          </tei:address>
          <tei:lb/>
          <tei:fw type="postmark">|| P WIEN 1 | 20-21 | 31 - XII | 1929 | * 4c * ||</tei:fw>
        </tei:fw>
        <tei:lb/><tei:lb/>
        <tei:milestone unit="folio" n="verso"/>
        <tei:dateline rend="indent-50"><tei:handShift new="#TPg"/><tei:placeName>Wien</tei:placeName>, <tei:date when="1929-12-31">31. XII.
            1929</tei:date>.</tei:dateline><tei:lb/>
        <tei:byline>G/</tei:byline>
        <tei:address>
          <tei:addrLine rend="indent-10">Herrn Professor Heinrich Schenker</tei:addrLine>
          <tei:addrLine rend="indent-70">
            <tei:hi rend="underline"><tei:hi rend="sperr">Wien</tei:hi> III.</tei:hi>
          </tei:addrLine>
          <tei:addrLine rend="indent-70">Keilgasse 8</tei:addrLine>
        </tei:address>
        <tei:salute>Sehr geehrter Herr <tei:rs type="person" key="entity-000632">Professor</tei:rs>!<tei:note xml:id="r0001-fn01" type="editorial" place="foot">Receipt
            of this postcard is recorded in Schenker's diary at OJ 4/3, p. 3427, January 1, 1930:
            "Von U. E. (K.): Bestätigung meines Schreibens vom 28. XII. 29." ("From UE (postcard):
            acknowledgment of my letter of December 28, 1929.").</tei:note></tei:salute>
      </tei:opener>

      <tei:p rend="first">Wir danken Ihnen bestens für Ihr Schreiben v. <tei:date when="1929-12-28">28. ds.</tei:date><tei:note xml:id="r0001-fn02" type="editorial" place="foot">= WSLB
          419.</tei:note> und werden auf dasselbe nach Rückkehr unseres Herrn Direktor <tei:rs key="entity-000356" type="person">Hertzka</tei:rs> gegen <tei:date when="1930-01-15">Mitte
          Jänner</tei:date> zurückkommen. </tei:p>


      <tei:closer>
        <tei:salute rend="indent-40">in vorzüglicher Hochachtung</tei:salute>
        <tei:signed rend="indent-50"><tei:handShift new="#stamp"/><tei:rs key="entity-002408" type="organization">Universal Edition Actiongesellschaft</tei:rs></tei:signed>
        <tei:signed rend="indent-60"><tei:handShift new="#AK"/><tei:rs key="entity-000420" type="person">Kalmus</tei:rs></tei:signed>
      </tei:closer>

      <tei:postscript rend="indent-50">
        <tei:lb/>
        <tei:p>Mit besten Wünschen für <tei:date when="1930">1930</tei:date>!</tei:p>
      </tei:postscript>
    </tei:div>


    <tei:div type="translation">
      <tei:opener>
        <tei:milestone unit="folio" n="recto"/>
        <tei:lb/>
        <tei:note type="editorial">printed in art deco typography, all in deckled frame:</tei:note>
        <tei:lb/>
        <tei:fw type="header" rend="center"><tei:handShift new="#printed"/>Postcard</tei:fw>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine>UNIVERSAL EDITION &amp; CO.,</tei:addrLine>
            <tei:addrLine>VIENNA I, KARLSPLATZ 6 (Musikverein Building)</tei:addrLine>
          </tei:address>
          <tei:address>
            <tei:addrLine><tei:supplied reason="clarity">To: </tei:supplied><tei:handShift new="#TPg"/>Professor Heinrich Schenker,</tei:addrLine>
            <tei:addrLine rend="indent-10"><tei:hi rend="sperr">Vienna</tei:hi> III,</tei:addrLine>
            <tei:addrLine rend="indent-10">Keilgasse 8</tei:addrLine>
          </tei:address>
          <tei:lb/>
          <tei:fw type="postmark">|| P VIENNA 1 | 20-21 | 31 - XII | 1929 | * 4c * ||</tei:fw>
        </tei:fw>
        <tei:lb/><tei:lb/>
        <tei:milestone unit="folio" n="verso"/>
        <tei:dateline rend="indent-50"><tei:handShift new="#TPg"/><tei:placeName>Vienna</tei:placeName>, <tei:date when="1929-12-31">December 31,
            1929</tei:date></tei:dateline><tei:lb/>
        <tei:byline>G/</tei:byline>
        <tei:address>
          <tei:addrLine rend="indent-10">Professor Heinrich Schenker,</tei:addrLine>
          <tei:addrLine rend="indent-70">
            <tei:hi rend="underline"><tei:hi rend="sperr">Vienna</tei:hi> III,</tei:hi>
          </tei:addrLine>
          <tei:addrLine rend="indent-70">Keilgasse 8</tei:addrLine>
        </tei:address>
        <tei:salute>Dear <tei:rs type="person" key="entity-000632">Professor</tei:rs>,<tei:ptr corresp="#r0001-fn01" type="footnote"/></tei:salute>
      </tei:opener>

      <tei:p rend="first">Warm thanks to you for your letter of the <tei:date when="1929-12-28">28th
          inst.</tei:date><tei:ptr corresp="#r0001-fn02" type="footnote"/> We will come back to the
        same after the return of our Director <tei:rs key="entity-000356" type="person">Hertzka</tei:rs> toward the middle of <tei:date when="1930-01-15">January</tei:date>.</tei:p>


      <tei:closer>
        <tei:salute rend="indent-40">with kind regards,</tei:salute>
        <tei:signed rend="indent-50"><tei:handShift new="#stamp"/><tei:rs key="entity-002408" type="organization">Universal Edition &amp; Co.</tei:rs></tei:signed>
        <tei:signed rend="indent-60"><tei:handShift new="#AK"/><tei:rs key="entity-000420" type="person">Kalmus</tei:rs></tei:signed>
      </tei:closer>

      <tei:postscript rend="indent-50">
        <tei:lb/>
        <tei:p>With best wishes for <tei:date when="1930">1930</tei:date>!</tei:p>
      </tei:postscript>
    </tei:div>
