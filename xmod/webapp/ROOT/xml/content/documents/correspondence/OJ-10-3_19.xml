  <sdo:record ID="r0001">

    <sdo:itemDesc>
      <tei:rs role="correspondence" type="correspondence" key="entity-002708">Fischmann ~
        HSchenker</tei:rs>
      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002745">Postcard</tei:rs>

      <dc:title>Typewritten postcard from Leo Fischmann to Schenker, dated November 22,
        1920</dc:title>

      <dcterms:created>1920-11-22T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2014-06-19</dcterms:dateSubmitted>
      <dc:description>Leo Fischmann (legal attorney) invites Schenker to visit him at
        home.</dc:description>
      <dc:subject/>

      <marcrel:correspondent key="entity-000231">Fischmann</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>
      <marcrel:recipient key="entity-000771">JSchenker</marcrel:recipient>


    </sdo:itemDesc>

    <tei:div type="transcription">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/><tei:lb/>
        <tei:fw type="header" rend="inline"><tei:note type="editorial" place="inline"
            >printed:</tei:note>
          <tei:handShift new="#printed"/>Postkarte</tei:fw>
        <tei:lb/>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine>Absender:</tei:addrLine>
            <tei:addrLine rend="indent-20"><tei:handShift new="#stamp"/>RECHTSANWALT</tei:addrLine>
            <tei:addrLine>D<tei:hi rend="supralinear">R.</tei:hi> LEO FISCHMANN</tei:addrLine>
            <tei:addrLine>Gerichtsdolmetsch für die französische Sprache</tei:addrLine>
            <tei:addrLine>WIEN, X. FAVORITENSTRASSE 106</tei:addrLine>
            <tei:addrLine>Telephon 50037</tei:addrLine>
          </tei:address>
          <tei:address>
            <tei:addrLine rend="indent-10"><tei:handShift new="#printed"/>An <tei:handShift
                new="#TPunk"/>Herrn Professor</tei:addrLine>
            <tei:addrLine rend="indent-10">Dr. Heinrich SCHENKER</tei:addrLine>
            <tei:addrLine><tei:handShift new="#printed"/>in <tei:handShift new="#TPunk"
                /><tei:hi><!-- spaced out -->Wien</tei:hi>, III.</tei:addrLine>
            <tei:addrLine rend="indent-10">Reisnerstrasse 38.</tei:addrLine>
          </tei:address>
          <tei:lb/><tei:fw type="postmark"><tei:note type="editorial">none</tei:note></tei:fw>
        </tei:fw>
        <tei:lb/><tei:milestone unit="folio" n="verso"/>
        <tei:dateline rend="indent-10"><tei:rs key="entity-002484" type="place">Wien</tei:rs>, den
            <tei:date when="1920-11-22">22. November 1920</tei:date>.</tei:dateline>
        <tei:salute rend="indent-20">Sehr geehrter Herr <tei:rs type="person" key="entity-000632"
            >Professor</tei:rs>!<tei:note xml:id="r0001-fn01" type="editorial" place="foot">Receipt
            of this postcard is recorded in Schenker's diary at OJ 3/2, p. 2298 (November 23, 1920):
            "Von Dr. Fischmann (K.): stehe 3½–5h zur Verfügung." ("From Dr. Fischmann (postcard): at
            my disposal 3:30 to 5:00.")</tei:note>
        </tei:salute>
      </tei:opener>

      <tei:p rend="first">Ich werde mich freuen, Sie an einem Ihnen beliebigen Nachmittage zwischen
        ½3 und 5, mit Ausnahme von Samstag bei mir begrüssen zu können. Vormittag, insbesondere
        diesen <tei:date when="1920-11-24">Mittwoch</tei:date>, bin ich von Hause abwesend.</tei:p>

      <tei:closer>
        <tei:salute rend="indent-25">Mit vorzüglicher Hochachtung</tei:salute>
        <tei:salute rend="indent-50">ergebenster</tei:salute>
        <tei:signed rend="indent-70"><tei:rs key="entity-000231" type="person">L.
          Fischmann</tei:rs></tei:signed>
      </tei:closer>

    </tei:div>


    <tei:div type="translation">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/><tei:lb/>
        <tei:fw type="header" rend="inline"><tei:note type="editorial" place="inline"
            >printed:</tei:note>
          <tei:handShift new="#printed"/>Postcard</tei:fw>
        <tei:lb/>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine>sender:</tei:addrLine>
            <tei:addrLine rend="indent-20"><tei:handShift new="#stamp"/>LEGAL
              ATTORNEY</tei:addrLine>
            <tei:addrLine>D<tei:hi rend="supralinear">R.</tei:hi> LEO FISCHMANN</tei:addrLine>
            <tei:addrLine>Legal interpreter for the French language</tei:addrLine>
            <tei:addrLine>VIENNA X, FAVORITENSTRASSE 106</tei:addrLine>
            <tei:addrLine>Telephone 50037</tei:addrLine>
          </tei:address>
          <tei:address>
            <tei:addrLine rend="indent-10"><tei:handShift new="#printed"/>to <tei:handShift
                new="#TPunk"/>Professor</tei:addrLine>
            <tei:addrLine rend="indent-10">Dr. Heinrich SCHENKER</tei:addrLine>
            <tei:addrLine><tei:handShift new="#printed"/>in <tei:handShift new="#TPunk"
                /><tei:hi><!-- spaced out -->Vienna</tei:hi>, III.</tei:addrLine>
            <tei:addrLine rend="indent-10">Reisnerstrasse 38.</tei:addrLine>
          </tei:address>
          <tei:lb/><tei:fw type="postmark"><tei:note type="editorial">none</tei:note></tei:fw>
        </tei:fw>
        <tei:lb/><tei:milestone unit="folio" n="verso"/>
        <tei:dateline rend="indent-10"><tei:rs key="entity-002484" type="place">Vienna</tei:rs>,
            <tei:date when="1920-11-22">November 22, 1920</tei:date></tei:dateline>
        <tei:salute rend="indent-20">Very honored <tei:rs type="person" key="entity-000632"
            >Professor</tei:rs>,<tei:ptr corresp="#r0001-fn01" type="footnote"/>
        </tei:salute>
      </tei:opener>

      <tei:p rend="first">I shall be glad to welcome you to my place on an afternoon of your choice
        between 2:30 and 5, with the exception of Saturday. Before midday, especially this <tei:date
          when="1920-11-24">Wednesday</tei:date>, I will be out of the house.</tei:p>

      <tei:closer>
        <tei:salute rend="indent-25">With the highest esteem,</tei:salute>
        <tei:salute rend="indent-50">truly,</tei:salute>
        <tei:signed rend="indent-70"><tei:rs key="entity-000231" type="person">L.
          Fischmann</tei:rs></tei:signed>
      </tei:closer>

    </tei:div>

