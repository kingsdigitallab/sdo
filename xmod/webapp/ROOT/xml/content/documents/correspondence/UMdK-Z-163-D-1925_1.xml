        <tei:address>
          <tei:addrLine rend="indent-10">To the administration of the <tei:rs key="entity-002591"
              type="organization">Academy for Music and Performing Art</tei:rs></tei:addrLine>
          <tei:addrLine rend="indent-60"><tei:hi rend="underline">in Vienna</tei:hi></tei:addrLine>
        </tei:address><tei:lb/><tei:lb/>
