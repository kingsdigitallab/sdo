        <tei:lb/>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine><tei:handShift new="#printed"/>From: <tei:handShift new="#stamp"/>OTTO
              ERICH DEUTSCH</tei:addrLine>
            <tei:addrLine>Vienna II, Böcklinstrasse 26</tei:addrLine>
            <tei:addrLine>Telephone Number 42-8-22</tei:addrLine>
          </tei:address>
          <tei:address>
            <tei:addrLine><tei:supplied reason="clarity">To:</tei:supplied>
              <tei:handShift new="#TPoed"/>Dr. Heinrich Schenker</tei:addrLine>
            <tei:addrLine rend="indent-40">Keilgasse 8</tei:addrLine>
            <tei:addrLine rend="indent-40"><tei:hi rend="sperr">Vienna</tei:hi> III</tei:addrLine>
          </tei:address><tei:lb/>
          <tei:add resp="Post Office"><tei:handShift new="#unk"/>128</tei:add><tei:lb/>
