   <dc:title>Handwritten picture postcard from Schenker to Salzer, undated [June 18,
    1934]</dc:title>

   <dcterms:created>1934-06-18T12:00:00Z</dcterms:created>
   <dcterms:dateSubmitted>2011-11-08</dcterms:dateSubmitted>
