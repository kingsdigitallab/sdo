  <sdo:record ID="r0001">
    <sdo:itemDesc>
      <tei:rs role="correspondence" type="correspondence" key="entity-002724">Cotta ~
        HSchenker</tei:rs>
      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002744">Letter</tei:rs>


      <dc:title>Cover letter for sales report from Cotta to Schenker, dated September 9,
        1908</dc:title>
      <dcterms:created>1908-09-09T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2017-09-15</dcterms:dateSubmitted>
      <dc:description>Cotta encloses 1907 sales report for Harmonielehre and notifies him of his
        share of the sales profits.</dc:description>
      <dc:subject>Abrechnung; account; Absatz; sales; Gewinnanteil; shar of profits; Bar;
        cash</dc:subject>

      <marcrel:correspondent key="entity-002405">Cotta</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>
    </sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
        <tei:address>
          <tei:note type="editorial" place="inline">pre-printed letter with handwritten entries:
            Roman = printed; <tei:hi rend="italic">Italic</tei:hi> = stenographically
            handwritten</tei:note>
          <tei:lb/>
          <tei:addrLine><tei:hi rend="bold">J. G. COTTA’SCHE BUCHHANDLUNG
            NACHFOLGER</tei:hi></tei:addrLine>
          <tei:addrLine rend="indent-40"><tei:hi rend="bold">STUTTGART UND
            BERLIN</tei:hi></tei:addrLine>
        </tei:address>
        <tei:dateline rend="indent-50">STUTTGART, den <tei:date when="1907-09-05"><tei:hi
              rend="italic">9. September</tei:hi> 19<tei:hi rend="italic"
          >08</tei:hi></tei:date>.</tei:dateline><tei:lb/>
        <tei:address>
          <tei:addrLine rend="indent-10"><tei:hi rend="italic">Herrn Dr. Heinrich
            Schenker</tei:hi></tei:addrLine>
          <tei:addrLine rend="indent-50"><tei:hi rend="underline italic">Wien III, Reisnerstr.
              38.</tei:hi></tei:addrLine>
        </tei:address>
        <tei:salute><tei:hi rend="italic">Sehr geehrter Herr <tei:rs type="person"
              key="entity-000632">Doktor</tei:rs>!</tei:hi><tei:note xml:id="r0001-fn01"
            type="editorial" place="foot">Receipt of this letter is not recorded in Schenker's
            diary. See <tei:ref type="correspondence" cRef="OJ-9-32_25">OJ 9/32, [25]</tei:ref> of
            the same date for sales report enclosed with this letter.</tei:note></tei:salute>
      </tei:opener>

      <tei:p rend="first">Wir beehren uns, Ihnen in der Anlage Abrechnung über den Absatz <tei:hi
          rend="italic">der</tei:hi>
        <tei:cit>
          <tei:q><tei:hi rend="italic">„Neuen musikalischen Theorien und Phantasien“ Bd
            I.</tei:hi></tei:q>
        </tei:cit> im Jahre 19<tei:hi rend="italic">07</tei:hi> zu übersenden und lassen den Ihnen
        hieraus zukommenden Gewinnanteil von <tei:hi rend="underline">M. <tei:hi rend="italic"
            >334.20</tei:hi> Pf.</tei:hi>* gleichzeitig <tei:subst>
          <tei:del rend="overstrike">per Postanweisung</tei:del>
          <tei:add place="interlinear-above"><tei:hi rend="italic">in Bar</tei:hi></tei:add>
        </tei:subst> folgen. </tei:p>

      <tei:p>
        <tei:table rows="2" cols="2">
          <tei:row role="data">
            <tei:cell role="data"><tei:hi rend="italic">* abzüglich unseres Guthabens lt. Nota
              </tei:hi></tei:cell>
            <tei:cell role="data"><tei:hi rend="italic">M 27.50</tei:hi></tei:cell>
          </tei:row>

          <tei:row role="data">
            <tei:cell role="data"><tei:hi rend="italic">in Summa also </tei:hi></tei:cell>
            <tei:cell role="data"><tei:hi rend="italic"><tei:hi rend="underline">M
                306.70</tei:hi></tei:hi></tei:cell>
          </tei:row>
        </tei:table>
      </tei:p>


      <tei:closer>
        <tei:salute>Mit vorzüglicher Hochachtung</tei:salute>
        <tei:signed>ppa. <tei:rs type="organization" key="entity-002405">J.G. Cotta’sche
            Buchhandlung Nachfolger</tei:rs></tei:signed>
        <tei:signed><tei:handShift new="#HK"/><tei:rs type="person" key="entity-006241">H
            Kurz</tei:rs></tei:signed>
      </tei:closer>

    </tei:div>



    <tei:div type="translation">

      <tei:opener>
        <tei:address>
          <tei:note type="editorial" place="inline">pre-printed letter with handwritten entries:
            Roman = printed; <tei:hi rend="italic">Italic</tei:hi> = stenographically
            handwritten</tei:note>
          <tei:lb/>
          <tei:addrLine><tei:hi rend="bold">SUCCESSORS TO J. G. COTTA'S BOOK
            DEALERSHIP</tei:hi></tei:addrLine>
          <tei:addrLine rend="indent-40"><tei:hi rend="bold">STUTTGART AND
            BERLIN</tei:hi></tei:addrLine>
        </tei:address>
        <tei:dateline rend="indent-50">STUTTGART, <tei:date when="1907-09-05"><tei:hi rend="italic"
              >September 9,</tei:hi> 19<tei:hi rend="italic">08</tei:hi></tei:date></tei:dateline><tei:lb/>
        <tei:address>
          <tei:addrLine rend="indent-10"><tei:hi rend="italic">Dr. Heinrich
            Schenker</tei:hi></tei:addrLine>
          <tei:addrLine rend="indent-50"><tei:hi rend="underline italic">Vienna III, Reisnerstraße
              38</tei:hi></tei:addrLine>
        </tei:address>
        <tei:salute><tei:hi rend="italic">Dear Dr. <tei:supplied reason="identity"><tei:rs
                type="person" key="entity-000632">Schenker</tei:rs></tei:supplied>,</tei:hi><tei:ptr
            corresp="#r0001-fn01" type="footnote"/></tei:salute>
      </tei:opener>

      <tei:p rend="first">In the enclosure, we have the honor of forwarding to you the sales figures
          <tei:hi rend="italic">for</tei:hi>
        <tei:cit>
          <tei:q><tei:hi rend="italic">New Musical Theories and Fantasies, vol. I</tei:hi></tei:q>
        </tei:cit> for the year 19<tei:hi rend="italic">07</tei:hi>, and are simultaneously sending
        you <tei:subst>
          <tei:del rend="overstrike">by postal money order</tei:del>
          <tei:add place="interlinear-above"><tei:hi rend="italic">in cash</tei:hi></tei:add>
        </tei:subst> your share of the profits from this of <tei:hi rend="underline">M. <tei:hi
            rend="italic">334.20</tei:hi> Pf.</tei:hi>*</tei:p>

      <tei:p>
        <tei:table rows="2" cols="2">
          <tei:row role="data">
            <tei:cell role="data"><tei:hi rend="italic">* less our credit balance of
              </tei:hi></tei:cell>
            <tei:cell role="data"><tei:hi rend="italic">M 27.50</tei:hi></tei:cell>
          </tei:row>

          <tei:row role="data">
            <tei:cell role="data"><tei:hi rend="italic">Total thus </tei:hi></tei:cell>
            <tei:cell role="data"><tei:hi rend="italic"><tei:hi rend="underline">M
                306.70</tei:hi></tei:hi></tei:cell>
          </tei:row>
        </tei:table>
      </tei:p>



      <tei:closer>
        <tei:salute>With kind regards,</tei:salute>
        <tei:signed>ppa. <tei:rs type="organization" key="entity-002405">Successors to J. G. Cotta's
            Book Dealership</tei:rs></tei:signed>
        <tei:signed><tei:handShift new="#HK"/><tei:rs type="person" key="entity-006241">H.
            Kurz</tei:rs></tei:signed>
      </tei:closer>

    </tei:div>

