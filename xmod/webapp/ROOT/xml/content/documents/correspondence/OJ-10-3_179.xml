        </tei:address>
        <tei:address>
          <tei:addrLine><tei:supplied reason="clarity">To:</tei:supplied> Dr. Heinrich
            Schenker</tei:addrLine>
          <tei:addrLine rend="indent-50">Iglerhof</tei:addrLine>
          <tei:addrLine rend="indent-50"><tei:hi rend="sperr">Igls</tei:hi></tei:addrLine>
          <tei:addrLine rend="indent-50">(Tyrol)</tei:addrLine>
        </tei:address>
        <tei:dateline><tei:handShift new="#TPoed"/>Vienna, <tei:date when="1932-09-08">September 8,
            1932</tei:date></tei:dateline>
        <tei:salute>Dear revered <tei:rs type="person" key="entity-000632">friend</tei:rs>,<tei:ptr
            corresp="#r0001-fn01" type="footnote"/></tei:salute>
      </tei:opener>

      <tei:p rend="first">Having just received a letter from <tei:rs type="person"
          key="entity-000380">Hoboken</tei:rs>, I would like to speak with you on <tei:date
          when="1932-09-11">Sunday, the 11th of the month</tei:date>.<tei:ptr corresp="#r0001-fn02"
          type="footnote"/> Please send a notice of appeal to Aspern.<tei:ptr corresp="#r0001-fn03"
          type="footnote"/></tei:p>


      <tei:closer>
        <tei:salute rend="indent-60">Have a good journey!</tei:salute>
        <tei:salute rend="indent-70">Your wholly devoted</tei:salute>
        <tei:signed rend="indent-90"><tei:handShift new="#OED"/><tei:rs type="person"
            key="entity-000164">O. E. Deutsch</tei:rs></tei:signed>
      </tei:closer>

    </tei:div>

