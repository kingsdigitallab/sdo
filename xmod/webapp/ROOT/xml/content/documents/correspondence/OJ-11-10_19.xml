            <tei:addrLine rend="indent-40">Vienna III</tei:addrLine>
            <tei:addrLine>Keilgasse</tei:addrLine>
          </tei:address><tei:lb/>
          <tei:fw type="postmark">|| <tei:gap reason="illegible"/> VIENNA 40 | 11.XI.27 X<tei:gap
              reason="illegible"/> | <tei:gap reason="illegible"/> ||</tei:fw>
          <tei:lb/><tei:lb/>
        </tei:fw>
        <tei:milestone unit="folio" n="verso"/>
        <tei:dateline rend="indent-50"><tei:handShift new="#TF"
            /><tei:placeName>Vienna</tei:placeName>, <tei:date when="1927-11-11">November 11,
            1927</tei:date></tei:dateline>
        <tei:salute rend="indent-10">Dear Dr. <tei:supplied reason="identity"><tei:rs
              key="entity-000632" type="person">Schenker</tei:rs></tei:supplied>,<tei:ptr
            corresp="#r0001-fn01" type="footnote"/></tei:salute>
      </tei:opener>

      <tei:p rend="first">Many thanks for sending me your <tei:rs type="work" key="entity-001751"
          >most recent work</tei:rs>, which, indeed, finds me thoroughly age-wearied, but promises
        much instruction for intermittent periods of better health. Burdensome old age oppresses me
        uncommonly. I hope that you are refreshed and primed for work.</tei:p>

      <tei:closer>
        <tei:salute>With time-honored respect,</tei:salute>
        <tei:signed rend="indent-70"><tei:rs key="entity-000259" type="person">Dr. Theodor
            Frimmel</tei:rs></tei:signed>
      </tei:closer>



    </tei:div>

