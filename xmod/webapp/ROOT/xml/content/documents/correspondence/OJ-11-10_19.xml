      <dc:title>Handwritten picture postcard from Frimmel to Schenker, dated November 11,
        1927</dc:title>

      <dcterms:created>1927-11-11T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2020-07-28</dcterms:dateSubmitted>
      <dc:description>Frimmel thanks Schenker for having had Meisterwerk II sent to
        him.</dc:description>
      <dc:subject>Arbeit; work; Altersmüde; age-weariness; Belehrung; instruction, Gesundheit;
        health; molesta senectus; old age</dc:subject>

      <marcrel:correspondent key="entity-000259">Theodor von Frimmel</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>
    </sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/>
