        <tei:fw type="header" rend="center"><tei:handShift new="#pr"/><tei:hi rend="bold"
            >Kartenbrief</tei:hi></tei:fw><tei:lb/>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine>Absender: <tei:handShift new="#stamp"/>Der gesammten
              Heilkunde</tei:addrLine>
            <tei:addrLine>D<tei:hi rend="supralinear">R</tei:hi> WILHELM SCHENKER</tei:addrLine>
            <tei:addrLine rend="indent-40"><tei:handShift new="#WS"/>in St. Bernard bei
              Horn</tei:addrLine>
            <tei:addrLine rend="indent-50">Post: Horn</tei:addrLine>
            <tei:addrLine rend="indent-60">N. O.</tei:addrLine>
          </tei:address>
          <tei:address>
            <tei:addrLine><tei:handShift new="#pr"/>An <tei:handShift new="#WS"/>S<tei:hi
                rend="supralinear">n</tei:hi> Hochw. Herrn Prof D<tei:hi rend="supralinear"
                >r.</tei:hi> Heinrich Schenker</tei:addrLine>
            <tei:addrLine><tei:handShift new="#pr"/>in <tei:handShift new="#WS"/>Wien
              III</tei:addrLine>
            <tei:addrLine>Keilgasse 8/12</tei:addrLine>
          </tei:address>
          <tei:fw type="postmark"> || <tei:gap reason="illegible"/> || <tei:gap reason="illegible"/>
