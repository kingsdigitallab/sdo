      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002845">lettercard</tei:rs>

      <dc:title>Handwritten lettercard from Wilhelm to Heinrich &amp; Jeanette Schenker, dated
        September 12, 1934</dc:title>
      <dcterms:created>1934-09-12T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2024-11-13</dcterms:dateSubmitted>
      <dc:description>Wilhelm Schenker recounts a visit from Lisl Richtera (Schenker) and subsequent
        information about a villa being for sale.</dc:description>
      <dc:subject/>


      <marcrel:correspondent key="entity-000775">Wilhelm Schenker</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>
      <marcrel:recipient key="entity-000771">HJSchenker</marcrel:recipient>
    </sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
