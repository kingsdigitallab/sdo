      </tei:addrLine>
     </tei:address>
     <tei:address>
      <tei:addrLine><tei:supplied reason="clarity">An: </tei:supplied>H Prof. August <tei:hi rend="lateinschr">Halm</tei:hi>
      </tei:addrLine>
      <tei:addrLine rend="intend-10">
       <tei:hi rend="lateinschr-underline">Esslingen a/ Neckar</tei:hi>
      </tei:addrLine>
      <tei:addrLine rend="intend-10">
       <tei:hi rend="lateinschr">Panoramastr. 11</tei:hi>
