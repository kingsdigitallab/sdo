      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002745">Postcard</tei:rs>

      <dc:title>Handwritten postcard from Frimmel to Schenker, postmarked March 20, 1905</dc:title>

      <dcterms:created>1905-03-20T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2020-07-23</dcterms:dateSubmitted>
      <dc:description>Frimmel acknowledges loan [of C. P. E. Bach Klavierwerke]. He offers a
        discount for his Beethoven lecture course to Schenker's pupils.</dc:description>
      <dc:subject>Leihsendung; loan sending; Schüler; pupil; Preisermässigung; discount</dc:subject>

      <marcrel:correspondent key="entity-000259">Theodor von Frimmel</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>
    </sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/><tei:lb/>
        <tei:fw type="header" rend="center">
          <tei:handShift new="#printed"/><tei:hi rend="bold">Rohrpostkarte</tei:hi></tei:fw>
        <tei:lb/>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine>Absender: <tei:note type="editorial" place="inline">left
              blank</tei:note></tei:addrLine>
          </tei:address>
          <tei:address>
            <tei:addrLine>An <tei:handShift new="#TF"/>Hochwohlgb. Herrn D<tei:hi rend="supralinear"
                >r.</tei:hi> Heinrich Schenker</tei:addrLine>
            <tei:addrLine>Komponist, Dirigenten, Schriftsteller etc etc etc</tei:addrLine>
            <tei:addrLine><tei:handShift new="#printed"/>In <tei:supplied reason="identity"
