      <dc:title>Handwritten postcard from Schenker to Violin, dated February 26, 1933</dc:title>

      <dcterms:created>1933-02-26T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2022-02-10</dcterms:dateSubmitted>
      <dc:description>Schenker reports on Hans Weisse’s phenomenal success as a teacher in New York,
        and complains about Joseph Marx’s duplicitous behavior.</dc:description>
      <dc:subject/>



      <marcrel:correspondent key="entity-000632">HSchenker</marcrel:correspondent>
      <marcrel:recipient key="entity-000909">ViolinF</marcrel:recipient>
      <marcrel:recipient key="entity-000913">ViolinM</marcrel:recipient>
      <marcrel:recipient key="entity-000914">ViolinV</marcrel:recipient>
    </sdo:itemDesc>


