          </tei:address>
          <tei:address>
            <tei:addrLine><tei:supplied reason="clarity">An:</tei:supplied> Prof.</tei:addrLine>
            <tei:addrLine>M. Violin</tei:addrLine>
            <tei:addrLine rend="indent-10">Hamburg</tei:addrLine>
            <tei:addrLine rend="indent-45">Immenhof 27/<tei:hi rend="infralinear">I</tei:hi></tei:addrLine>
            <tei:addrLine><tei:hi rend="underline">Deutschland</tei:hi></tei:addrLine>
