      <dc:title>Handwritten picture postcard from Schenker to Hoboken, undated [June 22,
        1933]</dc:title>

      <dcterms:created>1933-06-22T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2018-02-01</dcterms:dateSubmitted>
      <dc:description>Schenker rhapsodizes about the Reigersberg Palace, and invites the Hobokens
        for a visit.</dc:description>
      <dc:subject>Paradies; paradise; Schloss; castle; palace; Temperatur; temperature;
        Sommer-Ferien; summer holidays; Besuch; visit</dc:subject>

      <marcrel:correspondent key="entity-000632">HSchenker</marcrel:correspondent>
      <marcrel:correspondent key="entity-000771">JSchenker</marcrel:correspondent>
      <marcrel:recipient key="entity-000380">Hoboken</marcrel:recipient>
    </sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
        <tei:milestone unit="folio" n="verso"/><tei:lb/>
        <tei:note type="editorial" place="inline"><tei:handShift new="#printed"/>picture of Schloß
          Reigersberg, captioned "Schloß Reigersberg"</tei:note><tei:lb/><tei:lb/>
        <tei:milestone unit="folio" n="recto"/>
