  <sdo:itemDesc>
   <tei:rs role="correspondence" type="correspondence" key="entity-005545">Breitkopf&amp;Härtel ~
    HSchenker</tei:rs>
   <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002744">Letter</tei:rs>

   <dc:title>Handwritten letter from Breitkopf &amp; Härtel to Schenker, dated September 6,
    1895</dc:title>

   <dcterms:created>1895-09-06T12:00:00Z</dcterms:created>
   <dcterms:dateSubmitted>2023-10-05</dcterms:dateSubmitted>
   <dc:description>Schenker has announced that he has become the music critic for Die Zukunft and
    Die Zeit. Breitkopf &amp; Härtel now send Schenker works he has requested and a list of their
    new publications for him to consider for review.</dc:description>
   <dc:subject/>



   <marcrel:correspondent key="entity-002890">Breitkopf &amp; Härtel</marcrel:correspondent>
   <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>
  </sdo:itemDesc>


  <tei:div type="transcription">

   <tei:opener>
    <tei:address>
     <tei:addrLine><tei:handShift new="#print"/>BREITKOPF &amp; HÄRTEL</tei:addrLine>
     <tei:addrLine><tei:rs type="place" key="entity-002479">Leipzig</tei:rs>, den <tei:date
       when="1894-09-06"><tei:handShift new="#BHstenDP"/>6. Septbr. <tei:handShift new="#print"
        />18<tei:handShift new="#BHstenDP"/>95</tei:date>.</tei:addrLine>
     <tei:addrLine><tei:handShift new="#print"/>Nürnberger Straße 36</tei:addrLine>
    </tei:address><tei:lb/>
    <tei:byline><tei:handShift new="#BHstenDP"/>D. P.</tei:byline><tei:lb/>
    <tei:salute><tei:handShift new="#BHstenDP"/>Sehr geehrter <tei:rs type="person"
      key="entity-000632">Herr</tei:rs>,</tei:salute>
   </tei:opener>

   <tei:p rend="first">Mit besonderem Interesse ersehen wir uns Ihren freundlichen gestrigen
     Zeilen,<tei:note xml:id="r0001-fn01" type="editorial" place="foot">This letter or postcard is
     not known to survive.</tei:note> daß Sie neben dem Musik-Referent für <tei:rs type="journal"
     key="entity-002566"><tei:title>die „<tei:hi rend="lateinschr"
     >Zukunft</tei:hi></tei:title>‟</tei:rs> auch das für die Wiener Wochenschrift „<tei:rs
     type="journal" key="entity-002545"><tei:title><tei:hi rend="lateinschr">Die
      Zeit</tei:hi></tei:title></tei:rs>‟ übernommen haben. Gern werden wir Ihnen die zur
    Besprechung erwünschten Werke senden. Wenn wir uns heute erlauben, die unten verzeichneten neuen
    Werke, die ein besonderes Interesse beanspruchen dürfen, beizufügen, so möchten wir doch
    jedenfalls ergebenst anfragen, ob wir Ihnen nun von Zeit zu Zeit neue Erschei- <tei:pb n="2"/>
    nungen unverlangt senden dürfen oder ob Sie diejenigen, die Sie zur Beurtheilung geeignet
    falten, nach unseren Berichten selbst wählen wollen. </tei:p>

   <tei:closer>
    <tei:salute rend="indent-40">In vorzüglicher Hochachtung</tei:salute>
    <tei:signed rend="indent-60">
     <tei:handShift new="#BH"/>Breitkopf u Härtel</tei:signed><tei:lb/>
   </tei:closer>

   <tei:postscript>
    <tei:list type="litany" rend="simple">
     <tei:item><tei:hi rend="lateinschr"><tei:handShift new="#BHstenDP"/><tei:title>Vademecum durch
        die Bach’schen Cantaten</tei:title> von Todt.</tei:hi><tei:note xml:id="r0001-fn02"
       type="editorial" place="foot">reviewed by Schenker in <tei:bibl><tei:title level="a"
         >Vademecum durch die Bach‘schen … 1895,</tei:title>
        <tei:title level="j">Die Zeit</tei:title> v/58 (November 9, 1895) 94</tei:bibl>
         (<tei:bibl><tei:editor>H. Federhofer</tei:editor>, <tei:title level="m">Heinrich Schenker:
         Essayist und Kritiker</tei:title>, pp. 290–91)</tei:bibl>.</tei:note></tei:item>
     <tei:item><tei:hi rend="lateinschr"><tei:rs type="person" key="entity-000329">Händel</tei:rs>
       <tei:title>Floridante</tei:title>. Cl Ausz.</tei:hi><tei:note xml:id="r0001-fn03"
       type="editorial" place="foot">referred to by Schenker in <tei:bibl><tei:title level="a">Eine
         neue Haydn-Oper,</tei:title>
        <tei:title level="j">Die Zeit</tei:title> v/54( November 9, 1895), 90–91</tei:bibl>
       (Federhofer, p. 171).</tei:note></tei:item>
     <tei:item><tei:hi rend="lateinschr"><tei:supplied>August</tei:supplied> Iffert, <tei:title>Allg
        Gesangschule</tei:title>. Theor. Theil </tei:hi></tei:item>
     <tei:item><tei:hi rend="lateinschr"><tei:supplied>August Iffert, <tei:title>Allg
         Gesangschule</tei:title>.</tei:supplied> Prakt. Theil (Sopran)</tei:hi></tei:item>
     <tei:item><tei:hi rend="lateinschr"><tei:rs type="person" key="entity-006774"
         ><tei:supplied>Hugo</tei:supplied> Kaun</tei:rs>, <tei:title>Pietist</tei:title>. Cl.
       Ausz</tei:hi></tei:item>
     <tei:item><tei:hi rend="lateinschr"><tei:title>Johan Hermann Schein</tei:title> von
       Prüfer.</tei:hi><tei:note xml:id="r0001-fn04" type="editorial" place="foot">reviewed by
       Schenker in <tei:bibl><tei:title level="a">Arthur Prüfer: Johann Hermann Schein …
         1895,</tei:title>
        <tei:title level="j">Die Zeit</tei:title> v/54</tei:bibl> (October 12, 1895), 30
       (Federhofer, pp. 286–88</tei:note></tei:item>
     <tei:item><tei:hi rend="lateinschr"><tei:title>Urtext Class. Musikwerke</tei:title>: <tei:rs
        type="person" key="entity-000025">Carl Ph. Em. Bach</tei:rs>
       <tei:title>Clavierwerke</tei:title>. 1. Sammlg.<tei:note xml:id="r0001-fn05" type="editorial"
        place="foot">For the list of publications, cf. <tei:bibl><tei:title level="m">Breitkopf
          &amp; Härtel, Music-Verlags Bericht</tei:title> (Leipzig: Breitkopf &amp; Härtel,
         1895)</tei:bibl>.</tei:note></tei:hi></tei:item>
    </tei:list>

    <tei:p>
     <tei:address>
      <tei:addrLine>Herrn D<tei:hi rend="supralinear">r.</tei:hi>
       <tei:hi rend="lateinschr">Heinrich Schenker</tei:hi>,</tei:addrLine>
      <tei:addrLine><tei:hi rend="lateinschr">Wien</tei:hi> III, Traungasse 1.</tei:addrLine>
     </tei:address>
    </tei:p>

   </tei:postscript>

  </tei:div>


  <tei:div type="translation">

   <tei:opener>
    <tei:address>
     <tei:addrLine><tei:handShift new="#print"/>BREITKOPF &amp; HÄRTEL</tei:addrLine>
     <tei:addrLine><tei:rs type="place" key="entity-002479">Leipzig</tei:rs>, <tei:date
       when="1894-09-06"><tei:handShift new="#BHstenDP"/>September 6, <tei:handShift new="#print"
        />18<tei:handShift new="#BHstenDP"/>95</tei:date></tei:addrLine>
     <tei:addrLine><tei:handShift new="#print"/>Nürnberger Straße 36</tei:addrLine>
    </tei:address><tei:lb/>
    <tei:byline><tei:handShift new="#BHstenDP"/>D. P.</tei:byline><tei:lb/>
    <tei:salute><tei:handShift new="#BHstenDP"/>Dear <tei:rs type="person" key="entity-000632"
      >Sir</tei:rs>,</tei:salute>
   </tei:opener>

   <tei:p rend="first">With particular interest, we have noted your kind lines from
     yesterday<tei:ptr corresp="#r0001-fn01" type="footnote"/> stating that you have taken over the
    role of music critic for <tei:rs type="journal" key="entity-002566"><tei:title level="j">Die
      Zukunft</tei:title></tei:rs> as well as for the Viennese weekly, <tei:rs type="journal"
     key="entity-002545"><tei:title level="j">Die Zeit</tei:title></tei:rs>. We shall happily send
    you the requested works for review. As we permit ourselves to include the new works listed
    below, which may be of special interest, we would like to humbly inquire whether we may send you
    new publications from time to time <tei:pb n="2"/> at our leisure, or if you would prefer to
    select those which you deem suitable for evaluation based on our reports.</tei:p>

   <tei:closer>
    <tei:salute rend="indent-40">Respectfully yours,</tei:salute>
    <tei:signed rend="indent-60">
     <tei:handShift new="#BH"/>Breitkopf &amp; Härtel</tei:signed><tei:lb/>
   </tei:closer>

   <tei:postscript>
    <tei:list type="litany" rend="simple">
     <tei:item><tei:handShift new="#BHstenDP"/><tei:title level="m">Vademecum durch die Bach’schen
       Cantaten</tei:title> by Todt<tei:ptr corresp="#r0001-fn02" type="footnote"/></tei:item>
     <tei:item><tei:rs type="person" key="entity-000329">Handel</tei:rs>, <tei:title level="m"
       >Floriodante</tei:title>, piano reduction<tei:ptr corresp="#r0001-fn03" type="footnote"
      /></tei:item>
     <tei:item><tei:supplied>August</tei:supplied> Iffert, <tei:title level="m">Allgemeine
       Gesangschule</tei:title>, theoretical part</tei:item>
     <tei:item><tei:supplied>August Iffert, <tei:title level="m">Allgemeine
       Gesangschule</tei:title>,</tei:supplied> practical part (soprano)</tei:item>
     <tei:item><tei:rs type="person" key="entity-006774"><tei:supplied>Hugo</tei:supplied>
       Kaun</tei:rs>, <tei:title level="m">The Pietist</tei:title>, piano reduction</tei:item>
     <tei:item><tei:title level="m">Johann Hermann Schein</tei:title>,
       <tei:supplied>edited</tei:supplied> by <tei:supplied>Arthur</tei:supplied> Prüfer<tei:ptr
       corresp="#r0001-fn04" type="footnote"/></tei:item>
     <tei:item><tei:title level="m">Urtext Classische Musikwerke — <tei:rs type="person"
        key="entity-000025">Carl Philipp Emanuel Bach</tei:rs>, Keyboard Works</tei:title>, 1st
       Collection<tei:ptr corresp="#r0001-fn05" type="footnote"/></tei:item>
    </tei:list>

    <tei:p>
     <tei:address>
      <tei:addrLine>Dr. Heinrich Schenker</tei:addrLine>
