      <dc:title>Handwritten postcard from Heinrich to Wilhelm Schenker, dated June 1,
        1927</dc:title>

      <dcterms:created>1927-06-01T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2024-07-09</dcterms:dateSubmitted>
      <dc:description>Heinrich asks his brother to make a decision about where the three brothers
        will meet.</dc:description>
      <dc:subject/>
      
      <marcrel:correspondent key="entity-000632">HSchenker</marcrel:correspondent>
      <marcrel:recipient key="entity-000775">Wilhelm Schenker</marcrel:recipient>
      
    </sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/><tei:lb/>
        <tei:fw type="header" rend="inline">
          <tei:handShift new="#pr"/><tei:hi rend="bold">Postkarte</tei:hi></tei:fw>
        <tei:lb/>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine><tei:handShift new="#pr"/>Absender: <tei:handShift new="#HS"
              />Schenker</tei:addrLine>
            <tei:addrLine>Wien III</tei:addrLine>
            <tei:addrLine>Keilgasse 8</tei:addrLine>
          </tei:address>
          <tei:address>
            <tei:addrLine><tei:supplied>An:</tei:supplied>
              <tei:handShift new="#HS"/>H. D<tei:hi rend="supralinear">r</tei:hi> Wilhelm
              Schenker</tei:addrLine>
            <tei:addrLine>St. Bernhard</tei:addrLine>
            <tei:addrLine rend="indent-10">b/Horn</tei:addrLine>
            <tei:addrLine>Nd: Öst:</tei:addrLine>
          </tei:address>
