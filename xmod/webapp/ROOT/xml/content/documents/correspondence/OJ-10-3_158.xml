      <dc:title>Handwritten picture postcard from Hannah Deutsch to Schenker, dated October 20,
        1931</dc:title>

      <dcterms:created>1931-10-20T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2023-07-28</dcterms:dateSubmitted>
      <dc:description>Deutsch’s meeting, first mentioned in his letter of October 16, has been
        postponed by two days, until Thursday, October 22.</dc:description>
      <dc:subject/>

      <marcrel:correspondent key="entity-000163">DeutschH</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>

    </sdo:itemDesc>

    <tei:div type="transcription">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/><tei:lb/>
        <tei:fw type="header" rend="inline"><tei:note type="editorial" place="inline"
            >printed:</tei:note>
          <tei:handShift new="#printed"/><tei:hi rend="bold">Postkarte</tei:hi></tei:fw>
        <tei:lb/>
        <tei:note type="editorial" place="inline">picture: lake with mountains, captioned: “Tragöß,
          Grüner See – Steiermark”</tei:note><tei:lb/>
        <tei:address>
          <tei:addrLine><tei:supplied reason="clarity">An:</tei:supplied>
            <tei:handShift new="#HD"/>Herrn D<tei:hi rend="supralinear">r.</tei:hi> Heinrich
            Schenker</tei:addrLine>
          <tei:addrLine rend="indent-40">Keilgasse 8</tei:addrLine>
          <tei:addrLine rend="indent-50">Wien III.</tei:addrLine>
        </tei:address>
        <tei:milestone unit="folio" n="verso"/>
        <tei:dateline rend="indent-70"><tei:handShift new="#HD"/><tei:date when="1931-10-20">20. X.
            31</tei:date></tei:dateline>
        <tei:salute>Sehr verehrter Herr <tei:rs type="person" key="entity-000632"
            >Professor</tei:rs>!<tei:note xml:id="r0001-fn01" type="editorial" place="foot">Receipt
            of this postcard is recorded in Schenker’s diary for October 21, 1931: “Von
              <tei:supplied>Frau</tei:supplied> Deutsch (K.): die Unterredung (welche?) findet erst
            Donnerstag statt.” (“From <tei:supplied>Mrs.</tei:supplied> Deutsch (postcard): the
            meeting (which one?) will not take place until Thursday.”).</tei:note></tei:salute>
      </tei:opener>

      <tei:p rend="first">Mein <tei:rs type="person" key="entity-000164">Mann</tei:rs> lässt Ihnen
        sagen, dass die bewusste Unterredung heute nicht stattgefunden hat, sondern auf <tei:date
          when="1931-10-22">Donnerstag</tei:date> verschoben wurde.<tei:note xml:id="r0001-fn02"
          type="editorial" place="foot">A meeting between Otto Erich Deutsch, <tei:rs type="person"
            key="entity-000320">Robert Haas</tei:rs>, <tei:rs type="person" key="entity-005784">Kurt
            Thomasberger</tei:rs> and <tei:rs type="person" key="entity-003085">Wilhelm
            Weckbecker</tei:rs> to discuss the prospective conferral of an honor upon <tei:rs
            type="person" key="entity-000380">Anthony van Hoboken</tei:rs>.</tei:note></tei:p>

      <tei:closer>
        <tei:salute rend="indent-40">Mit vielen Grüssen für Sie und</tei:salute>
        <tei:salute rend="indent-40">Ihre liebe <tei:rs type="person" key="entity-000771">Frau
            Gemahlin</tei:rs> –</tei:salute>
        <tei:salute rend="indent-60">Ihre</tei:salute>
        <tei:signed rend="indent-70"><tei:rs type="person" key="entity-000163"><tei:hi
              rend="underline">Hannah Deutsch</tei:hi></tei:rs>.</tei:signed>
      </tei:closer>

    </tei:div>


    <tei:div type="translation">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/><tei:lb/>
        <tei:fw type="header" rend="inline"><tei:note type="editorial" place="inline"
            >printed:</tei:note>
          <tei:handShift new="#printed"/><tei:hi rend="bold">Postcard</tei:hi></tei:fw>
        <tei:lb/>
        <tei:note type="editorial" place="inline">picture: lake with mountains, captioned: “Tragöß,
          Green Lake – Styria”</tei:note><tei:lb/>
        <tei:address>
          <tei:addrLine><tei:supplied reason="clarity">To:</tei:supplied>
            <tei:handShift new="#HD"/>Dr. Heinrich Schenker</tei:addrLine>
          <tei:addrLine rend="indent-40">Keilgasse 8</tei:addrLine>
          <tei:addrLine rend="indent-50">Vienna III</tei:addrLine>
        </tei:address>
        <tei:milestone unit="folio" n="verso"/>
        <tei:dateline rend="indent-70"><tei:handShift new="#HD"/><tei:date when="1931-10-20">October
            20, 1931</tei:date></tei:dateline>
        <tei:salute>Much revered <tei:rs type="person" key="entity-000632"
            >Professor</tei:rs>,<tei:ptr corresp="#r0001-fn01" type="footnote"/></tei:salute>
      </tei:opener>

      <tei:p rend="first">My <tei:rs type="person" key="entity-000164">husband</tei:rs> would like
        you to know that the planned meeting did not take place today but has been postponed until
          <tei:date when="1931-10-22">Thursday</tei:date>.<tei:ptr corresp="#r0001-fn02"
          type="footnote"/></tei:p>

      <tei:closer>
        <tei:salute rend="indent-40">Best greetings to you and</tei:salute>
        <tei:salute rend="indent-40">your dear <tei:rs type="person" key="entity-000771"
            >wife</tei:rs> –</tei:salute>
        <tei:salute rend="indent-60">Your</tei:salute>
        <tei:signed rend="indent-70"><tei:rs type="person" key="entity-000163"><tei:hi
              rend="underline">Hannah Deutsch</tei:hi></tei:rs></tei:signed>
      </tei:closer>


    </tei:div>

