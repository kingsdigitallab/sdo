      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-003332">calling card</tei:rs>


      <dc:title>Handwritten calling card from Kux to Schenker, dated December 7, 1910</dc:title>
      <dcterms:created>1910-07-13T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2025-02-14</dcterms:dateSubmitted>
      <dc:description>Kux is at Schenker’s disposal to answer questions put to him over the
        telephone.</dc:description>
      <dc:subject/>

      <marcrel:correspondent key="entity-000498">Wilhelm Kux</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>

    </sdo:itemDesc>

    <tei:div type="transcription">

      <tei:opener>
        <tei:milestone unit="folio" n="verso"/>
        <tei:salute><tei:handShift new="#WK"/>Lieber Herr <tei:rs key="entity-000632" type="person"
            >Doctor</tei:rs>!<tei:note xml:id="r0001-fn01" type="editorial" place="foot">Receipt of
            this calling card is not recorded in Schenker’s diary; the subject matter of Schenker’s
            telephone queries is unknown.</tei:note></tei:salute>
      </tei:opener>

      <tei:p>Ich stehe gegen vorherige telephonische Anfragen jederzeit gerne zu Ihrer Verfügung. </tei:p>

      <tei:closer>
        <tei:salute rend="indent-50">Bestens grüßend</tei:salute>
        <tei:salute rend="indent-70">Ihr erge<tei:supplied reason="abbreviation"
            >bener</tei:supplied></tei:salute>
        <tei:dateline><tei:date when="1910-12-07">7. 12. 1910</tei:date></tei:dateline><tei:lb/><tei:lb/>
        <tei:milestone unit="folio" n="recto"/><tei:lb/>
        <tei:signed rend="indent-30"><tei:handShift new="#pr"/><tei:rs type="person"
            key="entity-000498">Wilhelm Kux</tei:rs></tei:signed>
      </tei:closer>

    </tei:div>



    <tei:div type="translation">

      <tei:opener>
        <tei:milestone unit="folio" n="verso"/>
        <tei:salute><tei:handShift new="#WK"/>Dear Dr. <tei:supplied reason="identity"><tei:rs
              key="entity-000632" type="person">Schenker</tei:rs></tei:supplied>,<tei:ptr
            corresp="#r0001-fn01" type="footnote"/></tei:salute>
      </tei:opener>

      <tei:p>Regarding the questions you previously telephoned about, I am at your disposal at any
        time.</tei:p>

      <tei:closer>
        <tei:salute rend="indent-50">With best greetings,</tei:salute>
        <tei:salute rend="indent-70">your devoted</tei:salute>
        <tei:dateline><tei:date when="1910-12-07">December 7, 1910</tei:date></tei:dateline>tei:lb/><tei:lb/>
        <tei:milestone unit="folio" n="recto"/><tei:lb/>
        <tei:signed rend="indent-30"><tei:handShift new="#pr"/><tei:rs type="person"
            key="entity-000498">Wilhelm Kux</tei:rs></tei:signed>
      </tei:closer>

    </tei:div>

