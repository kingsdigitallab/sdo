     <tei:fw type="postmark">|| 3/3 VIENNA 49 | <tei:gap reason="illegible"/> IV 08 – 4 | <tei:gap
       reason="illegible"/> ||</tei:fw><tei:lb/><tei:lb/>
     <tei:milestone unit="folio" n="verso"/>
    </tei:fw>
    <tei:salute>Dear <tei:rs key="entity-000356" type="person">Director</tei:rs>,<tei:ptr
      corresp="#r0001-fn01" type="footnote"/></tei:salute>
   </tei:opener>

   <tei:p>I shall bring further pages with me tomorrow at about 5 p.m.<tei:ptr corresp="#r0001-fn02"
     type="footnote"/> As you will see, it is a really formidable piece of work that takes a huge
    amount of time, but at the same time makes for a much improved and enlarged edition.</tei:p>

   <tei:closer>
    <tei:salute rend="indent-50">With kind regards,</tei:salute>
    <tei:salute rend="indent-50">Your</tei:salute>
    <tei:signed rend="indent-60">
     <tei:hi rend="lateinschr"><tei:rs key="entity-000632" type="person">H.
      Schenker</tei:rs></tei:hi>
    </tei:signed><tei:lb/><tei:lb/>
    <tei:date when="1908-04-29">April 9, 1908</tei:date>
   </tei:closer>


