   <dc:title>Handwritten postcard from Schenker to Hertzka (UE), dated April 9, 1908</dc:title>

   <dcterms:created>1908-04-09T12:00:00Z</dcterms:created>
   <dcterms:dateSubmitted>2016-03-13</dcterms:dateSubmitted>
   <dc:description>Schenker promises more material next day, and extols the work.</dc:description>
   <dc:subject>Blätter; pages</dc:subject>




   <marcrel:correspondent key="entity-000632">Heinrich Schenker</marcrel:correspondent>
   <marcrel:recipient key="entity-000356">Emil Hertzka</marcrel:recipient>
   <marcrel:recipient key="entity-002408">Universal Edition</marcrel:recipient>
