      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002745">Postcard</tei:rs>


      <dc:title>Handwritten postcard from Weinberger to Schenker, dated December 5, 1904</dc:title>
      <dcterms:created>1904-12-05T09:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2016-02-19</dcterms:dateSubmitted>
      <dc:description>Weinberger archive has no wind music by Haydn.</dc:description>
      <dc:subject>Blasmusik; wind music</dc:subject>

      <marcrel:correspondent key="entity-000946">WeinbergerJ</marcrel:correspondent>
      <marcrel:correspondent key="entity-006149">WeinbergerCo</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>

    </sdo:itemDesc>

    <tei:div type="transcription">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/><tei:lb/>
        <tei:note type="editorial" place="inline">all in decorative rule-frame</tei:note><tei:lb/>
        <tei:fw type="header" rend="center"><tei:handShift new="#printed"/><tei:hi rend="bold"
            >Drucksache</tei:hi></tei:fw>
        <tei:lb/>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine>An: <tei:handShift new="#unk"/>Wolgeboren Herrn D<tei:hi
                rend="supralinear">r.</tei:hi> Heinrich Schenker,</tei:addrLine>
            <tei:addrLine rend="indent-20">Componist</tei:addrLine>
            <tei:addrLine rend="indent-40"><tei:handShift new="#printed"/>in <tei:handShift
                new="#unk"/>Wien</tei:addrLine>
            <tei:addrLine rend="indent-20">III. Reisnerstraße 38</tei:addrLine>
          </tei:address><tei:lb/>
          <tei:fw type="postmark">|| WIEN <tei:gap reason="illegible"/> | <tei:gap
              reason="illegible"/> | <tei:gap reason="illegible"/> | 7-11 V ||</tei:fw>
          <tei:fw type="postmark">|| WIEN <tei:gap reason="illegible"/> | BESTELLT | 6.12.04 | 9-11
            V |||</tei:fw><tei:lb/><tei:lb/>
          <tei:milestone unit="folio" n="verso"/>
        </tei:fw>
        <tei:address>
          <tei:addrLine><tei:handShift new="#unk"/>Wohlgeboren Herrn Dr. Heinrich Schenker
              <tei:supplied reason="spacer">—</tei:supplied> Wien.</tei:addrLine>
        </tei:address>
        <tei:salute>Sehr geehrter Herr <tei:rs type="person" key="entity-000632"
          >Doctor</tei:rs>!</tei:salute>
      </tei:opener>

      <tei:p>Leider hat sich in meinem Archiv keine Ausgabe <tei:rs key="entity-000344"
          type="person">Haydn</tei:rs>’s für Blasmusik vorgefunden u. bedauere ich daher sicher,
        Herrn Wunsche nicht entsprechen zu können.<tei:note xml:id="r0001-fn01" type="editorial"
          place="foot">Schenker's communication does not survive; nor is there any record of this
          exchange in Schenker's diary.</tei:note></tei:p>

      <tei:closer>
        <tei:salute rend="ident-10">Mit besten Grüßen</tei:salute>
        <tei:salute rend="ident-30">Ihr ganz ergebener</tei:salute>
        <tei:signed rend="ident-60"><tei:handShift new="#printed"/><tei:rs key="entity-000946"
            type="person">Josef Weinberger</tei:rs>.</tei:signed><tei:lb/>
        <tei:address>
          <tei:addrLine><tei:placeName>Leipzig</tei:placeName>/<tei:placeName>Vienna</tei:placeName>,
            den <tei:handShift new="#unk"/><tei:date when="1904-12-05">5/XII <tei:handShift
                new="#printed"/>190<tei:handShift new="#unk"/>4</tei:date>.</tei:addrLine>
          <tei:addrLine><tei:handShift new="#printed"/>I., Maximilianstrasse 11.</tei:addrLine>
        </tei:address>
      </tei:closer>

    </tei:div>



    <tei:div type="translation">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/><tei:lb/>
        <tei:note type="editorial" place="inline">all in decorative rule-frame</tei:note><tei:lb/>
        <tei:fw type="header" rend="center"><tei:handShift new="#printed"/><tei:hi rend="bold"
            >Printed matter</tei:hi></tei:fw>
        <tei:lb/>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine>To: <tei:handShift new="#unk"/>Dr. Heinrich Schenker, Esq.</tei:addrLine>
            <tei:addrLine rend="indent-20">Composer</tei:addrLine>
            <tei:addrLine rend="indent-40"><tei:handShift new="#printed"/>in <tei:handShift
                new="#unk"/>Vienna III</tei:addrLine>
            <tei:addrLine rend="indent-20">Reisnerstraße 38</tei:addrLine>
          </tei:address><tei:lb/>
          <tei:fw type="postmark">|| VIENNA <tei:gap reason="illegible"/> | <tei:gap
              reason="illegible"/> | <tei:gap reason="illegible"/> | 7-11 V ||</tei:fw>
          <tei:fw type="postmark">|| VIENNA <tei:gap reason="illegible"/> | DELIVERED | 6.12.04 |
            9-11 V |||</tei:fw><tei:lb/><tei:lb/>
          <tei:milestone unit="folio" n="verso"/>
        </tei:fw>
        <tei:address>
          <tei:addrLine><tei:handShift new="#unk"/>Dr. Heinrich Schenker, Esq., <tei:supplied
              reason="spacer">—</tei:supplied> Vienna</tei:addrLine>
        </tei:address>
        <tei:salute>Dear Dr. <tei:supplied reason="identity"><tei:rs type="person"
              key="entity-000632">Schenker</tei:rs></tei:supplied>,</tei:salute>
      </tei:opener>

      <tei:p>I am sorry to say that there is no edition of <tei:rs key="entity-000344" type="person"
          >Haydn</tei:rs>'s music for wind instruments in my archive, and I therefore much regret
        that I am unable to comply with the gentleman's request.<tei:ptr corresp="#r0001-fn01"
          type="footnote"/></tei:p>

      <tei:closer>
        <tei:salute rend="ident-10">With best greetings,</tei:salute>
        <tei:salute rend="ident-30">Your most devoted</tei:salute>
        <tei:signed rend="ident-60"><tei:handShift new="#printed"/><tei:rs key="entity-000946"
            type="person">Josef Weinberger</tei:rs></tei:signed><tei:lb/>
        <tei:address>
          <tei:addrLine><tei:placeName>Leipzig</tei:placeName>/<tei:placeName>Vienna</tei:placeName>,
            den <tei:handShift new="#unk"/><tei:date when="1904-12-05">December 5, <tei:handShift
                new="#printed"/>190<tei:handShift new="#unk"/>4</tei:date></tei:addrLine>
          <tei:addrLine><tei:handShift new="#printed"/>I, Maximilianstrasse 11</tei:addrLine>
        </tei:address>
      </tei:closer>

    </tei:div>

