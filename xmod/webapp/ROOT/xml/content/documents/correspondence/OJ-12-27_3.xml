  <sdo:record ID="r0001">
    <sdo:itemDesc>
      <tei:rs role="correspondence" type="correspondence" key="entity-002724">Cotta ~
        HSchenker</tei:rs>
      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002744">Letter</tei:rs>


      <dc:title>Stenographically handwritten letter from Cotta to Schenker, dated December 29,
        1906</dc:title>
      <dcterms:created>1906-12-29T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2017-07-01</dcterms:dateSubmitted>
      <dc:description>Cotta has sent a complimentary copy of Harmonielehre to Eugen
        d'Albert.</dc:description>
      <dc:subject>Freiexemplar; complimentary copy</dc:subject>

      <marcrel:correspondent key="entity-002405">Cotta</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>
    </sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
        <tei:address>
          <tei:addrLine><tei:handShift new="#printed"/><tei:hi rend="bold">J. G. COTTA’SCHE
              BUCHHANDLUNG NACHFOLGER</tei:hi></tei:addrLine>
          <tei:addrLine rend="indent-40"><tei:hi rend="bold">STUTTGART UND
            BERLIN</tei:hi></tei:addrLine>
        </tei:address>
        <tei:dateline rend="indent-50">STUTTGART, den <tei:handShift new="#JGCsten"/><tei:date
            when="1906-12-29">29. Dezember <tei:handShift new="#printed"/>190<tei:handShift
              new="#JGCsten"/>6</tei:date>.</tei:dateline><tei:lb/>
        <tei:address>
          <tei:addrLine><tei:hi rend="lateinschr">Herrn D<tei:hi rend="supralinear">r.</tei:hi> H.
              Schenker <tei:hi rend="underline">Wien III</tei:hi>.</tei:hi></tei:addrLine>
          <tei:addrLine rend="indent-70">Reisnerstraße 38</tei:addrLine>
        </tei:address>
        <tei:salute>Sehr geehrter <tei:rs type="person" key="entity-000632">Herr</tei:rs>!<tei:note
            xml:id="r0001-fn01" type="editorial" place="foot">Receipt of this letter is not recorded
            in Schenker's diary. Cotta's carbon copy survives as CA 62, marked "12/727" in crayon in
            top margin.</tei:note></tei:salute>
      </tei:opener>

      <tei:p rend="first">Im Besitz Ihrer gefl. Zeilen vom <tei:date when="1906-12-27">27.
          dM</tei:date><tei:note xml:id="r0001-fn02" type="editorial" place="foot">= <tei:ref
            type="correspondence" cRef="CA-61">CA 61</tei:ref>, December 27, 1906.</tei:note>
        beehren wir uns Ihnen mitzuteilen, daß wir ein Freiexemplar der „<tei:rs type="work"
          key="entity-001724"><tei:title>Neuen musikalischen Theorien und
          Phantasien</tei:title></tei:rs>“ alsbald an Herrn <tei:rs key="entity-000150"
          type="person"><tei:hi rend="lateinschr">Eugen d’Albert</tei:hi></tei:rs>, z.Zt. in <tei:rs
          type="place" key="entity-002501"><tei:hi rend="lateinschr">Berlin</tei:hi></tei:rs>
        abgesandt haben.</tei:p>


      <tei:closer>
        <tei:salute rend="indent-50">Mit vorzüglicher Hochachtung</tei:salute>
        <tei:signed rend="indent-40"><tei:handShift new="#stamped"/>ppa <tei:rs type="organization"
            key="entity-002405">J.G. Cotta’sche Buchhandlung Nachfolger</tei:rs></tei:signed>
        <tei:signed rend="indent-60"><tei:handShift new="#HK"/><tei:rs type="person"
            key="entity-006241">H Kurz</tei:rs></tei:signed>
      </tei:closer>

    </tei:div>



    <tei:div type="translation">

      <tei:opener>
        <tei:address>
          <tei:addrLine><tei:handShift new="#printed"/><tei:hi rend="bold">SUCCESSORS TO J. G.
              COTTA'S BOOK DEALERSHIP</tei:hi></tei:addrLine>
          <tei:addrLine rend="indent-40"><tei:hi rend="bold">STUTTGART AND
            BERLIN</tei:hi></tei:addrLine>
        </tei:address>
        <tei:dateline rend="indent-50">STUTTGART, <tei:handShift new="#JGCsten"/><tei:date
            when="1906-12-29">December 29, <tei:handShift new="#printed"/>190<tei:handShift
              new="#JGCsten"/>6</tei:date></tei:dateline><tei:lb/>
        <tei:address>
          <tei:addrLine>Dr. H. Schenker <tei:hi rend="underline">Vienna III</tei:hi>.</tei:addrLine>
          <tei:addrLine rend="indent-70">Reisnerstraße 38</tei:addrLine>
        </tei:address>
        <tei:salute>Dear <tei:rs type="person" key="entity-000632">Sir</tei:rs>,<tei:ptr
            corresp="#r0001-fn01" type="footnote"/></tei:salute>
      </tei:opener>

      <tei:p rend="first">In receipt of your esteemed lines of the <tei:date when="1906-12-27">27th
          of the month</tei:date>,<tei:ptr corresp="#r0001-fn02" type="footnote"/> we have the honor
        to inform you that we have sent a complimentary copy of the <tei:rs type="work"
          key="entity-001724"><tei:title level="m">New Musical Theories and
          Fantasies</tei:title></tei:rs> immediately to Mr <tei:rs key="entity-000150" type="person"
          >Eugen d’Albert</tei:rs>, currently in <tei:rs type="place" key="entity-002501"
          >Berlin</tei:rs>.</tei:p>


      <tei:closer>
        <tei:salute rend="indent-50">With kind regards,</tei:salute>
        <tei:signed rend="indent-40"><tei:handShift new="#stamped"/>pp. <tei:rs type="organization"
            key="entity-002405">Successors to J. G. Cotta’s Book Dealership</tei:rs></tei:signed>
        <tei:signed rend="indent-60"><tei:handShift new="#HK"/><tei:rs type="person"
            key="entity-006241">H. Kurz</tei:rs></tei:signed>
      </tei:closer>
    </tei:div>

