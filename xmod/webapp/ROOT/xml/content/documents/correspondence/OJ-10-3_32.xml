          </tei:address>
          <tei:address>
            <tei:addrLine rend="indent-15"><tei:supplied reason="clarity">An:</tei:supplied> Hochwohlgebore<tei:supplied
                reason="covered">n</tei:supplied></tei:addrLine>
            <tei:addrLine>Herrn/Löbl.</tei:addrLine>
            <tei:addrLine><tei:handShift new="#TPoeddk"/>Professor Dr. Heinrich
                <tei:lb/><tei:hi><!-- spaced out -->Schenker,</tei:hi></tei:addrLine>
            <tei:addrLine rend="indent-10"><tei:hi rend="underline"><tei:hi><!-- spaced out -->WIEN</tei:hi>
                III.</tei:hi></tei:addrLine>
            <tei:addrLine rend="indent-15">Keilgasse No. 8</tei:addrLine>
          </tei:address>
          <tei:lb/><tei:fw type="postmark">|| 1/1 WIEN 11 | 21.IV.22IX– | * 1<tei:gap reason="illegible" unit="chars"
