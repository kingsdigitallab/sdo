          <tei:addrLine>Vienna II, Böcklinstrasse 26</tei:addrLine>
        </tei:address>
        <tei:address>
          <tei:addrLine><tei:supplied reason="clarity">To:</tei:supplied> Dr. Heinrich
            Schenker</tei:addrLine>
          <tei:addrLine rend="indent-30">Keilgasse 8</tei:addrLine>
          <tei:addrLine rend="indent-30"><tei:hi rend="underline"><tei:hi rend="sperr"
                >Vienna</tei:hi> III</tei:hi></tei:addrLine>
        </tei:address>
        <tei:lb/>
        <tei:milestone unit="folio" n="verso"/>
        <tei:dateline><tei:handShift new="#TPoed"/><tei:placeName>Vienna</tei:placeName>, <tei:date
            when="1929-05-13">May 13, 1929</tei:date></tei:dateline>
        <tei:salute>Dear revered Dr. <tei:supplied reason="identity"><tei:rs type="person"
              key="entity-000632">Schenker</tei:rs></tei:supplied>,<tei:ptr corresp="#r0001-fn01"
            type="footnote"/></tei:salute>
      </tei:opener>

      <tei:p rend="first">Cordial thanks for your letter,<tei:ptr corresp="#r0001-fn02"
          type="footnote"/> which is of great value to me. I just wanted to let you know that
          <tei:rs type="person" key="entity-000380">Mr. van Hoboken</tei:rs> is still on his travels
        to <tei:rs type="place" key="entity-002495">Frankfurt</tei:rs> and <tei:rs type="place"
          key="entity-002286">Munich</tei:rs>, and that he will probably not return until the end of
        the week <tei:note type="editorial" place="inline">cued from lower margin:</tei:note>
        <tei:handShift new="#OED"/>Friday evening<tei:note type="editorial" place="inline">end
          cue</tei:note>.</tei:p>

      <tei:closer>
        <tei:salute rend="indent-20"><tei:handShift new="#TPoed"/>With best regards from our house
          to yours,</tei:salute>
        <tei:salute rend="indent-50">Your wholly devoted</tei:salute>
        <tei:signed rend="indent-80"><tei:handShift new="#OED"/>
          <tei:rs key="entity-000164" type="person">O. E. Deutsch</tei:rs></tei:signed>
      </tei:closer>

