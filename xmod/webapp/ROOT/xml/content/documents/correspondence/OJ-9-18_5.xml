 <sdo:record ID="r0001">

  <sdo:itemDesc>

   <tei:rs role="correspondence" type="correspondence" key="entity-006195">AMdK ~ HSchenker</tei:rs>
   <tei:rs role="correspondence" type="correspondence" key="entity-006214">BoppW ~
