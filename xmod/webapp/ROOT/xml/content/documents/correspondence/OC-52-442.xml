        <tei:address>
          <tei:addrLine rend="indent-10">
            <tei:persName>Professor Heinrich Schenker,</tei:persName>
          </tei:addrLine>
          <tei:addrLine rend="indent-80">
            <tei:hi rend="underline">Vienna III</tei:hi></tei:addrLine>
          <tei:addrLine rend="indent-50">Reisnerstraße 38</tei:addrLine>
        </tei:address>
        <tei:salute>Dear Mr. <tei:supplied reason="identity"><tei:rs type="person"
              key="entity-000632">Schenker</tei:rs></tei:supplied>,</tei:salute>
      </tei:opener>

      <tei:p rend="first">In response to your esteemed letter of the <tei:date when="1905-04-11"
          >11th of the month</tei:date>,<tei:ptr corresp="#r0001-fn01" type="footnote"/> we take the
        liberty of informing you that this is not a propitious time to be undertaking publication of
        the work that you kindly offer to us, and that Universal Edition is at the moment not in a
        position to take it on.</tei:p>

      <tei:p rend="first"> </tei:p>

      <tei:closer>
        <tei:salute rend="indent-60">With kind regards,</tei:salute>
        <tei:signed rend="indent-70"><tei:handShift new="#stamp"/><tei:rs key="entity-002408"
            type="organization">Universal Edition &amp; Co.</tei:rs></tei:signed>
        <tei:signed rend="indent-70"><tei:rs key="entity-000946" type="person">Josef
            Weinberger</tei:rs></tei:signed>
      </tei:closer>


