      <dc:title>Handwritten letter from Weinberger (UE) to Schenker, dated April 13, 1905</dc:title>

      <dcterms:created>1905-04-13T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2016-02-22</dcterms:dateSubmitted>
      <dc:description>UE is unable to accept an item offered for publication.</dc:description>
      <dc:subject>Inverlagnahme; undertaking of publication; Werk; work</dc:subject>

      <marcrel:correspondent key="entity-000946">WeinbergerJ</marcrel:correspondent>
      <marcrel:correspondent key="entity-002408">Universal Edition</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>
    </sdo:itemDesc>

    <tei:div type="transcription">

