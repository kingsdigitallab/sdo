      <tei:addrLine><tei:supplied>From:</tei:supplied>
       <tei:handShift new="#OJ"/>Dr. Oswald Jonas</tei:addrLine>
      <tei:addrLine><tei:supplied reason="identity">Berlin-</tei:supplied>Schöneberg</tei:addrLine>
