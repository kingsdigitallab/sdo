   <dc:title>Handwritten lettercard from Weisse to Schenker, dated February 3, 1917</dc:title>

   <dcterms:created>1917-02-03T12:00:00Z</dcterms:created>
   <dcterms:dateSubmitted>2019-10-30</dcterms:dateSubmitted>
