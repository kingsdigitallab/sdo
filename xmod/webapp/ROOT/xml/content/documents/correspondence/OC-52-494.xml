      <dc:title>Printed contract, with handwritten entries, between UE and Schenker, dated August
        25, 1912</dc:title>

      <dcterms:created>1912-08-25T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2023-03-01</dcterms:dateSubmitted>
      <dc:description>Contract for Schenker's edition of Beethovens letzte fünf Sonaten, with
        special clause on correction costs</dc:description>
      <dc:subject>Revision; edition; Arrangement; Vortragszeichen; performance markings;
        Fingersätze; fingerings; Anmerkungen; annotations; instruktiv; pedagogical; musikhistorisch;
        music-historical; Werk; work; Honorar; honorarium; Bezahlung; payment; Urheberrecht;
        copyright; kritische Herausgabe; critical edition; Verlagsfirma; publishing firm;
        Korrekturen; proofs; Herstellungskosten; production costs</dc:subject>

      <marcrel:correspondent key="entity-000356">Hertzka</marcrel:correspondent>
      <marcrel:correspondent key="entity-002408">UE</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>
    </sdo:itemDesc>

    <tei:div type="transcription">

      <tei:opener>
        <tei:note type="editorial" place="inline">Roman type = printed; italic type =
          handwritten</tei:note>
        <tei:lb/><tei:lb/>
        <tei:byline><tei:hi rend="italic"><tei:handShift new="#unkUE"/>Kopie</tei:hi></tei:byline>
      </tei:opener>
      <tei:lb/>

      <tei:p><tei:handShift new="#printed"/>Zwischen dem Unternehmen<tei:lb/><tei:hi rend="bold"
            >„<tei:rs key="entity-002408" type="organization"
        >Universal-Edition</tei:rs>“</tei:hi><tei:lb/>einerseits<tei:lb/>und Herrn <tei:hi
          rend="italic"><tei:add place="inline"><tei:handShift new="#unkUE"/>Professor Dr. <tei:rs
              key="entity-000632" type="person">Heinrich
          Schenker</tei:rs></tei:add></tei:hi><tei:lb/><tei:handShift new="#printed"
        />andererseits<tei:lb/>wurde heute vereinbart und beschlossen:<tei:note xml:id="r0001-fn01"
          type="editorial" place="foot">For the correspondence leading to this contract, see:
            <tei:ref type="correspondence" cRef="WSLB-116">WSLB 116</tei:ref>, June 2, 1912;
            <tei:ref type="correspondence" cRef="WSLB-118">WSLB 118</tei:ref>, June 4; <tei:ref
            type="correspondence" cRef="WSLB-123">WSLB 123</tei:ref>, June 24; <tei:ref
            type="correspondence" cRef="WSLB-124">WSLB 124</tei:ref>, June 27; <tei:ref
            type="correspondence" cRef="OC-52-91">OC 52/91</tei:ref>, July 13; <tei:ref
            type="correspondence" cRef="OC-52-92">>OC 52/92</tei:ref>, July 19; <tei:ref
            type="correspondence" cRef="WSLB-128">WSLB 128</tei:ref>, July 21; <tei:ref
            type="correspondence" cRef="WSLB-129">WSLB 129</tei:ref>, August 6; <tei:ref
            type="correspondence" cRef="WSLB-130">WSLB 130</tei:ref>, August 14; <tei:ref
            type="correspondence" cRef="WSLB-131">WSLB 131</tei:ref>, August 22.</tei:note></tei:p>
      <tei:lb/>

      <!-- -->
      <!-- C L A U S E   1 -->
      <!-- -->


      <tei:p>
        <tei:hi rend="bold">I.</tei:hi><tei:lb/>Herr <tei:hi rend="italic"><tei:add place="inline"
            >Professor D<tei:hi rend="supralinear">r.</tei:hi>
            <tei:rs type="person" key="entity-000632">Heinrich Schenker</tei:rs></tei:add></tei:hi> über<tei:subst>
          <tei:del rend="overstrike">nimmt</tei:del>
          <tei:add place="interlinear-above"><tei:hi rend="italic">lässt</tei:hi></tei:add>
        </tei:subst> hiermit <tei:del rend="overstrike">für</tei:del> d<tei:subst>
          <tei:del rend="overwritten">ie</tei:del>
          <tei:add place="superimposed"><tei:hi rend="italic">er</tei:hi></tei:add>
        </tei:subst> „<tei:rs key="entity-002408" type="organization"><tei:hi rend="bold"
            >Universal-Edition</tei:hi></tei:rs>“</tei:p>

      <tei:p rend="first">a) <tei:add place="interlinear-above"><tei:hi rend="italic">die kritische
            Herausgabe resp.</tei:hi></tei:add>
        <tei:hi rend="bold">die musikalische Revision</tei:hi>, insbesondere die Eintragung aller
        ihm angemessen erscheinenden Vortragszeichen, Fingersätze, Anmerkungen instructiver und
        musikhistorischer Art etc. etc. der Werke: <tei:cit>
          <tei:q><tei:hi rend="italic"><tei:add place="inline"><tei:rs key="entity-001733"
                  type="work"><tei:title>Beethoven's letzte 5
              Sonaten</tei:title></tei:rs></tei:add></tei:hi></tei:q>
        </tei:cit></tei:p>

      <tei:p rend="first"><tei:del rend="overstrike">b) <tei:hi rend="bold">das
          Arrangement</tei:hi></tei:del>
        <tei:note type="editorial" place="inline">blank</tei:note>
        <tei:del>für</tei:del>
        <tei:note type="editorial" place="inline">left blank</tei:note></tei:p>

      <tei:p rend="first"><tei:del rend="overstrike">c) und verpflichtet sich, diese musikalische
          Arbeit bis spätesten</tei:del>
        <tei:note type="editorial" place="inline">left blank</tei:note></tei:p>

      <tei:p rend="first">
        <tei:hi rend="italic"><tei:add place="inline">in der Weise</tei:add></tei:hi>
        fertigzustellen, <tei:del rend="overstrike">und</tei:del>
        <tei:hi rend="italic"><tei:add place="interlinear-above">daβ er jährlich eine
            Sonate</tei:add></tei:hi> zum Zwecke des Stiches an die „<tei:rs type="organization"
          key="entity-002408">Universal-Edition</tei:rs>“ zur Ablieferung <tei:del rend="overstrike"
          >zu</tei:del> bring<tei:subst>
          <tei:del rend="overstrike">en</tei:del>
          <tei:add place="inline"><tei:hi rend="italic">t</tei:hi></tei:add>
        </tei:subst>. <tei:note type="editorial" place="inline">remainder of clause
          deleted</tei:note>.</tei:p>

      <tei:p rend="first"><tei:pb n="2"/> Herr <tei:hi rend="italic"><tei:add place="inline"
            >Professor D<tei:hi rend="supralinear">r.</tei:hi>
            <tei:rs type="person" key="entity-000632">H. Schenker</tei:rs></tei:add></tei:hi>
        verpflichtet sich gleichzeitig, die erforderlichen Correcturen — innerhalb — bis — <tei:hi
          rend="italic"><tei:add place="inline">4 Wochen</tei:add></tei:hi> nach Erhalt der
        betreffenden Probeabzüge zu lesen und den letzten von ihm revidirten Correcturabzug mit dem
        Vermerk „druckreif“ an die „<tei:rs type="organization" key="entity-002408"
          >Universal-Edition</tei:rs>“ zur Ablieferung, zu bringen.</tei:p>

      <!-- -->
      <!-- C L A U S E   2 -->
      <!-- -->

      <tei:p rend="first"><tei:hi rend="bold">II.</tei:hi><tei:lb/><tei:hi rend="italic"><tei:add
            place="inline">Herr Professor D<tei:hi rend="supralinear">r.</tei:hi>
            <tei:rs key="entity-000632" type="person">Heinrich Schenker</tei:rs></tei:add></tei:hi>
        erhält für die im § I bezeichnete musikalische Arbeit ein Honorar von <tei:hi rend="italic"
            ><tei:add place="inline">je K 1200.- für jede Sonate, die Hälfte d.i. K 600.- bei
            Inangriffnahme</tei:add></tei:hi>
        <tei:del rend="overstrike">zahlbar</tei:del>
        <tei:hi rend="italic"><tei:add place="inline">der Sonate und der Rest von K 600.- bei
            Ablieferung der letzten Korrektur-Abzüge zahlbar</tei:add></tei:hi>.</tei:p>

      <!-- -->
      <!-- C L A U S E   3 -->
      <!-- -->

      <tei:p><tei:hi rend="bold">III.</tei:hi><tei:lb/>Gegen Bezahlung des vorerwähnten Honorares
        überlässt Herr <tei:hi rend="italic"><tei:add place="inline">Professor D<tei:hi
              rend="supralinear">r.</tei:hi>
            <tei:rs key="entity-000632" type="person">Heinrich Schenker</tei:rs></tei:add></tei:hi>
        der „<tei:rs key="entity-002408" type="organization">Universal-Edition</tei:rs>“ das
        Urheberrecht, welches insbesondere umfasst das ausschliessliche und alleinige Verlags-,
        Vertriebs-, Uebersetzungs- und Aufführungsrecht der von ihm übernommenen musikalischen
        Arbeit für alle Länder, alle Zeiten, für alle Veröffentlichungensarten ohne irgend welche
        Beschränkung.</tei:p>

      <!-- -->
      <!-- C L A U S E   4 -->
      <!-- -->

      <tei:p><tei:hi rend="bold">IV.</tei:hi><tei:lb/>Herr <tei:hi rend="italic"><tei:add
            place="inline">Professor D<tei:hi rend="supralinear">r.</tei:hi>
            <tei:rs key="entity-000632" type="person">H. Schenker</tei:rs></tei:add></tei:hi>
        verpflichtet sich, von <tei:subst>
          <tei:del rend="overstrike">dem</tei:del>
          <tei:add place="interlinear-above"><tei:hi rend="italic">diesem</tei:hi></tei:add>
        </tei:subst> ihm seitens der „<tei:rs key="entity-002408" type="organization"
          >Universal-Edition</tei:rs>“ zur <tei:hi rend="italic"><tei:add place="interlinear-above"
            >kritischen Herausgabe</tei:add></tei:hi><tei:supplied reason="punctuation"
          >,</tei:supplied> Revision, Arrangement etc. übertragenen <tei:subst>
          <tei:add place="inline"><tei:hi rend="italic">Werk</tei:hi></tei:add>
          <tei:del rend="overstrike">Autoren</tei:del>
        </tei:subst> für eine andere Verlagsfirma oder Editions-Unternehmung keine gleichartige oder
        ähnliche musikalische Arbeit zu liefern.</tei:p>

      <!-- -->
      <!-- C L A U S E   5 -->
      <!-- -->

      <tei:p><tei:hi rend="bold">V.</tei:hi><tei:lb/>Ausserdem wurde noch vereinbart: <tei:hi
          rend="italic"><tei:add place="inline">Herr <tei:rs type="person" key="entity-000632"
                >D<tei:hi rend="supralinear">r.</tei:hi> Schenker</tei:rs> erklärt sich bereit, bei
            den Korrekturen die grösstmögliche Rücksicht auf die Herstellungskosten des Werkes zu
            nehmen.</tei:add></tei:hi><tei:note xml:id="r0001-fn02" type="editorial" place="foot"
          >This clause has been a bone of contention since Hertzka sent Schenker a draft version of
          the contract on July 19, 1912 (enclosed with <tei:ref type="correspondence"
            cRef="OC-52-92">OC 52/92</tei:ref>; the draft is not known to survive) which evidently
          contained a much more aggressive stipulation.</tei:note></tei:p>

      <!-- -->
      <!-- C L O S I N G -->
      <!-- -->


      <tei:closer>
        <tei:dateline><tei:placeName><tei:hi rend="italic">Wien</tei:hi></tei:placeName>, am
            <tei:date when="1912-08-25"><tei:hi rend="italic">25. August</tei:hi> 19<tei:hi
              rend="italic">12</tei:hi></tei:date></tei:dateline>
        <tei:address>
          <tei:addrLine><tei:handShift new="#HS"/><tei:hi rend="italic"><tei:add place="inline"
                  ><tei:rs type="place" key="entity-005514"
            >Paneveggio</tei:rs></tei:add></tei:hi></tei:addrLine>
        </tei:address>
        <tei:signed><tei:handShift new="#HS"/><tei:hi rend="italic"><tei:add place="inline">D<tei:hi
                rend="supralinear">r.</tei:hi>
              <tei:rs key="entity-000632" type="person">Heinrich Schenker</tei:rs>
            m.p.</tei:add></tei:hi><tei:note xml:id="r0001-fn03" type="editorial" place="foot"
              ><tei:hi rend="italic">manu propria</tei:hi> (in his own
          hand).</tei:note></tei:signed>
      </tei:closer>

    </tei:div>


    <tei:div type="translation">

      <tei:opener>
        <tei:note type="editorial" place="inline">Roman type = printed; italic type =
          handwritten</tei:note>
        <tei:lb/><tei:lb/>
        <tei:byline><tei:hi rend="italic"><tei:handShift new="#unkUE"/>Copy</tei:hi></tei:byline>
      </tei:opener>
      <tei:lb/>

      <tei:p><tei:handShift new="#printed"/>Between the firm of<tei:lb/><tei:hi rend="bold"><tei:rs
            key="entity-002408" type="organization">Universal Edition</tei:rs></tei:hi><tei:lb/>for
        the one part<tei:lb/>and <tei:hi rend="italic"><tei:add place="inline"><tei:handShift
              new="#unkUE"/>Professor <tei:rs key="entity-000632" type="person">Heinrich
              Schenker</tei:rs></tei:add></tei:hi><tei:lb/><tei:handShift new="#printed"/>for the
        other part<tei:lb/>it was agreed and determined that:<tei:ptr corresp="#r0001-fn01"
          type="footnote"/></tei:p>
      <tei:lb/>

      <!-- -->
      <!-- C L A U S E   1 -->
      <!-- -->


      <tei:p>
        <tei:hi rend="bold">I.</tei:hi><tei:lb/><tei:hi rend="italic"><tei:add place="inline"
            >Professor <tei:rs type="person" key="entity-000632">Heinrich
            Schenker</tei:rs></tei:add></tei:hi> com<tei:add place="inline"><tei:hi rend="italic"
            >mits</tei:hi></tei:add> herewith <tei:add place="inline"><tei:hi rend="italic"
            >to</tei:hi></tei:add>
        <tei:rs key="entity-002408" type="organization"><tei:hi rend="bold">Universal
            Edition</tei:hi></tei:rs></tei:p>

      <tei:p rend="first">a) <tei:add place="interlinear-above"><tei:hi rend="italic">the critical
            edition or</tei:hi></tei:add>
        <tei:hi rend="bold">musical revision</tei:hi>, in particular the insertion of all
        performance marks, fingerings, <tei:supplied reason="continuity">and</tei:supplied>
        annotations of a pedagogical and music-historical kind, etc., etc., that seem to him
        appropriate, of the works: <tei:cit>
          <tei:q><tei:hi rend="italic"><tei:add place="inline"><tei:rs key="entity-001733"
                  type="work"><tei:title>Beethoven's Last Five
                Sonatas</tei:title></tei:rs></tei:add></tei:hi></tei:q>
        </tei:cit></tei:p>

      <tei:p rend="first"><tei:del rend="overstrike">b) <tei:hi rend="bold">the
          arrangement</tei:hi></tei:del>
        <tei:note type="editorial" place="inline">blank</tei:note>
        <tei:del>for</tei:del>
        <tei:note type="editorial" place="inline">left blank</tei:note></tei:p>

      <tei:p rend="first"><tei:del rend="overstrike">c) and commits himself, <tei:supplied
            reason="clarity">to deliver</tei:supplied> this music work by the latest</tei:del>
        <tei:note type="editorial" place="inline">left blank</tei:note></tei:p>

      <tei:p rend="first">
        <tei:hi rend="italic"><tei:add place="interlinear-above">such that he prepares one sonata
            per year</tei:add></tei:hi> to <tei:rs type="organization" key="entity-002408">Universal
          Edition</tei:rs> to be engraved. <tei:note type="editorial" place="inline">remainder of
          clause deleted</tei:note>.</tei:p>

      <tei:p rend="first"><tei:pb n="2"/>
        <tei:hi rend="italic"><tei:add place="inline">Professor <tei:rs type="person"
              key="entity-000632">Heinrich Schenker</tei:rs></tei:add></tei:hi> commits himself at
        the same time to read the requisite proofs within <tei:hi rend="italic"><tei:add
            place="inline">four weeks</tei:add></tei:hi> of receipt of the relevant proof sheets,
        and to deliver the final proofs corrected by him to <tei:rs type="organization"
          key="entity-002408">Universal Edition</tei:rs> with the annotation “ready to
        print.”</tei:p>

      <!-- -->
      <!-- C L A U S E   2 -->
      <!-- -->

      <tei:p rend="first"><tei:hi rend="bold">II.</tei:hi><tei:lb/><tei:hi rend="italic"><tei:add
            place="inline">Professor <tei:rs key="entity-000632" type="person">Heinrich
              Schenker</tei:rs></tei:add></tei:hi> receives for the musical work indicated under §
        I. an honorarium of <tei:hi rend="italic"><tei:add place="inline">1,200.– Kronen for each
            sonata, i.e. half, namely 600.– Kronen payable at the start of work on the sonata and
            the balance of 600 Kronen upon delivery of the final corrected
        proofs</tei:add></tei:hi>.</tei:p>

      <!-- -->
      <!-- C L A U S E   3 -->
      <!-- -->

      <tei:p><tei:hi rend="bold">III.</tei:hi><tei:lb/>In return for payment of the above-mentioned
        honorarium, <tei:hi rend="italic"><tei:add place="inline">Professor <tei:rs
              key="entity-000632" type="person">Heinrich Schenker</tei:rs></tei:add></tei:hi> cedes
        to <tei:rs type="organization" key="entity-002408">Universal Edition</tei:rs> the copyright,
        which in particular comprises the exclusive and sole publishing, sales, translation, and
        performance rights of the musical work undertaken by him for all countries, all times, and
        all types of publication without any limit whatsoever.</tei:p>

      <!-- -->
      <!-- C L A U S E   4 -->
      <!-- -->

      <tei:p><tei:hi rend="bold">IV.</tei:hi><tei:lb/><tei:hi rend="italic"><tei:add place="inline"
            >Professor <tei:rs key="entity-000632" type="person">Heinrich
            Schenker</tei:rs></tei:add></tei:hi> commits himself not to supply any other publishing
        firm or enterprise with any similar or comparable musical version of the <tei:hi
          rend="italic"><tei:add place="inline">work</tei:add></tei:hi> for which he has undertaken
        a <tei:hi rend="italic"><tei:add place="inline">critical edition</tei:add></tei:hi>,
        revision, arrangement, etc., for <tei:rs type="organization" key="entity-002408">Universal
          Edition</tei:rs>.</tei:p>

      <!-- -->
      <!-- C L A U S E   5 -->
      <!-- -->

      <tei:p><tei:hi rend="bold">V.</tei:hi><tei:lb/>In addition, it was agreed that: <tei:hi
          rend="italic"><tei:add place="inline"><tei:rs type="person" key="entity-000632">Dr.
              Schenker</tei:rs> declares himself willing when correcting proofs to have the fullest
            possible regard for the production costs of the work.</tei:add></tei:hi><tei:ptr
          corresp="#r0001-fn02" type="footnote"/></tei:p>

      <!-- -->
      <!-- C L O S I N G -->
      <!-- -->


      <tei:closer>
        <tei:dateline><tei:placeName><tei:hi rend="italic">Vienna</tei:hi></tei:placeName>,
            <tei:date when="1912-08-25"><tei:hi rend="italic">August 25,</tei:hi> 19<tei:hi
              rend="italic">12</tei:hi></tei:date></tei:dateline>
        <tei:address>
          <tei:addrLine><tei:handShift new="#HS"/><tei:hi rend="italic"><tei:add place="inline"
                  ><tei:rs type="place" key="entity-005514"
            >Paneveggio</tei:rs></tei:add></tei:hi></tei:addrLine>
        </tei:address>
        <tei:signed><tei:handShift new="#HS"/><tei:hi rend="italic"><tei:add place="inline">Dr.
                <tei:rs key="entity-000632" type="person">Heinrich Schenker</tei:rs>
            m.p.</tei:add></tei:hi><tei:ptr corresp="#r0001-fn03" type="footnote"/></tei:signed>
      </tei:closer>


    </tei:div>
