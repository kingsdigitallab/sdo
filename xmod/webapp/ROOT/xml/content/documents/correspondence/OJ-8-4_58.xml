            <tei:addrLine><tei:supplied reason="clarity">To:</tei:supplied> Prof. M.
              Violin</tei:addrLine>
            <tei:addrLine rend="indent-15">Hamburg</tei:addrLine>
            <tei:addrLine rend="indent-30">Immenhof</tei:addrLine>
            <tei:addrLine rend="indent-45">27</tei:addrLine>
          </tei:address>
