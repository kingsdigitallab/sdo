            <tei:addrLine>Sender: <tei:handShift new="#MV"/>Violin Schierke in the
              Harz</tei:addrLine>
            <tei:addrLine><tei:handShift new="#printed"/>City or Town: <tei:handShift new="#MV"/>Haus Walpurgis</tei:addrLine>
            <tei:addrLine><tei:handShift new="#printed"/>street, house number, <tei:lb/>building
              section, storey</tei:addrLine>
          </tei:address>
          <tei:address>
            <tei:addrLine><tei:supplied reason="clarity">to:</tei:supplied>
              <tei:handShift new="#MV"/>Dr.</tei:addrLine>
