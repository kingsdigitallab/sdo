      <tei:addrLine><tei:supplied reason="clarity">To:</tei:supplied> Prof. M. Violin</tei:addrLine>
      <tei:addrLine><tei:supplied reason="place">Vienna</tei:supplied> XIV, Sechshauserstraße
       126</tei:addrLine>
     </tei:address><tei:lb/>
     <tei:fw type="postmark">|| 13 <tei:gap reason="illegible"/> | 13. XII. 09VI‒ | * <tei:gap
       reason="illegible"/> * ||</tei:fw>
    </tei:fw><tei:lb/><tei:lb/>
    <tei:milestone unit="folio" n="verso"/>
    <tei:salute><tei:rs type="person" key="entity-000913">Floriz</tei:rs>,<tei:ptr
      corresp="#r0001-fn01" type="footnote"/></tei:salute>
   </tei:opener>

   <tei:p>"<tei:unclear reason="original unclear">On</tei:unclear>
    <tei:hi rend="underline">Thursday</tei:hi>"<tei:ptr corresp="#r0001-fn02" type="footnote"/>
    <tei:add place="interlinear-above"><tei:date when="1909-12-16">December 16</tei:date></tei:add>
    <tei:rs type="person" key="entity-000683">Pugno</tei:rs> is playing in the <tei:hi
     rend="underline">large</tei:hi> hall of the Musikverein.<tei:ptr corresp="#r0001-fn03"
     type="footnote"/> We would very much like to obtain some seats at the most popular prices (i.e.
    gratis). We hope your ingenuity will succeed in awaking in <tei:rs type="person"
     key="entity-000683">Pugno</tei:rs> the honor of our presence.</tei:p>

   <tei:closer>
    <tei:signed><tei:rs key="entity-000632" type="person">H. Sch.</tei:rs></tei:signed>
    <tei:signed><tei:handShift new="#AM"/><tei:rs key="entity-000599" type="person"
     >Mittm</tei:rs></tei:signed>
    <tei:signed><tei:handShift new="#SP"/><tei:rs key="entity-003283" type="person"
     >Sofie</tei:rs></tei:signed>
    <tei:signed><tei:handShift new="#FP"/><tei:rs key="entity-000675" type="person"
     >Felix</tei:rs></tei:signed>
   </tei:closer>

   <tei:postscript>
    <tei:lb/>
    <tei:p><tei:handShift new="#unk"/>That which is not appropriate should be omitted.<tei:ptr
      corresp="#r0001-fn04" type="footnote"/></tei:p>
   </tei:postscript>


