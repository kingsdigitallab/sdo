      <tei:rs key="entity-004414" type="correspondence" role="correspondence">DMV ~ HSchenker</tei:rs>
      <tei:rs key="entity-004415" type="correspondence" role="correspondence">Demblin ~ HSchenker</tei:rs>
      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002745">Postcard</tei:rs>

      <dc:title>Typed postcard from August Demblin (DMV) to Schenker, dated June 7, 1927</dc:title>
      <dcterms:created>1927-06-07T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2014-04-02</dcterms:dateSubmitted>
      <dc:description>Drei Masken Verlag inform Schenker that the page proofs for the second
        Meisterwerk volume will be completed in around two weeks time.</dc:description>
      <dc:subject>page proof; Umbruch; completion; beendet</dc:subject>

    <marcrel:correspondent key="entity-002627">DMV</marcrel:correspondent><marcrel:correspondent key="entity-004417">Demblin</marcrel:correspondent><marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient></sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/>
        <tei:lb/>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine><tei:handShift new="#printed"/>DREI MASKEN VERLAG A.-G.</tei:addrLine>
            <tei:addrLine>MÜNCHEN</tei:addrLine>
            <tei:addrLine>KAROLINENPLATZ 3</tei:addrLine>
          </tei:address>
          <tei:address>
            <tei:addrLine rend="indent-50"><tei:handShift new="#TPe"/>Herrn Dr. Heinrich
              Schenker</tei:addrLine>
            <tei:addrLine rend="indent-70"><tei:hi rend="underline">Wien III</tei:hi></tei:addrLine>
            <tei:addrLine rend="indent-70">Keilgasse 8</tei:addrLine>
          </tei:address><tei:lb/>
          <tei:fw type="postmark">|| <tei:placeName>MUENCHEN</tei:placeName> 43 | <tei:note type="editorial">remainder illegible</tei:note> ||</tei:fw><tei:lb/>
        </tei:fw>
        <tei:lb/>
        <tei:lb/>
        <tei:lb/>
        <tei:milestone unit="folio" n="verso"/>
        <tei:lb/>
        <tei:address>
          <tei:addrLine><tei:handShift new="#TPe"/><tei:hi rend="italic">E</tei:hi> /
              <tei:placeName>Muenchen</tei:placeName>, den <tei:date when="1927-06-07">7. Juni
              1927</tei:date></tei:addrLine>
          <tei:addrLine><tei:hi rend="double-underline">Herrn Dr. Heinrich Schenker, Wien III,
              Keilgasse 8</tei:hi></tei:addrLine>
        </tei:address>
        <tei:lb/>
        <tei:salute>Sehr geehrter Herr <tei:rs type="person" key="entity-000632">Doktor</tei:rs>!<tei:note xml:id="r0001-fn01" type="editorial" place="foot">Receipt of
            this postcard is recorded in Schenker's diary at OJ 3/9, p. 3075, June 8, 1927: "Vom
            Verlag (K.): die Druckerei sagt den Umbruch zwischen dem 18. u. 22. d. zu." ("From the
            publisher (postcard): the printing house promises page make-up between the 18th and the
            22nd.").</tei:note>
        </tei:salute>
      </tei:opener>

      <tei:p rend="first">In höflicher Beantwortung Ihrer geschätzten Karte vom <tei:date when="1927-06-03">3. ds. Mts.</tei:date><tei:note xml:id="r0001-fn02" type="editorial" place="foot">This letter is not known to survive.</tei:note> teilen wir Ihnen mit, dass
        der Umbruch <tei:rs key="entity-001751" type="work">Ihres Werkes</tei:rs> ungefähr zwischen
        dem <tei:date from="1927-06-18" to="1927-06-22">18. und 22. ds. Mts.</tei:date> beendet sein
        wird.</tei:p>

      <tei:closer>
        <tei:salute rend="indent-40">Mit vorzüglicher Hochachtung</tei:salute>
        <tei:signed rend="indent-50"><tei:handShift new="#stamp"/><tei:rs key="entity-002627" type="organization">Drei Masken Verlag A.-G.</tei:rs></tei:signed>
        <tei:signed rend="indent-50">ppa. <tei:handShift new="#AD"/>
          <tei:rs key="entity-004417" type="person">Demblin</tei:rs></tei:signed>
      </tei:closer>

    </tei:div>



    <tei:div type="translation">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/>
        <tei:lb/>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine><tei:handShift new="#printed"/>DREI MASKEN VERLAG &amp; Co.</tei:addrLine>
            <tei:addrLine>MUNICH</tei:addrLine>
            <tei:addrLine>KAROLINENPLATZ 3</tei:addrLine>
          </tei:address>
          <tei:address>
            <tei:addrLine rend="indent-50"><tei:handShift new="#TPe"/>Dr. Heinrich
              Schenker</tei:addrLine>
            <tei:addrLine rend="indent-70"><tei:hi rend="underline">Vienna
              III</tei:hi></tei:addrLine>
            <tei:addrLine rend="indent-70">Keilgasse 8</tei:addrLine>
          </tei:address><tei:lb/>
          <tei:fw type="postmark">|| <tei:placeName>MUNICH</tei:placeName> 43 | <tei:note type="editorial">remainder illegible</tei:note> ||</tei:fw><tei:lb/>
        </tei:fw>
        <tei:lb/>
        <tei:lb/>
        <tei:lb/>
        <tei:milestone unit="folio" n="verso"/>
        <tei:lb/>
        <tei:address>
          <tei:addrLine><tei:handShift new="#TPe"/><tei:hi rend="italic">E</tei:hi> /
              <tei:placeName>Munich</tei:placeName>, <tei:date when="1927-06-07">June 7,
              1927</tei:date></tei:addrLine>
          <tei:addrLine><tei:hi rend="double-underline">Dr. Heinrich Schenker, Vienna III, Keilgasse
              8</tei:hi></tei:addrLine>
        </tei:address>
        <tei:lb/>
        <tei:salute>Dear Dr. <tei:rs type="person" key="entity-000632"><tei:supplied reason="identity">Schenker</tei:supplied></tei:rs>!<tei:ptr corresp="#r0001-fn01" type="footnote"/>
        </tei:salute>
      </tei:opener>

      <tei:p rend="first">We politely respond to your kind postcard of the <tei:date when="1927-06-03">3rd of the month</tei:date><tei:ptr corresp="#r0001-fn02" type="footnote"/> to inform you that the page proofs of <tei:rs key="entity-001751" type="work">your work</tei:rs> will be completed approximately between the <tei:date from="1927-06-18" to="1927-06-22">18th and the 22nd of the month</tei:date>.</tei:p>

      <tei:closer>
        <tei:salute rend="indent-40">With kind regards,</tei:salute>
        <tei:signed rend="indent-50"><tei:handShift new="#stamp"/><tei:rs key="entity-002627" type="organization">Drei Masken Verlag &amp; Co.</tei:rs></tei:signed>
        <tei:signed rend="indent-50">p.p. <tei:handShift new="#AD"/>
          <tei:rs key="entity-004417" type="person">Demblin</tei:rs></tei:signed>
      </tei:closer>

    </tei:div>
