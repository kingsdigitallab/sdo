      <dc:title>Handwritten postcard from Schenker to Moriz Violin, dated April 2, 1928</dc:title>

      <dcterms:created>1928-04-02T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2013-07-04</dcterms:dateSubmitted>
