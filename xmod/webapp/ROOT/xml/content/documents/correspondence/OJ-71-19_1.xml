          <tei:addrLine>LOMBARDBANK A. G., ZÜRICH</tei:addrLine>
          <tei:addrLine><tei:note type="editorial" place="inline">center: logo in the shape of a
              shield, with the initials "W PH V"</tei:note></tei:addrLine>
          <tei:addrLine><tei:note type="editorial" place="inline"
            >right:</tei:note>POSTSPARKASSEN-KONTO WIEN 193669</tei:addrLine>
          <tei:addrLine>SCHECK-KONTO PRAG 79,853</tei:addrLine>
          <tei:addrLine>POSTSCHECK-KONTO LEIPZIG 36,733</tei:addrLine>
          <tei:addrLine>TELEGRAMM-ADRESSE: FILARMONIA</tei:addrLine>
        </tei:address><tei:lb/><tei:lb/>
        <tei:byline><tei:handShift new="#TPwpv"/>Dr. K/L.</tei:byline><tei:lb/>
        <tei:address>
          <tei:addrLine><tei:handShift new="printed"/>WIEN, <tei:handShift new="TPwpv"/>am 30.
