      <dc:title>Handwritten picture postcard from Heinrich to Wilhelm Schenker, dated September 11,
        1929</dc:title>

      <dcterms:created>1929-09-11T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2024-10-07</dcterms:dateSubmitted>
      <dc:description>Heinrich reports on his good health following his holiday in the
        Tyrol.</dc:description>
      <dc:subject/>

      <marcrel:correspondent key="entity-000632">HSchenker</marcrel:correspondent>
      <marcrel:recipient key="entity-000775">Wilhelm Schenker</marcrel:recipient>

    </sdo:itemDesc>


