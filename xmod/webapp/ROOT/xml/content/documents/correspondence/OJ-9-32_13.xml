  <tei:div type="transcription">

   <tei:div type="part_1">
    <tei:opener>
     <tei:address>
      <tei:addrLine><tei:handShift new="#printed"/>
       <tei:hi rend="bold">J. G. COTTA’SCHE <tei:note type="editorial" place="inline"><tei:hi
          rend="italic">device</tei:hi></tei:note> BUCHHANDLUNG</tei:hi></tei:addrLine>
      <tei:addrLine><tei:hi rend="bold">NACHFOLGER</tei:hi></tei:addrLine>
     </tei:address><tei:lb/>
     <tei:dateline rend="indent-50"><tei:handShift new="#printed"/>STUTTGART, den <tei:handShift
       new="#JGCsten"/><tei:date when="1910-09-06">6. Septembr. <tei:handShift new="#printed"
        />19<tei:handShift new="#JGCsten"/>10</tei:date></tei:dateline><tei:lb/>
     <tei:address>
      <tei:addrLine>Herrn <tei:hi rend="lateinschr">D<tei:hi rend="supralinear">r.</tei:hi> Heinrich
        Schenker</tei:hi></tei:addrLine>
      <tei:addrLine rend="indent-60"><tei:hi rend="lateinschr underline">Wien
       III</tei:hi></tei:addrLine>
     </tei:address>
     <tei:salute rend="indent-20">Hochgeehrter Herr <tei:rs type="person" key="entity-000632"
       >Doktor</tei:rs>!</tei:salute>
    </tei:opener>

    <tei:p rend="first"><tei:handShift new="#printed"/>Wir beehren uns, Ihnen umstehend
     Absatzbericht für das Jahr 19<tei:handShift new="#JGCsten"/>09 <tei:handShift new="#printed"
     />über <tei:handShift new="#JGCsten"/>die </tei:p>

    <tei:p rend="first"><tei:handShift new="#JGCsten"/><tei:rs type="work" key="entity-001724"
       ><tei:title>Neuen musikalischen Theorien u. Phantasien</tei:title> Band I</tei:rs></tei:p>

    <tei:p rend="first"><tei:handShift new="#printed"/>zu übersenden und lassen das Ihnen zukommende
     Honorar für die abgesetzten <tei:handShift new="#JGCsten"/>21 <tei:handShift new="#printed"
     />Exemplare à M. <tei:hi rend="underline">= M. <tei:handShift new="#JGCsten"
       />119.52<tei:handShift new="#printed"/>Pf.</tei:hi> gleichzeitig per Postanweisung
     folgen.</tei:p>

    <tei:closer>
     <tei:salute rend="indent-30">Mit vorzüglicher Hochachtung</tei:salute>
     <tei:signed><tei:handShift new="#stamp"/><tei:rs type="organization" key="entity-002405">J. G.
       Cotta’sche Buchhdlg. Nachf.</tei:rs></tei:signed>
     <tei:signed><tei:handShift new="#HK"/><tei:rs type="person" key="entity-006241">H
      Kurz</tei:rs></tei:signed>
    </tei:closer>
   </tei:div>

   <tei:div type="part_2">
    <tei:opener>
     <tei:note type="editorial" place="inline">printed form with handwritten entries: Roman =
      printed; <tei:hi rend="italic">Italic</tei:hi> = stenographically handwritten</tei:note><tei:lb/>
     <tei:fw type="header" rend="center"><tei:hi rend="bold">Absatz-Bericht für das Jahr 19<tei:hi
        rend="italic">09</tei:hi></tei:hi><tei:note xml:id="r0001-fn01" type="editorial"
       place="foot">Receipt of this report is not recorded in Schenker's diary.</tei:note></tei:fw>
     <tei:fw type="header" rend="center">über</tei:fw>
     <tei:fw type="header" rend="center"><tei:hi rend="italic"><tei:rs type="work"
        key="entity-001724"><tei:title>Neue musik. Theorien u. Phantasien</tei:title> Bd
       I</tei:rs></tei:hi></tei:fw>
     <tei:fw type="header" rend="center"><tei:hi rend="italic"><tei:rs type="work"
        key="entity-001724"
     ><tei:title>Harmonielehre</tei:title></tei:rs></tei:hi></tei:fw><tei:lb/><tei:lb/>
    </tei:opener>

    <tei:p>
     <tei:table rows="3" cols="3">
      <tei:row>
       <tei:cell>Vorrat 1. Januar 19<tei:hi rend="italic">09</tei:hi></tei:cell>
       <tei:cell>. . . . </tei:cell>
       <tei:cell><tei:hi rend="italic">903</tei:hi> Exemplare</tei:cell>
      </tei:row>
      <tei:row>
       <tei:cell>Druck im Jahre 19</tei:cell>
       <tei:cell>. . . . </tei:cell>
       <tei:cell><tei:hi rend="underline"><tei:hi rend="italic">—</tei:hi>
        Exemplare</tei:hi></tei:cell>
      </tei:row>
      <tei:row>
       <tei:cell/>
       <tei:cell>zusammen</tei:cell>
       <tei:cell><tei:hi rend="italic">903</tei:hi> Exemplare</tei:cell>
      </tei:row>
     </tei:table>
    </tei:p>

    <tei:p><tei:handShift new="#printed"/>Hievon ab:</tei:p>

    <tei:p>
     <tei:table rows="3" cols="3">
      <tei:row>
       <tei:cell>Absatz im Jahre 19<tei:hi rend="italic">09</tei:hi></tei:cell>
       <tei:cell><tei:hi rend="italic">21</tei:hi> Expl.</tei:cell>
       <tei:cell/>
      </tei:row>
      <tei:row>
       <tei:cell>Frei- u. Recensions-Expl.</tei:cell>
       <tei:cell><tei:hi rend="underline"><tei:hi rend="italic">—</tei:hi> Expl.</tei:hi></tei:cell>
       <tei:cell><tei:hi rend="underline"><tei:hi rend="italic">21</tei:hi>
        Exemplare</tei:hi></tei:cell>
      </tei:row>
      <tei:row>
       <tei:cell>bleibt Vorrat 31. Dezember 19<tei:hi rend="italic">09</tei:hi></tei:cell>
       <tei:cell/>
       <tei:cell><tei:hi rend="italic">882</tei:hi> Exemplare</tei:cell>
      </tei:row>
     </tei:table>
    </tei:p>

    <tei:p>
     <tei:table rows="3" cols="2">
      <tei:row>
       <tei:cell><tei:hi rend="italic">Absatz 21 Exemplare =</tei:hi></tei:cell>
       <tei:cell><tei:hi rend="italic">M. 159.35</tei:hi></tei:cell>
      </tei:row>
      <tei:row>
       <tei:cell><tei:hi rend="italic">hieraus dem Herrn Verfasser lt Vertrag</tei:hi></tei:cell>
       <tei:cell/>
      </tei:row>
      <tei:row>
       <tei:cell><tei:hi rend="italic">¾<tei:hi rend="supralinear">tel</tei:hi></tei:hi><tei:note
         xml:id="r0001-fn02" type="editorial" place="foot">§4 of Schenker's contract (<tei:ref
          type="correspondence" cRef="CA_205">CA [205]</tei:ref>) reads: "The author is entitled to
         three-quarters and the publishing house to one quarter of the net receipts from sale of the
         book."</tei:note></tei:cell>
       <tei:cell><tei:hi rend="underline"><tei:hi rend="italic">M 119.52</tei:hi></tei:hi><tei:note
         xml:id="r0001-fn03" type="editorial" place="foot">To the right of this figure is an
         annotation in an unknown hand, which might be an initialling of
        "ABO."</tei:note></tei:cell>
      </tei:row>
     </tei:table>
    </tei:p>
   </tei:div>

  </tei:div>


  <tei:div type="translation">

   <tei:div type="part_1">
    <tei:opener>
     <tei:address>
      <tei:addrLine><tei:handShift new="#printed"/>
       <tei:hi rend="bold">J. G. COTTA <tei:note type="editorial" place="inline"><tei:hi
          rend="italic">device</tei:hi></tei:note> BOOK DEALERSHIP</tei:hi></tei:addrLine>
      <tei:addrLine><tei:hi rend="bold">HEIRS</tei:hi></tei:addrLine>
     </tei:address><tei:lb/>
     <tei:dateline rend="indent-50"><tei:handShift new="#printed"/>STUTTGART, <tei:handShift
       new="#JGCsten"/><tei:date when="1910-09-06">September 6, <tei:handShift new="#printed"
        />19<tei:handShift new="#JGCsten"/>10</tei:date></tei:dateline><tei:lb/>
     <tei:address>
      <tei:addrLine>Dr. Heinrich Schenker</tei:addrLine>
      <tei:addrLine rend="indent-60">Vienna III</tei:addrLine>
     </tei:address>
     <tei:salute rend="indent-20">Highly revered Dr. <tei:supplied reason="identity"><tei:rs
        type="person" key="entity-000632">Schenker</tei:rs></tei:supplied>,</tei:salute>
    </tei:opener>

    <tei:p rend="first"><tei:handShift new="#printed"/>Overleaf we have the honor of forwarding to
     you the sales figure for the year 19<tei:handShift new="#JGCsten"/>09 <tei:handShift
      new="#printed"/>for</tei:p>

    <tei:p rend="first"><tei:handShift new="#JGCsten"/><tei:rs type="work" key="entity-001724"
       ><tei:title level="m">New Musical Theories and Fantasies</tei:title>, volume
     I</tei:rs></tei:p>

    <tei:p rend="first"><tei:handShift new="#printed"/>and are simultaneously sending you by postal
     money order the honorarium due to you for the <tei:handShift new="#JGCsten"/>21 <tei:handShift
      new="#printed"/>copies sold <tei:hi rend="underline">= M. <tei:handShift new="#JGCsten"
       />119.52<tei:handShift new="#printed"/>Pf.</tei:hi></tei:p>

    <tei:closer>
     <tei:salute rend="indent-30">With kind regards</tei:salute>
     <tei:signed><tei:handShift new="#stamp"/><tei:rs type="organization" key="entity-002405">Heirs
       to the J. G. Cotta Book Dealership</tei:rs></tei:signed>
     <tei:signed><tei:handShift new="#HK"/><tei:rs type="person" key="entity-006241">H.
       Kurz</tei:rs></tei:signed>
    </tei:closer>
   </tei:div>

   <tei:div type="part_2">
    <tei:opener>
     <tei:note type="editorial" place="inline">printed form with handwritten entries: Roman =
      printed; <tei:hi rend="italic">Italic</tei:hi> = stenographically handwritten</tei:note><tei:lb/>
     <tei:fw type="header" rend="center"><tei:hi rend="bold">Sales Report for the Year 19<tei:hi
        rend="italic">09</tei:hi></tei:hi><tei:ptr corresp="#r0001-fn01" type="footnote"/></tei:fw>
     <tei:fw type="header" rend="center">of</tei:fw>
     <tei:fw type="header" rend="center"><tei:hi rend="italic"><tei:rs type="work"
        key="entity-001724"><tei:title>New Musical Theories and Fantasies</tei:title> vol.
        I</tei:rs></tei:hi></tei:fw>
     <tei:fw type="header" rend="center"><tei:hi rend="italic"><tei:rs type="work"
        key="entity-001724"><tei:title>Theory of
     Harmony</tei:title></tei:rs></tei:hi></tei:fw><tei:lb/><tei:lb/>
    </tei:opener>

    <tei:p>
     <tei:table rows="3" cols="3">
      <tei:row>
       <tei:cell>Stocks as of January 1, 19<tei:hi rend="italic">09</tei:hi></tei:cell>
       <tei:cell>. . . . </tei:cell>
       <tei:cell><tei:hi rend="italic">903</tei:hi> copies</tei:cell>
      </tei:row>
      <tei:row>
       <tei:cell>Print in year 19</tei:cell>
       <tei:cell>. . . . </tei:cell>
       <tei:cell><tei:hi rend="underline"><tei:hi rend="italic">—</tei:hi>
        copies</tei:hi></tei:cell>
      </tei:row>
      <tei:row>
       <tei:cell/>
       <tei:cell>total</tei:cell>
       <tei:cell><tei:hi rend="italic">903</tei:hi> copies</tei:cell>
      </tei:row>
     </tei:table>
    </tei:p>

    <tei:p><tei:handShift new="#printed"/>Less:</tei:p>

    <tei:p>
     <tei:table rows="3" cols="3">
      <tei:row>
       <tei:cell>Sales in Year 19<tei:hi rend="italic">09</tei:hi></tei:cell>
       <tei:cell><tei:hi rend="italic">21</tei:hi> copies</tei:cell>
       <tei:cell/>
      </tei:row>
      <tei:row>
       <tei:cell>Complim. &amp; review copies</tei:cell>
       <tei:cell><tei:hi rend="underline"><tei:hi rend="italic">—</tei:hi>
        copies</tei:hi></tei:cell>
       <tei:cell><tei:hi rend="underline"><tei:hi rend="italic">21</tei:hi>
        copies</tei:hi></tei:cell>
      </tei:row>
      <tei:row>
       <tei:cell>remaining stock at December 31, 19<tei:hi rend="italic">09</tei:hi></tei:cell>
       <tei:cell/>
       <tei:cell><tei:hi rend="italic">882</tei:hi> copies</tei:cell>
      </tei:row>
     </tei:table>
    </tei:p>

    <tei:p>
     <tei:table rows="3" cols="2">
      <tei:row>
       <tei:cell><tei:hi rend="italic">Sales of 21 copies =</tei:hi></tei:cell>
       <tei:cell><tei:hi rend="italic">M. 159.35</tei:hi></tei:cell>
      </tei:row>
      <tei:row>
       <tei:cell><tei:hi rend="italic">from this, to the Author as per contract</tei:hi></tei:cell>
       <tei:cell/>
      </tei:row>
      <tei:row>
       <tei:cell><tei:hi rend="italic">three-quarters</tei:hi><tei:ptr corresp="#r0001-fn02"
         type="footnote"/></tei:cell>
       <tei:cell><tei:hi rend="underline"><tei:hi rend="italic">M 119.52</tei:hi></tei:hi><tei:ptr
         corresp="#r0001-fn03" type="footnote"/></tei:cell>
      </tei:row>
     </tei:table>
    </tei:p>
   </tei:div>

