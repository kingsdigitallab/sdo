      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002744">letter</tei:rs>

      <dc:title>Handwritten letter from Max Meinert to Schenker, dated December 16, 1913</dc:title>
      <dcterms:created>1913-12-16T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2014-11-29</dcterms:dateSubmitted>
      <dc:description>Meinert has been unable to obtain further information.</dc:description>
      <dc:subject/>



      <marcrel:correspondent key="entity-000586">Max Meinert</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>
    </sdo:itemDesc>


    <tei:div type="transcription">
      <tei:opener>
        <tei:address>
          <tei:addrLine rend="indent-50"><tei:placeName><tei:handShift new="#MM"
              />Berlin</tei:placeName>, <tei:date when="1913-12-16">16/12.
            13</tei:date></tei:addrLine>
          <tei:addrLine rend="indent-50">S. W. Zimmerstr. 12.</tei:addrLine>
        </tei:address><tei:lb/>
        <tei:salute rend="indent-20">Sehr geehrter Herr <tei:rs key="entity-000632" type="person"
            >Professor</tei:rs>!<tei:note xml:id="r0001-fn01" type="editorial" place="foot">Receipt
            of this letter appears not to be recorded in Schenker’s diary.</tei:note></tei:salute>
      </tei:opener>

      <tei:p rend="first">So sehr gern Ihnen meine dienste für Ihre gute Sache<tei:note
          xml:id="r0001-fn02" type="editorial" place="foot">See OC B/280.</tei:note> geleistet, muß
        Ihnen heute zu meinem Bedauern melden, daß meine Bemühungen leider erfolglos waren.</tei:p>

      <tei:closer>
        <tei:salute rend="indent-40">Mit vorzüglichster Hochachtung</tei:salute>
        <tei:salute rend="indent-60">Ihr ergebenste</tei:salute>
        <tei:signed rend="indent-60"><tei:rs key="entity-000586" type="person">Max
          Meinert</tei:rs></tei:signed>
      </tei:closer>

    </tei:div>


    <tei:div type="translation">
      <tei:opener>
        <tei:address>
          <tei:addrLine rend="indent-50"><tei:placeName><tei:handShift new="#MM"
              />Berlin</tei:placeName>, <tei:date when="1913-12-16">December 16,
            1913</tei:date></tei:addrLine>
          <tei:addrLine rend="indent-50">S. W., Zimmerstraße 12</tei:addrLine>
        </tei:address><tei:lb/>
        <tei:salute rend="indent-20">Dear <tei:rs key="entity-000632" type="person"
            >Professor</tei:rs>,<tei:ptr corresp="#r0001-fn01" type="footnote"/></tei:salute>
      </tei:opener>

      <tei:p rend="first">Despite my very willing offering of my services for your good
          cause,<tei:ptr corresp="#r0001-fn02" type="footnote"/> I must regrettably inform you today
        that my efforts were unfortunately fruitless.</tei:p>

      <tei:closer>
        <tei:salute rend="indent-40">With very best regards,</tei:salute>
        <tei:salute rend="indent-60">Yours most truly,</tei:salute>
        <tei:signed rend="indent-60"><tei:rs key="entity-000586" type="person">Max
          Meinert</tei:rs></tei:signed>
      </tei:closer>

    </tei:div>
