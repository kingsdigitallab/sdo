  <sdo:record ID="r0001">
    <sdo:itemDesc>
      <tei:rs role="correspondence" type="correspondence" key="entity-002724">Cotta ~
        HSchenker</tei:rs>
      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002745">Postcard</tei:rs>


      <dc:title>Handwritten postcard from Schenker to Cotta, dated October 25, 1910</dc:title>
      <dcterms:created>1910-10-25T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2019-11-10</dcterms:dateSubmitted>
      <dc:description>Schenker asks for a copy of his Harmonielehre to be sent to Prof. Robert Fuchs
        at the Vienna Academy.</dc:description>
      <dc:subject>Band; volume; Rechnung; account; Adresse; address</dc:subject>

      <marcrel:correspondent key="entity-000632">HSchenker</marcrel:correspondent>
      <marcrel:recipient key="entity-002405">Cotta</marcrel:recipient>
    </sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/><tei:lb/>
        <tei:note type="editorial" place="inline">All in a decorated ruleframe</tei:note><tei:lb/>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine><tei:supplied reason="clarity">Absender:</tei:supplied>
              <tei:handShift new="#HS"/><tei:hi rend="lateinschr">H Schenker</tei:hi>
            </tei:addrLine>
            <tei:addrLine>III. <tei:hi rend="lateinschr">Reisnerstr.</tei:hi> 38.</tei:addrLine>
          </tei:address>
          <tei:address>
            <tei:addrLine>An die <tei:hi rend="lateinschr">J. G. Cotta</tei:hi>'sche
              Bchdg-Nfg</tei:addrLine>
            <tei:addrLine><tei:hi rend="lateinschr">Stuttgart</tei:hi>
            </tei:addrLine>
            <tei:addrLine><tei:hi rend="lateinschr">Deutschland</tei:hi></tei:addrLine>
            <tei:lb/>
          </tei:address>
          <tei:fw type="postmark">|| 3/3 WIEN 49 | 25.X.10‒3 | * 3a * ||</tei:fw><tei:lb/><tei:lb/>
          <tei:milestone unit="folio" n="verso"/>
        </tei:fw>
        <tei:salute><tei:handShift new="#HS"/>Sehr geehrter <tei:rs key="entity-002405"
            type="organization">Herr</tei:rs>!</tei:salute>
      </tei:opener>

      <tei:p>Wollen Sie die Freundlichkeit haben, den <tei:hi rend="underline">ersten</tei:hi>
        <tei:hi rend="double-underline">Band</tei:hi> der „<tei:rs type="work" key="entity-001723"
            ><tei:title>Th. u. Ph.</tei:title></tei:rs>“ (<tei:rs type="work" key="entity-001724"
            ><tei:title>Harmonielehre</tei:title></tei:rs>) auf meine Rechnung an H. <tei:del
          rend="overstrike">Prof.</tei:del>
        <tei:rs type="person" key="entity-000265"><tei:hi rend="underline">Robert
          Fuchs</tei:hi></tei:rs>, K.K. Professor für Komposition an der <tei:rs type="organization"
          key="entity-002591">Akademie für Musik</tei:rs> in Wien ‒ Adresse: <tei:hi
          rend="underline">K.K. Akademie für Musik</tei:hi> ‒ gelangen zu lassen.</tei:p>

      <tei:closer>
        <tei:salute rend="indent-10">Mit bestem Dank</tei:salute>
        <tei:salute rend="indent-10">u. ausgez. Hochachtung</tei:salute>
        <tei:salute rend="indent-60">I<tei:supplied reason="compression">h</tei:supplied>r
          ergebener</tei:salute>
        <tei:signed rend="indent-60">
          <tei:rs key="entity-000632" type="person">
            <tei:hi rend="lateinschr">H Schenker</tei:hi></tei:rs>
        </tei:signed><tei:lb/>
        <tei:dateline><tei:date when="1910-10-25">25. Okt. 1910</tei:date></tei:dateline>
      </tei:closer>

      <tei:postscript>
        <tei:p><tei:note type="editorial" place="inline">annotations in left and lower
            margins:</tei:note>
          <tei:handShift new="#CA-unk"/><tei:hi rend="double-underline">I</tei:hi>. 27./<tei:hi
            rend="underline">X. 1910</tei:hi> // ? los <tei:note type="editorial" place="inline">pen
            trials?</tei:note></tei:p>
      </tei:postscript>

    </tei:div>


    <tei:div type="translation">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/><tei:lb/>
        <tei:note type="editorial" place="inline">All in a decorated ruleframe</tei:note><tei:lb/>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine><tei:supplied reason="clarity">From:</tei:supplied>
              <tei:handShift new="#HS"/>H. Schenker </tei:addrLine>
            <tei:addrLine><tei:supplied reason="location">Vienna</tei:supplied> III,Reisnerstraße
              38</tei:addrLine>
          </tei:address>
          <tei:address>
            <tei:addrLine>To the Heirs to the J. G. Cotta Book Dealership</tei:addrLine>
            <tei:addrLine>Stuttgart</tei:addrLine>
            <tei:addrLine>Germany</tei:addrLine>
            <tei:lb/>
          </tei:address>
          <tei:fw type="postmark">|| 3/3 VIENNA 49 | 25.X.10‒3 | * 3a * ||</tei:fw><tei:lb/><tei:lb/>
          <tei:milestone unit="folio" n="verso"/>
        </tei:fw>
        <tei:salute><tei:handShift new="#HS"/>Dear <tei:rs key="entity-002405" type="organization"
            >Sir</tei:rs>,</tei:salute>
      </tei:opener>

      <tei:p>Please will you be so kind as to have the <tei:hi rend="underline">first</tei:hi>
        <tei:hi rend="double-underline">volume</tei:hi> of my <tei:rs type="work"
          key="entity-001723"><tei:title level="m">Theories and Fantasies</tei:title></tei:rs>
          (<tei:rs type="work" key="entity-001724"><tei:title level="m">Theory of
            Harmony</tei:title></tei:rs>) sent to <tei:del rend="overstrike">Prof.</tei:del>
        <tei:rs type="person" key="entity-000265"><tei:hi rend="underline">Robert
          Fuchs</tei:hi></tei:rs>, Imperial-Royal Professor of Composition at the <tei:rs
          type="organization" key="entity-002591">Academy for Music</tei:rs> in Vienna ‒ address:
          <tei:hi rend="underline">Imperial-Royal Academy for Music</tei:hi>, charged to my
        account.</tei:p>

      <tei:closer>
        <tei:salute rend="indent-10">With grateful thanks</tei:salute>
        <tei:salute rend="indent-10">and kind regards,</tei:salute>
        <tei:salute rend="indent-60">Your devoted</tei:salute>
        <tei:signed rend="indent-60">
          <tei:rs key="entity-000632" type="person">H. Schenker</tei:rs>
        </tei:signed><tei:lb/>
        <tei:dateline><tei:date when="1910-10-25">October 25, 1910</tei:date></tei:dateline>
      </tei:closer>

      <tei:postscript>
        <tei:p><tei:note type="editorial" place="inline">annotations in left and lower
            margins:</tei:note>
          <tei:handShift new="#CA-unk"/><tei:hi rend="double-underline">I</tei:hi>. <tei:hi
            rend="underline">Oct 27, 1910</tei:hi> // ? los <tei:note type="editorial"
            place="inline">pen trials?</tei:note></tei:p>
      </tei:postscript>

