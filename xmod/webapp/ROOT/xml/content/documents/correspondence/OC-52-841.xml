        <tei:salute>Dear <tei:rs type="person" key="entity-000632">Professor</tei:rs>!<tei:ptr corresp="#r0001-fn01" type="footnote"/></tei:salute>
      </tei:opener>

      <tei:p rend="first">With grateful thanks, we confirm receipt of the second proof of the
          <tei:rs key="entity-001226" type="composition"><tei:title>Appassionata</tei:title></tei:rs>.- The small error will be made good.</tei:p>


      <tei:closer>
        <tei:salute rend="indent-50">We remain</tei:salute>
        <tei:salute rend="indent-50">with kind regards,</tei:salute>
        <tei:signed rend="indent-50"><tei:handShift new="#stamp"/><tei:rs key="entity-002408" type="organization">Universal Edition &amp; Co.</tei:rs></tei:signed>
