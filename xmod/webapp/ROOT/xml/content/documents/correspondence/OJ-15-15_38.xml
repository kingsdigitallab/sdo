      <dc:title>Handwritten postcard from Weisse to Schenker, dated March 8, 1929</dc:title>

      <dcterms:created>1929-03-08T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2013-09-12</dcterms:dateSubmitted>
      <dc:description>Weisse confirms an invitation to the Schenkers for the following
        Sunday.</dc:description>
      <dc:subject/>

    <marcrel:correspondent key="entity-000951">Weisse</marcrel:correspondent><marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient><marcrel:recipient key="entity-000771">JSchenker</marcrel:recipient></sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/><tei:lb/>
        <tei:fw type="header" rend="inline"><tei:note type="editorial" place="inline">printed:</tei:note>
          <tei:handShift new="#printed"/>Post<tei:supplied reason="covered">karte</tei:supplied></tei:fw>
        <tei:lb/><tei:note type="editorial" place="inline">top-left, picture captioned: <tei:rs key="entity-004913" type="place">Heiligenblut</tei:rs>, <tei:rs key="entity-002344" type="place">Kärnten</tei:rs></tei:note><tei:lb/>
