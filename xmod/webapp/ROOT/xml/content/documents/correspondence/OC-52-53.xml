      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-006197">Memorandum</tei:rs>



      <dc:title>Typewritten memorandum from Barbara Rothe (UE) to Schenker, dated July 4,
        1910</dc:title>

      <dcterms:created>1910-07-04T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2020-07-13</dcterms:dateSubmitted>
      <dc:description>Miss Rothe encloses copies of two requested contracts.</dc:description>
      <dc:subject>Kopien; copies</dc:subject>

      <marcrel:correspondent key="entity-002408">Universal Edition</marcrel:correspondent>
      <marcrel:correspondent key="entity-000741">Barbara Rothe</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>
    </sdo:itemDesc>

    <tei:div type="transcription">

      <tei:opener>
        <tei:note type="editorial" place="inline">printed sideways in left margin:</tei:note>
        <tei:address>
          <tei:addrLine><tei:handShift new="#printed"/>„Universal-Edition“ A.-G.</tei:addrLine>
          <tei:addrLine><tei:supplied reason="identity">Wien</tei:supplied> I, Wipplingerstrasse
            32.</tei:addrLine>
          <tei:addrLine>(Jos. Aibl Verlag, G.m.b.H., Leipzig)</tei:addrLine>
          <tei:addrLine><tei:note type="editorial" place="inline"><tei:hi rend="italic"
                >etc.</tei:hi></tei:note></tei:addrLine>
          <tei:lb/>
        </tei:address>
        <tei:note type="editorial" place="inline">upright:</tei:note>
        <tei:dateline rend="indent-60">
          <tei:placeName><tei:handShift new="#printed"/>Wien am</tei:placeName>
          <tei:handShift new="#TPue"/><tei:date when="1910-07-04">4. Juli <tei:handShift
              new="#printed"/>19<tei:handShift new="#unk"/><tei:choice>
              <tei:sic>11</tei:sic>
              <tei:corr>10</tei:corr>
            </tei:choice></tei:date></tei:dateline><tei:lb/>
        <tei:byline><tei:handShift new="#TPue"/>S</tei:byline>
        <tei:address>
          <tei:addrLine>Wohlgeboren Herrn Dr. <tei:persName>Heinrich <tei:hi rend="sperr"
                >SCHENKER</tei:hi></tei:persName>,</tei:addrLine>
          <tei:addrLine rend="indent-70">
            <tei:hi rend="sperr underline">WIEN</tei:hi>.</tei:addrLine>
        </tei:address>
        <tei:salute><tei:handShift new="#unk"/>Sehr geehrter Herr <tei:rs key="entity-000632"
            type="person">Professor</tei:rs>!</tei:salute>
      </tei:opener>

      <tei:p rend="first">Wir gestatten uns Ihnen beiliegend die gewünschten 2 Kopien<tei:note
          xml:id="r0001-fn01" type="editorial" place="foot">i.e. of the contracts for <tei:rs
            type="work" key="entity-001729">Niloff <tei:title level="m"
              >Instrumentations-Tabelle</tei:title></tei:rs> and the <tei:rs type="work"
            key="entity-001730"><tei:title level="m">Chromatic Fantasy &amp;
            Fugue</tei:title></tei:rs>, as promised in Hertzka's letter of <tei:ref
            type="correspondence" cRef="OC-52-52">OC 52/52</tei:ref>, June 20, 1910.</tei:note> zu
        überreichen und empfehlen uns Ihnen</tei:p>

      <tei:closer>
        <tei:salute rend="indent-60">hochachtungsvoll</tei:salute>
        <tei:signed rend="indent-50"><tei:handShift new="#stamp"/><tei:rs type="organization"
            key="entity-002408">Universal-Edition Actiengesellschaft</tei:rs>.</tei:signed>
        <tei:signed rend="indent-80"><tei:handShift new="#BR"/><tei:rs key="entity-000741"
            type="person">Rothe</tei:rs></tei:signed>
      </tei:closer>

    </tei:div>

    <tei:div type="translation">

      <tei:opener>
        <tei:note type="editorial" place="inline">printed sideways in left margin:</tei:note>
        <tei:address>
          <tei:addrLine><tei:handShift new="#printed"/>Universal Edition &amp; Co.</tei:addrLine>
          <tei:addrLine><tei:supplied reason="identity">Vienna</tei:supplied> I, Wipplingerstrasse
            32</tei:addrLine>
          <tei:addrLine>(Jos. Aibl Publisher &amp; Co., Leipzig)</tei:addrLine>
          <tei:addrLine><tei:note type="editorial" place="inline"><tei:hi rend="italic"
                >etc.</tei:hi></tei:note></tei:addrLine>
          <tei:lb/>
        </tei:address>
        <tei:note type="editorial" place="inline">upright:</tei:note>
        <tei:dateline rend="indent-60">
          <tei:placeName><tei:handShift new="#printed"/>Vienna,</tei:placeName>
          <tei:handShift new="#TPue"/><tei:date when="1910-07-04">July 4, <tei:handShift
              new="#printed"/>19<tei:handShift new="#unk"/><tei:choice>
              <tei:sic>11</tei:sic>
              <tei:corr>10</tei:corr>
            </tei:choice></tei:date></tei:dateline><tei:lb/>
        <tei:byline><tei:handShift new="#TPue"/>S</tei:byline>
        <tei:address>
          <tei:addrLine>Dr. <tei:persName>Heinrich <tei:hi rend="sperr"
              >SCHENKER</tei:hi></tei:persName>, Esq.</tei:addrLine>
          <tei:addrLine rend="indent-70">
            <tei:hi rend="sperr underline">VIENNA</tei:hi></tei:addrLine>
        </tei:address>
        <tei:salute><tei:handShift new="#unk"/>Dear <tei:rs key="entity-000632" type="person"
            >Professor</tei:rs>,</tei:salute>
      </tei:opener>

      <tei:p rend="first"><tei:handShift new="#TPue"/>We take the liberty of sending you, enclosed,
        the two copies<tei:ptr corresp="#r0001-fn01" type="footnote"/> you requested, and
        remain</tei:p>

      <tei:closer>
        <tei:salute rend="indent-60">respectfully</tei:salute>
        <tei:signed rend="indent-50"><tei:handShift new="#stamp"/><tei:rs type="organization"
            key="entity-002408">Universal Edition &amp; Co.</tei:rs></tei:signed>
        <tei:signed rend="indent-80"><tei:handShift new="#BR"/><tei:rs key="entity-000741"
            type="person">Rothe</tei:rs></tei:signed>
      </tei:closer>


    </tei:div>
