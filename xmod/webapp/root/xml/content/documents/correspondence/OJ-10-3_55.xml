        <tei:milestone unit="folio" n="verso"/>
        <tei:dateline rend="indent-40"><tei:handShift new="TPhd"/><tei:rs key="entity-002484"
            type="place">Vienna</tei:rs>, <tei:date when="1927-01-18">January 18,
          1927</tei:date></tei:dateline>
        <tei:salute>Much revered <tei:rs type="person" key="entity-000632"
            >Professor</tei:rs>,<tei:ptr corresp="#r0001-fn01" type="footnote"/></tei:salute>
      </tei:opener>

      <tei:p rend="first">My <tei:rs type="person" key="entity-000164">husband</tei:rs> asks you to
        use the “curiosity”<tei:ptr corresp="#r0001-fn02" type="footnote"/> only <tei:hi
          rend="underline">without</tei:hi> mentioning his name.</tei:p>

      <tei:p rend="first">With many cordial greetings to you and your dear <tei:rs type="person"
          key="entity-000771">wife</tei:rs>,</tei:p>

      <tei:closer>
        <tei:salute rend="indent-60">Your devoted</tei:salute>
        <tei:note type="editorial" place="inline">unsigned</tei:note>
      </tei:closer>

    </tei:div>

