          </tei:address>
          <tei:address>
            <tei:addrLine><tei:supplied reason="clarity">To:</tei:supplied>
              <tei:handShift new="#TPhd"/>Professor Heinrich Schenker</tei:addrLine>
            <tei:addrLine rend="indent-10">Keilgasse 8</tei:addrLine>
            <tei:addrLine rend="indent-20"><tei:hi rend="underline"><tei:hi rend="sperr"
                  >Vienna</tei:hi> III</tei:hi></tei:addrLine>
          </tei:address>
