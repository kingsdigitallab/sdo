      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002745">Postcard</tei:rs>

      <dc:title>Typewritten postcard from Otto Erich and Hanna Deutsch to Schenker, dated January
        18, 1927</dc:title>

      <dcterms:created>1927-01-18T14:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2023-01-31</dcterms:dateSubmitted>
      <dc:description>Deutsch asks Schenker not to mention his name in connection with the
        “curiosity” about Schubert mentioned in his postcard of January 15.</dc:description>
      <dc:subject/>

      <marcrel:correspondent key="entity-000164">DeutschOE</marcrel:correspondent>
      <marcrel:correspondent key="entity-000163">DeutschH</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>

    </sdo:itemDesc>

