            <tei:addrLine>Wien II. Böcklinstr. 26.</tei:addrLine>
          </tei:address>
          <tei:address>
            <tei:addrLine><tei:supplied reason="clarity">An:</tei:supplied>
              <tei:handShift new="#TPhd"/>Herrn Professor Dr. Heinrich Schenker</tei:addrLine>
            <tei:addrLine rend="indent-10">Keilgasse 8</tei:addrLine>
            <tei:addrLine rend="indent-20"><tei:hi rend="underline"><tei:hi rend="sperr"
                  >Wien</tei:hi> III.</tei:hi></tei:addrLine>
