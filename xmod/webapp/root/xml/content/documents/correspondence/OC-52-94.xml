      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002745">postcard</tei:rs>



      <dc:title>Handwritten and typewritten postcard from UE to Schenker, dated July 23,
        1912</dc:title>

      <dcterms:created>1912-07-23T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2023-02-13</dcterms:dateSubmitted>
      <dc:description>Hertzka is out of town.</dc:description>
      <dc:subject/>

      <marcrel:correspondent key="entity-002408">Universal Edition</marcrel:correspondent>
      <marcrel:correspondent key="entity-000356">Emil Hertzka</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>
    </sdo:itemDesc>

    <tei:div type="transcription">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/><tei:lb/>
        <tei:note type="editorial" place="inline">printed address in single frame:</tei:note>
        <tei:address>
          <tei:addrLine><tei:handShift new="#printed"/>UNIVERSAL EDITION A.-G.</tei:addrLine>
          <tei:addrLine>WIEN, I. REICHSRATSSTRASSE 9.</tei:addrLine>
        </tei:address>
        <tei:address>
          <tei:addrLine><tei:handShift new="#unkUE"/><tei:hi rend="lateinschr">Wohlgeboren Herrn
              Professor Heinr. Schenker</tei:hi></tei:addrLine>
          <tei:addrLine rend="indent-50"><tei:hi rend="lateinschr"
            >Paneveggio</tei:hi></tei:addrLine>
          <tei:addrLine rend="indent-50"><tei:hi rend="lateinschr">Südtirol</tei:hi></tei:addrLine>
        </tei:address>
        <tei:fw type="postmark">|| 3/3 WIEN <tei:gap reason="illegible"/> | 23.VII.12 | *
            <tei:unclear>3a</tei:unclear> * ||</tei:fw><tei:lb/><tei:lb/>
        <tei:milestone unit="folio" n="verso"/>
        <tei:salute><tei:handShift new="#TPue"/>Sehr geehrter <tei:rs type="person"
            key="entity-000632">Herr</tei:rs>!</tei:salute>
      </tei:opener>

      <tei:p>Nachdem unser Herr <tei:rs type="person" key="entity-000356">Direktor Hertzka</tei:rs>
        gegenwärtig verreist ist, bitten wir Sie, sich mit der Erledigung Ihres Werten<tei:note
          xml:id="r0001-fn01" type="editorial" place="foot">= <tei:ref type="correspondence"
            cRef="WSLB-128">WSLB 128</tei:ref>, July 21, 1912.</tei:note> einigen Zeit gedulden zu
        wollen und zeichnen </tei:p>

      <tei:closer>
        <tei:salute rend="indent-60">hochachtungsvoll</tei:salute>
        <tei:signed rend="indent-60"><tei:rs type="organization" key="entity-002408"
            >Universal-Edition A.-G.</tei:rs></tei:signed><tei:lb/><tei:lb/>
        <tei:address>
          <tei:addrLine>Wien, <tei:handShift new="#unkUE"/><tei:date when="1912-07-23">23. VII
              12</tei:date>.</tei:addrLine>
        </tei:address>
      </tei:closer>

    </tei:div>

    <tei:div type="translation">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/><tei:lb/>
        <tei:note type="editorial" place="inline">printed address in single frame:</tei:note>
        <tei:address>
          <tei:addrLine><tei:handShift new="#printed"/>UNIVERSAL EDITION &amp; Co.</tei:addrLine>
          <tei:addrLine>VIENNA I, REICHSRATSSTRASSE 9</tei:addrLine>
        </tei:address>
        <tei:address>
          <tei:addrLine><tei:handShift new="#unkUE"/>Professor Heinr. Schenker, Esq.</tei:addrLine>
          <tei:addrLine rend="indent-50">Paneveggio</tei:addrLine>
          <tei:addrLine rend="indent-50">South Tyrol</tei:addrLine>
        </tei:address>
        <tei:fw type="postmark">|| 3/3 VIENNA <tei:gap reason="illegible"/> | 23.VII.12 | *
            <tei:unclear>3a</tei:unclear> * ||</tei:fw><tei:lb/><tei:lb/>
        <tei:milestone unit="folio" n="verso"/>
        <tei:salute><tei:handShift new="#TPue"/>Dear <tei:rs type="person" key="entity-000632"
            >Sir</tei:rs>,</tei:salute>
      </tei:opener>

      <tei:p>Since our <tei:rs type="person" key="entity-000356">Director Hertzka</tei:rs> is
        currently away, we crave your indulgence for a while for your esteemed letter<tei:ptr
          corresp="#r0001-fn01" type="footnote"/> to be dealt with, and we remain,</tei:p>

      <tei:closer>
        <tei:salute rend="indent-60">With kind regards,</tei:salute>
        <tei:signed rend="indent-60"><tei:rs type="organization" key="entity-002408">Universal
            Edition &amp; Co.</tei:rs></tei:signed><tei:lb/><tei:lb/>
        <tei:address>
          <tei:addrLine>Vienna, <tei:handShift new="#unkUE"/><tei:date when="1912-07-23">July 23,
              1912</tei:date></tei:addrLine>
        </tei:address>
      </tei:closer>

    </tei:div>
