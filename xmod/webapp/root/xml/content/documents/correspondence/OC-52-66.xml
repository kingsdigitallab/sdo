          <tei:addrLine>Leipzig <tei:supplied reason="spacer">/</tei:supplied> Sternwartestrasse
            1520.</tei:addrLine>
          <tei:addrLine>Wien <tei:supplied reason="spacer">/</tei:supplied> I., Wipplingerstrasse
            32.</tei:addrLine>
          <tei:addrLine><tei:note type="editorial" place="inline"><tei:hi rend="italic"
                >etc.</tei:hi></tei:note></tei:addrLine>
          <tei:lb/>
        </tei:address>
        <tei:byline><tei:handShift new="#TPue"/>R</tei:byline>
        <tei:dateline rend="indent-70"><tei:handShift new="#printed"/>
          <tei:placeName>Wien</tei:placeName>, <tei:handShift new="#TPue"/><tei:date
            when="1911-10-31">31. Okt. 1911</tei:date></tei:dateline><tei:lb/>
        <tei:address>
          <tei:addrLine rend="ident-20">Wohlgeboren Herrn Prof. Dr. <tei:persName>Heinrich
              Schenker</tei:persName></tei:addrLine>
          <tei:addrLine rend="indent-70">
            <tei:hi rend="underline sperr">Wien</tei:hi></tei:addrLine>
        </tei:address>
        <tei:salute>Sehr geehrter Herr <tei:rs key="entity-000632" type="person"
          >Professor</tei:rs>!</tei:salute>
      </tei:opener>

      <tei:p rend="first">Den Empfang Ihrer gesch. Zuschrift vom <tei:date when="1911-10-28">28.
          ds.</tei:date><tei:note xml:id="r0001-fn01" type="editorial" place="foot">= <tei:ref
            type="correspondence" cRef="WSLB-83">WSLB 83</tei:ref>.</tei:note> bestätigend, werden
        Sie im Verlaufe des Monates November bereits Korrektur-Abzüge Ihrer <tei:rs type="work"
          key="entity-001731">Arbeit über die IX. Symphonie von Beethoven</tei:rs> erhalten. </tei:p>


      <tei:closer>
        <tei:salute rend="indent-65">Hochachtungsvoll</tei:salute>
        <tei:salute rend="indent-70">ergebenst</tei:salute>
        <tei:signed rend="indent-60"><tei:handShift new="#stamp"/><tei:rs type="organization"
            key="entity-002408">Universal-Edition Actiengesellschaft</tei:rs></tei:signed>
        <tei:signed rend="indent-90"><tei:handShift new="#EH"/><tei:rs key="entity-000356"
            type="person">Hertzka</tei:rs></tei:signed>
      </tei:closer>

    </tei:div>

    <tei:div type="translation">

      <tei:opener>
        <tei:address>
          <tei:addrLine><tei:handShift new="#printed"/>Universal Edition &amp; Co.</tei:addrLine>
