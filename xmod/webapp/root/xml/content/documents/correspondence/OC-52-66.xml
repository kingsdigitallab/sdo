        <tei:dateline rend="indent-70"><tei:handShift new="#printed"/>
          <tei:placeName>Vienna</tei:placeName>, <tei:handShift new="#TPue"/><tei:date
            when="1911-10-31">October 31, 1911</tei:date></tei:dateline><tei:lb/>
        <tei:address>
          <tei:addrLine rend="ident-20">Prof. <tei:persName>Heinrich Schenker</tei:persName>,
            Esq.</tei:addrLine>
          <tei:addrLine rend="indent-70">
            <tei:hi rend="underline sperr">Vienna</tei:hi></tei:addrLine>
        </tei:address>
        <tei:salute>Dear <tei:rs key="entity-000632" type="person">Professor</tei:rs>,</tei:salute>
      </tei:opener>

      <tei:p rend="first">We acknowledge receipt of your esteemed letter of the <tei:date
          when="1911-10-28">28th of the month</tei:date>.<tei:ptr corresp="#r0001-fn01"
          type="footnote"/> You will be receiving the proofs of your <tei:rs type="work"
          key="entity-001731">book on the Ninth Symphony of Beethoven</tei:rs> in the course of
        November.</tei:p>


      <tei:closer>
        <tei:salute rend="indent-65">With kind regards,</tei:salute>
        <tei:salute rend="indent-70"><tei:supplied reason="clarity">Your</tei:supplied> most
          devoted</tei:salute>
        <tei:signed rend="indent-60"><tei:handShift new="#stamp"/><tei:rs type="organization"
            key="entity-002408">Universal Edition &amp; Co.</tei:rs></tei:signed>
        <tei:signed rend="indent-90"><tei:handShift new="#EH"/><tei:rs key="entity-000356"
            type="person">Hertzka</tei:rs></tei:signed>
      </tei:closer>

