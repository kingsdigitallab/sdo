            <tei:addrLine><tei:hi rend="lateinschr">Berlin</tei:hi> W30</tei:addrLine>
            <tei:addrLine>Bambergerst. 25</tei:addrLine>
          </tei:address><tei:lb/>
          <tei:fw type="postmark">|| 3 WIEN 40 | 28.IX.34. 13 | * 4f * ||</tei:fw>
        </tei:fw>
