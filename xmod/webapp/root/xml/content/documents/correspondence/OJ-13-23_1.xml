        <tei:fw type="envelope"><tei:lb/>
          <tei:note type="editorial" place="inline"><tei:hi rend="bold">envelope</tei:hi></tei:note><tei:lb/><tei:lb/>
          <tei:milestone unit="folio" n="recto"/>
          <tei:note type="editorial" place="inline">word obscured by postmark</tei:note>
          <tei:address>
            <tei:addrLine><tei:handShift new="#unk"/>Herrn D<tei:hi rend="supralinear">r.</tei:hi>
              <tei:hi rend="underline">Heinrich Schenker</tei:hi></tei:addrLine>
            <tei:addrLine rend="indent-70">Tonkünstler</tei:addrLine>
            <tei:addrLine rend="indent-70">Wien III</tei:addrLine>
            <tei:addrLine rend="indent-70">Reisnerstr 38</tei:addrLine>
