      <dc:description>Riemann requests autobiographical information for his
        Lexikon.</dc:description>
      <dc:subject/>

      <marcrel:correspondent key="entity-000712">HRiemann</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>
    </sdo:itemDesc>


