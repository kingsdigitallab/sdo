          <tei:address>
            <tei:addrLine><tei:supplied reason="clarity">An:</tei:supplied>
              <tei:handShift new="#HS"/>H Prof. <tei:rs key="entity-000913" type="person">M.
                Violin</tei:rs></tei:addrLine>
            <tei:addrLine rend="indent-50">Wien, V.</tei:addrLine>
            <tei:addrLine rend="indent-30">Wehrgasse 11<tei:hi rend="supralinear"
              >/14</tei:hi></tei:addrLine>
          </tei:address><tei:lb/>
          <tei:fw type="postmark">|| 3 WIEN 40 | 25. IX. 33 11 | * 4f * ||</tei:fw>
