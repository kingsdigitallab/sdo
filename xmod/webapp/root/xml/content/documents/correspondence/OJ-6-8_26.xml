      <dc:title>Handwritten letter from Schenker to Violin, dated September 24, 1933</dc:title>

      <dcterms:created>1933-09-241T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2022-02-07</dcterms:dateSubmitted>
      <dc:description>The Schenkers’ maid is ill and has been taken to the hospital, so the dinner
        invitation to the Violins must be postponed.</dc:description>
      <dc:subject/>



      <marcrel:correspondent key="entity-000632">HSchenker</marcrel:correspondent>
      <marcrel:recipient key="entity-000913">ViolinM</marcrel:recipient>
    </sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
        <tei:fw type="envelope">
          <tei:note type="editorial" place="inline"><tei:hi rend="bold">envelope</tei:hi></tei:note><tei:lb/>
