      <tei:addrLine> Alpenhaus Fluchthorn </tei:addrLine>
     </tei:address>
     <tei:address>
      <tei:addrLine><tei:supplied>To:</tei:supplied> Prof. M. Violin,</tei:addrLine>
      <tei:addrLine rend="indent-10"> Hamburg,</tei:addrLine>
