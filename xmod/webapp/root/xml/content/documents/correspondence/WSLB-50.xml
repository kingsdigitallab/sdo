      <dc:title>Handwritten postcard from Schenker to Hertzka (UE), dated December 22,
        1909</dc:title>

      <dcterms:created>1909-12-22T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2016-10-08</dcterms:dateSubmitted>
