            ||</tei:fw>
          <tei:fw type="postmark">|| <tei:gap reason="illegible" unit="chars" extent="10"/> | 22.XII
              <tei:gap reason="illegible" unit="chars" extent="12"/> ||</tei:fw>
          <tei:fw type="postmark">|| <tei:gap reason="illegible" unit="chars" extent="27"/>
