  <sdo:record ID="r0001">

    <sdo:itemDesc>
      <tei:rs role="correspondence" type="correspondence" key="entity-008072">d'AlbertE ~
        HSchenker</tei:rs>
      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002745">Postcard</tei:rs>



      <dc:title>Handwritten postcard from Eugen d'Albert to Schenker, postmarked December 10,
        1908</dc:title>

      <dcterms:created>1908-12-10T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2021-11-06</dcterms:dateSubmitted>
      <dc:description>Eugen d'Albert hopes to see Schenker at his Friday concert so that they can
        talk afterwards.</dc:description>
      <dc:subject>Concert; besprechen; to discuss</dc:subject>

      <marcrel:correspondent key="entity-000150">d'AlbertE</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>
    </sdo:itemDesc>

    <tei:div type="transcription">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/><tei:lb/>
        <tei:fw type="header" rend="inline"><tei:handShift new="#printed"/><tei:hi rend="bold"
            >Postkarte</tei:hi></tei:fw>
        <tei:lb/>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine>An <tei:handShift new="#d-A"/>Herrn Dr H. Schenker.</tei:addrLine>
            <tei:addrLine><tei:handShift new="#printed"/>in <tei:handShift new="#d-A"/>Wien.
              III</tei:addrLine>
            <tei:addrLine>Reisnerstr 38.</tei:addrLine>
          </tei:address>
          <tei:lb/>
          <tei:fw type="postmark">|| DRESDEN | 10.12.08 <tei:gap reason="illegible"/> V | AL<tei:gap
              reason="illegible"/> 2 ||</tei:fw>
          <tei:fw type="postmark">|| WIEN 3/3| 49 | BESTELLT | 11.12.[08] | 8-10V ||</tei:fw>
          <tei:lb/><tei:lb/>
        </tei:fw>
        <tei:milestone unit="folio" n="verso"/>
        <tei:salute><tei:handShift new="#d-A"/>Lieber Herr <tei:rs type="person" key="entity-000632"
            >Doctor</tei:rs>!</tei:salute>
      </tei:opener>

      <tei:p>Ich hoffe Sie Freitag Abend<tei:note xml:id="r0001-fn01" type="editorial" place="foot"
          >Friday December 11, 1908. <tei:title level="j">Neue freie Presse</tei:title> and
            <tei:title level="j">Wiener Zeitung</tei:title> listings do not show a d‘Albert recital
          or performance for this day. Schenker’s diary does not cover this part of
          December.</tei:note> im Concert und nachher zu sehen – wir können dann alles
          besprechen.<tei:note xml:id="r0001-fn02" type="editorial" place="foot">This is the last
          surviving communication from d’Albert to Schenker until November 27, 1911 (OJ 9/6, [52]).
          Schenker’s diary does not refer to d’Albert between February 24, 1908 and February 8,
          1912. The only reference in the interim period is an instruction to Universal Edition to
          send d’Albert a copy of the second edition of <tei:rs type="work" key="entity-001721"
              ><tei:title level="m">Beitrag zur Ornamentik</tei:title></tei:rs> (<tei:ref
            type="correspondence" cRef="WSLB-14">WSLB 14</tei:ref>, August 19,
        1908).</tei:note></tei:p>

      <tei:closer>
        <tei:salute rend="indent-10">Einstweilen herzliche Grüße</tei:salute>
        <tei:salute rend="indent-30">Ihres</tei:salute>
        <tei:signed rend="indent-60"><tei:rs key="entity-000150" type="person">Eugen
            d‘Albert</tei:rs>.</tei:signed>
      </tei:closer>

    </tei:div>


    <tei:div type="translation">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/><tei:lb/>
        <tei:fw type="header" rend="inline"><tei:handShift new="#printed"/><tei:hi rend="bold"
            >Postcard</tei:hi></tei:fw>
        <tei:lb/>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine>To <tei:handShift new="#d-A"/>Dr. H. Schenker</tei:addrLine>
            <tei:addrLine><tei:handShift new="#printed"/>in <tei:handShift new="#d-A"/>Vienna
              III</tei:addrLine>
            <tei:addrLine>Reisnerstraße 38</tei:addrLine>
          </tei:address>
          <tei:lb/>
          <tei:fw type="postmark">|| DRESDEN | 10.12.08 <tei:gap reason="illegible"/> A.M. |
              AL<tei:gap reason="illegible"/> 2 ||</tei:fw>
          <tei:fw type="postmark">|| VIENNA 3/3| 49 | DELIVERED | 11.12.[08] | 8-10A.M. ||</tei:fw>
          <tei:lb/><tei:lb/>
        </tei:fw>
        <tei:milestone unit="folio" n="verso"/>
        <tei:salute><tei:handShift new="#d-A"/>Dear Dr. <tei:supplied reason="identity"><tei:rs
              type="person" key="entity-000632">Schenker</tei:rs></tei:supplied>,</tei:salute>
      </tei:opener>

      <tei:p>I hope to see you at the concert on Friday evening<tei:ptr corresp="#r0001-fn01"
          type="footnote"/> and afterwards – we can then discuss everything.<tei:ptr
          corresp="#r0001-fn02" type="footnote"/></tei:p>

      <tei:closer>
        <tei:salute rend="indent-10">Meanwhile, cordial greetings,</tei:salute>
        <tei:salute rend="indent-30">From your</tei:salute>
        <tei:signed rend="indent-60"><tei:rs key="entity-000150" type="person">Eugen
            d‘Albert</tei:rs></tei:signed>
      </tei:closer>

    </tei:div>

