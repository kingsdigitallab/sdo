            <tei:addrLine>Vienna</tei:addrLine>
          </tei:address><tei:lb/><tei:lb/>
        </tei:opener>

        <tei:p rend="first">Presented for information under a copy of the receipt and of this
          report, with request for approval.</tei:p>

        <tei:closer>
