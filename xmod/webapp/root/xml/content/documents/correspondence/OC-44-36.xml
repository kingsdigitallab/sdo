   <dc:title>Handwritten postcard from Salzer to Schenker, dated September 17, 1934</dc:title>

   <dcterms:created>1934-09-17T12:00:00Z</dcterms:created>
   <dcterms:dateSubmitted>2011-11-08</dcterms:dateSubmitted>
   <dc:description>Salzer cannot visit on Tuesday after all. </dc:description>
   <dc:subject>Besuch; visit </dc:subject>

   
   

  <marcrel:correspondent key="entity-000754">Salzer</marcrel:correspondent><marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient><marcrel:recipient key="entity-000771">JSchenker</marcrel:recipient></sdo:itemDesc>


  <tei:div type="transcription">

   <tei:opener>
    <tei:milestone unit="folio" n="recto"/>
    <tei:fw type="envelope">
     <tei:fw type="header" rend="center"><tei:handShift new="#printed"/>Postkarte</tei:fw><tei:lb/>
     <tei:note type="editorial" place="inline">small picture, captioned: Millstatt.
