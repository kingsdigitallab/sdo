        <tei:lb/>
        <tei:fw type="header" rend="center"><tei:handShift new="#printed"/>Postcard</tei:fw>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine>UNIVERSAL EDITION &amp; CO.,</tei:addrLine>
            <tei:addrLine>VIENNA I, KARLSPLATZ 6, (Musikverein Building)</tei:addrLine>
          </tei:address>
          <tei:address>
            <tei:addrLine><tei:supplied reason="clarity">To: </tei:supplied><tei:handShift new="#TPhfi"/>Professor Heinrich <tei:hi rend="sperr">Schenker</tei:hi>,</tei:addrLine>
            <tei:addrLine rend="indent-10"><tei:hi rend="sperr">Vienna</tei:hi> III,</tei:addrLine>
            <tei:addrLine rend="indent-10">Keilgasse 8</tei:addrLine>
          </tei:address>
          <tei:lb/>
          <tei:fw type="postmark">|| 1 VIENNA 1 | 8. IX. 27 | 13-14 | * 4b * ||</tei:fw>
        </tei:fw>
        <tei:lb/><tei:lb/>
        <tei:milestone unit="folio" n="verso"/>
        <tei:dateline rend="indent-50"><tei:handShift new="#TPw"/><tei:placeName>Vienna</tei:placeName>, <tei:date when="1927-09-07">September 7,
            1927</tei:date></tei:dateline><tei:lb/>
        <tei:byline>W.</tei:byline>
        <tei:address>
          <tei:addrLine rend="indent-20">Professor Heinrich <tei:hi rend="sperr">Schenker</tei:hi>,</tei:addrLine>
          <tei:addrLine rend="indent-50">
            <tei:hi rend="underline"><tei:hi rend="sperr">Vienna</tei:hi> III,</tei:hi>
          </tei:addrLine>
          <tei:addrLine rend="indent-50">Keilgasse 8</tei:addrLine>
        </tei:address>
        <tei:salute>Dear <tei:rs type="person" key="entity-000632">Professor</tei:rs>,<tei:ptr corresp="#r0001-fn01" type="footnote"/></tei:salute>
      </tei:opener>

      <tei:p rend="first">We refer to our postcard of <tei:date when="1927-07-06">July
          6</tei:date><tei:ptr corresp="#r0001-fn02" type="footnote"/> and are having a copy of the
        new issue of your edition of <tei:rs key="entity-000055" type="person">BEETHOVEN</tei:rs>'s
          <tei:rs key="entity-001226" type="composition">Op. 57 "<tei:hi rend="underline">Appassionata</tei:hi>"</tei:rs> delivered to you at this time. We remain</tei:p>


      <tei:closer>
        <tei:salute rend="indent-60">kind regards,</tei:salute>
        <tei:signed rend="indent-50"><tei:handShift new="#stamp"/><tei:rs key="entity-002408" type="organization">Universal Edition &amp; Co.</tei:rs></tei:signed>
        <tei:signed rend="indent-70"><tei:handShift new="#unk"/>pp <tei:rs key="entity-000741" type="person">Rothe</tei:rs></tei:signed>
      </tei:closer>
    </tei:div>
