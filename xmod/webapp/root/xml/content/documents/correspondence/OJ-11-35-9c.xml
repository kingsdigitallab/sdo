  <sdo:itemDesc><tei:rs role="correspondence" type="correspondence" key="entity-002698">Halm ~ HSchenker</tei:rs><tei:rs role="corr-item-type" type="corr-item-type" key="entity-002745">Postcard</tei:rs>
   
   <dc:title>Handwritten postcard from Halm to Schenker, dated December 13, 1918</dc:title>
   
   <dcterms:created>1918-12-13T12:00:00Z</dcterms:created>
   <dcterms:dateSubmitted>2006-03-09</dcterms:dateSubmitted>
   <dc:description>Halm acknowledges DLA 69.930/4 and help, and promises to write soon. </dc:description>
   <dc:subject/>

   
   
  <marcrel:correspondent key="entity-000326">Halm</marcrel:correspondent><marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient></sdo:itemDesc>

