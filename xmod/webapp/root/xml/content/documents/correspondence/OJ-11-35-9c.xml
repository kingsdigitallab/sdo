     <tei:address>
      <tei:note type="editorial" place="inline">stamp:</tei:note>
      <tei:addrLine><tei:supplied reason="clarity">Absender: </tei:supplied>Aug. Halm </tei:addrLine>
      <tei:addrLine>ESSLINGEN a.N. </tei:addrLine>
      <tei:addrLine>Panorama 11</tei:addrLine>
     </tei:address>
