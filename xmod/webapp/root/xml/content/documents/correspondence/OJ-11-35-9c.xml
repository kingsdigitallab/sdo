      <tei:addrLine>Panorama<tei:supplied reason="abbreviation">straße</tei:supplied>
       11</tei:addrLine>
     </tei:address>
     <tei:address>
      <tei:note>handwritten:</tei:note>
      <tei:addrLine><tei:supplied reason="clarity">To: </tei:supplied> Professor Schenker, </tei:addrLine>
      <tei:addrLine>Vienna III, </tei:addrLine>
      <tei:addrLine>Reisnerstraße 38</tei:addrLine>
     </tei:address>
     <tei:fw type="postmark"> || Freigegeben | St. || </tei:fw>
     <tei:lb/>
     <tei:fw type="postmark">|| ESSLINGEN (Neckar) | 12.DEC.18.5 P.M. | * 1 * || </tei:fw>
     <tei:lb/>
     <tei:fw type="postmark">|| ESSLINGEN (Neckar) | 12.DEC.18.5 P.M. | * 1 * || </tei:fw>
     <tei:milestone unit="folio" n="verso"/>
     <tei:date rend="indent-60" when="1918-12-13">December 13, 1918</tei:date>
    </tei:fw>
    <tei:salute>Dear<tei:rs type="person" key="entity-000632">Professor</tei:rs>, </tei:salute>
   </tei:opener>

   <tei:p>Today<tei:ptr corresp="#r0001-fn01" type="footnote"/> or at the latest tomorrow I will
    write more extensively and will send you the letter by registered mail. In the meantime, just
    cordial thanks for your letter<tei:ptr corresp="#r0001-fn02" type="footnote"/> and for the help
    on my behalf, which I will very gladly accept.<tei:ptr corresp="#r0001-fn03" type="footnote"/>
   </tei:p>

   <tei:closer>
    <tei:salute rend="indent-20">With kind regards to you, </tei:salute>
    <tei:salute rend="indent-30">Yours, </tei:salute>
    <tei:signed rend="indent-40">A. Halm</tei:signed>
   </tei:closer>

  </tei:div>
