  <sdo:record ID="r0001">

    <sdo:itemDesc>
      <tei:rs role="correspondence" type="correspondence" key="entity-002735">Seligmann ~
        HSchenker</tei:rs>
      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002745">postcard</tei:rs>

      <dc:title>Handwritten postcard from Seligmann to Schenker, dated April 1, 1902</dc:title>

      <dcterms:created>1902-04-01T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2022-11-18</dcterms:dateSubmitted>
      <dc:description>Seligmann invites Schenker to an evening of chamber music at his
        place.</dc:description>
      <dc:subject/>



      <marcrel:correspondent key="entity-000819">Adalbert Franz Seligmann</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">Heinrich Schenker</marcrel:recipient>
    </sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/>
        <tei:lb/>
        <tei:fw type="header" rend="center"><tei:handShift new="#printed"/><tei:hi rend="bold"
            >CORRESPONDENZ-KARTE.</tei:hi></tei:fw>
        <tei:fw type="header" rend="center">No. __</tei:fw>
        <tei:fw type="header" rend="center">zur pneumatischen Expressbeförderung</tei:fw>
        <tei:fw type="header" rend="center">Die Aushebeung der pneumatisch zu befördernden
          Correspondenzen aus den Sammelkasten erfolgt täglich in der Zeit von 7 Uhr früh bis 8½
          abends alle 20 Minuten.</tei:fw>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine>An: <tei:handShift new="#AFS"/>Herrn D<tei:hi rend="supralinear"
                >r</tei:hi> Heinrich Schenker</tei:addrLine>
            <tei:addrLine rend="indent-20">III Reisnerstrasse 38.</tei:addrLine>
            <tei:lb/>
          </tei:address>
          <tei:fw type="postmark">|| WIEN 3/1 | 7 10 V – 2. IV. 02 | – 40 – r ||</tei:fw>
          <tei:fw type="postmark">|| WIEN 3<tei:supplied>/1</tei:supplied> | 7.30 N 2. IV. 02 | – 40
            – r ||</tei:fw><tei:lb/><tei:lb/>
        </tei:fw>
        <tei:milestone unit="folio" n="verso"/><tei:lb/>
        <tei:dateline rend="indent-80"><tei:handShift new="#AFS"/><tei:date when="1902-04-01"
            >Dienstag 1./4</tei:date></tei:dateline>
        <tei:salute>Lieber <tei:rs type="person" key="entity-000632">Fr</tei:rs>!</tei:salute>
      </tei:opener>

      <tei:p>Morgen <tei:add place="interlinear-above">Mittwoch!</tei:add> bei mir unwiderruflich
        Quartett mit dem Furiantisten!<tei:note xml:id="r0001-fn01" type="editorial" place="foot"
          >The allusion is to an evening of chamber music playing.</tei:note> Absagen werden nicht
        angenommen, <tei:note type="editorial" place="interlinear-above">illegible word</tei:note>
        aber gegebenfalls möglichst rechtzeitig in’s <tei:rs type="place" key="entity-003997">Café
          Imperial</tei:rs> zu senden! </tei:p>

      <tei:closer>
        <tei:salute rend="indent-50">Gruß!</tei:salute>
        <tei:signed rend="indent-70"><tei:rs type="person" key="entity-000819">Seligmann</tei:rs>
        </tei:signed>
      </tei:closer>

    </tei:div>


    <tei:div type="translation">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/>
        <tei:lb/>
        <tei:fw type="header" rend="center"><tei:handShift new="#printed"/><tei:hi rend="bold"
            >POSTCARD</tei:hi></tei:fw>
        <tei:fw type="header" rend="center">No. __</tei:fw>
        <tei:fw type="header" rend="center">for express delivery by pneumatic mail.</tei:fw>
        <tei:fw type="header" rend="center">Correspondence to be delivered by pneumatic mail will be
          collected daily, every twenty minutes, from 7 o’clock in the morning until 8:30 in the
          evening.</tei:fw>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine>To: <tei:handShift new="#AFS"/>Dr Heinrich Schenker</tei:addrLine>
            <tei:addrLine rend="indent-20"><tei:supplied>Vienna</tei:supplied> III Reisnerstrasse
              38</tei:addrLine>
            <tei:lb/>
          </tei:address>
          <tei:fw type="postmark">|| VIENNA 3/1 | 7 10 a.m. – 2. IV. 02 | – 40 – r ||</tei:fw>
          <tei:fw type="postmark">|| VIENNA 3<tei:supplied>/1</tei:supplied> | 7.30 p.m. 2. IV. 02 |
            – 40 – r ||</tei:fw><tei:lb/><tei:lb/>
        </tei:fw>
        <tei:milestone unit="folio" n="verso"/><tei:lb/>
        <tei:dateline rend="indent-80"><tei:handShift new="#AFS"/><tei:date when="1902-04-01"
            >Tuesday, April 1</tei:date></tei:dateline>
        <tei:salute>Dear <tei:rs type="person" key="entity-000632">friend</tei:rs>,</tei:salute>
      </tei:opener>

      <tei:p>Tomorrow, <tei:add place="interlinear-above">Wednesday!</tei:add> at my place,
        irrevocably, quartet with the Furiant Players!<tei:ptr corresp="#r0001-fn01" type="footnote"
        /> Apologies will not be accepted; but, if necessary, send <tei:note type="editorial"
          place="interlinear-above">illegible word</tei:note> as promptly as possible to the <tei:rs
          type="place" key="entity-003997">Café Imperial</tei:rs>!</tei:p>

      <tei:closer>
        <tei:salute rend="indent-50">Greetings!</tei:salute>
        <tei:signed rend="indent-70"><tei:rs type="person" key="entity-000819">Seligmann</tei:rs>
        </tei:signed>
      </tei:closer>

    </tei:div>
