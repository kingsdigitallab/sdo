          <tei:addrLine><tei:handShift new="#stamp"/><tei:hi rend="underline">Book-keeping
              Department</tei:hi></tei:addrLine>
          <tei:lb/>
        </tei:address>
        <tei:byline><tei:handShift new="#TPueP"/>
          <tei:persName type="typist">P.</tei:persName></tei:byline><tei:lb/>
        <tei:dateline rend="indent-70"><tei:handShift new="#printed"/>
          <tei:placeName>Vienna</tei:placeName>, <tei:handShift new="#TPueP"/><tei:date
            when="1912-06-04">June 4, 1912</tei:date></tei:dateline><tei:lb/>
        <tei:address>
          <tei:addrLine rend="ident-20">Dr. <tei:persName>Heinrich Schenker</tei:persName>,
            Esq.</tei:addrLine>
          <tei:addrLine rend="indent-70">
            <tei:hi rend="underline sperr">Vienna, III</tei:hi></tei:addrLine>
          <tei:addrLine rend="indent-70">Reisnerstrasse 38</tei:addrLine>
        </tei:address>
      </tei:opener>

      <tei:p rend="first">We refer to our separate letter of yesterday,<tei:ptr
          corresp="#r0001-fn01" type="footnote"/> and have transferred to you today via the <tei:rs
          type="organization" key="entity-002467">Imperial-Royal Austrian Provincial Bank</tei:rs>
        in Vienna,<tei:ptr corresp="#r0001-fn02" type="footnote"/><tei:cit>
          <tei:q><tei:hi rend="underline">100.– Kronen</tei:hi></tei:q>
        </tei:cit>
      </tei:p>

      <tei:p>for the second edition of the Niloff <tei:rs type="work" key="entity-001729"><tei:title
            level="m">Table of Instrumentation</tei:title></tei:rs>, for which we have issued the
        print order.</tei:p>

      <tei:p rend="first">We remain,</tei:p>

      <tei:closer>
        <tei:salute rend="indent-70">With kind regards,</tei:salute>
        <tei:signed rend="indent-65">
          <tei:handShift new="#stamp"/><tei:rs type="organization" key="entity-002408">Universal
            Edition &amp; Co.</tei:rs></tei:signed>
        <tei:signed rend="indent-90"><tei:handShift new="#EH"/><tei:rs type="person"
            key="entity-000356">Hertzka</tei:rs></tei:signed>
      </tei:closer>

      <tei:postscript>
        <tei:p><tei:handShift new="#HS"/>Letter of <tei:date when="1920-07-02">July 2,
            1920</tei:date>
          <tei:hi rend="underline">third edition</tei:hi>!<tei:ptr corresp="#r0001-fn03"
            type="footnote"/></tei:p>
      </tei:postscript>


