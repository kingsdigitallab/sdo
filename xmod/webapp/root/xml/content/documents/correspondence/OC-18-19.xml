          <tei:fw type="postmark">3 VIENNA 1/1 | 30.33.1540 | * 15 <tei:gap reason="illegible"/> *
            ||</tei:fw><tei:lb/><tei:lb/>
          <tei:milestone unit="folio" n="verso"/>
        </tei:fw>
        <tei:salute rend="indent-50">Revered Dr. <tei:supplied><tei:rs key="entity-000632"
              type="person">Schenker</tei:rs></tei:supplied>,</tei:salute>
      </tei:opener>

      <tei:p rend="first">I have just received information that I am unfortunately committed for
        Monday afternoon. May I thus look you up on Wednesday at 5.30 p.m.?<tei:ptr
          corresp="#r0001-fn01" type="footnote"/> If I do not hear to the contrary, I will be with
        you on that day.<tei:ptr corresp="#r0001-fn01" type="footnote"/></tei:p>

      <tei:closer>
        <tei:salute rend="indent-60">In expressing high esteem, I am</tei:salute>
        <tei:salute rend="indent-60">your devoted</tei:salute>
        <tei:signed rend="indent-60"><tei:handShift new="#JM"/><tei:rs key="entity-000577"
            type="person">Marx</tei:rs></tei:signed>
      </tei:closer>

    </tei:div>
