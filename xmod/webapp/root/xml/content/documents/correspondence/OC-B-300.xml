        <tei:table rows="6" cols="3">
          <tei:row>
            <tei:cell role="label"><tei:handShift new="#HS"/>Leaf</tei:cell>
            <tei:cell role="label"><tei:hi rend="underline">Beethoven</tei:hi></tei:cell>
            <tei:cell> </tei:cell>
