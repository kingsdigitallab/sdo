       <tei:hi rend="lateinschr">D<tei:hi rend="supralinear">r</tei:hi> Heinrich Schenker</tei:hi>
      </tei:addrLine>
      <tei:addrLine>
       <tei:hi rend="lateinschr">III., Reisnerstr. 38</tei:hi>
      </tei:addrLine>
     </tei:address>
     <tei:address>
      <tei:addrLine><tei:supplied reason="clarity">An: </tei:supplied> den Verlag „<tei:hi rend="lateinschr">Universal-Edition</tei:hi>“ </tei:addrLine>
      <tei:addrLine>I </tei:addrLine>
      <tei:addrLine>Karlsplatz 6 </tei:addrLine>
     </tei:address>
