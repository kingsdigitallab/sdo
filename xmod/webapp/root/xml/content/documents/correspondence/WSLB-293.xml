   <dc:title>Handwritten postcard from Schenker to Hertzka (UE), dated February 5, 1918</dc:title>
   
   <dcterms:created>1918-02-05T12:00:00Z</dcterms:created>
   <dcterms:dateSubmitted>2006-05-01</dcterms:dateSubmitted>
   <dc:description>Schenker renews his request of January 30 that review copies be sent to
    Halm.</dc:description>
   <dc:subject>review copies</dc:subject>

   <marcrel:correspondent key="EATS_nNNNNNN">Heinrich Schenker</marcrel:correspondent>
   <marcrel:recipient key="EATS_nNNNNNN">Universal Edition</marcrel:recipient>
   <marcrel:recipient key="EATS_nNNNNNN">Emil Hertzka</marcrel:recipient>
