      <tei:closer>
        <tei:salute rend="indent-20">With best greetings, Yours</tei:salute>
        <tei:signed rend="indent-60">
          <tei:rs key="entity-000632" type="person">H. Schenker</tei:rs><tei:lb/>
        </tei:signed>
        <tei:dateline><tei:date when="1927-12-07">December 7,
