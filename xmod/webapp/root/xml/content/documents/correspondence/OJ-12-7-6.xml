            <tei:rs role="corr-item-type" type="corr-item-type" key="entity-005504"
                >Notecard</tei:rs>
            <dc:title>Handwritten notecard from Kalbeck to Schenker, dated March 9, 1903</dc:title>

            <dcterms:created>1903-03-09T12:00:00Z</dcterms:created>
            <dcterms:dateSubmitted>2022-07-08</dcterms:dateSubmitted>
            <dc:description>Kalbeck invites Schenker to his home.</dc:description>
            <dc:subject/>

            <marcrel:correspondent key="entity-000418">KalbeckM</marcrel:correspondent>
            <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>
        </sdo:itemDesc>


        <tei:div type="transcription">

            <tei:opener>
                <tei:dateline><tei:handShift new="#MK"/><tei:placeName>Wien</tei:placeName>
                    <tei:date when="1903-03-09">9. März 1903</tei:date>.</tei:dateline>
                <tei:salute>Hochgeehrter Herr <tei:rs type="person" key="entity-000632"
                        >College</tei:rs>!</tei:salute>
            </tei:opener>

            <tei:p>Hiermit beehre ich mich, Sie für Sonntag d. <tei:date when="1903-03-15">15.
                    März</tei:date> 8 Uhr Abends zu einer zwanglosen Herren-<tei:unclear
                    reason="reading">Kneipe</tei:unclear> zu mir einzuladen, und würde mich
                    <tei:milestone unit="folio" n="verso"/> vom Herzen freuen, wenn Sie die
                Einladung annehmen wollen.</tei:p>

            <tei:closer>
                <tei:salute rend="indent-50">Hochachtungsvoll</tei:salute>
                <tei:salute rend="indent-80">Ihr</tei:salute>
                <tei:salute rend="indent-60">sehr ergebener</tei:salute>
                <tei:signed rend="indent-50"><tei:rs type="person" key="entity-000418">Max
                        Kalbeck</tei:rs></tei:signed><tei:lb/>
                <tei:address>
                    <tei:addrLine>XIX Karl Ludwigstr. 76.</tei:addrLine>
                </tei:address>
            </tei:closer>

        </tei:div>

        <tei:div type="translation">

            <tei:opener>
                <tei:dateline><tei:handShift new="#MK"/><tei:placeName>Vienna</tei:placeName>,
                        <tei:date when="1903-03-09">March 9, 1903</tei:date></tei:dateline>
                <tei:salute>Highly respected <tei:rs type="person" key="entity-000632"
                        >Colleague</tei:rs>,</tei:salute>
            </tei:opener>

            <tei:p>With this I have the honor of inviting you to join me for an informal all-male
                    <tei:unclear reason="original-unclear">drinks party</tei:unclear> on Sunday
                    <tei:date when="1903-03-15">March 15</tei:date> at 8 p.m., and would be
                    <tei:milestone unit="folio" n="verso"/> sincerely pleased if you would accept
                the invitation.</tei:p>

            <tei:closer>
                <tei:salute rend="indent-50">Respectfully</tei:salute>
                <tei:salute rend="indent-80">Your</tei:salute>
                <tei:salute rend="indent-60">very devoted</tei:salute>
                <tei:signed rend="indent-50"><tei:rs type="person" key="entity-000418">Max
                        Kalbeck</tei:rs></tei:signed><tei:lb/>
                <tei:address>
                    <tei:addrLine><tei:supplied reason="identity">Vienna</tei:supplied> XIX, Karl
                        Ludwigstraße 76</tei:addrLine>
                </tei:address>
            </tei:closer>




        </tei:div>
