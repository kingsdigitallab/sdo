      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002744">Letter</tei:rs>

      <dc:title>Handwritten letter from Hanna Deutsch to Schenker, dated March 20, 1926</dc:title>

      <dcterms:created>1926-03-20T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2015-09-18</dcterms:dateSubmitted>
      <dc:description>Hanna Deutsch invites the Schenkers to afternoon tea on March 28, 1926.</dc:description>
      <dc:subject/>

      <marcrel:correspondent key="entity-000164">DeutschOE</marcrel:correspondent>
      <marcrel:correspondent key="entity-000163">DeutschH</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>
      <marcrel:recipient key="entity-000771">JSchenker</marcrel:recipient>
    </sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
        <tei:fw type="header" rend="inline">
          <tei:note type="editorial">printed letterhead:</tei:note>
          <tei:handShift new="#printed"/>FRAU HANNA DEUTSCH</tei:fw>
        <tei:dateline rend="indent-65"><tei:handShift new="#HD"/><tei:date when="1926-03-20">20. III.
          26</tei:date>.</tei:dateline>
      </tei:opener>
      <tei:lb/>

      <tei:p rend="first">bittet Sie, sehr verehrter Herr <tei:rs key="entity-000632" type="person"
          >Professor</tei:rs><tei:note xml:id="r0001-fn01" type="editorial" place="foot">Receipt of this letter is
          recorded in Schenker's diary at OJ 3/8, p. 2928 (March 20, 1926): "Von Deutsch (Br.): Einladung für Sonntag."
          ("From Deutsch (letter): invitation for Sunday.").</tei:note> und Ihre lb. Frau Gemahlin, uns die Freude zu
        machen, am <tei:date when="1926-03-28">Sonntag, den 28. ds</tei:date> zu uns zum Nachmittagstee zu kommen.
        —</tei:p>

      <tei:closer>
        <tei:salute rend="indent-15">Mit den besten Grüssen von meinem <tei:rs key="entity-000164" type="person"
            >Mann</tei:rs> und mir</tei:salute>
        <tei:salute rend="indent-45">Ihre ergebene</tei:salute>
        <tei:signed rend="indent-65"><tei:rs key="entity-000163" type="person">Hanna Deutsch</tei:rs></tei:signed>
      </tei:closer>

    </tei:div>


    <tei:div type="translation">

      <tei:opener>
        <tei:fw type="header" rend="inline">
          <tei:note type="editorial">printed letterhead:</tei:note>
          <tei:handShift new="#printed"/>FRAU HANNA DEUTSCH</tei:fw>
        <tei:dateline rend="indent-65"><tei:handShift new="#HD"/><tei:date when="1926-03-20">March 20,
          1926</tei:date></tei:dateline>
      </tei:opener>
      <tei:lb/>

      <tei:p rend="first">asks you, most revered <tei:rs key="entity-000632" type="person">Professor
          [Schenker]</tei:rs>,<tei:ptr corresp="#r0001-fn01" type="footnote"/> and your dear wife to give us the
        pleasure of hosting you for afternoon tea on <tei:date when="1926-03-28">Sunday the 28th of this
          month</tei:date>. —</tei:p>

      <tei:closer>
        <tei:salute rend="indent-15">With the best greeting from my <tei:rs key="entity-000164" type="person"
            >husband</tei:rs> and me,</tei:salute>
        <tei:salute rend="indent-45">Yours truly,</tei:salute>
        <tei:signed rend="indent-65"><tei:rs key="entity-000163" type="person">Hanna Deutsch</tei:rs></tei:signed>
      </tei:closer>

    </tei:div>

