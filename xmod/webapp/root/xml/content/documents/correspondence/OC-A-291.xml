  <sdo:record ID="r0001">

    <sdo:itemDesc>
      <tei:rs role="correspondence" type="correspondence" key="entity-007009">Komorn ~
        HSchenker</tei:rs>
      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002751">Picture
        postcard</tei:rs>

      <dc:title>Handwritten picture postcard from Komorn to Schenker, dated December 22,
        1934</dc:title>
      <dcterms:created>1934-12-22T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2019-02-12</dcterms:dateSubmitted>
      <dc:description>Mrs. Komorn send Christmas and New Year's best wishes.</dc:description>
      <dc:subject/>

      <marcrel:correspondent key="entity-000460">Maria Komorn</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>
    </sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/>
        <tei:address>
          <tei:addrLine><tei:supplied reason="clarity">An</tei:supplied>
            <tei:handShift new="#MKo"/>Prof. D<tei:hi rend="supralinear">r.</tei:hi> Heinrich
            Schenker</tei:addrLine>
          <tei:addrLine><tei:hi rend="underline">Wien</tei:hi> III</tei:addrLine>
          <tei:addrLine>Keilgasse 8</tei:addrLine>
        </tei:address><tei:lb/>
        <tei:fw type="postmark">|| 9/1 WIEN 66 | 22.XII.34 14 | * 4c * ||</tei:fw>
        <tei:note type="editorial" place="inline">three times</tei:note><tei:lb/><tei:lb/>
        <tei:note type="editorial" place="inline">for continuation of <tei:hi rend="italic"
            >recto</tei:hi>, see below</tei:note><tei:lb/><tei:lb/>
        <tei:milestone unit="folio" n="verso"/>
        <tei:note type="editorial" place="inline">picture of snowy forest scene</tei:note>
        <tei:salute><tei:handShift new="#printed"/>Fröhliche Weihnachten<tei:note
            xml:id="r0001-fn01" type="editorial" place="foot">Receipt of this postcard is not
            recorded in Schenker's diary.</tei:note></tei:salute>
      </tei:opener>

      <tei:p><tei:handShift new="#MKo"/> und viel Glück und Segen für ein arbeitsreiches 1935,
        Ihnen, sehr verehrter Herr Professor sowie d. verehrte gn. <tei:rs type="person"
          key="entity-000771">Frau</tei:rs>.<tei:note xml:id="r0001-fn02" type="editorial"
          place="foot">Schenker reciprocates at OJ 4/8, 3965, December 24, 1934: "An Frh. von
          Reigersberg, Frau Komorn, Dr. Rinn, Hofrat Pollak (Ansichtsk.): Weihnachtsgrüße." ("To
          Baron Reigersberg, Mrs. Komorn, Dr. Rinn, Court Counselor Pollak (picture postcards):
          Christmas greetings."). This is the last entry in Schenker's diary concerning Mrs.
          Komorn.</tei:note></tei:p>


      <tei:closer>
        <tei:salute>Ihre <tei:milestone unit="folio" n="recto"/> verehrungsvoll
          ergebene</tei:salute>
        <tei:signed rend="indent-30"><tei:rs type="person" key="entity-000460">Maria
          Komorn</tei:rs></tei:signed><tei:lb/>
        <tei:dateline>
          <tei:date when="1934-12-22">22. 12. 34</tei:date>
        </tei:dateline>
      </tei:closer>

    </tei:div>


    <tei:div type="translation">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/>
        <tei:address>
          <tei:addrLine><tei:supplied reason="clarity">To:</tei:supplied>
            <tei:handShift new="#MKo"/>Prof. Heinrich Schenker</tei:addrLine>
          <tei:addrLine><tei:hi rend="underline">Vienna</tei:hi> III</tei:addrLine>
          <tei:addrLine>Keilgasse 8</tei:addrLine>
        </tei:address><tei:lb/>
        <tei:fw type="postmark">|| 9/1 VIENNA 66 | 22.XII.34 14 | * 4c * ||</tei:fw>
        <tei:note type="editorial" place="inline">three times</tei:note><tei:lb/><tei:lb/>
        <tei:note type="editorial" place="inline">for continuation of <tei:hi rend="italic"
            >recto</tei:hi>, see below</tei:note><tei:lb/><tei:lb/>
        <tei:milestone unit="folio" n="verso"/><tei:lb/>
        <tei:note type="editorial" place="inline">picture of snowy forest scene</tei:note>
        <tei:salute><tei:handShift new="#printed"/>Happy Christmas!<tei:ptr corresp="#r0001-fn01"
            type="footnote"/></tei:salute>
      </tei:opener>

      <tei:p><tei:handShift new="#MKo"/>and much good fortune and blessing for a 1935 of productive
        work, to you, dear Professor, as well as to your dear lady <tei:rs type="person"
          key="entity-000771">wife</tei:rs>.<tei:ptr corresp="#r0001-fn02" type="footnote"/></tei:p>


      <tei:closer>
        <tei:salute>Your <tei:milestone unit="folio" n="recto"/> devoted, full of
          veneration</tei:salute>
        <tei:signed rend="indent-30"><tei:rs type="person" key="entity-000460">Maria
          Komorn</tei:rs></tei:signed><tei:lb/>
        <tei:dateline>
          <tei:date when="1934-12-22">December 22, 1934</tei:date>
        </tei:dateline>
      </tei:closer>


    </tei:div>
