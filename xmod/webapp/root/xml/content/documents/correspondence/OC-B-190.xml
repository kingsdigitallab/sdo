      <dc:title>Handwritten postcard from Wilhelm Altmann to Schenker, postmarked June 15,
        1925</dc:title>
      <dcterms:created>1925-06-15T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2015-06-12</dcterms:dateSubmitted>
      <dc:description>Altmann thanks Schenker for the medallion; he will be unable to visit
        Galtür.</dc:description>
      <dc:subject>Musikfest; music festival; Plakette; medallion; Brief; letter; Krankheit; illness;
        Geldbeutel; funds; Gesundung; recovery </dc:subject>


      <marcrel:correspondent key="entity-000013">Wilhelm Altmann</marcrel:correspondent>
      <marcrel:correspondent key="entity-003292">Preussische
        Staatsbibliothek</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>
    </sdo:itemDesc>


    <tei:div type="transcription">
      <tei:opener>
        <tei:milestone unit="folio" n="recto"/>
