      <dc:title>Handwritten picture postcard from Hanna Deutsch to Schenker, dated February 3,
        1930</dc:title>

      <dcterms:created>1930-02-03T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2023-03-23</dcterms:dateSubmitted>
      <dc:description>Hanna Deutsch accepts Schenker’s choice of date for supper (February
        6).</dc:description>
      <dc:subject/>

      <marcrel:correspondent key="entity-000163">DeutschH</marcrel:correspondent>
      <marcrel:correspondent key="entity-000164">DeutschOE</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>

    </sdo:itemDesc>

    <tei:div type="transcription">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/><tei:lb/>
        <tei:fw type="header" rend="inline"><tei:note type="editorial" place="inline"
            >printed:</tei:note>
          <tei:handShift new="#printed"/><tei:hi rend="bold">P<tei:supplied reason="overstamped"
              >ostkarte</tei:supplied></tei:hi></tei:fw>
        <tei:lb/>
        <tei:note type="editorial" place="inline">picture: lake town with mountains, captioned:
          “Zell am See, Salzburg”</tei:note><tei:lb/>
        <tei:add resp="Post Office"><tei:handShift new="#unkPO"/>128</tei:add><tei:lb/>
        <tei:address>
          <tei:addrLine><tei:supplied reason="clarity">An:</tei:supplied>
            <tei:handShift new="#HD"/> Herrn Prof. D<tei:hi rend="supralinear">r.</tei:hi> Heinrich
            Schenker</tei:addrLine>
          <tei:addrLine rend="indent-30">Keilgasse 8</tei:addrLine>
          <tei:addrLine rend="indent-40">Wien III.</tei:addrLine>
        </tei:address>
        <tei:milestone unit="folio" n="verso"/>
        <tei:dateline rend="indent-60"><tei:handShift new="#HD"/><tei:date when="1930-02-03">3. II.
            30</tei:date>.</tei:dateline>
        <tei:salute>Sehr verehrter Herr <tei:rs type="person" key="entity-000632"
            >Professor</tei:rs>!<tei:note xml:id="r0001-fn01" type="editorial" place="foot">Receipt
            of this postcard is recorded in Schenker’s diary for February 3, 1930: “Von Deutsch (pn.
            K.): Donnerstag gilt.” (“From Deutsch (postcard sent by pneumatic mail): Thursday is
            agreed.”).</tei:note></tei:salute>
      </tei:opener>

      <tei:p rend="first">Ja – es geht Donnerstag Abend. Wir freuen uns sehr!</tei:p>

      <tei:closer>
        <tei:salute rend="indent-40">Herzliche Grüsse von Haus zu Haus! </tei:salute>
        <tei:salute rend="indent-60">Ihr ergebene</tei:salute>
        <tei:signed rend="indent-70"><tei:handShift new="#HD"/>
          <tei:rs key="entity-000163" type="person">Hannah Deutsch</tei:rs>
        </tei:signed>
      </tei:closer>

    </tei:div>


    <tei:div type="translation">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/><tei:lb/>
        <tei:fw type="header" rend="inline"><tei:note type="editorial" place="inline"
            >printed:</tei:note>
          <tei:handShift new="#printed"/><tei:hi rend="bold">P<tei:supplied reason="overstamped"
              >ostcard</tei:supplied></tei:hi></tei:fw>
        <tei:lb/>
        <tei:note type="editorial" place="inline">picture: lake town with mountains, captioned:
          “Zell am See, Salzburg”</tei:note><tei:lb/>
        <tei:add resp="Post Office"><tei:handShift new="#unkPO"/>128</tei:add><tei:lb/>
        <tei:address>
          <tei:addrLine><tei:supplied reason="clarity">To:</tei:supplied>
            <tei:handShift new="#HD"/>Prof. Heinrich Schenker</tei:addrLine>
          <tei:addrLine rend="indent-30">Keilgasse 8</tei:addrLine>
          <tei:addrLine rend="indent-40">Vienna III</tei:addrLine>
        </tei:address>
        <tei:milestone unit="folio" n="verso"/>
        <tei:dateline rend="indent-60"><tei:handShift new="#HD"/><tei:date when="1930-02-03"
            >February 3, 1930</tei:date></tei:dateline>
        <tei:salute>Much revered <tei:rs type="person" key="entity-000632"
            >Professor</tei:rs>,<tei:ptr corresp="#r0001-fn01" type="footnote"/></tei:salute>
      </tei:opener>

      <tei:p rend="first">Yes, Thursday evening is fine. We greatly look forward to it,</tei:p>

      <tei:closer>
        <tei:salute rend="indent-40">Cordial greetings from our house to yours,</tei:salute>
        <tei:salute rend="indent-60">Your devoted </tei:salute>
        <tei:signed rend="indent-70"><tei:handShift new="#HD"/>
          <tei:rs key="entity-000163" type="person">Hannah Deutsch</tei:rs>
        </tei:signed>
      </tei:closer>

    </tei:div>

