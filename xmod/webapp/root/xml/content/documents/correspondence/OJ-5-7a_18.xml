   <dc:title>Handwritten postcard from Schenker to Cube, dated September 6, 1928</dc:title>

   <dcterms:created>1928-09-06T12:00:00Z</dcterms:created>
   <dcterms:dateSubmitted>2006-07-18</dcterms:dateSubmitted>
