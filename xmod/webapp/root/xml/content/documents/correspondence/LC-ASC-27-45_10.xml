      <tei:opener>
        <tei:milestone unit="folio" n="recto"/>
        <tei:lb/>
        <tei:add resp="MV"><tei:handShift new="#MV"/>By <tei:hi rend="underline">Air
          Mail</tei:hi></tei:add><tei:lb/>
        <tei:fw type="envelope">
