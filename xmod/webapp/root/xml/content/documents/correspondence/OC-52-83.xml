      <dc:title>Typewritten letter from Hertzka (UE) to Schenker, dated March 20, 1912</dc:title>

      <dcterms:created>1912-03-20T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2023-01-08</dcterms:dateSubmitted>
      <dc:description>Hertzka suggests a fold-out for a particularly large music
        example.</dc:description>
      <dc:subject/>

      <marcrel:correspondent key="entity-002408">Universal Edition</marcrel:correspondent>
      <marcrel:correspondent key="entity-000356">Emil Hertzka</marcrel:correspondent>
