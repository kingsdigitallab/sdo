       <tei:handShift new="#HS"/>Schenker, Vienna</tei:addrLine>
      <tei:addrLine>III, Keilgasse 8</tei:addrLine>
     </tei:address>
     <tei:address>
      <tei:addrLine><tei:supplied reason="clarity">To:</tei:supplied> Prof. Felix v.
       Cube</tei:addrLine>
      <tei:addrLine rend="indent-15">Duisburg (Rhld)</tei:addrLine>
      <tei:addrLine rend="indent-40">Gellertstr. 2</tei:addrLine>
     </tei:address>
     <tei:fw type="postmark">|| 3 WIEN 40 | 6.VI.31. 19 | <tei:gap reason="illegible" extent="a few characters"/> ||</tei:fw>
    </tei:fw><tei:lb/>
    <tei:milestone unit="folio" n="verso"/><tei:lb/>
    <tei:salute>Dear Professor <tei:rs key="entity-000143" type="person">von Cube</tei:rs>,<tei:ptr corresp="#r0001-fn01" type="footnote"/></tei:salute>
   </tei:opener>

   <tei:p rend="first">I have for a long time been in your debt. I am now going as early as the end
    of next week to <tei:rs key="entity-002292" type="place"><tei:hi rend="underline">Galtür</tei:hi></tei:rs>. From there you will receive my letter (together with a "calling
    card" of <tei:rs key="entity-000612" type="person">Mozart</tei:rs>'s<tei:ptr corresp="#r0001-fn02" type="footnote"/> that Professor <tei:rs key="entity-000913" type="person">Violin</tei:rs> has already received, etc.).</tei:p>

   <tei:closer>
    <tei:salute rend="indent-05">With best greetings from me and my <tei:rs key="entity-000771" type="person">wife</tei:rs>,</tei:salute>
    <tei:salute rend="indent-50">Yours,</tei:salute>
    <tei:signed rend="indent-60"><tei:rs key="entity-000632" type="person">H.
     Schenker</tei:rs></tei:signed>
    <tei:dateline><tei:date when="1931-06-06">June 6, 1931</tei:date></tei:dateline>
   </tei:closer>

