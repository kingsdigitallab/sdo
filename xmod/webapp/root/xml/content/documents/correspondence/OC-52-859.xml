        <tei:milestone unit="folio" n="verso"/>
        <tei:dateline rend="indent-50"><tei:handShift new="#TPhb"/><tei:placeName>Vienna</tei:placeName>, <tei:date when="1929-12-30">December 30,
            1929</tei:date></tei:dateline><tei:lb/>
        <tei:byline>Hb</tei:byline>
        <tei:address>
          <tei:addrLine rend="indent-10">Dr. Heinrich Schenker,</tei:addrLine>
          <tei:addrLine rend="indent-70">
            <tei:hi rend="underline"><tei:hi rend="sperr">Vienna</tei:hi> III,</tei:hi>
          </tei:addrLine>
          <tei:addrLine rend="indent-70">Keilgasse 8</tei:addrLine>
        </tei:address>
        <tei:salute>Dear <tei:rs type="person" key="entity-000632">Professor</tei:rs>!<tei:ptr corresp="#r0001-fn01" type="footnote"/></tei:salute>
      </tei:opener>

      <tei:p rend="first">In accordance with the terms of our agreement,<tei:ptr corresp="#r0001-fn02" type="footnote"/> we have today transferred to you via the <tei:rs key="entity-003190" type="organization">Postal Savings Bank</tei:rs> the sum of <tei:hi rend="underline">1,250.‒</tei:hi> shillings for the <tei:rs key="entity-001753" type="work"><tei:title>Beethoven Sonatas</tei:title></tei:rs>, due on the <tei:date when="1929-12-31">31st inst</tei:date>. </tei:p>

      <tei:p rend="first">With best wishes for <tei:date when="1930">1930</tei:date>, we
        remain,</tei:p>


      <tei:closer>
        <tei:salute rend="indent-50">with kind regards,</tei:salute>
        <tei:signed rend="indent-50"><tei:handShift new="#stamp"/><tei:rs key="entity-002408" type="organization">Universal Edition &amp; Co.</tei:rs></tei:signed>
        <tei:signed rend="indent-60"><tei:handShift new="#HW"/><tei:rs key="entity-000968" type="person">Winter</tei:rs></tei:signed>
      </tei:closer>
    </tei:div>
