          </tei:address>
          <tei:address>
            <tei:addrLine><tei:supplied reason="clarity">An: </tei:supplied><tei:handShift new="#TPhb"/>Herrn Prof. Dr. Heinrich Schenker,</tei:addrLine>
            <tei:addrLine rend="indent-10"><tei:hi rend="sperr">Wien</tei:hi>, III.,</tei:addrLine>
            <tei:addrLine rend="indent-10">Keilgasse 8</tei:addrLine>
          </tei:address>
