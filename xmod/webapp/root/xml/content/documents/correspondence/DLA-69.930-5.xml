 <sdo:record ID="r0001">

  <sdo:itemDesc>
   <dcterms:isPartOf>Halm ~ HSchenker</dcterms:isPartOf>
   <dc:title>Handwritten postcard from Schenker to Halm, dated December 16, 1918</dc:title>
   <dc:type>Postcard</dc:type>
   <dcterms:created>1918-12-16T12:00:00Z</dcterms:created>
   <dcterms:dateSubmitted>2006-06-09</dcterms:dateSubmitted>
   <dc:description>Schenker holds out prospect of payment [from a trust that he administers] via the
    bank being authorized.</dc:description>
   <dc:subject>payment; bank; stipend; award</dc:subject>
   <!-- Add the EATS key attribute value to indicate the sender of the letter -->
