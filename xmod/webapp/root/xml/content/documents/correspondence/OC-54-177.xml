  <sdo:record ID="r0001">

    <sdo:itemDesc>
      <tei:rs role="correspondence" type="correspondence" key="entity-004414">DMV ~
        HSchenker</tei:rs>
      <tei:rs key="entity-004415" type="correspondence" role="correspondence">Demblin ~ HSchenker</tei:rs>
      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002744">Letter</tei:rs>


      <dc:title>Typed letter from August Demblin to Schenker, dated June 21, 1927</dc:title>

      <dcterms:created>1927-06-21T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2014-04-03</dcterms:dateSubmitted>
      <dc:description>Drei Masken Verlag confirm that Schenker's requests regarding the music
        examples for the second Meisterwerk volume have been honoured, and inform him that he will
        receive a complete copy of the proofs once the pagination has been completed.</dc:description>
      <dc:subject>request; Wunsch; pagination; Umbruch; music graph; Tafel; copy;
        Exemplar</dc:subject>

    <marcrel:correspondent key="entity-002627">DMV</marcrel:correspondent><marcrel:correspondent key="entity-004417">Demblin</marcrel:correspondent><marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient></sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
        <tei:address>

          <tei:addrLine><tei:handShift new="#printed"/>DREI MASKEN VERLAG AG.</tei:addrLine>
          <tei:addrLine>MÜNCHEN</tei:addrLine>
          <tei:addrLine>KAROLINENPLATZ 3</tei:addrLine>
          <tei:lb/>
        </tei:address>
        <tei:byline><tei:handShift new="#TPn"/><tei:hi rend="italic">N.</tei:hi></tei:byline>
        <tei:dateline rend="indent-60">
          <tei:placeName>München</tei:placeName>, den <tei:date when="1927-06-21">21. Juni
            1927</tei:date></tei:dateline><tei:lb/>
        <tei:address>

          <tei:addrLine rend="indent-20">Herrn Dr. Heinrich <tei:hi rend="sperr">Schenker</tei:hi></tei:addrLine>
          <tei:addrLine rend="indent-40">
            <tei:hi rend="double-underline"><tei:hi rend="sperr">Wien</tei:hi>
            III</tei:hi></tei:addrLine>
        </tei:address>
        <tei:lb/>
        <tei:lb/>
        <tei:salute>Sehr geehrter Herr Dr. <tei:rs key="entity-000632" type="person">Schenker</tei:rs>!<tei:note xml:id="r0001-fn01" type="editorial" place="foot">Receipt
            of this letter is not recorded in Schenker's diary.</tei:note>
        </tei:salute>
      </tei:opener>

      <tei:p rend="first">Wir bestätigen bestens dankend den Eingang Ihrer Schreiben vom <tei:date when="1927-06-15">15.</tei:date> und <tei:date when="1927-06-17">17.
          Juni</tei:date><tei:note xml:id="r0001-fn02" type="editorial" place="foot">Neither letter
          is known to survive.</tei:note> und haben uns daraufhin nochmals wegen Ihrer verschiedenen
        Wünsche mit der <tei:rs key="entity-003129" type="organization">Mandruck</tei:rs> in
        Verbindung gesetzt, die uns <tei:date when="1927-06-21">heute</tei:date> schreibt, dass Ihren sämtlichen Wünschen entsprochen
        werden wird, ferner, dass Sie nach Beendigung des Umbruchs ein komplettes Exemplar erhalten
        werden, welches Ihnen die Unterbringung der <tei:term>Tafel</tei:term>n
        veranschaulicht.</tei:p>

      <tei:closer>
        <tei:salute rend="indent-40">Mit vorzüglicher Hochachtung</tei:salute>
        <tei:signed rend="indent-50"><tei:handShift new="#stamp"/><tei:rs key="entity-002627" type="organization">Drei Masken Verlag A.-G.</tei:rs></tei:signed>
        <tei:signed rend="indent-50">ppa. <tei:handShift new="#AD"/><tei:rs key="entity-004417" type="person">Demblin</tei:rs></tei:signed>
      </tei:closer>

    </tei:div>



    <tei:div type="translation">

      <tei:opener>
        <tei:address>

          <tei:addrLine><tei:handShift new="#printed"/>DREI MASKEN VERLAG &amp; Co.</tei:addrLine>
          <tei:addrLine>MUNICH</tei:addrLine>
          <tei:addrLine>KAROLINENPLATZ 3</tei:addrLine>
          <tei:lb/>
        </tei:address>
        <tei:byline><tei:handShift new="#TPn"/><tei:hi rend="italic">N.</tei:hi></tei:byline>
        <tei:dateline rend="indent-60">
          <tei:placeName>Munich</tei:placeName>, <tei:date when="1927-06-21">June 21,
            1927</tei:date></tei:dateline><tei:lb/>
        <tei:address>

          <tei:addrLine rend="indent-20">Dr. Heinrich <tei:hi rend="sperr">Schenker</tei:hi></tei:addrLine>
          <tei:addrLine rend="indent-40">
            <tei:hi rend="double-underline"><tei:hi rend="sperr">Vienna</tei:hi>
            III</tei:hi></tei:addrLine>
        </tei:address>
        <tei:lb/>
        <tei:lb/>
        <tei:salute>Dear Dr. <tei:rs key="entity-000632" type="person">Schenker</tei:rs>!<tei:ptr corresp="#r0001-fn01" type="footnote"/>
        </tei:salute>
      </tei:opener>

      <tei:p rend="first">We most gratefully confirm the arrival of your letters of <tei:date when="1927-06-15">June 15</tei:date> and <tei:date when="1927-06-17">17</tei:date>,<tei:ptr corresp="#r0001-fn02" type="footnote"/> and have immediately
        contacted <tei:rs key="entity-003129" type="organization">Mandruck</tei:rs> once again
        concerning your various requests; they have informed us <tei:date when="1927-06-21">today</tei:date> that all of your requests have been honored and that, moreover, after
        the pagination has been completed you will receive a complete copy <tei:supplied reason="clarity">of the page proofs</tei:supplied>, which will clarify the accommodation
        of the music <tei:term>graph</tei:term>s for you.</tei:p>

      <tei:closer>
        <tei:salute rend="indent-40">With kind regards,</tei:salute>
        <tei:signed rend="indent-50"><tei:handShift new="#stamp"/><tei:rs key="entity-002627" type="organization">Drei Masken Verlag &amp; Co.</tei:rs></tei:signed>
        <tei:signed rend="indent-50">p.p. <tei:handShift new="#AD"/><tei:rs key="entity-004417" type="person">Demblin</tei:rs></tei:signed>
      </tei:closer>

    </tei:div>
