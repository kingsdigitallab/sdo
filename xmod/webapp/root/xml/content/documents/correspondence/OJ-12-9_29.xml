 <sdo:record ID="r0001">

  <sdo:itemDesc>
   <tei:rs role="correspondence" type="correspondence" key="entity-002733">Karpath ~
    HSchenker</tei:rs>
   <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002745">Postcard</tei:rs>

   <dc:title>Handwritten postcard from Karpath to Schenker, dated December 23, 1932</dc:title>

   <dcterms:created>1932-12-23T12:00:00Z</dcterms:created>
   <dcterms:dateSubmitted>2016-06-17</dcterms:dateSubmitted>
   <dc:description>Karpath calls urgently for the awaited letter from Furtwängler.</dc:description>
   <dc:subject>Brief; letter; Basis; Aktion; campaign</dc:subject>


   <marcrel:correspondent key="entity-000424">Karpath</marcrel:correspondent>
   <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>
  </sdo:itemDesc>


  <tei:div type="transcription">

   <tei:opener>
    <tei:milestone unit="folio" n="recto"/><tei:lb/>
    <tei:fw type="envelope">
     <tei:note type="editorial" place="inline">all in a decorated rule-frame</tei:note>
     <tei:fw type="header" rend="center"><tei:handShift new="#printed"/><tei:hi rend="bold"
       >Postkarte</tei:hi></tei:fw><tei:lb/>
     <tei:address>
      <tei:addrLine>Absender: <tei:handShift new="#stamp"/>HOFRAT LUDWIG KARPATH</tei:addrLine>
      <tei:addrLine>WIEN IV.,</tei:addrLine>
      <tei:addrLine>PRINZ EUGEN-STRASSE Nr. 16</tei:addrLine>
      <tei:addrLine>TELEPHON: U-49-0-61</tei:addrLine>
     </tei:address>
     <tei:address>
      <tei:addrLine><tei:supplied reason="clarity">An:</tei:supplied>
       <tei:handShift new="#LK"/>Herrn D<tei:hi rend="supralinear">r.</tei:hi> Heinrich
       Schenker</tei:addrLine>
      <tei:addrLine rend="indent-10">Wien III </tei:addrLine>
      <tei:addrLine rend="indent-10">Keilgasse 8</tei:addrLine>
     </tei:address><tei:lb/>
     <tei:fw type="postmark">|| 4 WIEN 50 | 24.XII.32.-8 | * 4e * ||</tei:fw>
    </tei:fw><tei:lb/><tei:lb/>
    <tei:milestone unit="folio" n="verso"/>
    <tei:dateline rend="indent-40"><tei:placeName><tei:handShift new="#LK"/>Wien</tei:placeName>,
      <tei:date when="1932-12-23">23/XII 1932</tei:date></tei:dateline>
    <tei:salute>L. <tei:rs key="entity-000632" type="person">F.</tei:rs><tei:note
      xml:id="r0001-fn01" type="editorial" place="foot">Receipt of this postcard is recorded at OJ
      4/6, p. 3799, December 24, 1932: "Von Karpath (K.): dankt; wo bleibt Furtwänglers Brief?"
      ("From Karpath (postcard): he thanks me; where is Furtwängler's letter?").
     </tei:note></tei:salute>
   </tei:opener>


   <tei:p rend="first">Alles recht schön und frohe Weihnachten! Wo aber bleibt der Brief <tei:rs
     key="entity-000268" type="person">Furtwängler</tei:rs>s, der die Basis der Aktion ist?</tei:p>

   <tei:closer>
    <tei:salute rend="indent-40">Herzlichste Grüße,</tei:salute>
    <tei:salute rend="indent-40">auch Ihrer l<tei:supplied reason="abbreviation"
      >ieben</tei:supplied>
     <tei:rs key="entity-000771" type="person">Frau</tei:rs></tei:salute>
    <tei:signed rend="indent-60"><tei:rs key="entity-000424" type="person"
     >Karpath</tei:rs></tei:signed>
   </tei:closer>

  </tei:div>


  <tei:div type="translation">

   <tei:opener>
    <tei:milestone unit="folio" n="recto"/><tei:lb/>
    <tei:fw type="envelope">
     <tei:note type="editorial" place="inline">all in a decorated rule-frame</tei:note>
     <tei:fw type="header" rend="center"><tei:handShift new="#printed"/><tei:hi rend="bold"
       >Postcard</tei:hi></tei:fw><tei:lb/>
     <tei:address>
      <tei:addrLine>From: <tei:handShift new="#stamp"/>COURT COUNSELOR LUDWIG KARPATH</tei:addrLine>
      <tei:addrLine>VIENNA IV,</tei:addrLine>
      <tei:addrLine>PRINZ EUGEN-STRASSE 16</tei:addrLine>
      <tei:addrLine>TELEPHONE: U-49-0-61</tei:addrLine>
     </tei:address>
     <tei:address>
      <tei:addrLine><tei:supplied reason="clarity">To:</tei:supplied>
       <tei:handShift new="#LK"/>Dr. Heinrich Schenker</tei:addrLine>
      <tei:addrLine rend="indent-10">Vienna III </tei:addrLine>
      <tei:addrLine rend="indent-10">Keilgasse 8</tei:addrLine>
     </tei:address><tei:lb/>
     <tei:fw type="postmark">|| 4 VIENNA 50 | 24.XII.32.-8 | * 4e * ||</tei:fw>
    </tei:fw><tei:lb/><tei:lb/>
    <tei:milestone unit="folio" n="verso"/>
    <tei:dateline rend="indent-40"><tei:placeName><tei:handShift new="#LK"/>Vienna</tei:placeName>,
      <tei:date when="1932-12-23">December 23, 1932</tei:date></tei:dateline>
    <tei:salute>Dear <tei:rs key="entity-000632" type="person">Friend</tei:rs>,<tei:ptr
      corresp="#r0001-fn01" type="footnote"/></tei:salute>
   </tei:opener>

   <tei:p rend="first">That's all very well ‒ and a happy Christmas! But where on earth is <tei:rs
     key="entity-000268" type="person">Furtwängler</tei:rs>'s letter, which is the basis of our
    campaign?</tei:p>

   <tei:closer>
    <tei:salute rend="indent-40">Most cordial greetings,</tei:salute>
    <tei:salute rend="indent-40">and to your dear <tei:rs key="entity-000771" type="person"
      >wife</tei:rs></tei:salute>
    <tei:signed rend="indent-60"><tei:rs key="entity-000424" type="person"
     >Karpath</tei:rs></tei:signed>
   </tei:closer>

  </tei:div>
