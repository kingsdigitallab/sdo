    <tei:address>
     <tei:addrLine rend="indent-50">
      <tei:persName>Prof. Heinr. Schenker, Esq.</tei:persName>
     </tei:addrLine>
     <tei:addrLine rend="indent-80">
      <tei:hi rend="underline sperr">Vienna</tei:hi>
     </tei:addrLine>
    </tei:address>
    <tei:salute rend="indent-50">Dear <tei:rs type="person" key="entity-000632"
     >Professor</tei:rs>,</tei:salute>
   </tei:opener>

   <tei:p rend="first">I should be greatly indebted to you if you would be so kind as to arrange for
    a note to appear on the Programmes of the Concerts Gärtner against the <tei:rs
     key="entity-001664" type="work"><tei:title level="m">Syrian Dances</tei:title></tei:rs> that
    these have just been published by my <tei:rs key="entity-006149" type="organization">publishing
     house</tei:rs>.<tei:ptr corresp="#r0001-fn01" type="footnote"/></tei:p>

   <tei:closer>
    <tei:salute rend="indent-10">With most grateful thanks in anticipation</tei:salute>
    <tei:salute rend="indent-50">Respectfully, your devoted</tei:salute>
    <tei:signed rend="indent-60"><tei:handShift new="#JW"/>Josef Weinberger</tei:signed>
   </tei:closer>


  </tei:div>
