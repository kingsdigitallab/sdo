          <tei:handShift new="#printed"/>Postcard</tei:fw>
        <tei:lb/><tei:note type="editorial" place="inline">top-left, picture captioned: <tei:rs key="entity-004609" type="place">St. Charles's Church</tei:rs>, <tei:rs key="entity-002484" type="place">Vienna</tei:rs></tei:note><tei:lb/>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine rend="indent-10"><tei:supplied reason="clarity">sender:</tei:supplied>
              <tei:handShift new="#HW"/>Dr. H Weisse</tei:addrLine>
            <tei:addrLine>Wattmanngasse 5</tei:addrLine>
            <tei:addrLine>Vienna XIII</tei:addrLine>
          </tei:address>
          <tei:lb/>by pneumatic mail<tei:lb/>
          <tei:address>
            <tei:addrLine><tei:supplied reason="clarity">to:</tei:supplied> Dr.</tei:addrLine>
            <tei:addrLine>Heinrich Schenker</tei:addrLine>
            <tei:addrLine rend="indent-10">Keilgasse 8</tei:addrLine>
            <tei:addrLine rend="indent-45">Vienna III</tei:addrLine>
          </tei:address>
          <tei:fw type="postmark">|| <tei:gap reason="illegible" extent="1" unit="lines"/> | 13. X.
