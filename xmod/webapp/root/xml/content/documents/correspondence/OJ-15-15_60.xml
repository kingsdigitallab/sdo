      <dc:title>Handwritten picture postcard from Weisse to Schenker, dated April 21,
        1931</dc:title>

      <dcterms:created>1931-04-21T10:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2018-10-04</dcterms:dateSubmitted>
      <dc:description>Weisse suggests possible dates and times for a meeting between himself and
        Schenker, without Furtwängler.</dc:description>
      <dc:subject/>

      <marcrel:correspondent key="entity-000951">Weisse</marcrel:correspondent>
