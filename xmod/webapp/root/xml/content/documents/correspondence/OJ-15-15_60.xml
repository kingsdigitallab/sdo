            <tei:addrLine>Wattmanng 5.</tei:addrLine>
          </tei:address>
          <tei:address>
            <tei:addrLine rend="indent-10"><tei:supplied reason="clarity">An:</tei:supplied> Herrn
                D<tei:hi rend="supralinear">r.</tei:hi> Heinrich Schenker</tei:addrLine>
            <tei:addrLine rend="indent-30">Keilgasse 8</tei:addrLine>
            <tei:addrLine rend="indent-40">Wien III.</tei:addrLine>
