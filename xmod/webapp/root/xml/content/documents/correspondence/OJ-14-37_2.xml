  <sdo:record ID="r0001">

    <sdo:itemDesc>
      <tei:rs role="correspondence" type="correspondence" key="entity-008062">SzalitP ~
        HSchenker</tei:rs>
      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-003332">calling card</tei:rs>

      <dc:title>Handwriten calling card from Paula Szalit to Schenker, undated</dc:title>
      <dcterms:created>1905-12-01T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2021-09-11</dcterms:dateSubmitted>
      <dc:description>Paul Szalit encloses for Schenker a ticket for her forthcoming
        concert.</dc:description>
      <dc:subject>Concert; Karte; ticket; besuchen; attend</dc:subject>


      <marcrel:correspondent key="entity-000878">Paula Szalit</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>
    </sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
        <tei:salute><tei:handShift new="#PSz"/>Lieber Herr <tei:rs type="person" key="entity-000632"
            >Doctor</tei:rs>!<tei:note xml:id="r0001-fn01" type="editorial" place="foot">Receipt of
            this letter is not recorded in Schenker’s diary.</tei:note></tei:salute>
      </tei:opener>

      <tei:p>Anbei sende ich Ihnen eine Karte für mein Concert und würde mich riesig freuen, wenn
        Sie es besuchen würden<tei:supplied reason="punctuation">.</tei:supplied><tei:note
          xml:id="r0001-fn02" type="editorial" place="foot">Unlike OJ 14/37, [1], this encloses one
          ticket, not two.</tei:note></tei:p>

      <tei:closer>
        <tei:salute><tei:milestone unit="folio" n="verso"/>Herzliche Grüsse</tei:salute>
        <tei:salute>Ihre ergebene</tei:salute>
        <tei:signed rend="indent-20"><tei:rs key="entity-000878" type="person">Paula
          Szalit</tei:rs></tei:signed><tei:lb/>
        <tei:address>
          <tei:addrLine><tei:supplied reason="omission">Wien</tei:supplied> VIII Laudongasse
              34A<tei:note xml:id="r0001-fn03" type="editorial" place="foot">I have yet to locate
              either her or her brother at this address in Lehmann’s street directory of
              Vienna.</tei:note></tei:addrLine>
          <tei:addrLine>II Stiege I Stock</tei:addrLine>
        </tei:address>
      </tei:closer>

    </tei:div>


    <tei:div type="translation">

      <tei:opener>
        <tei:salute><tei:handShift new="#PSz"/>Dear Dr. <tei:supplied><tei:rs type="person"
              key="entity-000632">Schenker</tei:rs></tei:supplied>,<tei:ptr corresp="r0001-fn01"
            type="footnote"/></tei:salute>
      </tei:opener>

      <tei:p>Enclosed, I send you a ticket for my concert, and would be hugely delighted if you
        would attend.<tei:ptr corresp="#r0001-fn02" type="footnote"/></tei:p>

      <tei:closer>
        <tei:salute><tei:milestone unit="folio" n="verso"/>Cordial greetings,</tei:salute>
        <tei:salute>your devoted</tei:salute>
        <tei:signed rend="indent-20"><tei:rs key="entity-000878" type="person">Paula
          Szalit</tei:rs></tei:signed><tei:lb/>
        <tei:address>
          <tei:addrLine><tei:supplied reason="omission">Vienna</tei:supplied> VIII, Laudongasse
              34A<tei:ptr corresp="#r0001-fn03" type="footnote"/></tei:addrLine>
          <tei:addrLine>2nd staircase, first floor</tei:addrLine>
        </tei:address>
      </tei:closer>


    </tei:div>
