      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002745">Postcard</tei:rs>


      <dc:title>Handwritten postcard from Hammer to Schenker, dated June 16, 1924</dc:title>

      <dcterms:created>1924-06-16T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2020-01-14</dcterms:dateSubmitted>
      <dc:description>Hammer invites Schenker to resume sitting for his portrait.</dc:description>
      <dc:subject>Stunde; hour</dc:subject>



      <marcrel:correspondent key="entity-000327">Viktor Hammer</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>
    </sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/>
        <tei:fw type="header" rend="center"><tei:handShift new="#printed"/><tei:hi rend="bold"
            >Postkarte</tei:hi></tei:fw><tei:lb/>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine>An <tei:handShift new="#VH"/>Herrn D<tei:hi rend="supralinear">r.</tei:hi>
              Heinrich Schenker</tei:addrLine>
            <tei:addrLine><tei:handShift new="#printed"/>in <tei:handShift new="#VH"/>
              III</tei:addrLine>
            <tei:addrLine>Keilgasse 8</tei:addrLine>
          </tei:address><tei:lb/>
          <tei:fw type="postmark">|| 4/4 <tei:supplied reason="smudged">WIEN 15</tei:supplied> | 16
              <tei:gap reason="illegible"/> | <tei:gap reason="illegible"/> ||</tei:fw><tei:lb/><tei:lb/>
          <tei:milestone unit="folio" n="verso"/>
        </tei:fw>
        <tei:dateline rend="indent-80"><tei:date when="1924-06-16">16. VI.
          24</tei:date></tei:dateline>
        <tei:salute><tei:handShift new="#VH"/>Lieber Herr Doktor <tei:rs type="person"
            key="entity-000632">Schenker</tei:rs><tei:note xml:id="r0001-fn01" type="editorial"
            place="foot">Receipt of this postcard is recorded in Schenker's diary for June 17, 1924
            (p. 2681): "Von Hammer (K.): erwartet mich Mittwoch." ("From Hammer (postcard): expects
            me Wednesday."). See also Hammer's postcard sent by express mail on June 17 (<tei:ref
              type="correspondence" cRef="OJ-11-36_16">OJ 11/36,
          [16]</tei:ref>).</tei:note></tei:salute>
      </tei:opener>

      <tei:p>Am <tei:date when="1924-06-18">Mittwoch</tei:date> nachmittags bin ich wieder zu Ihrer
        Verfügung. Können Sie kommen? Mir ist jede Stunde recht</tei:p>

      <tei:closer>
        <tei:salute rend="indent-50">Herzlichst grüsst</tei:salute>
        <tei:signed rend="indent-70"><tei:rs key="entity-000327" type="person"
          >Hammer</tei:rs></tei:signed>
      </tei:closer>

    </tei:div>


    <tei:div type="translation">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/>
        <tei:fw type="header" rend="center"><tei:handShift new="#printed"/><tei:hi rend="bold"
            >Postcard</tei:hi></tei:fw><tei:lb/>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine>To <tei:handShift new="#VH"/>Dr. Heinrich Schenker</tei:addrLine>
            <tei:addrLine><tei:handShift new="#printed"/>in <tei:supplied reason="location"
                >Vienna</tei:supplied>
              <tei:handShift new="#VH"/>III</tei:addrLine>
            <tei:addrLine>Keilgasse 8</tei:addrLine>
          </tei:address><tei:lb/>
          <tei:fw type="postmark">|| 4/4 <tei:supplied reason="smudged">VIENNA 15</tei:supplied> |
            16 <tei:gap reason="illegible"/> | <tei:gap reason="illegible"/> ||</tei:fw><tei:lb/><tei:lb/>
          <tei:milestone unit="folio" n="verso"/>
        </tei:fw>
        <tei:dateline rend="indent-80"><tei:date when="1924-06-16">June 16,
          1924</tei:date></tei:dateline>
        <tei:salute><tei:handShift new="#VH"/>Dear Dr. <tei:rs type="person" key="entity-000632"
            >Schenker</tei:rs><tei:ptr corresp="#r0001-fn01" type="footnote"/></tei:salute>
      </tei:opener>

      <tei:p>On <tei:date when="1924-06-18">Wednesday</tei:date> afternoon I am at your disposal
        again. Can you come? Any time is good for me.</tei:p>

      <tei:closer>
        <tei:salute rend="indent-50">Most cordial greetings from</tei:salute>
        <tei:signed rend="indent-70"><tei:rs key="entity-000327" type="person"
          >Hammer</tei:rs></tei:signed>
      </tei:closer>

    </tei:div>
