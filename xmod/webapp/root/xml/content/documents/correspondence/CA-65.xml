  <sdo:record ID="r0001">
    <sdo:itemDesc>
      <tei:rs role="correspondence" type="correspondence" key="entity-002724">Cotta ~
        HSchenker</tei:rs>
      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002744">Letter</tei:rs>


      <dc:title>Handwritten letter from Schenker to Cotta, dated March 8, 1907</dc:title>
      <dcterms:created>1907-03-08T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2017-07-03</dcterms:dateSubmitted>
      <dc:description>Schenker asks for a copy of Harmonielehre to be sent to Karl
        Goldmark.</dc:description>
      <dc:subject>Komponist; composer; Exemplar; copy; Rechnung; account</dc:subject>

      <marcrel:correspondent key="entity-000632">HSchenker</marcrel:correspondent>
      <marcrel:recipient key="entity-002405">Cotta</marcrel:recipient>
    </sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
        <tei:salute><tei:handShift new="#HS"/>Sehr geehrter <tei:rs type="organization"
            key="entity-002405">Herr</tei:rs>!<tei:note xml:id="r0001-fn01" type="editorial"
            place="foot">Writing of this letter is not recorded in Schenker's diary, nor is any
            indication of Goldmark's request.</tei:note></tei:salute>
      </tei:opener>

      <tei:p>Wollen Sie die Freundlichkeit haben, an die Adresse des Komponisten <tei:rs
          type="person" key="entity-003678"><tei:hi rend="lateinschr">Carl <tei:hi rend="underline"
              >Goldmark</tei:hi></tei:hi></tei:rs>, (<tei:hi rend="lateinschr">Wien</tei:hi>, VII.,
        <tei:hi rend="lateinschr">Neubaugasse</tei:hi> 49), der mich selbst daran bittet, ein Exemplar meines Buches auf meine eignen
        Rechnung senden zu wollen.</tei:p>

      <tei:closer>
        <tei:salute rend="indent-30">Mit ausgez. Hochachtung</tei:salute>
        <tei:signed rend="indent-40"><tei:rs type="person" key="entity-000632"><tei:hi
              rend="lateinschr">Heinrich Schenker</tei:hi></tei:rs></tei:signed>
        <tei:dateline><tei:date when="1907-03-08">8. 3. 07</tei:date></tei:dateline><tei:lb/>
        <tei:note type="editorial" place="inline">Annotations by Cotta staff members:</tei:note><tei:lb/>
        <tei:seg><tei:handShift new="#JGCunk1"/>/9.III 07</tei:seg><tei:lb/>
        <tei:seg><tei:handShift new="#JGCunk2"/>gebr., 12.50/9 35.</tei:seg><tei:lb/>
        <tei:seg>1, 200</tei:seg>
      </tei:closer>

    </tei:div>



    <tei:div type="translation">

      <tei:opener>
        <tei:salute><tei:handShift new="#HS"/>Dear <tei:rs type="organization" key="entity-002405"
            >Sir</tei:rs>,<tei:ptr corresp="#r0001-fn01" type="footnote"/></tei:salute>
      </tei:opener>

      <tei:p>Please would you kindly send a copy of my book to the address of the composer <tei:rs
          type="person" key="entity-003678">Karl <tei:hi rend="underline">Goldmark</tei:hi></tei:rs>
        (Vienna VII, Neubaugasse 49), who has personally asked me for it, to be charged to my
        account.</tei:p>

      <tei:closer>
        <tei:salute rend="indent-30">With kind regards,</tei:salute>
        <tei:signed rend="indent-40"><tei:rs type="person" key="entity-000632">Heinrich
            Schenker</tei:rs></tei:signed>
        <tei:dateline><tei:date when="1907-03-08">March 8, 1907</tei:date></tei:dateline><tei:lb/>
        <tei:note type="editorial" place="inline">Annotations by Cotta staff members:</tei:note><tei:lb/>
        <tei:seg><tei:handShift new="#JGCunk1"/>/9.III 07</tei:seg><tei:lb/>
        <tei:seg><tei:handShift new="#JGCunk2"/><tei:unclear reason="meaning_unclear"
          >gebr.</tei:unclear>, 12.50/9 35.</tei:seg><tei:lb/>
        <tei:seg>1, 200</tei:seg>
      </tei:closer>

    </tei:div>

