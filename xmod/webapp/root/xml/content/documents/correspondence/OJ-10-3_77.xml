      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002744">Letter</tei:rs>

      <dc:title>Handwritten letter from Hanna and Otto Erich Deutsch to Schenker, dated March 1,
        1928</dc:title>

      <dcterms:created>1928-03-01T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2023-02-20</dcterms:dateSubmitted>
      <dc:description>The Deutsches accept the Schenkers’ invitation for the afternoon of Wednesday,
        March 7.</dc:description>
      <dc:subject/>

      <marcrel:correspondent key="entity-000164">DeutschOE</marcrel:correspondent>
      <marcrel:correspondent key="entity-000163">DeutschH</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>
      <marcrel:recipient key="entity-000771">JSchenker</marcrel:recipient>
    </sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
        <tei:fw type="header" rend="inline">
          <tei:note type="editorial">printed letterhead:</tei:note>
          <tei:handShift new="#printed"/>FRAU HANNA DEUTSCH</tei:fw>
        <tei:dateline rend="indent-70"><tei:handShift new="#HD"/><tei:date when="1928-03-01">1.
            März. 28</tei:date>.</tei:dateline>
        <tei:salute>Sehr verehrte Herr <tei:rs key="entity-000632" type="person"
            >Professor</tei:rs>!<tei:note xml:id="r0001-fn01" type="editorial" place="foot">Receipt
            of this letter is recorded in Schenker’s diary for March 1, 1928: “Von Deutsch (Br.):
            werden kommen.” (“From Deutsch (letter): they will come.”).</tei:note></tei:salute>
      </tei:opener>

      <tei:p rend="first">Wir danken Ihnen sehr herzlich für die liebe Einladung und werden gerne
        Mittwoch Nach- <tei:pb n="2"/> mittag bei Ihnen erscheinen! </tei:p>

      <tei:p rend="first">Mit vielen schönen Grüssen für Sie und Ihre lb. <tei:rs type="person"
          key="entity-000771">Frau Gemahlin</tei:rs> – </tei:p>

      <tei:closer>
        <tei:salute rend="indent-30">Ihre ergebenen</tei:salute>
        <tei:signed rend="indent-40"><tei:rs key="entity-000163" type="person">Hanna </tei:rs> und
            <tei:rs key="entity-000164" type="person">Otto Erich Deutsch</tei:rs></tei:signed>
      </tei:closer>

    </tei:div>


    <tei:div type="translation">

      <tei:opener>
        <tei:fw type="header" rend="inline">
          <tei:note type="editorial">printed letterhead:</tei:note>
          <tei:handShift new="#printed"/>MRS. HANNA DEUTSCH</tei:fw>
        <tei:dateline rend="indent-70"><tei:handShift new="#HD"/><tei:date when="1928-03-01">March
            1, 1928</tei:date></tei:dateline>
        <tei:salute>Much revered <tei:rs key="entity-000632" type="person"
            >Professor</tei:rs>,<tei:ptr corresp="#r0001-fn01" type="footnote"/></tei:salute>
      </tei:opener>

      <tei:p rend="first">We thank you most cordially for your kind invitation and are delighted to
        appear at your place on Wednesday <tei:pb n="2"/> afternoon!</tei:p>

      <tei:p rend="first">With many best wishes for you and your dear <tei:rs type="person"
          key="entity-000771">wife</tei:rs>,</tei:p>

      <tei:closer>
        <tei:salute rend="indent-30">Your devoted</tei:salute>
        <tei:signed rend="indent-40"><tei:rs key="entity-000163" type="person">Hanna </tei:rs> and
            <tei:rs key="entity-000164" type="person">Otto Erich Deutsch</tei:rs></tei:signed>
      </tei:closer>


    </tei:div>

