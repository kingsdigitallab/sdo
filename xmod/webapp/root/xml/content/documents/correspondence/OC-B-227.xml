        <tei:address>
          <tei:addrLine rend="indent-20">Prof. Heinrich <tei:hi rend="sperr"
            >Schenker</tei:hi>,</tei:addrLine>
          <tei:addrLine rend="indent-70"><tei:hi rend="sperr">Vienna</tei:hi> III</tei:addrLine>
          <tei:addrLine rend="indent-65">Keilgasse 8</tei:addrLine>
        </tei:address><tei:lb/>
        <tei:salute rend="indent-20">Dear <tei:rs key="entity-000632" type="person"
            >Professor</tei:rs>,<tei:ptr corresp="#r0001-fn01" type="footnote"/></tei:salute>
      </tei:opener>

      <tei:p rend="first">My sincerest thanks for your kind communication via the express
          postcard.<tei:ptr corresp="#r0001-fn02" type="footnote"/> As it is, I have already sent
        the two <tei:term>sketchleaves</tei:term><tei:ptr corresp="#r0001-fn03" type="footnote"/>
        for reproduction and will take the liberty, dear <tei:rs key="entity-000632" type="person"
          >Professor</tei:rs>, of sending you a copy of the reproduction once it is ready.<tei:ptr
          corresp="#r0001-fn04" type="footnote"/></tei:p>

      <tei:closer>
        <tei:salute rend="indent-40">Once again, many thanks for your communication,</tei:salute>
        <tei:salute rend="indent-40">With the highest expression of regard,</tei:salute>
        <tei:salute rend="indent-80">Most truly yours,</tei:salute>
        <tei:signed rend="indent-70"><tei:handShift new="#VAH"/><tei:rs key="entity-000345"
            type="person">V A Heck</tei:rs></tei:signed>
      </tei:closer>

