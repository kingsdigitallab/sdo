  <sdo:record ID="r0001">
    <sdo:itemDesc>
      <tei:rs role="correspondence" type="correspondence" key="entity-002724">Cotta ~
        HSchenker</tei:rs>
      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002745">Postcard</tei:rs>


      <dc:title>Stenographically handwritten postcard from Cotta to Schenker, dated October 27,
        1910</dc:title>
      <dcterms:created>1910-10-27T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2019-12-17</dcterms:dateSubmitted>
      <dc:description>Cotta has sent a complimentary copy of Harmonielehre to Robert
        Fuchs.</dc:description>
      <dc:subject>Exemplar; copy; Werk; work; Konto; account</dc:subject>

      <marcrel:correspondent key="entity-002405">Cotta</marcrel:correspondent>
      <marcrel:correspondent key="entity-006241">Heinrich Kurz</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>
    </sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/>
        <tei:address>
          <tei:addrLine><tei:handShift new="#printed"/>J. G. Cotta’sche Buchhandlung Nachfolger in
            Stuttgart</tei:addrLine>
        </tei:address>
        <tei:fw type="header" rend="center"><tei:hi rend="bold underline"
          >POSTKARTE</tei:hi></tei:fw><tei:lb/>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine>An: <tei:handShift new="#JGCsten"/>Herrn <tei:hi rend="lateinschr">Dr.
                Heinrich Schenker Hochwohlgeboren</tei:hi></tei:addrLine>
            <tei:addrLine rend="indent-40"><tei:handShift new="#printed"/>in <tei:handShift
                new="#JGCsten"/><tei:hi rend="lateinschr underline">Wien III</tei:hi></tei:addrLine>
            <tei:addrLine rend="inde-50">Reisnerstr 38.</tei:addrLine>
          </tei:address><tei:lb/>
          <tei:fw type="postmark">|| STUTTGART NC3 | 28 OCT 10 | 7‒8N ||</tei:fw><tei:lb/><tei:lb/>
        </tei:fw>
        <tei:milestone unit="folio" n="verso"/>
        <tei:address>
          <tei:addrLine><tei:handShift new="#JGCsten"/>Herrn <tei:hi rend="lateinschr underline">Dr.
              Heinrich Schenker Wien III</tei:hi></tei:addrLine>
        </tei:address>
        <tei:salute>Sehr geehrter Herr <tei:rs type="person" key="entity-000632"
          >Doktor</tei:rs>!</tei:salute>
      </tei:opener>

      <tei:p rend="first">Infolge Ihrer gefl. Zuschrift vom <tei:date when="1910-10-25">25.
          ds.</tei:date><tei:note xml:id="r0001-fn01" type="editorial" place="foot">= <tei:ref
            type="correspondence" cRef="CA-139">CA 139</tei:ref>.</tei:note> haben wir, Ihrem
        Wunsche gerne entsprechend, ein Exemplar des <tei:rs type="work" key="entity-001724">ersten
          Band</tei:rs>es Ihres <tei:rs type="work" key="entity-001723">Werk</tei:rs>es an Herrn
          <tei:rs type="person" key="entity-000265"><tei:hi rend="lateinschr">Robert
          Fuchs</tei:hi></tei:rs> K. K. Professor in <tei:hi rend="lateinschr">Wien</tei:hi> gesandt
        und uns erlaubt, den Betrag Ihrem Konto zu belasten.</tei:p>


      <tei:closer>
        <tei:salute rend="indent-40">Mit vorzüglicher Hochachtung</tei:salute>
        <tei:signed rend="indent-40"><tei:handShift new="#stamped"/>ppa. <tei:rs type="organization"
            key="entity-002405">J.G. Cotta’sche Buchhandlung Nachfolger</tei:rs></tei:signed>
        <tei:signed rend="indent-60"><tei:handShift new="#HK"/><tei:rs type="person"
            key="entity-006241">H Kurz</tei:rs></tei:signed><tei:lb/>
        <tei:dateline><tei:placeName>Stuttgart</tei:placeName>, den <tei:date when="1910-10-27">27.
            Okt. 1910</tei:date></tei:dateline>
      </tei:closer>

    </tei:div>



    <tei:div type="translation">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/>
        <tei:address>
          <tei:addrLine><tei:handShift new="#printed"/>Heirs to the J. G. Cotta Book Dealership in
            Stuttgart</tei:addrLine>
        </tei:address>
        <tei:fw type="header" rend="center"><tei:hi rend="bold underline"/>POSTCARD</tei:fw>
        <tei:fw type="envelope"><tei:lb/>
          <tei:address>
            <tei:addrLine>To: <tei:handShift new="#JGCsten"/>Dr. Heinrich Schenker,
              Esq.</tei:addrLine>
            <tei:addrLine rend="indent-40"><tei:handShift new="#printed"/>in <tei:handShift
                new="#JGCsten"/><tei:hi rend="underline">Vienna III</tei:hi></tei:addrLine>
            <tei:addrLine rend="inde-50">Reisnerstraße 38</tei:addrLine>
          </tei:address><tei:lb/>
          <tei:fw type="postmark">|| STUTTGART NC3 | 28 OCT 10 | 7‒8N ||</tei:fw><tei:lb/><tei:lb/>
        </tei:fw>
        <tei:milestone unit="folio" n="verso"/>
        <tei:address>
          <tei:addrLine><tei:handShift new="#JGCsten"/><tei:hi rend="underline">Dr. Heinrich
              Schenker Vienna III</tei:hi></tei:addrLine>
        </tei:address>
        <tei:salute>Dear Dr. <tei:supplied reason="identity"><tei:rs type="person"
              key="entity-000632">Schenker</tei:rs>,</tei:supplied></tei:salute>
      </tei:opener>

      <tei:p rend="first">Pursuant to your esteemed postcard of the <tei:date when="1910-10-25">25th
          of this month</tei:date>,<tei:ptr corresp="#r0001-fn01" type="footnote"/> we have, in
        accordance with your wishes, sent a copy of the <tei:rs type="work" key="entity-001724"
          >first volume</tei:rs> of your <tei:rs type="work" key="entity-001723">work</tei:rs> to
          <tei:rs type="person" key="entity-000265">Robert Fuchs</tei:rs>, Imperial-Royal Professor
        in Vienna, and take the liberty of charging the amount to your account.</tei:p>


      <tei:closer>
        <tei:salute rend="indent-40">With kind regards,</tei:salute>
        <tei:signed rend="indent-40"><tei:handShift new="#stamped"/>p.p. <tei:rs type="organization"
            key="entity-002405">Heirs to the J. G. Cotta Book Dealership</tei:rs></tei:signed>
        <tei:signed rend="indent-60"><tei:handShift new="#HK"/><tei:rs type="person"
            key="entity-006241">H Kurz</tei:rs></tei:signed><tei:lb/>
        <tei:dateline><tei:placeName>Stuttgart</tei:placeName>, <tei:date when="1910-10-27">October
            27, 1910</tei:date></tei:dateline>
      </tei:closer>

    </tei:div>

