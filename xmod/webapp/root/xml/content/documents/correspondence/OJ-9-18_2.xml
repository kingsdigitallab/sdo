  <tei:div type="translation">

   <tei:opener>
    <tei:note type="editorial" place="inline">printed letterhead:</tei:note>
    <tei:address>
     <tei:addrLine><tei:handShift new="#printed"/>THE DIRECTOR</tei:addrLine>
     <tei:addrLine>OF THE</tei:addrLine>
     <tei:addrLine>IMP.-ROYAL ACADEMY FOR MUSIC AND PERFORMING ART</tei:addrLine>
    </tei:address><tei:lb/>
    <tei:dateline rend="indent-50"><tei:handShift new="#TPamdk"
      /><tei:placeName>Vienna</tei:placeName>, <tei:date when="1911-01-14">January 14,
      1911</tei:date></tei:dateline><tei:lb/>
    <tei:salute rend="indent-10">Dear <tei:rs key="entity-000632" type="person"
      >Sir</tei:rs>,<tei:ptr corresp="#r0001-fn01" type="footnote"/></tei:salute>
   </tei:opener>

   <tei:p rend="first">Yesterday I had every intention of hearing your chamber music
     concert,<tei:ptr corresp="#r0001-fn02" type="footnote"/> to which I had really been looking
    forward. However, an indisposition obliged me to stay home the entire day, so I was compelled to
    forgo it.</tei:p>

   <tei:closer>
    <tei:salute rend="indent-20">As ever with kind regards,</tei:salute>
    <tei:salute rend="indent-70">Your devoted</tei:salute>
    <tei:signed rend="indent-40"><tei:handShift new="#WB"/><tei:rs key="entity-000089" type="person"
      >Wilhelm Bopp</tei:rs></tei:signed><tei:lb/><tei:lb/>
   </tei:closer>

