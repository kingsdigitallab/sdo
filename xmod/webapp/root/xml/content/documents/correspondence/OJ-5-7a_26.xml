     <tei:handShift new="#printed"/>Postkarte</tei:fw>
    <tei:lb/><tei:note type="editorial" place="inline">top-left, picture captioned: Pfannkirchen[?],
     Oberöster.</tei:note>
    <tei:fw type="envelope">
     <tei:address>
      <tei:addrLine rend="indent-05"><tei:supplied reason="clarity">Absender:</tei:supplied>
       <tei:handShift new="#HS"/><tei:hi rend="lateinschr">Schenker</tei:hi></tei:addrLine>
