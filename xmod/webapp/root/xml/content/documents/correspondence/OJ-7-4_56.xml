   <dc:title>Handwritten postcard from Schenker to Moriz Violin, dated December 3, 1909</dc:title>

   <dcterms:created>1909-12-03T12:00:00Z</dcterms:created>
   <dcterms:dateSubmitted>2018-05-23</dcterms:dateSubmitted>
