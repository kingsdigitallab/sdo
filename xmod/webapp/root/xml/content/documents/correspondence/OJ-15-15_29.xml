      <dc:title>Handwritten postcard from Weisse to Schenker, dated April 13, 1928</dc:title>

      <dcterms:created>1928-04-13T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2013-09-08</dcterms:dateSubmitted>
      <dc:description>Recovering from illness, Weisse is unable to join the Schenkers for lunch,
        suggests instead seeing Schenker on Sunday morning.</dc:description>
      <dc:subject/>

    </sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/><tei:lb/>
        <tei:fw type="header" rend="inline"><tei:note type="editorial" place="inline">printed:</tei:note>
          <tei:handShift new="#printed"/><tei:supplied reason="covered">Post</tei:supplied>k<tei:supplied reason="covered">arte</tei:supplied></tei:fw>
        <tei:lb/><tei:note type="editorial" place="inline">top-left, picture captioned: <tei:rs key="entity-004913" type="place">Heiligenblut</tei:rs>, <tei:rs key="entity-002344" type="place">Kärnten</tei:rs></tei:note><tei:lb/>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine><tei:supplied reason="clarity">Absender:</tei:supplied>
              <tei:handShift new="#HW"/>Dr H. Weisse, Wien XIII. Wattmanng. 5</tei:addrLine>
          </tei:address>
          <tei:address>
            <tei:addrLine><tei:supplied reason="clarity">An:</tei:supplied> Herrn</tei:addrLine>
            <tei:addrLine rend="indent-10">D<tei:hi rend="supralinear">r</tei:hi>. Heinrich
