      <tei:addrLine><tei:supplied reason="clarity">An:</tei:supplied> H</tei:addrLine>
      <tei:addrLine>Prof <tei:hi rend="lateinschr">Felix v. Cube</tei:hi></tei:addrLine>
      <tei:addrLine rend="indent-15"><tei:hi rend="lateinschr">Duisburg
       (Rhld)</tei:hi></tei:addrLine>
      <tei:addrLine rend="indent-35"><tei:hi rend="lateinschr">Pulverweg</tei:hi></tei:addrLine>
      <tei:addrLine rend="indent-55">41</tei:addrLine>
     </tei:address>
     <tei:fw type="postmark">|| GALTÜR | -7.VII.<tei:gap reason="illegible"
