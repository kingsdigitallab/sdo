  <sdo:record ID="r0001">
    <sdo:itemDesc>
      <tei:rs role="correspondence" type="correspondence" key="entity-002724">Cotta ~
        HSchenker</tei:rs>
      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002744">Letter</tei:rs>


      <dc:title>Stenographically handwritten letter from Cotta to Schenker, dated December 12,
        1905</dc:title>
      <dcterms:created>1905-12-12T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2017-06-23</dcterms:dateSubmitted>
      <dc:description>Cotta sends Schenker a copy of the contract with their signature; they
        estimate publication at c.March 1906.</dc:description>
      <dc:subject>Vertragsexemplar; contract copy; Duplikat; duplicate; Manuskript; manuscript;
        Setz; typesetting; Drucklegung; printing; Werk; book; Ausgabe; publication</dc:subject>

      <marcrel:correspondent key="entity-002405">Cotta</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>
    </sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
        <tei:address>
          <tei:addrLine><tei:handShift new="#printed"/><tei:hi rend="bold">J. G. COTTA’SCHE
              BUCHHANDLUNG NACHFOLGER</tei:hi></tei:addrLine>
          <tei:addrLine rend="indent-40"><tei:hi rend="bold">STUTTGART UND
            BERLIN</tei:hi></tei:addrLine>
        </tei:address>
        <tei:dateline rend="indent-50">STUTTGART, den <tei:handShift new="#JGCsten"/><tei:date
            when="1905-12-12">12. Dezb<tei:hi rend="supralinear">r</tei:hi>
            <tei:handShift new="#printed"/>190<tei:handShift new="#JGCsten"
          />5</tei:date>.</tei:dateline><tei:lb/>
        <tei:address>

          <tei:addrLine>Herrn <tei:hi rend="lateinschr">D<tei:hi rend="supralinear">r</tei:hi>
              Heinrich Schenker <tei:hi rend="underline">Wien III</tei:hi></tei:hi></tei:addrLine>
          <tei:addrLine rend="indent-70">Reisnerstr. 38</tei:addrLine>
        </tei:address>
        <tei:salute rend="indent-20">Sehr geehrter <tei:rs type="person" key="entity-000632"
            >Herr</tei:rs>!<tei:note xml:id="r0001-fn01" type="editorial" place="foot">Cotta's
            carbon copy survives as CA 10.</tei:note></tei:salute>
      </tei:opener>

      <tei:p rend="first">Im Besitz Ihrer gef. Zuschrift vom <tei:date when="1905-12-10">10.
          d.M.</tei:date> und des von Ihnen vollzogenen Vertragsexemplars<tei:note
          xml:id="r0001-fn02" type="editorial" place="foot">Letter: <tei:ref type="correspondence"
            cRef="CA-9">CA 9</tei:ref>, December 10; contract: <tei:ref type="correspondence"
            cRef="CA_205">CA [205]</tei:ref>, December 5, 1905.</tei:note> beehren wir uns, Ihnen
        anbei Duplikat mit unserer Unterschrift zu überreichen.<tei:note xml:id="r0001-fn03"
          type="editorial" place="foot">The signed contract is not known to survive.</tei:note> –
        Wir geben das Manuskript nun zum Setz und hoffen, die Drucklegung so fördern zu können, daß
        Ihr Werk etwa Anfang <tei:date when="1906-03"><tei:hi rend="lateinschr">Maerz
          1906</tei:hi></tei:date> zur Ausgabe gelangen kann.</tei:p>

      <tei:closer>
        <tei:salute rend="indent-50">Mit vorzüglicher Hochachtung</tei:salute>
        <tei:signed rend="indent-30"><tei:handShift new="#JGC"/><tei:rs type="organization"
            key="entity-002405">J.G. Cotta’sche Buchhandlung Nachfolger</tei:rs></tei:signed>
      </tei:closer>

    </tei:div>



    <tei:div type="translation">

      <tei:opener>
        <tei:address>
          <tei:addrLine><tei:handShift new="#printed"/><tei:hi rend="bold">SUCCESSORS TO J. G.
              COTTA'S BOOK DEALERSHIP</tei:hi></tei:addrLine>
          <tei:addrLine rend="indent-40"><tei:hi rend="bold">STUTTGART AND
            BERLIN</tei:hi></tei:addrLine>
        </tei:address>
        <tei:dateline rend="indent-50">STUTTGART, <tei:handShift new="#JGCsten"/><tei:date
            when="1905-12-12">December 12, <tei:handShift new="#printed"/>190<tei:handShift
              new="#JGCsten"/>5</tei:date></tei:dateline><tei:lb/>
        <tei:address>

          <tei:addrLine>Dr. Heinrich Schenker <tei:hi rend="underline">Vienna
            III</tei:hi></tei:addrLine>
          <tei:addrLine rend="indent-70">Reisnerstraße 38</tei:addrLine>
        </tei:address>
        <tei:salute rend="indent-20">Dear <tei:rs type="person" key="entity-000632"
            >Sir</tei:rs>,<tei:ptr corresp="#r0001-fn01" type="footnote"/></tei:salute>
      </tei:opener>

      <tei:p rend="first">In receipt of your esteemed letter of the <tei:date when="1905-12-10">10th
          of this month</tei:date> and the copy of the contract completed by you,<tei:ptr
          corresp="#r0001-fn02" type="footnote"/> we have the honor of sending you herewith a
        duplicate with our signature.<tei:ptr corresp="#r0001-fn03" type="footnote"/> – We are now
        handing the manuscript over for setting, and hope to expedite the printing such that your
        book can appear around the beginning of <tei:date when="1906-03">March
        1906</tei:date>.</tei:p>

      <tei:closer>
        <tei:salute rend="indent-50">With kind regards,</tei:salute>
        <tei:signed rend="indent-30"><tei:handShift new="#JGC"/><tei:rs type="organization"
            key="entity-002405">Successors to J. G. Cotta’s Book Dealership</tei:rs></tei:signed>
      </tei:closer>

    </tei:div>

  </sdo:record>
