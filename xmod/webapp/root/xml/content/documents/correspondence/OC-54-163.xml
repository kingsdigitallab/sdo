  <sdo:record ID="r0001">

    <sdo:itemDesc>
      <tei:rs role="correspondence" type="correspondence" key="entity-004414">DMV ~
        HSchenker</tei:rs>
      <tei:rs key="entity-004415" type="correspondence">Demblin ~ HSchenker</tei:rs>
      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002744">Letter</tei:rs>


      <dc:title>Typed letter from August Demblin (DMV) to Schenker, dated May 20, 1927</dc:title>

      <dcterms:created>1927-05-20T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2014-04-02</dcterms:dateSubmitted>
      <dc:description>Drei Masken Verlag notify Schenker that they have enclosed a set of amended
        proofs for the second Meisterwerk yearbook.</dc:description>
      <dc:subject>enclosure; Anlage; printout; Abzug; correction; Korrektur</dc:subject>

    </sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
        <tei:address>

          <tei:addrLine><tei:handShift new="#printed"/>DREI MASKEN VERLAG AG.</tei:addrLine>
          <tei:addrLine>MÜNCHEN</tei:addrLine>
          <tei:addrLine>KAROLINENPLATZ 3</tei:addrLine>
          <tei:lb/>
        </tei:address>
        <tei:byline><tei:handShift new="#TPe"/><tei:hi rend="italic">E</tei:hi></tei:byline>
        <tei:dateline rend="indent-60">
          <tei:placeName>Muenchen</tei:placeName>, den <tei:date when="1927-05-20">20. Mai
            1927</tei:date></tei:dateline><tei:lb/>
        <tei:address>

          <tei:addrLine>Herrn Dr. Heinrich Schenker,</tei:addrLine>
          <tei:addrLine rend="indent-50">
            <tei:hi rend="double-underline">Wien III/Keilgasse 8</tei:hi></tei:addrLine>
        </tei:address>
        <tei:lb/>
        <tei:lb/>
        <tei:salute>Sehr geehrter Herr <tei:rs key="entity-000632" type="person"
            >Doktor</tei:rs>!<tei:note xml:id="r0001-fn01" type="editorial" place="foot">Receipt of
            this letter is recorded in Schenker's diary at OJ 3/9, p. 3069, May 23, 1927:
            "Vom Verlag (Br.): Fig. 11 u. 29 u. T. 28 – alles ist gut." ("From the publisher
            (letter): Figs. 11 and 29 and bar 28 – everything is in order.").</tei:note>
        </tei:salute>
      </tei:opener>

      <tei:p rend="first">In der Anlage geben wir Ihnen ein Originalschreiben der <tei:rs
          key="entity-003129" type="organization">Mandruck A.G.</tei:rs> sowie 3 neue Abzüge und
        bitten Sie, von dem Brief gefl. Kenntnis nehmen zu wollen. Wir hoffen, dass die Korrekturen
        zu Ihrer vollsten Zufriedenheit ausgeführt wurden und empfehlen uns</tei:p>

      <tei:closer>
        <tei:salute rend="indent-20">mit dem Ausdruck vorzüglicher Hochachtung</tei:salute>
        <tei:signed rend="indent-40"><tei:handShift new="#stamp"/><tei:rs key="entity-002627"
            type="organization">Drei Masken Verlag A.-G.</tei:rs></tei:signed>
        <tei:signed rend="indent-40">ppa. <tei:handShift new="#AD"/><tei:rs key="entity-004417"
            type="person">Demblin</tei:rs></tei:signed>
      </tei:closer>

      <tei:postscript><tei:lb/><tei:lb/>
        <tei:p><tei:handShift new="#TPe"/><tei:hi rend="underline">4 Anlg.</tei:hi></tei:p>
      </tei:postscript>

    </tei:div>



    <tei:div type="translation">

      <tei:opener>
        <tei:address>

          <tei:addrLine><tei:handShift new="#printed"/>DREI MASKEN VERLAG &amp; Co.</tei:addrLine>
          <tei:addrLine>MUNICH</tei:addrLine>
          <tei:addrLine>KAROLINENPLATZ 3</tei:addrLine>
          <tei:lb/>
        </tei:address>
        <tei:byline><tei:handShift new="#TPe"/><tei:hi rend="italic">E</tei:hi></tei:byline>
        <tei:dateline rend="indent-60">
          <tei:placeName>Munich</tei:placeName>, <tei:date when="1927-05-20">May 20,
          1927</tei:date></tei:dateline><tei:lb/>
        <tei:address>

          <tei:addrLine>Dr. Heinrich Schenker,</tei:addrLine>
          <tei:addrLine rend="indent-50">
            <tei:hi rend="double-underline">Vienna III/Keilgasse 8</tei:hi></tei:addrLine>
        </tei:address>
        <tei:lb/>
        <tei:lb/>
        <tei:salute>Dear Dr. <tei:rs key="entity-000632" type="person"><tei:supplied
              reason="identity">Schenker</tei:supplied></tei:rs>!<tei:ptr corresp="#r0001-fn01"
            type="footnote"/>
        </tei:salute>
      </tei:opener>

      <tei:p rend="first">Among the enclosures, we give you an original letter from <tei:rs
          key="entity-003129" type="organization">Mandruck &amp; Co.</tei:rs>, together with three new
        printouts, and request that you kindly make a note of the <tei:supplied reason="clarity"
          >contents of the</tei:supplied> letter. We hope that the corrections have been made to
        your complete satisfaction, and remain</tei:p>

      <tei:closer>
        <tei:salute rend="indent-20">with the expression of our kindest regards,</tei:salute>
        <tei:signed rend="indent-40"><tei:handShift new="#stamp"/><tei:rs key="entity-002627"
            type="organization">Drei Masken Verlag &amp; Co.</tei:rs></tei:signed>
        <tei:signed rend="indent-40">p.p. <tei:handShift new="#AD"/><tei:rs key="entity-004417"
            type="person">Demblin</tei:rs></tei:signed>
      </tei:closer>

      <tei:postscript><tei:lb/><tei:lb/>
        <tei:p><tei:handShift new="#TPe"/><tei:hi rend="underline">4 enclosures</tei:hi></tei:p>
      </tei:postscript>


    </tei:div>
