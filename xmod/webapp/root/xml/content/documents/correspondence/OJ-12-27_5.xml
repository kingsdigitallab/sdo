  <sdo:record ID="r0001">
    <sdo:itemDesc>
      <tei:rs role="correspondence" type="correspondence" key="entity-002724">Cotta ~
        HSchenker</tei:rs>
      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002744">Letter</tei:rs>


      <dc:title>Stenographically handwritten letter from Cotta to Schenker, dated September 5,
        1907</dc:title>
      <dcterms:created>1907-09-05T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2017-05-14</dcterms:dateSubmitted>
      <dc:description>Cotta encloses 1906 sales report for Harmonielehre.</dc:description>
      <dc:subject>Absatzbericht; sales report; Einnahmen; earnings; Betrag; sum; Nota;
        note</dc:subject>

      <marcrel:correspondent key="entity-002405">Cotta</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>
    </sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
        <tei:address>
          <tei:addrLine><tei:handShift new="#printed"/><tei:hi rend="bold">J. G. COTTA’SCHE
              BUCHHANDLUNG NACHFOLGER</tei:hi></tei:addrLine>
          <tei:addrLine rend="indent-40"><tei:hi rend="bold">STUTTGART UND
            BERLIN</tei:hi></tei:addrLine>
        </tei:address><tei:lb/>
        <tei:dateline rend="indent-50">STUTTGART, den <tei:handShift new="#JGCsten"/><tei:date
            when="1907-09-05">5. September <tei:handShift new="#printed"/>190<tei:handShift
              new="#JGCsten"/>7</tei:date>.</tei:dateline><tei:lb/>
        <tei:address>
          <tei:addrLine rend="indent-20"><tei:hi rend="lateinschr">Herrn Dr. Heinrich
              Schenker</tei:hi></tei:addrLine>
          <tei:addrLine rend="indent-50"><tei:hi rend="underline"><tei:hi rend="lateinschr">Wien
                III</tei:hi>., Reisnerstraße 38.</tei:hi></tei:addrLine>
        </tei:address><tei:lb/>
        <tei:salute>Sehr geehrter Herr <tei:rs type="person" key="entity-000632"
            >Doktor</tei:rs>!<tei:note xml:id="r0001-fn01" type="editorial" place="foot">Receipt of
            this letter is recorded in Schenker's diary at OJ 1/6, p. 48, September 7, 1907: "von
              <tei:hi rend="lateinschr">Cotta</tei:hi> langen als erste Abrechnung 307.70 MK. = 181
            Fl. 13 ganz unerwartet an." ("From Cotta the first statement of account arrives: 307.70
            Marks = 181.13 Florins, entirely unexpected.").</tei:note></tei:salute>
      </tei:opener>

      <tei:p rend="first"> Wir beehren uns, Ihnen beiliegend Absatzbericht pro <tei:hi
          rend="lateinschr">1906</tei:hi> über <tei:rs type="work" key="entity-001724">Bd. I Ihrer
              <tei:title><tei:hi rend="lateinschr">Neuen musikalischen Theorien u.
              Phantasien</tei:hi></tei:title></tei:rs><tei:note xml:id="r0001-fn02" type="editorial"
          place="foot">= <tei:ref type="correspondence" cRef="OJ-9-32_24">OJ 9/32,
          [24]</tei:ref>.</tei:note> zu übersenden, wonach Ihnen (lt. Vertrag) ¾ der Einnahmen = M.
        317.55 zukommen. Wir erlauben uns, hiervon den Betrag der mitfolgenden Nota de M.9.85 in
        Abzug zu bringen und lassen den Rest mit <tei:hi rend="underline">M.307.70</tei:hi>
        gleichzeitig pr. Postanweisung folgen. </tei:p>


      <tei:closer>
        <tei:salute>Mit vorzüglicher Hochachtung</tei:salute>
        <tei:signed>ppa <tei:handShift new="#stamped"/><tei:rs type="organization"
            key="entity-002405">J.G. Cotta’sche Buchhandlung Nachfolger</tei:rs></tei:signed>
        <tei:signed><tei:handShift new="#HK"/>H Kurz</tei:signed>
      </tei:closer>

    </tei:div>



    <tei:div type="translation">

      <tei:opener>
        <tei:address>
          <tei:addrLine><tei:handShift new="#printed"/><tei:hi rend="bold">SUCCESSORS TO J. G.
              COTTA'S BOOK DEALERSHIP</tei:hi></tei:addrLine>
          <tei:addrLine rend="indent-40"><tei:hi rend="bold">STUTTGART AND
            BERLIN</tei:hi></tei:addrLine>
        </tei:address><tei:lb/>
        <tei:dateline rend="indent-50">STUTTGART, <tei:handShift new="#JGCsten"/><tei:date
            when="1907-09-05">September 5, <tei:handShift new="#printed"/>190<tei:handShift
              new="#JGCsten"/>7</tei:date></tei:dateline><tei:lb/>
        <tei:address>
          <tei:addrLine rend="indent-20">Dr. Heinrich Schenker</tei:addrLine>
          <tei:addrLine rend="indent-50"><tei:hi rend="underline">Vienna III, Reisnerstraße
              38</tei:hi></tei:addrLine>
        </tei:address><tei:lb/>
        <tei:salute>Dear Dr. <tei:supplied reason="identity"><tei:rs type="person"
              key="entity-000632">Schenker</tei:rs></tei:supplied>,<tei:ptr corresp="#r0001-fn01"
            type="footnote"/></tei:salute>
      </tei:opener>

      <tei:p rend="first">Enclosed, we have the honor of forwarding to you the sales report for 1906
        for <tei:rs type="work" key="entity-001724">volume I of your <tei:title level="m">New
            Musical Theories and Fantasies</tei:title></tei:rs>,<tei:ptr corresp="#r0001-fn02"
          type="footnote"/> according to which (by the terms of your contract) ¾ of the takings =
        317.55 Marks are due to you. We take the liberty of deducting payment of the enclosed note
        for 9.85 Marks, and are simultaneously sending you the remainder, <tei:hi rend="underline"
          >307.70 Marks</tei:hi>, per postal money order.</tei:p>


      <tei:closer>
        <tei:salute>With kind regards,</tei:salute>
        <tei:signed>pp <tei:handShift new="#stamped"/><tei:rs type="organization"
            key="entity-002405">Successors of the J.G. Cotta Book Dealership</tei:rs></tei:signed>
        <tei:signed><tei:handShift new="#HK"/>H Kurz</tei:signed>
      </tei:closer>

    </tei:div>

