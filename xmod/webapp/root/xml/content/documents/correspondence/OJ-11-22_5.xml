       <tei:handShift new="#RBe"/>Dr. Heinrich Schenker</tei:addrLine>
      <tei:addrLine rend="indent-10">Vienna III</tei:addrLine>
      <tei:addrLine>Reisnerstraße 38</tei:addrLine>
     </tei:address>
     <tei:fw type="postmark">|| <tei:gap extent="2" unit="chars">
