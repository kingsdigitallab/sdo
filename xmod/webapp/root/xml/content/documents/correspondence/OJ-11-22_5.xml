      </tei:gap> VIENNA 88 | <tei:unclear reason="reading">8</tei:unclear>.III.16 | <tei:gap
       extent="2" unit="chars">
       <tei:desc>illeg.</tei:desc>
      </tei:gap> ||</tei:fw>
     <tei:lb/>
    </tei:fw>
    <tei:salute rend="indent-5">Revered <tei:rs type="person" key="entity-000632"
     >Doctor</tei:rs>,<tei:ptr corresp="#r0001-fn01" type="footnote"/></tei:salute>
   </tei:opener>

   <tei:p>Prof. <tei:rs key="entity-000562" type="person">Mandyczewski</tei:rs> asks whether you
    could come straight away this <tei:date when="1916-03-10">Friday, March 10</tei:date>, between
    11 and 1 o'clock. </tei:p>

   <tei:closer>
    <tei:signed rend="indent-50"><tei:rs type="person" key="entity-000058">Bella</tei:rs>
    </tei:signed>
    <tei:signed><tei:handShift new="#stamp"/>|| IMPERIAL &amp; ROYAL SOCIETY | OF THE | FRIENDS OF MUSIC | IN
    VIENNA ||</tei:signed></tei:closer>

