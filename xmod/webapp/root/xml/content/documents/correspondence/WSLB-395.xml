  <sdo:record ID="r0001">

    <sdo:itemDesc>
      <tei:rs role="correspondence" type="correspondence" key="entity-002701">UE ~
        H+JSchenker</tei:rs>
      <tei:rs role="correspondence" type="correspondence" key="entity-002702">UE ~
        HSchenker</tei:rs>
      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002745">Postcard</tei:rs>



      <dc:title>Handwritten postcard from Schenker to UE, dated April 25, 1928</dc:title>

      <dcterms:created>1928-04-25T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2012-07-31</dcterms:dateSubmitted>
      <dc:description>Schenkers asks for the Tonwille volumes to be sent to Julius
        Gold.</dc:description>
      <dc:subject>Rechnung; account; Band; volume</dc:subject>

      
      
    <marcrel:correspondent key="entity-000632">HSchenker</marcrel:correspondent><marcrel:correspondent key="entity-000771">JSchenker</marcrel:correspondent><marcrel:recipient key="entity-002408">UE</marcrel:recipient></sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/>
        <tei:fw type="header" rend="center"><tei:handShift new="#printed"/>Postkarte</tei:fw>
        <tei:lb/>
        <tei:note type="editorial" place="inline">small picture, caption: Wien,
          Karlskirche</tei:note><tei:lb/>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine><tei:supplied reason="identity">Absender:</tei:supplied>
              <tei:handShift new="#HS"/><tei:hi rend="lateinschr">Schenker</tei:hi>
            </tei:addrLine>
            <tei:addrLine><tei:hi rend="lateinschr">III, Keilgasse 8</tei:hi></tei:addrLine>
          </tei:address>
          <tei:address>
            <tei:addrLine><tei:hi rend="lateinschr">An die Universal-Edition</tei:hi></tei:addrLine>
            <tei:addrLine>I., Karlsplatz 6</tei:addrLine>
          </tei:address>
          <tei:lb/>
          <tei:fw type="postmark"><tei:note type="editorial" place="inline">none</tei:note></tei:fw>
          <tei:lb/><tei:lb/>
          <tei:milestone unit="folio" n="verso"/>
        </tei:fw>
        <tei:salute><tei:address>
            <tei:addrLine rend="indent-10">An die „<tei:rs type="organization" key="entity-002408">Universal-Edition</tei:rs>“<tei:note xml:id="r0001-fn01" type="editorial" place="foot">Writing of this postcard is recorded in Schenker's diary at OJ 4/1, p.
                3201, April 26, 1928: "An die U.-E. (K.): bestelle den Tonwillen für Gold auf meine
                Rechnung." ("To UE (postcard): I order <tei:title level="j">Der Tonwille</tei:title>
                for Gold on my account."). It follows a request recorded in the diary the previous
                day: "Von J. Gold aus St. Francisco (Br.): bittet um den Tonwillen." ("From J. Gold
                from San Francisco (letter): he asks for <tei:title level="j">Der
                  Tonwille</tei:title>."), to which Schenker responded on the 26th: "An Gold (Br.):
                der Tonwille folgt." ("To Gold (letter): <tei:title level="j">Der
                  Tonwille</tei:title> will follow.") </tei:note></tei:addrLine>
            <tei:addrLine rend="indent-70"><tei:rs key="entity-002484" type="place">Wien</tei:rs>,
              I</tei:addrLine>
          </tei:address></tei:salute>
      </tei:opener>

      <tei:p>Wollen Sie die Freundlichkeit haben, auf <tei:hi rend="underline">meine
          Rechnung</tei:hi>
        <tei:hi rend="underline">die 3 Bände</tei:hi> „<tei:hi rend="underline"><tei:rs key="entity-001739" type="work"><tei:title>Tonwille</tei:title></tei:rs></tei:hi>“ an <tei:address>
          <tei:addrLine>H. <tei:rs key="entity-003206" type="person"><tei:hi rend="lateinschr">Julius Gold</tei:hi></tei:rs></tei:addrLine>
          <tei:addrLine><tei:hi rend="lateinschr">1201 California Street</tei:hi></tei:addrLine>
          <tei:addrLine><tei:hi rend="lateinschr">San Francisco, California</tei:hi><tei:note xml:id="r0001-fn02" type="editorial" place="foot">Name and address underlined in
              crayon.</tei:note></tei:addrLine>
        </tei:address>
        <tei:lb/>zu senden. Mit besten Dank </tei:p>

      <tei:closer>
        <tei:salute rend="indent-60">Ihr ergb</tei:salute>
        <tei:signed rend="indent-60">
          <tei:hi rend="lateinschr"><tei:rs key="entity-000632" type="person">H
            Schenker</tei:rs></tei:hi>
        </tei:signed>
        <tei:lb/>
        <tei:dateline><tei:date when="1928-04-25">25. 4. 28</tei:date></tei:dateline>
        <tei:lb/><tei:lb/>
        <!--  -->
        <tei:dateline><tei:note type="editorial" place="inline">written across entire card
            diagonally: </tei:note><tei:handShift new="#unkUE"/>4689 <tei:date when="1928-04-27">27/IV/28</tei:date></tei:dateline><tei:lb/>
        <!--  -->
        <tei:note type="authorial" place="inline"><tei:note type="editorial" place="inline">to right
            of Gold's name:</tei:note><tei:handShift new="#HS"/>Autoren-Rabatt <tei:handShift new="#unkUE"/>25% <tei:handShift new="#HS"/>bitte Karte mit Faktur <tei:gap reason="illegible"/></tei:note><tei:lb/>
        <!--  -->
        <tei:note type="authorial" place="inline"><tei:note type="editorial" place="inline">to right
            of address: </tei:note><tei:handShift new="#unkUE"/><tei:unclear reason="reading">Pkt</tei:unclear>, <tei:date when="1928-04-27">27/IV 28</tei:date>
          <tei:note type="editorial" place="inline">initialled</tei:note></tei:note>
      </tei:closer>

    </tei:div>


    <tei:div type="translation">
      <tei:opener>
        <tei:milestone unit="folio" n="recto"/>
        <tei:fw type="header" rend="center"><tei:handShift new="#printed"/>Postcard</tei:fw>
        <tei:lb/>
        <tei:note type="editorial" place="inline">small picture, caption: Vienna,
          Karlskirche</tei:note><tei:lb/>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine><tei:supplied reason="identity">From:</tei:supplied>
              <tei:handShift new="#HS"/>Schenker,</tei:addrLine>
            <tei:addrLine><tei:supplied reason="identity">Vienna</tei:supplied> III, Keilgasse
              8</tei:addrLine>
          </tei:address>
          <tei:address>
            <tei:addrLine>To Universal Edition,</tei:addrLine>
            <tei:addrLine><tei:supplied reason="identity">Vienna</tei:supplied> I, Karlsplatz
              6</tei:addrLine>
          </tei:address>
          <tei:lb/>
          <tei:fw type="postmark"><tei:note type="editorial" place="inline">none</tei:note></tei:fw>
          <tei:lb/><tei:lb/>
          <tei:milestone unit="folio" n="verso"/>
        </tei:fw>
        <tei:salute><tei:address>
            <tei:addrLine rend="indent-10">To <tei:rs type="organization" key="entity-002408">Universal Edition</tei:rs>,<tei:ptr corresp="#r0001-fn01" type="footnote"/></tei:addrLine>
            <tei:addrLine rend="indent-70"><tei:rs key="entity-002484" type="place">Vienna</tei:rs>
              I</tei:addrLine>
          </tei:address></tei:salute>
      </tei:opener>

      <tei:p>Please would you be so kind as to send, charged to <tei:hi rend="underline">my
          account</tei:hi>, <tei:hi rend="underline">the three volumes of <tei:rs key="entity-001739" type="work"><tei:title level="j">Der
          Tonwille</tei:title></tei:rs></tei:hi> to: <tei:address>
          <tei:addrLine>Mr. <tei:rs key="entity-003206" type="person">Julius
            Gold</tei:rs>,</tei:addrLine>
          <tei:addrLine>1201 California Street,</tei:addrLine>
          <tei:addrLine>San Francisco, California<tei:ptr corresp="#r0001-fn02" type="footnote"/></tei:addrLine>
        </tei:address>
        <tei:lb/>With many thanks </tei:p>

      <tei:closer>
        <tei:salute rend="indent-60">Yours truly,</tei:salute>
        <tei:signed rend="indent-60"><tei:rs key="entity-000632" type="person">H. Schenker</tei:rs>
        </tei:signed>
        <tei:lb/>
        <tei:dateline><tei:date when="1928-04-25">April 25, 1928</tei:date></tei:dateline>
        <tei:lb/><tei:lb/>
        <!--  -->
        <tei:dateline><tei:note type="editorial" place="inline">written across entire card
            diagonally: </tei:note><tei:handShift new="#unkUE"/>4689 <tei:date when="1928-04-27">27/IV/28</tei:date></tei:dateline><tei:lb/>
        <!--  -->
        <tei:note type="authorial" place="inline"><tei:note type="editorial" place="inline">to right
            of Gold's name:</tei:note><tei:handShift new="#HS"/>Author discount <tei:handShift new="#unkUE"/>25% <tei:handShift new="#HS"/>with postcard and invoice, please <tei:gap reason="illegible"/></tei:note><tei:lb/>
        <!--  -->
        <tei:note type="authorial" place="inline"><tei:note type="editorial" place="inline">to right
            of address: </tei:note><tei:handShift new="#unkUE"/><tei:unclear reason="reading">packet</tei:unclear>, <tei:date when="1928-04-27">27/IV 28</tei:date>
          <tei:note type="editorial" place="inline">initialled</tei:note></tei:note>
      </tei:closer>

    </tei:div>
