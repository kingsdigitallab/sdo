            <tei:addrLine><tei:handShift new="#printed"/>An <tei:handShift new="#HS"/>H
              Prof.</tei:addrLine>
            <tei:addrLine>M. Violin</tei:addrLine>
            <tei:addrLine><tei:handShift new="#printed"/>in <tei:handShift new="#HS"/>Hamburg</tei:addrLine>
