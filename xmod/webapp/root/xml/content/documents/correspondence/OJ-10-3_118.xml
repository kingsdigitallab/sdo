          <tei:handShift new="#uPO"/>128</tei:add><tei:lb/>
        <tei:add><tei:handShift new="#OED"/><tei:hi rend="underline">Pneumatic
          post!</tei:hi></tei:add><tei:lb/>
        <tei:address>
          <tei:addrLine><tei:supplied reason="clarity">To:</tei:supplied>
            <tei:handShift new="#OED"/> Herrn Dr. Heinrich Schenker</tei:addrLine>
          <tei:addrLine rend="indent-30">Keilgasse 8</tei:addrLine>
          <tei:addrLine rend="indent-60">Vienna III</tei:addrLine>
        </tei:address>
        <tei:milestone unit="folio" n="verso"/>
        <tei:dateline rend="indent-70"><tei:handShift new="#OED"/><tei:date when="1930-02-05"
            >February 5, 1930</tei:date>, in the morning</tei:dateline>
        <tei:salute>Dear and revered <tei:rs type="person" key="entity-000632"
            >friend</tei:rs>,<tei:ptr corresp="#r0001-fn01" type="footnote"/></tei:salute>
      </tei:opener>

      <tei:p rend="first">Roaringly,<tei:ptr corresp="#r0001-fn02" type="footnote"/> I reply that we
        will gladly expect the two of you as early as 7:30, whereas <tei:rs type="person"
          key="entity-000380">Hoboken</tei:rs> will not come until towards 8 o’clock.</tei:p>

      <tei:closer>
        <tei:salute rend="indent-60">Your very devoted</tei:salute>
        <tei:signed rend="indent-80">
          <tei:rs key="entity-000164" type="person">O. E. Deutsch</tei:rs></tei:signed>
      </tei:closer>

    </tei:div>

