      <dc:title>Handwritten postcard from Schenker to Violin, dated October 25, 1933</dc:title>

      <dcterms:created>1933-10-25T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2022-02-11</dcterms:dateSubmitted>
      <dc:description>Schenker reports that Ludwig Karpath has been lying, and that six new
        appointments have already been made at the Vienna Academy. His new pupil, Hans Wolf, is
        thirsting after Urlinie analysis, which Schenker has to resist.</dc:description>
      <dc:subject/>



      <marcrel:correspondent key="entity-000632">HSchenker</marcrel:correspondent>
      <marcrel:recipient key="entity-000909">ViolinF</marcrel:recipient>
      <marcrel:recipient key="entity-000913">ViolinM</marcrel:recipient>
      <marcrel:recipient key="entity-000914">ViolinV</marcrel:recipient>
    </sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/><tei:lb/>
        <tei:fw type="header" rend="inline"><tei:handShift new="#printed"/><tei:hi rend="bold"
            >Postkarte</tei:hi></tei:fw><tei:lb/>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine>Absender: <tei:handShift new="#HS"/>Schenker</tei:addrLine>
