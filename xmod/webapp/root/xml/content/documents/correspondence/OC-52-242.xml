    <tei:address>
     <tei:addrLine rend="indent-20">Prof. Heinrich Schenker, </tei:addrLine>
     <tei:addrLine rend="indent-50"><tei:hi rend="underline">Vienna III, </tei:hi>
     </tei:addrLine>
     <tei:addrLine rend="indent-50">Reisnerstraße 38 </tei:addrLine>
    </tei:address>
    <tei:salute>Dear <tei:rs key="entity-000632" type="person">Professor</tei:rs>,<tei:ptr corresp="#r0001-fn01" type="footnote"/>
    </tei:salute>
   </tei:opener>

   <tei:p rend="first">I will gladly be at your disposal on <tei:date when="1921-01-05">Wednesday</tei:date> afternoon between 3 and 5 o'clock, and look forward to your visit to my
     office.<tei:ptr corresp="#r0001-fn02" type="footnote"/>
   </tei:p>

   <tei:closer>
    <tei:salute rend="indent-40">With best wishes, </tei:salute>
    <tei:salute rend="indent-50">Yours very truly, </tei:salute>
    <tei:signed rend="indent-60"><tei:handShift new="#EH"/><tei:rs key="entity-000356" type="person">Hertzka</tei:rs>
    </tei:signed>
   </tei:closer>


