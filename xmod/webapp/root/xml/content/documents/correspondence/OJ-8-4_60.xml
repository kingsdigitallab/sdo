      <dc:title>Handwritten poscard from Schenker to Moriz Violin, dated December 22,
        1928</dc:title>

      <dcterms:created>1928-12-22T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2013-07-04</dcterms:dateSubmitted>
      <dc:description>The Schenkers send the Violins their best wishes.</dc:description>
      <dc:subject/>

    <marcrel:correspondent key="entity-000632">HSchenker</marcrel:correspondent><marcrel:recipient key="entity-000909">ViolinF</marcrel:recipient><marcrel:recipient key="entity-000913">ViolinM</marcrel:recipient><marcrel:recipient key="entity-000914">ViolinV</marcrel:recipient></sdo:itemDesc>

    <tei:div type="transcription">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/><tei:lb/>
        <tei:fw type="header" rend="inline"><tei:note type="editorial" place="inline">printed:</tei:note>
          <tei:handShift new="#printed"/>Postkarte</tei:fw>
        <tei:lb/><tei:note type="editorial" place="inline">top-left, picture captioned: <tei:rs key="entity-002304" type="place">Innsbruck</tei:rs>, <tei:rs key="entity-002334" type="place">Tirol</tei:rs></tei:note>
