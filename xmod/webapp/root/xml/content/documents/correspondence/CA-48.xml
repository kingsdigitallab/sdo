  <sdo:record ID="r0001">
    <sdo:itemDesc>
      <tei:rs role="correspondence" type="correspondence" key="entity-002724">Cotta ~
        HSchenker</tei:rs>
      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002745">Postcard</tei:rs>


      <dc:title>Handwritten postcard from Schenker to Cotta, dated October 15, 1906</dc:title>
      <dcterms:created>1906-10-15T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2017-06-28</dcterms:dateSubmitted>
      <dc:description>Schenker asks for more postal ties.</dc:description>
      <dc:subject>Schleife; tie</dc:subject>

      <marcrel:correspondent key="entity-000632">HSchenker</marcrel:correspondent>
      <marcrel:recipient key="entity-002405">Cotta</marcrel:recipient>
    </sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/>
        <tei:fw type="envelope">
          <tei:fw type="header" rend="center"><tei:handShift new="#printed"/><tei:hi rend="bold"
              >Korrespondenz-Karte</tei:hi></tei:fw><tei:lb/>
          <tei:address>
            <tei:addrLine>Absender: <tei:handShift new="#HS"/><tei:hi rend="lateinsch">H.
                Schenker,</tei:hi>
            </tei:addrLine>
            <tei:addrLine><tei:hi rend="lateinschr">III., Reisnerstr. 38</tei:hi>.</tei:addrLine>
          </tei:address>
          <tei:address>
            <tei:addrLine><tei:handShift new="#printed"/>An: <tei:handShift new="#HS"/><tei:hi
                rend="lateinschr">die J. G. Cotta'sche Buchhandlung Nchfg.</tei:hi></tei:addrLine>
            <tei:addrLine><tei:handShift new="#printed"/>in <tei:handShift new="#HS"/><tei:hi
                rend="lateinschr underline">Stuttgart</tei:hi>
            </tei:addrLine>
            <tei:addrLine><tei:hi rend="lateinschr">Deutschland</tei:hi></tei:addrLine>
            <tei:lb/>
          </tei:address>
          <tei:fw type="postmark">|| 8/8 WIEN 49 | 15.X.06 – 5 | * 3a * || </tei:fw>
          <tei:fw type="postmark">|| STUTTGART Nr 1 | 15 X 83 | * (55) * ||</tei:fw><tei:lb/><tei:lb/>
          <tei:milestone unit="folio" n="verso"/>
        </tei:fw>
        <tei:salute>Sehr geehrter <tei:rs key="entity-002405" type="organization"
            >Herr</tei:rs>!<tei:note xml:id="r0001-fn01" type="editorial" place="foot">Writing of
            this postcard is not recorded in Schenker's diary.</tei:note></tei:salute>
      </tei:opener>

      <tei:p>Ich ersuche höflichst um baldige Einsendung von Schleifen.</tei:p>

      <tei:closer>
        <tei:salute rend="indent-60">Mit bestem Dank</tei:salute>
        <tei:salute rend="indent-20">u. in ausgez. Hochachtung</tei:salute>
        <tei:salute rend="indent-60">Ir ergb.</tei:salute>
        <tei:signed rend="indent-50">
          <tei:rs key="entity-000632" type="person"><tei:hi rend="lateinschr">H
            Schenker</tei:hi></tei:rs>
        </tei:signed>
        <tei:dateline><tei:date when="1906-10-15">15. 10. 06.</tei:date>.</tei:dateline>
      </tei:closer>

    </tei:div>


    <tei:div type="translation">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/>
        <tei:fw type="envelope">
          <tei:fw type="header" rend="center"><tei:handShift new="#printed"/><tei:hi rend="bold"
              >Postcard</tei:hi></tei:fw><tei:lb/>
          <tei:address>
            <tei:addrLine>From: <tei:handShift new="#HS"/>H. Schenker</tei:addrLine>
            <tei:addrLine><tei:supplied reason="identity">Vienna</tei:supplied> III, Reisnerstraße
              38</tei:addrLine>
          </tei:address>
          <tei:address>
            <tei:addrLine><tei:handShift new="#printed"/>To: <tei:handShift new="#HS"/>The
              successors to J. G. Cotta's Book Dealership</tei:addrLine>
            <tei:addrLine><tei:handShift new="#printed"/>in <tei:handShift new="#HS"/><tei:hi
                rend="underline">Stuttgart</tei:hi>
            </tei:addrLine>
            <tei:addrLine>Germany</tei:addrLine>
            <tei:lb/>
          </tei:address>
          <tei:fw type="postmark">|| 8/8 VIENNA 49 | 15.X.06 – 5 | * 3a * ||</tei:fw>
          <tei:fw type="postmark">|| STUTTGART No. 1 | 15 X 83 | * (55) * ||</tei:fw><tei:lb/><tei:lb/>
          <tei:milestone unit="folio" n="verso"/>
        </tei:fw>
        <tei:salute>Dear <tei:rs key="entity-002405" type="organization">Sir</tei:rs>,<tei:ptr
            corresp="#r0001-fn01" type="footnote"/></tei:salute>
      </tei:opener>

      <tei:p>Please very kindly send me <tei:supplied reason="clarity">a supply of
          postal</tei:supplied> ties as soon as possible.</tei:p>

      <tei:closer>
        <tei:salute rend="indent-60">With many thanks</tei:salute>
        <tei:salute rend="indent-20">and with kind regards,</tei:salute>
        <tei:salute rend="indent-60">Your devoted</tei:salute>
        <tei:signed rend="indent-60">
          <tei:rs key="entity-000632" type="person">H. Schenker</tei:rs>
        </tei:signed>
        <tei:dateline><tei:date when="1906-10-15">15. 10. 06</tei:date>.</tei:dateline>
      </tei:closer>

    </tei:div>

