   <dc:title>Handwritten postcard from Weisse to Schenker, dated April 27, 1925</dc:title>

   <dcterms:created>1925-04-27T12:00:00Z</dcterms:created>
   <dcterms:dateSubmitted>2013-08-29</dcterms:dateSubmitted>
