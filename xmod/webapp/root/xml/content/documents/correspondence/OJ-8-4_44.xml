          <tei:handShift new="#printed"/>Postcard</tei:fw>
        <tei:lb/>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine rend="indent-25"><tei:supplied reason="clarity">sender:</tei:supplied>
