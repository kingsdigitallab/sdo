      <dc:title>Typewritten postcard from Deutsch to Schenker, dated February 15, 1926</dc:title>

      <dcterms:created>1926-02-15T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2015-09-19</dcterms:dateSubmitted>
      <dc:description>Deutsch has received Schenker's request for a subscription to Die literarische Welt and has
        dispatched the required payment transfer form.</dc:description>
      <dc:subject/>

      <marcrel:correspondent key="entity-000164">DeutschOE</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>

    </sdo:itemDesc>

