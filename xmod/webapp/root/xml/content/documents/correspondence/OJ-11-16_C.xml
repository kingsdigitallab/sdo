  <sdo:record ID="r0001">

    <sdo:itemDesc>
      <tei:rs role="correspondence" type="correspondence" key="entity-002728">Furtwängler ~
        HSchenker</tei:rs>
      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002744">Letter</tei:rs>

      <dc:title>Handwritten letter from Furtwängler to Schenker, undated</dc:title>

      <dcterms:created>1919-11-01T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2015-02-02</dcterms:dateSubmitted>
      <dc:description>Furtwängler asks if he can call on Schenker the coming
        Sunday.</dc:description>
      <dc:subject>besuchen; to visit; Abendessen; supper</dc:subject>



      <marcrel:correspondent key="entity-000268">Furtwängler</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>
    </sdo:itemDesc>


    <tei:div type="transcription">
      <tei:opener>
        <tei:address>
          <tei:addrLine><tei:handShift new="#printed#"/>HOTEL <tei:note type="editorial"
              place="inline">monogram "HI"</tei:note> IMPERIAL</tei:addrLine>
          <tei:addrLine>WIEN</tei:addrLine>
        </tei:address>
        <tei:salute><tei:handShift new="#WF"/>Lieber verehrter Herr <tei:rs type="person"
            key="entity-000632">Schenker</tei:rs>,<tei:note xml:id="r0001-fn01" type="editorial"
            place="foot">This letter is undated. The first dated letter from Furtwängler to Schenker
            from the <tei:rs key="entity-004026" type="place">Hotel Imperial</tei:rs> is from 1929,
            so it is likely that this item dates from the late 1920s or early
          1930s.</tei:note></tei:salute>
      </tei:opener>

      <tei:p rend="first">Ist es Ihnen recht, wenn ich <tei:date>heute (Sonntag)</tei:date>
        <tei:del><tei:note type="editorial" place="inline">deletion</tei:note></tei:del> um 9 Uhr
        abends (<tei:hi rend="underline">nach</tei:hi> dem Abendessen) zu Ihnen und Ihrer <tei:rs
          key="entity-000771" type="person">Frau</tei:rs> komme? Wenn ich nichts gegenteiliges höre,
        werde ich um 9 Uhr vor Ihrem Hause sein!</tei:p>

      <tei:closer>
        <tei:salute rend="indent-20">Mit herzlichen Grüßen</tei:salute>
        <tei:salute rend="indent-30">Ihr</tei:salute>
        <tei:signed rend="indent-40"><tei:rs key="entity-000268" type="person">Wilhelm
            Furtwängler</tei:rs></tei:signed>
      </tei:closer>

    </tei:div>


    <tei:div type="translation">
      <tei:opener>
        <tei:address>
          <tei:addrLine><tei:handShift new="#printed#"/>HOTEL <tei:note type="editorial"
              place="inline">monogram "HI"</tei:note> IMPERIAL</tei:addrLine>
          <tei:addrLine>VIENNA</tei:addrLine>
        </tei:address>
        <tei:salute><tei:handShift new="#WF"/>Dear revered Mr. <tei:rs type="person"
            key="entity-000632">Schenker</tei:rs>,<tei:ptr corresp="#r0001-fn01" type="footnote"
          /></tei:salute>
      </tei:opener>

      <tei:p rend="first">Is it all right with you if I come to visit you and your <tei:rs
          key="entity-000771" type="person">wife</tei:rs>
        <tei:date>today (Sunday)</tei:date> (<tei:hi rend="underline">after</tei:hi> supper) at 9
        pm? If I hear nothing to the contrary, I will be at your door at 9 p.m.!</tei:p>

      <tei:closer>
        <tei:salute rend="indent-20">With cordial greetings, </tei:salute>
        <tei:salute rend="indent-30">Yours,</tei:salute>
        <tei:signed rend="indent-40"><tei:rs key="entity-000268" type="person">Wilhelm
            Furtwängler</tei:rs></tei:signed>
      </tei:closer>


    </tei:div>
