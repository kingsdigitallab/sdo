  <sdo:record ID="r0001">

    <sdo:itemDesc>
      <tei:rs role="correspondence" type="correspondence" key="entity-003184">Winter ~
        HSchenker</tei:rs>
      <tei:rs role="correspondence" type="correspondence" key="entity-002701">UE ~
        H+JSchenker</tei:rs>
      <tei:rs role="correspondence" type="correspondence" key="entity-002702">UE ~
        HSchenker</tei:rs>
      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002745">Postcard</tei:rs>



      <dc:title>Handwritten postcard from Schenker to Hugo Winter (UE), dated January 17,
        1930</dc:title>

      <dcterms:created>1930-01-17T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2012-11-29</dcterms:dateSubmitted>
      <dc:description>Schenker reminds Winter to send him his [half-yearly]
        statement.</dc:description>
      <dc:subject>Abrechnung; statement of account</dc:subject>

      <marcrel:correspondent key="entity-000632">Heinrich Schenker</marcrel:correspondent>
      <marcrel:recipient key="entity-002408">Universal Edition</marcrel:recipient>
      <marcrel:recipient key="entity-000968">Hugo Winter</marcrel:recipient>
    </sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/><tei:lb/>
        <tei:note type="editorial" place="inline">all in a deckled frame</tei:note><tei:lb/>
        <tei:fw type="header" rend="center"><tei:handShift new="#printed"/>Postkarte</tei:fw>
        <tei:lb/>
        <tei:note type="editorial" place="inline">small picture, caption: Großglockner,
          Kärnten</tei:note><tei:lb/>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine><tei:supplied reason="identity">Absender:</tei:supplied>
              <tei:handShift new="#HS"/><tei:hi rend="lateinschr">Schenker</tei:hi>
            </tei:addrLine>
            <tei:addrLine>III, Keilgasse 8</tei:addrLine>
          </tei:address>
          <tei:address>
            <tei:addrLine>An die „Universal-Edition“</tei:addrLine>
            <tei:addrLine><tei:hi rend="underline">Buchhaltung</tei:hi></tei:addrLine>
            <tei:addrLine>I, Karlsplatz 6</tei:addrLine>
          </tei:address>
          <tei:lb/>
          <tei:fw type="postmark">|| 3 WIEN 40 | 17. I. 30. 12 | * 4f * ||</tei:fw>
          <tei:lb/><tei:lb/>
          <tei:milestone unit="folio" n="verso"/>
        </tei:fw>
        <tei:salute>Sehr geehrter Herr <tei:rs key="entity-000968" type="person">Direktor
            Winter</tei:rs>!<tei:note xml:id="r0001-fn01" type="editorial" place="foot">Writing of
            this postcard is recorded in Schenker's diary at OJ 4/3, p. 3430, January 17, 1930: "An
            die Buchhaltung der U.-E. (K.): bitte um die Rechnung der Theorien." ("To the
            book-keeping department of UE (postcard): I ask for the statement of account for the
              <tei:title level="m">Theories</tei:title>").</tei:note></tei:salute>
      </tei:opener>

      <tei:p>Darf ich Sie an die Abrechnung der „<tei:rs key="entity-001723" type="work"
            ><tei:title>N. m. Th. u. Ph.</tei:title></tei:rs>“ erinnern? </tei:p>

      <tei:p>Ihre frdl. Neujahreswünsche herzlich erwidernd zeichne</tei:p>

      <tei:closer>
        <tei:salute rend="indent610">hochachtungsvoll</tei:salute>
        <tei:salute rend="indent-60">Ihr</tei:salute>
        <tei:signed rend="indent-60">
          <tei:hi rend="lateinschr"><tei:rs key="entity-000632" type="person">H
            Schenker</tei:rs></tei:hi>
        </tei:signed>
        <tei:lb/>
        <tei:dateline><tei:date when="1930-01-17">17. 1. 30</tei:date></tei:dateline>
        <tei:lb/><tei:lb/>
        <tei:dateline><tei:note type="editorial" place="inline">written across right-hand side of
            verso in unknown hand: </tei:note><tei:handShift new="#unkUE"/>Erl</tei:dateline>
      </tei:closer>

    </tei:div>


    <tei:div type="translation">
      <tei:opener>
        <tei:milestone unit="folio" n="recto"/><tei:lb/>
        <tei:note type="editorial" place="inline">all in a deckled frame</tei:note><tei:lb/>
        <tei:fw type="header" rend="center"><tei:handShift new="#printed"/>Postcard</tei:fw>
        <tei:lb/>
        <tei:note type="editorial" place="inline">small picture, caption: Großglockner,
          Carinthia</tei:note><tei:lb/>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine><tei:supplied reason="identity">From:</tei:supplied>
              <tei:handShift new="#HS"/>Schenker,</tei:addrLine>
            <tei:addrLine><tei:supplied reason="identity">Vienna</tei:supplied> III, Keilgasse
              8</tei:addrLine>
          </tei:address>
          <tei:address>
            <tei:addrLine>To Universal Edition,</tei:addrLine>
            <tei:addrLine><tei:hi rend="underline">Book-keeping Department,</tei:hi></tei:addrLine>
            <tei:addrLine><tei:supplied reason="identity">Vienna</tei:supplied> I, Karlsplatz
              6</tei:addrLine>
          </tei:address>
          <tei:lb/>
          <tei:fw type="postmark">|| 3 VIENNA 40 | 17. I. 30. 12 | * 4f * ||</tei:fw>
          <tei:lb/><tei:lb/>
          <tei:milestone unit="folio" n="verso"/>
        </tei:fw>
        <tei:salute>Dear <tei:rs key="entity-000968" type="person">Director Winter</tei:rs>,<tei:ptr
            corresp="#r0001-fn01" type="footnote"/></tei:salute>
      </tei:opener>

      <tei:p>My I remind you of the statement of account for my <tei:rs key="entity-001723"
          type="work"><tei:title level="m">New Musical Theories and Fantasies</tei:title></tei:rs>? </tei:p>

      <tei:p>In cordially reciprocating your friendly New Year's good wishes, I remain</tei:p>

      <tei:closer>
        <tei:salute rend="indent610">with kind regards,</tei:salute>
        <tei:salute rend="indent-60">Yours,</tei:salute>
        <tei:signed rend="indent-60">
          <tei:rs key="entity-000632" type="person">H. Schenker</tei:rs>
        </tei:signed>
        <tei:lb/>
        <tei:dateline><tei:date when="1930-01-17">January 17, 1930</tei:date></tei:dateline>
        <tei:lb/><tei:lb/>
        <tei:dateline><tei:note type="editorial" place="inline">written across right-hand side of
            verso in unknown hand: </tei:note><tei:handShift new="#unkUE"/>dealt with</tei:dateline>
      </tei:closer>


    </tei:div>
  </sdo:record>
