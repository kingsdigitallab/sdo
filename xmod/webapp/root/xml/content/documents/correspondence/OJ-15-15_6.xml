  <sdo:itemDesc><tei:rs role="correspondence" type="correspondence" key="entity-002737">Weisse ~ H+JSchenker</tei:rs><tei:rs role="correspondence" type="correspondence" key="entity-002715">Weisse ~ HSchenker</tei:rs><tei:rs role="corr-item-type" type="corr-item-type" key="entity-002745">Postcard</tei:rs>
   
   
   <dc:title>Handwritten postcard from Weisse to Schenker, dated May 27, 1918</dc:title>
   
   <dcterms:created>1918-05-27T12:00:00Z</dcterms:created>
   <dcterms:dateSubmitted>2009-03-13</dcterms:dateSubmitted>
   <dc:description>Weisse, on three-month leave (June-August 1918) to finish work towards his
    doctoral degree, asks Schenker for tuition in counterpoint and thoroughbass. </dc:description>
   <dc:subject>furlough; leave; doctorate; lessons; Kontrapunkt; counterpoint; Generalbass;
    thoroughbass</dc:subject>

   
   
  </sdo:itemDesc>

  <tei:div type="transcription">

   <tei:opener>
    <tei:milestone unit="folio" n="recto"/>
