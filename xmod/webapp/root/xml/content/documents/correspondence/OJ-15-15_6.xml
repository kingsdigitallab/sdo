    <tei:lb/>
    <tei:fw type="header" rend="center">Feldpostkarte</tei:fw>
    <tei:handShift new="#stamp"/>
    <tei:fw type="header" rend="center">K.u.k. Kmdo d.Telg.Offiziers Feldpostkurses</tei:fw>
    <tei:address>
     <tei:addrLine>Absender: <tei:handShift new="#HW"/>Weisse lt. Fp 354</tei:addrLine>
    </tei:address>
    <tei:address>
     <tei:addrLine><tei:supplied reason="clarity">An: </tei:supplied>Herrn Dr. Heinrich Schenker </tei:addrLine>
     <tei:addrLine>Wien III </tei:addrLine>
     <tei:addrLine>Reisnerstraße 38 </tei:addrLine>
    </tei:address>
    <tei:fw type="postmark">|| TABORI POSTAHIVATAI | 918 MAJ 28. | * 354 * || </tei:fw>
    <tei:milestone unit="folio" n="verso"/>
