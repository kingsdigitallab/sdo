      <dc:title>Handwritten postcard from Schenker to Seligmann, dated June 6, 1911</dc:title>

      <dcterms:created>1911-06-06T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2022-11-25</dcterms:dateSubmitted>
      <dc:description>Schenker congratulates Seligmann on his latest feuilleton and shares his own
        similar views about the relationship between nature and the art of
        painting.</dc:description>
      <dc:subject/>

      <marcrel:correspondent key="entity-000632">Heinrich Schenker</marcrel:correspondent>
      <marcrel:recipient key="entity-000819">Adalbert Franz Seligmann</marcrel:recipient>
    </sdo:itemDesc>

