      <dc:title>Handwritten letter with envelope from Schenker to Busoni, dated March 15,
        1898</dc:title>

      <dcterms:created>1898-03-15T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2022-10-04</dcterms:dateSubmitted>
      <dc:description>Schenker has failed to meet up with Busoni today.</dc:description>
      <dc:subject/>

      <marcrel:correspondent key="entity-000632">HSchenker</marcrel:correspondent>
      <marcrel:recipient key="entity-00116">BusoniF</marcrel:recipient>
    </sdo:itemDesc>


    <tei:div type="transcription">

      <tei:opener>
        <tei:fw type="envelope"><tei:lb/>
          <tei:note type="editorial" place="inline"><tei:hi rend="bold">envelope</tei:hi></tei:note><tei:lb/><tei:lb/>
          <tei:milestone unit="folio" n="recto"/>
          <tei:address>
            <tei:addrLine><tei:handShift new="#HS"/>Herrn Ferruccio Busoni</tei:addrLine>
            <tei:addrLine rend="indent-10">Componist</tei:addrLine>
            <tei:addrLine rend="indent-10">Berlin</tei:addrLine>
            <tei:addrLine rend="indent-10">W. Tauenzienstr. 10</tei:addrLine>
          </tei:address>
          <tei:fw type="postmark">WIEN | <tei:gap reason="illegible"/> | <tei:gap reason="illegible"
