      <dc:title>Handwritten express postcard from Schenker to Hertzka (UE), dated May 5,
        1912</dc:title>

      <dcterms:created>1912-05-05T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2023-01-15</dcterms:dateSubmitted>
      <dc:description>Schenker is unable to comply with Hertzka's invitation on account of teaching
        commitments.</dc:description>
      <dc:subject/>




      <marcrel:correspondent key="entity-000632">Heinrich Schenker</marcrel:correspondent>
      <marcrel:recipient key="entity-000356">Emil Hertzka</marcrel:recipient>
