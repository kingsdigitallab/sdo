        <tei:lb/><tei:fw type="header" rend="inline"><tei:note type="editorial" place="inline">printed:</tei:note>
          <tei:handShift new="#printed"/>Postcard</tei:fw><tei:lb/>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine rend="indent-10"><tei:handShift new="#HS"/><tei:supplied reason="clarity">sender:</tei:supplied> Schenker</tei:addrLine>
            <tei:addrLine rend="indent-15">Vienna III, Keilgasse 8</tei:addrLine>
          </tei:address>
          <tei:address>
            <tei:addrLine><tei:supplied reason="clarity">to:</tei:supplied> Prof.</tei:addrLine>
            <tei:addrLine rend="indent-10">M. Violin</tei:addrLine>
            <tei:addrLine rend="indent-15">Hamburg</tei:addrLine>
            <tei:addrLine rend="indent-15">Immenhof 27 I</tei:addrLine>
          </tei:address>
          <tei:fw type="postmark">|| <tei:gap reason="illegible" extent="few characters"/> WIEN
