          <tei:hi rend="italic">60</tei:hi>g</tei:p>


      <tei:note type="editorial">column 3</tei:note>
      <tei:fw type="postmark">|| 3/4 <tei:placeName>WIEN</tei:placeName> 128 | <tei:date when="1927-06-01">1.VI.27</tei:date> X– | * b * ||</tei:fw>

