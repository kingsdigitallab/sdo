      <tei:rs role="corr-item-type" type="corr-item-type" key="entity-002745">Postcard</tei:rs>



      <dc:title>Handwritten postcard from Eugen d'Albert to Schenker, dated January 27,
        1897</dc:title>

      <dcterms:created>1897-01-27T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2021-10-21</dcterms:dateSubmitted>
      <dc:description>Eugen d'Albert is in Vienna and seeks a meeting with
        Schenker.</dc:description>
      <dc:subject>treffen; meet</dc:subject>

      <marcrel:correspondent key="entity-000150">d'AlbertE</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>
    </sdo:itemDesc>

    <tei:div type="transcription">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/><tei:lb/>
        <tei:note type="editorial">Printed coat of arms</tei:note>
        <tei:lb/>
        <tei:fw type="header" rend="inline"><tei:handShift new="#printed"/>Königreich
          Bayern.</tei:fw><tei:lb/>
        <tei:fw type="header" rend="inline"><tei:hi rend="bold">Postkarte</tei:hi></tei:fw>
        <tei:lb/>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine>An <tei:handShift new="#d-A"/>Herrn Dr Heinrich Schenker.</tei:addrLine>
            <tei:addrLine>Komponist u. Schriftsteller</tei:addrLine>
            <tei:addrLine><tei:handShift new="#printed"/>in <tei:handShift new="#d-A"/><tei:hi
                rend="underline">Wien</tei:hi>.</tei:addrLine>
            <tei:addrLine>Frauengaße 1</tei:addrLine>
          </tei:address>
          <tei:lb/>
          <tei:fw type="postmark">|| MUENCHEN 1 | 27 | JAN | 12-1 Nm | 97 ||</tei:fw>
          <tei:fw type="postmark">|| WIEN 3/3 | 49 | BESTELLT | 23. 1. 97 | 10-11 V ||</tei:fw>
          <tei:lb/><tei:lb/>
        </tei:fw>
        <tei:milestone unit="folio" n="verso"/>
        <tei:dateline><tei:handShift new="#d-A"/><tei:date when="1897-01-27">27. 1.
          97.</tei:date></tei:dateline>
        <tei:salute>Lieber, verehrter Herr <tei:rs type="person" key="entity-000632"
          >Doktor</tei:rs>! </tei:salute>
      </tei:opener>

      <tei:p rend="first">Heute Abend bin ich im Wien – <tei:rs type="place" key="entity-002246"
          >Hotel Bristol</tei:rs> – wo trifft man Sie am besten? Ich habe viel mit Ihnen zu
        besprechen. </tei:p>

      <tei:closer>
        <tei:salute rend="indent-10">Herzlich grüßt</tei:salute>
        <tei:salute rend="indent-20">Ihr ergebener</tei:salute>
        <tei:signed rend="indent-50"><tei:rs key="entity-000150" type="person">Eugen
            d‘Albert</tei:rs>.</tei:signed>
      </tei:closer>

    </tei:div>


    <tei:div type="translation">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/><tei:lb/>
        <tei:note type="editorial">Printed coat of arms</tei:note>
        <tei:lb/>
        <tei:fw type="header" rend="inline"><tei:handShift new="#printed"/>Kingdom of
          Bavaria</tei:fw><tei:lb/>
        <tei:fw type="header" rend="inline"><tei:hi rend="bold">Postcard</tei:hi></tei:fw>
        <tei:lb/>
        <tei:fw type="envelope">
          <tei:address>
            <tei:addrLine>To <tei:handShift new="#d-A"/>Dr. Heinrich Schenker</tei:addrLine>
            <tei:addrLine>Composer and writer</tei:addrLine>
            <tei:addrLine><tei:handShift new="#printed"/>in <tei:handShift new="#d-A"/><tei:hi
                rend="underline">Vienna</tei:hi></tei:addrLine>
            <tei:addrLine>Frauengaße 1</tei:addrLine>
          </tei:address>
          <tei:lb/>
          <tei:fw type="postmark">|| MUNICH 1 | 27 | JAN | 12-1 P.M. | 97 ||</tei:fw>
          <tei:fw type="postmark">|| VIENNA 3/3 | 49 | DELIVERED | 23. 1. 97 | 10-11 A.M.
            ||</tei:fw>
          <tei:lb/><tei:lb/>
        </tei:fw>
        <tei:milestone unit="folio" n="verso"/>
        <tei:dateline><tei:handShift new="#d-A"/><tei:date when="1897-01-27">January 27,
            1897</tei:date></tei:dateline>
        <tei:salute>Dear, revered Dr. <tei:supplied reason="identity"><tei:rs type="person"
              key="entity-000632">Schenker</tei:rs></tei:supplied>,</tei:salute>
      </tei:opener>

      <tei:p rend="first">This evening I am in Vienna – <tei:rs type="place" key="entity-002246"
          >Hotel Bristol</tei:rs> –. Where can one best meet up with you? I have much to discuss
        with you. </tei:p>

      <tei:closer>
        <tei:salute rend="indent-10">Cordial greetings from</tei:salute>
        <tei:salute rend="indent-20">Your devoted</tei:salute>
        <tei:signed rend="indent-50"><tei:rs key="entity-000150" type="person">Eugen
            d‘Albert</tei:rs></tei:signed>
      </tei:closer>

    </tei:div>

