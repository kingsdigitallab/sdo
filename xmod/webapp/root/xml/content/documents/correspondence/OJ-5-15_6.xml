          </tei:row>
          <tei:row role="data">
            <tei:cell role="data">Wohnungszins</tei:cell>
            <tei:cell role="data">85.</tei:cell>
            <tei:cell role="data">‒</tei:cell>
          </tei:row>
        </tei:table></tei:p>

