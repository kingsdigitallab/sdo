      <dc:title>Handwritten picture postcard from Deutsch to Schenker, dated , November 11,
        1929</dc:title>

      <dcterms:created>1929-11-11T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2023-03-18</dcterms:dateSubmitted>
      <dc:description>Deutsch accepts Schenker’s invitation for Tuesday, November 12,
        1929.</dc:description>
      <dc:subject/>

      <marcrel:correspondent key="entity-000164">DeutschOE</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>

    </sdo:itemDesc>

    <tei:div type="transcription">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/><tei:lb/>
        <tei:fw type="header" rend="inline"><tei:note type="editorial" place="inline"
            >printed:</tei:note>
          <tei:handShift new="#printed"/><tei:hi rend="bold">Pos<tei:supplied reason="overstamped"
              >tkarte</tei:supplied></tei:hi></tei:fw>
        <tei:lb/>
        <tei:note type="editorial" place="inline">picture: lakeside town with snow-capped mountains:
          “Bregenz, Vorarlberg”</tei:note><tei:lb/>
        <tei:add resp="unknown"><tei:handShift new="#unkPO"/>128</tei:add><tei:lb/>
        <tei:add resp="label"><tei:handShift new="labelPO"/>Durch Eilboten! Exprès.</tei:add><tei:lb/>
        <tei:address>
          <tei:addrLine><tei:supplied reason="clarity">An:</tei:supplied>
            <tei:handShift new="#OED"/>Herrn Dr. Heinrich Schenker</tei:addrLine>
          <tei:addrLine rend="indent-30">Keilgasse 8</tei:addrLine>
          <tei:addrLine rend="indent-60">Wien III.</tei:addrLine>

        </tei:address>
        <tei:milestone unit="folio" n="verso"/>
        <tei:dateline rend="indent-80"><tei:handShift new="#OED"/><tei:date when="1929-11-11">11.
            IX. 29</tei:date></tei:dateline>
        <tei:salute>Lieber verehrter Herr <tei:rs type="person" key="entity-000632"
            >Doktor</tei:rs>!<tei:note xml:id="r0001-fn01" type="editorial" place="foot">Receipt of
            this postcard is recorded in Schenker’s diary for November 11, 1929: “Von Deutsch (K.
            expreß): wird morgen um 5<tei:hi rend="supralinear">h</tei:hi> erscheinen” (“From Deutsch (express postcard): he will
            appear tomorrow at 5 o’clock”). -- November 12 was Proclamation of the Republic
            Day.</tei:note></tei:salute>
      </tei:opener>

      <tei:p rend="first">Gerne komme ich morgen Dienstag nach 5 Uhr zu Ihnen </tei:p>

      <tei:closer>
        <tei:salute rend="indent-60">Bestens empfohlen</tei:salute>
        <tei:salute rend="indent-60">Ihr sehr ergebener</tei:salute>
        <tei:signed rend="indent-70"><tei:handShift new="#OED"/>
          <tei:rs key="entity-000164" type="person">O E Deutsch</tei:rs></tei:signed>
      </tei:closer>

    </tei:div>


    <tei:div type="translation">

      <tei:opener>
        <tei:milestone unit="folio" n="recto"/><tei:lb/>
        <tei:fw type="header" rend="inline"><tei:note type="editorial" place="inline"
            >printed:</tei:note>
          <tei:handShift new="#printed"/><tei:hi rend="bold">Pos<tei:supplied reason="overstamped"
              >tcard</tei:supplied></tei:hi></tei:fw>
        <tei:lb/>
        <tei:note type="editorial" place="inline">picture: lakeside town with snow-capped mountains:
          “Bregenz, Vorarlberg”</tei:note><tei:lb/>
        <tei:add resp="unknown"><tei:handShift new="#unkPO"/>128</tei:add><tei:lb/>
        <tei:add resp="label"><tei:handShift new="labelPO"/>By Special Delivery! Express.</tei:add><tei:lb/>
        <tei:address>
          <tei:addrLine><tei:supplied reason="clarity">To:</tei:supplied>
            <tei:handShift new="#OED"/>Dr. Heinrich Schenker</tei:addrLine>
          <tei:addrLine rend="indent-30">Keilgasse 8</tei:addrLine>
          <tei:addrLine rend="indent-60">Vienna III</tei:addrLine>

        </tei:address>
        <tei:milestone unit="folio" n="verso"/>
        <tei:dateline rend="indent-80"><tei:handShift new="#OED"/><tei:date when="1929-11-11"
            >November 11, 1929</tei:date></tei:dateline>
        <tei:salute>Dear revered Dr. <tei:supplied reason="identity"><tei:rs type="person"
              key="entity-000632">Schenker</tei:rs></tei:supplied>,<tei:ptr corresp="#r0001-fn01"
            type="footnote"/></tei:salute>
      </tei:opener>

      <tei:p rend="first">I shall be glad to come to you tomorrow, Tuesday, at 5 o’clock.</tei:p>

      <tei:closer>
        <tei:salute rend="indent-60">With best regards, </tei:salute>
        <tei:salute rend="indent-60">Your very devoted</tei:salute>
        <tei:signed rend="indent-70"><tei:handShift new="#OED"/>
          <tei:rs key="entity-000164" type="person">O. E. Deutsch</tei:rs></tei:signed>
      </tei:closer>

    </tei:div>

