        <tei:lb/><tei:address>
          <tei:addrLine rend="indent-10"><tei:supplied reason="clarity">An:</tei:supplied> Herrn</tei:addrLine>
          <tei:addrLine rend="indent-15">Prof. Dr. <tei:rs key="entity-000632" type="person">Heinrich
                <tei:hi><!-- spaced out -->Schenker</tei:hi></tei:rs>,</tei:addrLine>
          <tei:addrLine rend="indent-75"><tei:hi rend="underline"><tei:hi><!-- spaced out --><tei:rs key="entity-002484"
