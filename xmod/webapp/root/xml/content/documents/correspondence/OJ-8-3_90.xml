   <dc:title>Handwritten postcard from Heinrich and Jeanette Schenker to Valerie Violin, undated,
    postmarked [October] 17, 1920 </dc:title>

   <dcterms:created>1920-10-17T12:00:00Z</dcterms:created>
   <dcterms:dateSubmitted>2011-05-18</dcterms:dateSubmitted>
   <dc:description>The Schenkers are unable to visit Wally this Sunday, but will do so the following
    Sunday. </dc:description>
   <dc:subject>visit </dc:subject>

   <marcrel:correspondent key="entity-000632">Heinrich Schenker</marcrel:correspondent>
   <marcrel:recipient key="entity-000914">Valerie Violin</marcrel:recipient>
  </sdo:itemDesc>


  <tei:div type="transcription">

   <tei:opener>
    <tei:milestone unit="folio" n="recto"/>
    <tei:note type="editorial">printed:</tei:note>
    <tei:lb/>
    <tei:fw type="header" rend="center"><tei:handShift new="#printed"/>Postkarte</tei:fw>
    <tei:lb/>
    <tei:fw type="envelope">
     <tei:address>
      <tei:addrLine>Absender: <tei:handShift new="#HS"/>
       <tei:hi rend="lateinschr">D<tei:hi rend="supralinear">r</tei:hi> H Schenker</tei:hi>
      </tei:addrLine>
      <tei:addrLine><tei:hi rend="lateinschr">III., Reisnerstr. 38</tei:hi>
      </tei:addrLine>

     </tei:address>
     <tei:address>
      <tei:addrLine><tei:handShift new="#printed"/>An: <tei:handShift new="#HS"/><tei:hi
        rend="lateinschr">Frau Prof. Wally Violin</tei:hi></tei:addrLine>
      <tei:addrLine>
       <tei:subst>
        <tei:del rend="overstrike">XIV</tei:del>
