     <tei:address>
      <tei:addrLine> From: <tei:handShift new="#HS"/>H. Schenker </tei:addrLine>
      <tei:addrLine>
       <tei:supplied reason="place">Vienna</tei:supplied> III, Reisnerstraße 38 </tei:addrLine>
     </tei:address>
     <tei:address>
      <tei:addrLine><tei:supplied reason="clarity">To:</tei:supplied>Director Hertzka</tei:addrLine>
      <tei:addrLine>
       <tei:supplied reason="place">Vienna</tei:supplied> I, Wipplingerstraße 32 </tei:addrLine>
      <tei:addrLine>Universal-Edition</tei:addrLine>
     </tei:address><tei:lb/>
     <tei:fw type="postmark">|| VIENNA 1/1 | 1 -PM 30 VI 08 | 30 R<tei:hi rend="supralinear"
       >E</tei:hi>-P ||</tei:fw>
     <tei:fw type="postmark">|| 3/2 VIENNA <tei:gap reason="illegible" unit="chars" extent="2"/> |
      30.VI 08 PM | * P * ||</tei:fw>
     <tei:fw type="postmark"><tei:gap reason="illegible" unit="lines" extent="3"/></tei:fw><tei:lb/><tei:lb/>
     <tei:milestone unit="folio" n="verso"/>
    </tei:fw>
    <tei:salute>Dear <tei:rs key="entity-000356" type="person">Director</tei:rs>,<tei:ptr
      corresp="#r0001-fn01" type="footnote"/></tei:salute>
   </tei:opener>

   <tei:p>I remind you herewith of my request dated <tei:date when="1908-06-26">June
     26</tei:date>:<tei:ptr corresp="#r0001-fn02" type="footnote"/> Proof of identity in Tyrolean
    post offices<tei:ptr corresp="#r0001-fn03" type="footnote"/> with respect to the receipt of
    money transfers is rather complicated, so it would be preferable to me (if remotely possible!)
    to have the honorarium in my hands by <tei:hi rend="underline">Thursday</tei:hi> (<tei:date
     when="1908-07-02">July 2</tei:date>) at the latest.</tei:p>

   <tei:closer>
    <tei:salute rend="indent-40">With kind regards,</tei:salute>
    <tei:salute rend="indent-50">Your devoted</tei:salute>
    <tei:signed rend="indent-60">
     <tei:rs key="entity-000632" type="person">H. Schenker</tei:rs>
    </tei:signed><tei:lb/><tei:lb/>
    <tei:date when="1908-06-30">June 30, 1908</tei:date>
   </tei:closer>


