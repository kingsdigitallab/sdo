   <dc:title>Handwritten picture postcard from Karpath to Schenker, undated, postmarked October 13,
    1931</dc:title>

   <dcterms:created>1931-10-13T12:00:00Z</dcterms:created>
   <dcterms:dateSubmitted>2016-06-16</dcterms:dateSubmitted>
   <dc:description>Karpath asks Schenker for a telephone call or visit.</dc:description>
   <dc:subject>anrufen; to telephone; besuchen; to visit</dc:subject>



   <marcrel:correspondent key="entity-000424">Karpath</marcrel:correspondent>
   <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>
  </sdo:itemDesc>


  <tei:div type="transcription">

   <tei:opener>
    <tei:milestone unit="folio" n="recto"/><tei:lb/>
    <tei:fw type="envelope">
     <tei:note type="editorial" place="inline">all in a decorated rule-frame</tei:note><tei:lb/>
