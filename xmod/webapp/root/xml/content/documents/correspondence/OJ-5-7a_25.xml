   <dc:title>Handwritten postcard from Schenker to Cube, dated July 14, 1929</dc:title>

   <dcterms:created>1929-07-14T12:00:00Z</dcterms:created>
   <dcterms:dateSubmitted>2006-08-30</dcterms:dateSubmitted>
   <dc:description>Voß is coming to Vienna.</dc:description>
   <dc:subject/>

   <marcrel:correspondent key="entity-000632">Heinrich Schenker</marcrel:correspondent>
   <marcrel:recipient key="entity-000143">Felix-Eberhard von Cube</marcrel:recipient>
  </sdo:itemDesc>

