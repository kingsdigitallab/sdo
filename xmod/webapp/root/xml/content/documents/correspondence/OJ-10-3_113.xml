      <dc:title>Handwritten picture postcard from Deutsch to Schenker, dated December 30,
        1929</dc:title>

      <dcterms:created>1929-12-30T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2023-03-19</dcterms:dateSubmitted>
      <dc:description>Deutsch advises Schenker to send the manuscript [of an essay by Gerd
        Albersheim] to Dr. Alfred Einstein, the editor of the Zeitschrift für
        Musikwissenschaft.</dc:description>
      <dc:subject/>

      <marcrel:correspondent key="entity-000164">DeutschOE</marcrel:correspondent>
      <marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient>

    </sdo:itemDesc>

