     <tei:address>
      <tei:addrLine>Absender: <tei:handShift new="#MV"/> Violin, Hamburg </tei:addrLine>
      <tei:addrLine> Hochallee 58 </tei:addrLine>
     </tei:address>
     <tei:address>
      <tei:addrLine><tei:supplied>An:</tei:supplied> Heinrich Schenker </tei:addrLine>
      <tei:addrLine rend="indent-10">Wien III.</tei:addrLine>
      <tei:addrLine rend="indent-10">Keilgasse 8.</tei:addrLine>
     </tei:address>
     <tei:fw type="postmark">|| HAMBURG | -6 10. 21 8-9N | b 1 ||</tei:fw><tei:lb/>
     <tei:note type="editorial" place="inline">For continuation of recto, see below</tei:note>
