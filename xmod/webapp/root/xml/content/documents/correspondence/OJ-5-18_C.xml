 <sdo:record ID="r0001">

  <sdo:itemDesc><tei:rs role="correspondence" type="correspondence" key="entity-002713">Jonas ~ H+JSchenker</tei:rs><tei:rs role="correspondence" type="correspondence" key="entity-002714">Jonas ~ HSchenker</tei:rs><tei:rs role="corr-item-type" type="corr-item-type" key="entity-002745">Postcard</tei:rs>
   
   
   <dc:title>Handwritten postcard from Schenker to Jonas, dated September 27, 1919</dc:title>
   
   <dcterms:created>1919-09-27T12:00:00Z</dcterms:created>
   <dcterms:dateSubmitted>2006-03-24</dcterms:dateSubmitted>
   <dc:description>Date and time of first lesson. </dc:description>
   <dc:subject>lesson; time</dc:subject>

   
   
  <marcrel:correspondent key="entity-000632">HSchenker</marcrel:correspondent><marcrel:correspondent key="entity-000771">JSchenker</marcrel:correspondent><marcrel:recipient key="entity-000412">Jonas</marcrel:recipient><marcrel:correspondent key="entity-000632">HSchenker</marcrel:correspondent><marcrel:recipient key="entity-000412">Jonas</marcrel:recipient></sdo:itemDesc>

  <tei:div type="transcription">

   <tei:opener>
    <tei:milestone unit="folio" n="recto"/>
    <tei:fw type="envelope">
     <tei:address>
      <tei:addrLine>
       <tei:supplied reason="clarity">Absender: </tei:supplied>
       <tei:hi rend="lateinschr">D<tei:hi rend="supralinear">r</tei:hi> H Schenker</tei:hi>
      </tei:addrLine>
      <tei:addrLine>
       <tei:hi rend="lateinschr">III., Reisnerstr. 38</tei:hi>
      </tei:addrLine>
      <tei:note type="editorial">"45" written over sender address in unknown hand</tei:note>
     </tei:address>
     <tei:address>
      <tei:addrLine><tei:supplied reason="clarity">An: </tei:supplied> H <tei:hi rend="lateinschr">Oswald Jonas</tei:hi>
      </tei:addrLine>
      <tei:addrLine>III, Untere Weißgärberstr. 37</tei:addrLine>
     </tei:address>
     <tei:fw type="postmark">|| <tei:supplied reason="illegible">WIEN</tei:supplied> 49 | <tei:gap reason="illegible"/> XIII. 9 | <tei:gap reason="illegible"/> ||</tei:fw>
    </tei:fw>
    <tei:lb/>
    <tei:milestone unit="folio" n="verso"/>
    <tei:salute>Lieber Herr <tei:rs type="person" key="entity-000412">Jonas</tei:rs>!</tei:salute>
   </tei:opener>

   <tei:p>Also<tei:note xml:id="r0001-fn01" type="editorial" place="foot">Writing of this postcard
     is recorded in Schenker's diary at OJ 2/14, p. 2152: "An Jonas (espresß-K.): bitte ihn für
     Mittwoch zur 1. Stunde." ("To Jonas (express postcard): I ask him to come on Wednesday for his
     first lesson.").<!-- XR -->
    </tei:note> am <tei:hi rend="underline">Mittwoch 10-11</tei:hi><tei:hi rend="supralinear">h.</tei:hi> erwarte ich Sie zur ersten Stunde. Sie klammern "<tei:hi rend="underline">Vormittag</tei:hi>" ein, woraus ich schließe, daß Sie auf Vm. Wert legen. Dies geschieht also.
    Auf Wiedersehen am 1. X.</tei:p>

   <tei:closer>
    <tei:salute rend="indent-50">Ihr</tei:salute>
    <tei:signed rend="indent-60">
     <tei:hi rend="lateinschr">H Schenker</tei:hi>
    </tei:signed>
    <tei:date when="1919-09-27">27. 9. 1919.</tei:date>
   </tei:closer>

  </tei:div>


  <tei:div type="translation">

   <tei:opener>
    <tei:milestone unit="folio" n="recto"/>
    <tei:fw type="envelope">
     <tei:address>
      <tei:addrLine>
       <tei:supplied reason="clarity">From: </tei:supplied>Dr. H. Schenker,</tei:addrLine>
      <tei:addrLine>
       <tei:supplied reason="abbreviation">Vienna</tei:supplied> III., Reisnerstraße 38 </tei:addrLine>
      <tei:note type="editorial">"45" written over sender address in unknown hand</tei:note>
     </tei:address>
     <tei:address>
      <tei:addrLine><tei:supplied reason="clarity">To: </tei:supplied> Mr. Oswald Jonas, </tei:addrLine>
      <tei:addrLine><tei:supplied reason="abbreviation">Vienna</tei:supplied> III, Untere
       Weißgärberstraße 37</tei:addrLine>
     </tei:address>
     <tei:fw type="postmark">|| <tei:supplied reason="illegible">VIENNA</tei:supplied> 49 | <tei:gap reason="illegible"/> XIII. 9 | <tei:gap reason="illegible"/> ||</tei:fw>
    </tei:fw>
    <tei:lb/>
    <tei:milestone unit="folio" n="verso"/>
    <tei:salute>Dear Mr. <tei:rs type="person" key="entity-000412">Jonas</tei:rs>,</tei:salute>
   </tei:opener>

   <tei:p>Then<tei:ptr corresp="#r0001-fn01" type="footnote"/> I will expect you <tei:hi rend="supralinear">Wednesday from 10 to 11</tei:hi> for the first lesson. You enclose "<tei:hi rend="underline">morning</tei:hi>" in brackets, from which I infer that morning is important to
    you. So be it then. Until we meet on October 1.</tei:p>

   <tei:closer>
    <tei:salute rend="indent-50">Yours, </tei:salute>
    <tei:signed rend="indent-60">H. Schenker</tei:signed>
    <tei:date when="1919-09-27">September 27, 1919</tei:date>
   </tei:closer>

  </tei:div>
 </sdo:record>
