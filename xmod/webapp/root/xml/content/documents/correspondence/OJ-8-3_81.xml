   <dc:title>Handwritten postcard from Heinrich Schenker to Moriz Violin, dated January 31, 1920 </dc:title>

   <dcterms:created>1920-01-31T12:00:00Z</dcterms:created>
   <dcterms:dateSubmitted>2011-05-17</dcterms:dateSubmitted>
