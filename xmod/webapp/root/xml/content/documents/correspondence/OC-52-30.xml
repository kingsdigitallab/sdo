        <tei:milestone unit="folio" n="verso"/><tei:lb/>
        <tei:note type="editorial" place="inline">left-hand side of <tei:hi rend="italic"
            >verso</tei:hi>: printed advertisement for "<tei:title level="s">Collected Edition of
            the Classics</tei:title>"</tei:note>
        <tei:lb/><tei:lb/>
        <tei:note type="editorial" place="inline">right-hand side of <tei:hi rend="italic"
            >verso</tei:hi>: message:</tei:note>
        <tei:dateline><tei:handShift new="#TPue"/><tei:placeName>Vienna</tei:placeName>, <tei:date
            when="1908-12-16">December 16, 1908</tei:date></tei:dateline>
        <tei:address>
          <tei:addrLine><tei:persName>Dr. H. Schenker</tei:persName>, Esq.</tei:addrLine>
          <tei:addrLine rend="indent-50">
            <tei:hi rend="underline sperr">Vienna</tei:hi></tei:addrLine>
        </tei:address>
        <tei:salute>Dear <tei:rs key="entity-000632" type="person">Sir</tei:rs>!<tei:ptr
            corresp="#r0001-fn01" type="footnote"/></tei:salute>
      </tei:opener>

      <tei:p rend="first">If the Supplementary Remarks<tei:ptr corresp="#r0001-fn02" type="footnote"
        /> for the <tei:rs key="entity-001729" type="work"><tei:title level="m">Instrumentation
            Table</tei:title></tei:rs> are not in our hands by <tei:date when="1908-12-18"
          >Friday</tei:date>, they will no longer be able to be taken into account for the new
        edition of this work, which is already very urgent.<tei:ptr corresp="#r0001-fn03"
          type="footnote"/></tei:p>

      <tei:closer>
        <tei:salute><tei:handShift new="#printed"/>With kind regards <tei:handShift new="#unk"
            /><tei:note type="editorial" place="inline">illeg. word</tei:note></tei:salute>
        <tei:signed><tei:rs key="entity-002408" type="organization">Universal Edition &amp;
            Co.</tei:rs><tei:lb/><tei:supplied reason="location">Vienna</tei:supplied> I, <tei:subst>
            <tei:del rend="overwritten">Maximilianstrasse</tei:del>
            <tei:add place="superimposed"><tei:handShift new="#stamp"/>Wipplingerstrasse</tei:add>
          </tei:subst> 32</tei:signed>
        <tei:signed><tei:handShift new="#unk"/><tei:rs key="entity-000356" type="person"
              ><tei:unclear reason="reading"
        >Hertzka</tei:unclear></tei:rs></tei:signed><tei:lb/><tei:lb/>
