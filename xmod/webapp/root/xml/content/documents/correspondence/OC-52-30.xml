          <tei:addrLine>An <tei:handShift new="#unk"/>Hochwohlgeboren Herrn Professor D<tei:hi
              rend="supralinear">r.</tei:hi>
            <tei:persName>Heinr. Schenker</tei:persName></tei:addrLine>
          <tei:addrLine><tei:handShift new="#printed"/>in <tei:handShift new="#unk"/><tei:hi
              rend="underline sperr">Wien</tei:hi>.</tei:addrLine>
          <tei:addrLine>III. Reisnerstraße 38</tei:addrLine>
        </tei:address>
        <tei:fw type="postmark">|| WIEN 1/1 | <tei:gap reason="illegible"/>XII.08 | <tei:gap
            reason="illegible"/> r ||</tei:fw><tei:lb/>
        <tei:fw type="postmark">|| WIEN <tei:gap reason="illegible"/> | 16.XII.08 2 | * <tei:gap
            reason="illegible"/> * ||</tei:fw><tei:lb/><tei:lb/>
        <tei:milestone unit="folio" n="verso"/><tei:lb/>
        <tei:note type="editorial" place="inline">left-hand side of <tei:hi rend="italic"
