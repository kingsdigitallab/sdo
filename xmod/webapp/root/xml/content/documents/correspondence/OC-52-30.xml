      <dc:title>Typewritten postcard from Hertzka (UE) to Schenker, date December 16,
        1908</dc:title>

      <dcterms:created>1908-12-16T12:00:00Z</dcterms:created>
      <dcterms:dateSubmitted>2016-07-07</dcterms:dateSubmitted>
      <dc:description>Ultimatum: if not delivered by Friday, "supplementary remarks" will be
        omitted.</dc:description>
      <dc:subject>Nachtragsbemerkungen; supplementary remarks; Neuauflage; new edition</dc:subject>

      <marcrel:correspondent key="entity-002408">Universal Edition</marcrel:correspondent>
      <marcrel:correspondent key="entity-000356">Emil Hertzka</marcrel:correspondent>
