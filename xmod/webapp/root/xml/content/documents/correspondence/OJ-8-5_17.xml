  <sdo:record ID="r0001">

    <sdo:itemDesc>
      <tei:rs role="correspondence" type="correspondence" key="entity-002719">ViolinM ~
        HSchenker</tei:rs>
      <tei:rs role="correspondence" type="correspondence" key="entity-002717">ViolinM+V ~
