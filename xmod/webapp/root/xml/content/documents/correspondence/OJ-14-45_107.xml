     </tei:address>
     <tei:address>
      <tei:addrLine><tei:supplied>To:</tei:supplied> Dr. Heinrich Schenker, </tei:addrLine>
      <tei:addrLine rend="indent-10">Galtür (Tyrol), </tei:addrLine>
      <tei:addrLine rend="indent-10">Paznauen</tei:addrLine>
     </tei:address>
     <tei:fw type="postmark">HAMBURG | 8.24.7 9PM| * 20 f * ||</tei:fw><tei:lb/>
     <tei:note type="editorial" place="inline">for continuation of the recto, see below</tei:note><tei:lb/>
     <tei:milestone unit="folio" n="verso"/>
     <tei:lb/>
