      </tei:addrLine>
     </tei:address>
     <tei:address>
      <tei:addrLine><tei:supplied>An:</tei:supplied> D<tei:hi rend="supralinear">r</tei:hi> Heinrich
       Schenker </tei:addrLine>
      <tei:addrLine rend="indent-10">Galtür (Tirol)</tei:addrLine>
      <tei:addrLine rend="indent-10">Paznauen</tei:addrLine>
     </tei:address>
     <tei:fw type="postmark">HAMBURG | 8.24.7 9N | * 20 f * ||</tei:fw><tei:lb/>
