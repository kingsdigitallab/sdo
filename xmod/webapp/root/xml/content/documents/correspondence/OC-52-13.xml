  <sdo:record ID="r0001">

    <sdo:itemDesc>
      <tei:rs role="correspondence" type="correspondence" key="entity-006164">WeinbergerJ ~
        HSchenker</tei:rs>
      <tei:rs role="correspondence" type="correspondence" key="entity-006167">HardmuthF ~
