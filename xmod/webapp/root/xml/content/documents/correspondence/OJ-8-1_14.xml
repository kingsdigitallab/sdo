      <tei:addrLine>XIV., <tei:hi rend="lateinschr">Sechshauserstr</tei:hi>. 126.</tei:addrLine>
     </tei:address><tei:lb/>
     <tei:fw type="postmark">|| <tei:gap reason="illegible"/> WIEN 76 | 3.XI.11 <tei:gap
       reason="illegible"/> | * 6c * ||</tei:fw>
    </tei:fw>
