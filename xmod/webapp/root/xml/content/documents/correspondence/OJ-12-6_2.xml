      <tei:addrLine><tei:hi rend="lateinschr">Keilgasse 8</tei:hi></tei:addrLine>
     </tei:address>
     <tei:fw type="postmark">|| WIEN 10[?] | 10. II. 2<tei:supplied>8</tei:supplied> | <tei:gap reason="illegible"/>||</tei:fw>
