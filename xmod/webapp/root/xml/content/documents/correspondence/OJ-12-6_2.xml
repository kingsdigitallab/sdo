   <dc:title>Handwritten postcard from Jonas to Schenker, dated February 9, 1928</dc:title>

   <dcterms:created>1928-02-09T12:00:00Z</dcterms:created>
   <dcterms:dateSubmitted>2006-02-25</dcterms:dateSubmitted>
   <dc:description>Jonas asks for address of John Petrie Dunn.</dc:description>
   <dc:subject>Adresse; address</dc:subject>

   
   
  <marcrel:correspondent key="entity-000412">Jonas</marcrel:correspondent><marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient><marcrel:correspondent key="entity-000412">Jonas</marcrel:correspondent><marcrel:recipient key="entity-000632">HSchenker</marcrel:recipient><marcrel:recipient key="entity-000771">JSchenker</marcrel:recipient></sdo:itemDesc>


